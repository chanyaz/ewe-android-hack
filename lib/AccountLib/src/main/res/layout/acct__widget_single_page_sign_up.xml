<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/single_page_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/acct__white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <com.expedia.account.singlepage.SinglePageEmailNamePasswordLayout
                    android:id="@+id/single_page_email_name_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"/>
            </LinearLayout>

            <com.expedia.account.singlepage.SinglePageTOSLayout
                android:id="@+id/single_page_tos_layout"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/acct__max_width"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/single_page_button_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="20dp"
        android:paddingTop="19dp"
        android:textSize="16sp"
        android:text="@string/acct__Create_Account"
        android:textColor="@color/acct__white"
        android:background="@color/acct__single_page_create_account_bg_color" />

</merge>
