<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/new_account_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationContentDescription="@string/acct__Toolbar_nav_close_icon_cont_desc" />

        <FrameLayout
            android:id="@+id/new_account_tabs_container"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <android.support.design.widget.TabLayout
                android:id="@+id/new_account_tabs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabTextAppearance="@style/acct__TabTextAppearance" />

        </FrameLayout>

        <com.expedia.account.SwipeDisabledViewPager
            android:id="@+id/new_account_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.expedia.account.newsignin.NewSignInLayout
                android:id="@+id/new_account_signin_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.expedia.account.newsignin.NewCreateAccountLayout
                android:id="@+id/new_account_create_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.expedia.account.SwipeDisabledViewPager>

    </LinearLayout>

    <com.expedia.account.view.FacebookLinkAccountsLayout
        android:id="@+id/new_account_facebook_link_accounts_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/new_account_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/acct__black_50"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />

    </FrameLayout>

</merge>
