<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AirAsiaGo" parent="@style/Theme.Expedia">
        <item name="HotelRowThumbPlaceHolderDrawable">@drawable/ic_row_thumb_placeholder_aag</item>
        <item name="loginBookNowButtonDrawable">@drawable/btn_signin_aag</item>
        <item name="hotelBookButtonColor">@android:color/white</item>
        <item name="calendarDatePickerCellDrawable">@drawable/calendar_date_picker_cell_aag</item>
