<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.expedia.bookings"
	android:versionCode="1"
	android:versionName="1.0">
      
	<uses-sdk android:minSdkVersion="5" />
	
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application 
    	android:icon="@drawable/icon" 
    	android:label="@string/app_name"
    	android:theme="@style/Theme"
    	android:name="com.expedia.bookings.activity.ExpediaBookingApp">

    	<uses-library android:name="com.google.android.maps" />
		
		<activity android:name=".activity.SearchActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".activity.SearchListActivity" />
		<activity android:name=".activity.SearchMapActivity" />

		<activity android:name=".activity.HotelActivity" />
		<activity android:name=".activity.HotelMapActivity" />

		<activity android:name=".activity.RoomsAndRatesListActivity" />

		<activity android:name=".activity.BookingInfoActivity" />

		<activity android:name=".activity.ConfirmationActivity" />

		<activity android:name=".activity.AboutActivity" />
		
		<activity android:name=".activity.ExpediaBookingPreferenceActivity" />

		<activity android:name="com.opinionlab.oo.sdk.android.CommentCardActivity" />

    </application>
    
</manifest>