<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.expedia.bookings"
    android:versionCode="18"
    android:versionName="2.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- For Maps V2 -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>
    <permission
        android:name="com.expedia.bookings.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.expedia.bookings.permission.MAPS_RECEIVE"/>

    <application
        android:name="com.expedia.bookings.activity.ExpediaBookingApp"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme" >
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="7" />
        <meta-data
            android:name="com.somo.apptimiser.PUBLIC_KEY_BASE64_STRING"
            android:value="@string/soma_rsa_key" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/mapsv2_dev_key"/>

        <uses-library android:name="com.google.android.maps" />

        <!-- Make sure activity uses full path, i.e. com.expedia.bookings.activity.* -->

        <activity
            android:name="com.expedia.bookings.activity.SearchActivity"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.expedia.bookings.activity.PhoneSearchActivity"
            android:theme="@style/Theme.Phone"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.expedia.bookings.activity.SearchFragmentActivity"
            android:theme="@style/Theme.Tablet.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.expedia.bookings.activity.SearchResultsFragmentActivity"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Tablet"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.expedia.bookings.activity.HotelGalleryActivity"
            android:theme="@style/Theme.Tablet.Dark" />
        <activity
            android:name="com.expedia.bookings.activity.RoomsAndRatesFragmentActivity"
            android:theme="@style/Theme.Tablet"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.expedia.bookings.activity.BookingFragmentActivity"
            android:theme="@style/Theme.Tablet"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.expedia.bookings.activity.ConfirmationFragmentActivity"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name="com.expedia.bookings.activity.HotelDetailsFragmentActivity"
            android:theme="@style/Theme.Phone" />
        <activity
            android:name="com.expedia.bookings.activity.HotelMapActivity"
            android:theme="@style/Theme.Phone" />
        <activity
            android:name="com.expedia.bookings.activity.UserReviewsListActivity"
            android:theme="@style/Theme.Phone" />
        <activity
            android:name="com.expedia.bookings.activity.TabletUserReviewsListActivity"
            android:theme="@style/Theme.Light.Fullscreen.Panel" />
        <activity
            android:name="com.expedia.bookings.activity.RoomsAndRatesListActivity"
            android:theme="@style/Theme.Phone" />
        <activity
            android:name="com.expedia.bookings.activity.BookingOverviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Phone.Dark"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.expedia.bookings.activity.HotelRulesActivity"
            android:theme="@style/FlightTheme" />
        <activity android:name="com.expedia.bookings.activity.WebViewActivity" />
        <activity
            android:name="com.expedia.bookings.activity.TextViewActivity"
            android:theme="@style/Theme.Phone" />
        <activity
            android:name="com.expedia.bookings.activity.HotelTravelerInfoOptionsActivity"
            android:label="Add Traveler"
            android:theme="@style/Theme.Phone.Dark" />
        <activity
            android:name="com.expedia.bookings.activity.HotelPaymentOptionsActivity"
            android:label="Add Payment"
            android:theme="@style/Theme.Phone.Dark" />
        <activity
            android:name="com.expedia.bookings.activity.HotelBookingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Phone.Dark" />
        <activity android:name="com.expedia.bookings.activity.AboutActivity" />
        <activity android:name="com.expedia.bookings.activity.TabletAboutActivity" />
        <activity
            android:name="com.expedia.bookings.activity.ExpediaBookingPreferenceActivity"
            android:theme="@style/Theme.Phone.Preferences" />
        <activity
            android:name="com.expedia.bookings.activity.TabletPreferenceActivity"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.Tablet.Preferences" />
        <activity
            android:name="com.expedia.bookings.activity.AppFeedbackActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.opinionlab.oo.sdk.android.CommentCardActivity" />

        <!-- Expedia Flights -->

        <activity
            android:name="com.expedia.bookings.activity.LaunchActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/LaunchTheme" >
        </activity>
        <activity
            android:name="com.expedia.bookings.activity.FlightSearchActivity"
            android:label="Expedia Flights"
            android:theme="@style/FlightTheme"
            android:windowSoftInputMode="stateUnchanged" >
        </activity>
        <activity
            android:name="com.expedia.bookings.activity.FlightSearchResultsActivity"
            android:theme="@style/FlightTheme.OverlayMode"
            android:uiOptions="splitActionBarWhenNarrow" />
        <activity
            android:name="com.expedia.bookings.activity.FlightUnsupportedPOSActivity"
            android:theme="@style/FlightTheme" />
        <activity
            android:name="com.expedia.bookings.activity.FlightSearchOverlayActivity"
            android:theme="@style/FlightTheme.Transparent"
            android:windowSoftInputMode="stateUnchanged" />
        <activity
            android:name="com.expedia.bookings.activity.FlightTripOverviewActivity"
            android:label="Overview"
            android:theme="@style/FlightTheme.Transparent" >
        </activity>
        <activity
            android:name="com.expedia.bookings.activity.FlightBookingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FlightTheme" />
        <activity
            android:name="com.expedia.bookings.activity.FlightPaymentOptionsActivity"
            android:theme="@style/FlightTheme.CheckoutForms" >
        </activity>
        <activity
            android:name="com.expedia.bookings.activity.FlightTravelerInfoOptionsActivity"
            android:theme="@style/FlightTheme.CheckoutForms" >
        </activity>
        <activity
            android:name="com.expedia.bookings.activity.FlightRulesActivity"
            android:theme="@style/FlightTheme" >
        </activity>
        <activity
            android:name="com.expedia.bookings.activity.FlightConfirmationActivity"
            android:label="Flights Confirmation"
            android:theme="@style/FlightTheme" />

        <!-- Login/Facebook -->
        <activity
            android:name="com.expedia.bookings.activity.LoginActivity"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="adjustPan" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name="com.facebook.LoginActivity" >
        </activity>
        <activity
            android:name="com.expedia.bookings.activity.FacebookLinkActivity"
            android:label="Link Accounts"
            android:theme="@style/FlightTheme" >
        </activity>

        <!-- Testing -->
        <activity android:name=".test.activity.CalendarDatePickerTestActivity" />

        <!-- HockeyApp -->
        <activity android:name="net.hockeyapp.android.UpdateActivity" />

        <service
            android:name="com.expedia.bookings.appwidget.ExpediaBookingsService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.expedia.bookings.START_SEARCH" />
                <action android:name="com.expedia.bookings.START_CLEAN_SEARCH" />
                <action android:name="com.expedia.bookings.LOAD_PROPERTY" />
                <action android:name="com.expedia.bookings.NEXT_PROPERTY" />
                <action android:name="com.expedia.bookings.PREV_PROPERTY" />
                <action android:name="com.expedia.bookings.ROTATE_PROPERTY" />
                <action android:name="com.expedia.bookings.CANCEL_UPDATE" />
            </intent-filter>
        </service>

        <!-- Widget stuff -->
        <receiver
            android:name="com.expedia.bookings.appwidget.ExpediaBookingsWidgetProvider"
            android:enabled="@bool/widgetEnabled" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/eb_appwidget_info" />
        </receiver>

        <!-- Search stuff -->
        <provider
            android:name="com.expedia.bookings.content.AutocompleteProvider"
            android:authorities="com.expedia.booking.autocomplete"
            android:exported="false" />
        <provider
            android:name="com.expedia.bookings.content.AirportAutocompleteProvider"
            android:authorities="com.expedia.booking.autocomplete.air"
            android:exported="false" />

        <!-- Boot stuff -->
        <receiver android:name="com.expedia.bookings.activity.LocaleChangeReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.LOCALE_CHANGED" />
            </intent-filter>
        </receiver>

        <!-- Tracking -->

        <receiver
            android:name="com.expedia.bookings.activity.PosChangedReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.expedia.bookings.action.pos_changed" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.expedia.bookings.tracking.InstallReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.somo.apptimiser.SomoMarketBroadcastReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.amobee.agency.tracking.AmobeeReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.expedia.bookings.tracking.MdotmReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.expedia.bookings.tracking.OmnitureReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
