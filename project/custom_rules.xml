<?xml version="1.0" encoding="UTF-8"?>
<project name="custom_rules_expedia_bookings" default="debug">
    <!-- CheckStyle -->
    <taskdef
        resource="checkstyletask.properties"
        classpath="${checkstyle.home}/checkstyle-5.7-all.jar" />

    <target
        name="checkstyle"
        depends="nodeps, -set-debug-mode, -build-setup"
        description="Run checkstyle on all source code for project" >

        <echo message="Using android jar: ${project.target.android.jar}"/>

        <checkstyle
            config="../common/checkstyle.xml"
            classpath="${project.target.android.jar}"
            failureProperty="checkstyle.failure"
            failOnViolation="false" >

            <fileset dir="src" includes="**/*.java"/>
            <formatter type="plain" toFile="checkstyle_results.txt" />
            <formatter type="xml" toFile="checkstyle_results.xml"/>
        </checkstyle>
    </target>
</project>
