<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:mobiata="http://schemas.android.com/apk/res-auto">

    <!-- Travelocity Rating bar -->
    <style name="RatingBar.UserReview.Blue">
        <item name="android:progressDrawable">@drawable/ratingbar_userreview_blue</item>
    </style>

    <style name="Dark.ActionBar.Travelocity" parent="Dark.ActionBar">
        <item name="android:background">@drawable/bg_action_bar_travelocity</item>
        <item name="android:backgroundSplit">@drawable/bg_action_bar_bottom_travelocity</item>
    </style>

    <style name="Widget.ListView.DropDown.TVLY" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:background">@drawable/bg_action_bar_travelocity</item>
    </style>

    <style name="Widget.Button.Green.Travelocity">
        <item name="android:background">@drawable/btn_search_hotels_travelocity</item>
    </style>

    <style name="Widget.Button.Green" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:textColor">@color/btn_green_text_color</item>
        <item name="android:shadowColor">#a5ffffff</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="RatingBarSmall.UserReview.Travelocity">
        <item name="android:progressDrawable">@drawable/user_rating_small_travelocity</item>
    </style>

    <style name="RatingBarSmall.Shadowed.UserReview.Travelocity">
        <item name="android:progressDrawable">@drawable/user_rating_light_travelocity</item>
    </style>

</resources>
