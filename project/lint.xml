<?xml version="1.0" encoding="UTF-8"?>
<lint>
    <!-- Disable all checks -->
    <issue id="all" severity="ignore" />

    <!-- Start turning checks back on -->
    <!-- Issue categories like Usability:Typography DO NOT WORK! -->

    <issue id="UnusedResources" severity="error">
        <!-- File generated by crashlytics -->
        <ignore path="**/com_crashlytics_export_strings.xml" />

        <!-- We don't control these files. As long as we -->
        <!-- remove from values/strings.xml the will be -->
        <!-- eventually -->
        <ignore path="**/res/values-*/strings.xml" />

        <!-- Ignore all debug resources  -->
        <ignore path="src/debug/res/*" />

        <!-- Files generated by google-services plugin -->
        <ignore path="build/generated/res/google-services/**" />
    </issue>

    <issue id="UnusedIds" severity="error" >
        <ignore path="src/debug/res/*" />
    </issue>
    <!-- datePickerMode=spinner, Android framework ignores the attributes for us pre lollipop-->
    <issue id="UnusedAttribute" severity="error">
        <ignore path="src/main/res/layout/spinner_date_picker.xml"/>
    </issue>

