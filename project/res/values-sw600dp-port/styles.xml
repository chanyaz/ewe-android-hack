<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mobiata="http://schemas.android.com/apk/res-auto" >

    <style name="CvvScreenCreditCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/center</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginRight">120dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="CvvScreenInput">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_below">@+id/center</item>
        <item name="android:layout_margin">32dp</item>
    </style>

    <style name="CvvScreenCreditCardSignature">
        <item name="android:layout_alignBottom">@+id/credit_card_signature_bg_view</item>
        <item name="android:layout_alignRight">@+id/credit_card_signature_bg_view</item>
        <item name="android:layout_alignTop">@+id/credit_card_signature_bg_view</item>
        <item name="android:layout_marginLeft">-32dp</item>
        <item name="android:layout_marginRight">150dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>
</resources>
