<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="6dp"
	android:orientation="horizontal"
	android:background="@drawable/bg_header">
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="46dp"
		android:layout_weight="1"
		android:layout_marginRight="8dp">
		<RelativeLayout
			android:id="@+id/user_rating_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@+id/book_now_button"
			android:layout_alignBottom="@+id/book_now_button"
			android:layout_toLeftOf="@+id/book_now_button"
			android:gravity="center_vertical"
			android:background="@drawable/btn_user_reviews">
			<TextView
				android:id="@+id/user_rating_text_view"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_alignTop="@id/user_rating_bar"
				android:layout_alignBottom="@id/user_rating_bar"
				android:paddingRight="5dp"
				android:textColor="#E1E1E1"
				android:textStyle="bold"
				android:textSize="12sp" />
			<RatingBar
				android:id="@+id/user_rating_bar"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginTop="1dp"
				android:layout_toRightOf="@id/user_rating_text_view"
				android:layout_centerVertical="true"
				android:numStars="5"
				android:stepSize=".5"
				android:isIndicator="true"
				style="@style/RatingBarSmall.Shadowed.UserReview" />
		</RelativeLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_toLeftOf="@id/user_rating_layout"
			android:gravity="center_vertical"
			android:orientation="vertical">
			<TextView
				android:id="@+id/name_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:ellipsize="end"
				style="@style/headerText"/>
			<TextView
				android:id="@+id/location_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:ellipsize="end"
				android:textColor="#E1E1E1"
				android:textSize="16sp" />
		</LinearLayout>
		<Button
			android:id="@+id/book_now_button"
			android:layout_width="@dimen/header_button_width"
			android:layout_height="fill_parent"
			android:layout_alignParentRight="true"
			android:layout_marginTop="4dp"
			android:layout_marginLeft="6dp"
			android:textStyle="bold"
			android:text="@string/book_now"
			style="@style/Widget.Button.Orange" />
	</RelativeLayout>
</LinearLayout>
