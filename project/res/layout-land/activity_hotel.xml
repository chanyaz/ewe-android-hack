<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<!-- Info bar at the top of the screen -->
	<include
		layout="@layout/include_hotel_header" />

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="horizontal">

		<!-- Rotating image gallery -->
		<RelativeLayout
			android:id="@+id/gallery_layout"
			android:layout_width="@dimen/gallery_size"
			android:layout_height="fill_parent"
			android:background="@drawable/bg_gallery">
			<com.expedia.bookings.widget.Gallery
				android:id="@+id/images_gallery"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:fadingEdge="none"
				android:spacing="20dp"
				android:unselectedAlpha="1.0" />
			<LinearLayout
				android:id="@+id/price_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_marginTop="8dp"
				android:paddingTop="3dp"
				android:paddingRight="25dp"
				android:gravity="left"
				android:orientation="vertical"
				android:background="@drawable/bg_ribbon">
				<TextView
					android:id="@+id/from_text_view"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#333333"
					android:textStyle="bold"
					android:textSize="12dp"
					android:includeFontPadding="false" />
				<TextView
					android:id="@+id/price_text_view"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#00355F"
					android:textStyle="bold"
					android:textSize="18dp"
					android:includeFontPadding="false" />
			</LinearLayout>
			<TextView
				android:id="@+id/promo_description_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_alignParentLeft="true"
				android:layout_marginRight="56dp"
				android:layout_marginLeft="8dp"
				android:maxWidth="220dp"
				android:gravity="center"
				android:paddingTop="2dp"
				android:paddingBottom="4dp"
				android:paddingLeft="8dp"
				android:paddingRight="8dp"
				android:background="@drawable/bg_promo_bottom"
				android:textStyle="bold"
				android:textSize="11sp"
				android:textColor="@android:color/white"
				android:visibility="gone" />
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_alignParentRight="true"
				android:scaleType="fitXY"
				android:src="@drawable/detail_divider_horizontal" />
		</RelativeLayout>

		<!-- Details about the hotel. This is filled in dynamically based on available 
			hotel data -->
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_toRightOf="@+id/gallery_layout"
			android:layout_alignParentRight="true">
			<ScrollView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:fillViewport="true"
				android:fadingEdge="none">
				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:background="#E3E3E6"
					android:orientation="vertical">
					<include
						layout="@layout/include_amenities" />
					<View
						android:layout_width="fill_parent"
						android:layout_height="@dimen/two_pixels"
						android:layout_marginTop="4dp"
						android:layout_marginBottom="6dp"
						android:background="@drawable/divider" />
					<LinearLayout
						android:id="@+id/description_container"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="12dp"
						android:layout_marginRight="12dp"
						android:layout_marginBottom="10dp"
						android:layout_weight="1"
						android:orientation="vertical">
						<ProgressBar
							android:id="@+id/progress_bar"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_horizontal"
							android:indeterminate="true"
							style="@android:style/Widget.ProgressBar.Large.Inverse" />
					</LinearLayout>
				</LinearLayout>
			</ScrollView>
		</RelativeLayout>

		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:scaleType="fitXY"
			android:src="@drawable/shadow" />
	</RelativeLayout>
</LinearLayout>
