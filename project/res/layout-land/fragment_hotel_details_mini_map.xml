<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hotel_details_map_visible_size"
    android:background="@drawable/map_frame" >

    <!-- This extra FrameLayout keeps the MapImageView clipped appropriately -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp" >

        <com.expedia.bookings.widget.MapImageView
            android:id="@+id/mini_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_gallery" />
    </FrameLayout>

</FrameLayout>