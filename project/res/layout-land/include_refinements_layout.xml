<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refinements_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/dates_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.mobiata.android.widget.CalendarDatePicker
            android:id="@+id/dates_date_picker"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            mobiata:cellBackground="@drawable/bg_calendar_cell"
            mobiata:cellTextColor="@color/cell_text"
            mobiata:drawGridLines="false"
            mobiata:calendarHeaderBackground="@color/calendar_header"
            mobiata:nextMonthBackground="@drawable/bg_calendar_next"
            mobiata:otherMonthCellBackground="@drawable/bg_calendar_cell"
            mobiata:otherMonthCellTextColor="@color/cell_text_other_month"
            mobiata:popupBackground="@drawable/calendar_date_picker_popup"
            mobiata:previousMonthBackground="@drawable/bg_calendar_previous"
            mobiata:rangeEndCellBackground="@drawable/bg_calendar_cell_range_end"
            mobiata:rangeStartCellBackground="@drawable/bg_calendar_cell_range_start"
            mobiata:todayCellBackground="@drawable/bg_calendar_cell_today" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/guests_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eeeeee"
        android:clickable="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.expedia.bookings.widget.SimpleNumberPicker
                android:id="@+id/adults_number_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.expedia.bookings.widget.SimpleNumberPicker
                android:id="@+id/children_number_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/child_ages_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="top"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/label_select_each_childs_age"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <include
                android:id="@+id/child_1_age_layout"
                layout="@layout/include_child_age_row"
                android:visibility="gone" />

            <include
                android:id="@+id/child_2_age_layout"
                layout="@layout/include_child_age_row"
                android:visibility="gone" />

            <include
                android:id="@+id/child_3_age_layout"
                layout="@layout/include_child_age_row"
                android:visibility="gone" />

            <include
                android:id="@+id/child_4_age_layout"
                layout="@layout/include_child_age_row"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
