<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="15dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:minHeight="@dimen/price_promo_banner_height" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/sale_banner_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_sale_ribbon"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="-30%"
            android:textColor="@color/price_promo_banner_text_color"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/price_and_promo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/promo_text_view"
            android:layout_alignParentRight="true" >

            <TextView
                android:id="@+id/strikethrough_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingRight="6dp"
                android:text="$234"
                android:textColor="@color/price_promo_banner_strikethrough_text_color"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/rate_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$345"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="@color/price_promo_banner_text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/per_nt_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/per_nt"
                android:textColor="@color/price_promo_banner_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/promo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Mobile Only"
            android:textColor="#ccc9c7"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>