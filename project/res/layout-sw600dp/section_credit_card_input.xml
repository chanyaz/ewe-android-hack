<?xml version="1.0" encoding="utf-8"?>
<!-- This differs from phone in that the backspace button is in the bottom right,
  and the book now button is missing (since it moved elsewhere) -->
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/one_button"
            style="@style/CreditCardButton"
            android:contentDescription="@string/cd_one_btn"
            android:text="@string/one" />

        <Button
            android:id="@+id/two_button"
            style="@style/CreditCardButton"
            android:contentDescription="@string/cd_two_btn"
            android:text="@string/two" />

        <Button
            android:id="@+id/three_button"
            style="@style/CreditCardButton"
            android:contentDescription="@string/cd_three_btn"
            android:text="@string/three" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/four_button"
            style="@style/CreditCardButton"
            android:contentDescription="@string/cd_four_btn"
            android:text="@string/four" />

        <Button
            android:id="@+id/five_button"
            style="@style/CreditCardButton"
            android:contentDescription="@string/cd_five_btn"
            android:text="@string/five" />

        <Button
            android:id="@+id/six_button"
            style="@style/CreditCardButton"
            android:contentDescription="@string/cd_six_btn"
            android:text="@string/six" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/seven_button"
            style="@style/CreditCardButton"
            android:contentDescription="@string/cd_seven_btn"
            android:text="@string/seven" />

        <Button
            android:id="@+id/eight_button"
            style="@style/CreditCardButton"
            android:contentDescription="@string/cd_eight_btn"
            android:text="@string/eight" />

        <Button
            android:id="@+id/nine_button"
            style="@style/CreditCardButton"
            android:contentDescription="@string/cd_nine_btn"
            android:text="@string/nine" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView style="@style/CreditCardButton" />

        <Button
            android:id="@+id/zero_button"
            style="@style/CreditCardButton"
            android:contentDescription="@string/cd_zero_btn"
            android:text="@string/zero" />

        <ImageButton
            android:id="@+id/delete_button"
            style="@style/CreditCardButton"
            android:contentDescription="@string/cd_delete_btn"
            android:src="@drawable/ic_keypad_delete" />
    </TableRow>

</merge>