<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="LoginFormEditText">
        <item name="android:layout_width">@dimen/login_field_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/login_field_padding</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textColor">#c6c8c9</item>
        <item name="android:textSize">@dimen/login_field_text_size</item>
    </style>

    <style name="LoginFormButton">
        <item name="android:layout_width">@dimen/login_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/login_button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
