<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_search_vertical"
    android:orientation="vertical" >

    <!-- This is a dummy View to keep the EditText from first grabbing focus -->

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:scaleType="center"
        android:src="@drawable/expedia_logo_medium" />

    <!-- Location and calendar -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/where_text_view"
            style="@style/InstructionText"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/when_text_view"
            style="@style/InstructionText"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="310dp"
        android:orientation="horizontal" >

        <include
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            layout="@layout/include_search" />

        <include
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            layout="@layout/include_calendar" />
    </LinearLayout>

    <!-- Guests and search button -->

    <TextView
        android:id="@+id/who_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        android:textSize="19dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="310dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <include
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            layout="@layout/include_guests" />

        <Button
            android:id="@+id/search_button"
            style="@style/Widget.Button.Yellow.Search"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:text="@string/search_for_hotels"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>