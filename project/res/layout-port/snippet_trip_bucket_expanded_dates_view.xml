<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/tablet_checkout_trip_bucket_expanded_padding_x" >

    <com.expedia.bookings.widget.TextView
        android:id="@+id/now_booking_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tablet_checkout_trip_bucket_expanded_padding_minor_y"
        android:gravity="center"
        android:textColor="#444444"
        android:textSize="19sp"
        android:visibility="gone"
        app:textStyle="condensed_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tablet_checkout_trip_bucket_expanded_padding_minor_y"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.expedia.bookings.widget.TextView
            android:id="@+id/num_travelers_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tablet_checkout_trip_bucket_expanded_padding_x"
            android:drawableLeft="@drawable/ic_tablet_checkout_guest"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:textColor="#444444"
            android:textSize="14sp"
            app:textStyle="light" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/dates_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tablet_checkout_trip_bucket_expanded_padding_x"
            android:drawableLeft="@drawable/ic_tablet_checkout_calendar"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:textColor="#444444"
            android:textSize="14sp"
            app:textStyle="light" />

    </LinearLayout>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/room_and_bed_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tablet_checkout_trip_bucket_expanded_padding_minor_y"
        android:textColor="#444444"
        android:textSize="14sp"
        android:visibility="gone"
        app:textStyle="light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_px_hdpi_two_px_xhdpi"
        android:background="@color/divider_grey" />

    <include
        layout="@layout/snippet_trip_bucket_expanded_price" />

</LinearLayout>
