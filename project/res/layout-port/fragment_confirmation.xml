<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="400dp" >

        <!-- The MapView is added dynamically to this layout -->

        <LinearLayout
            android:id="@+id/map_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/receipt_photo_frame" />

        <com.mobiata.android.widget.TiltedImageView
            android:id="@+id/thumbnail_image_view"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/receipt_photo_frame"
            mobiata:rotation="-5"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image_placeholder" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/map_layout"
            android:layout_alignTop="@id/map_layout"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/enjoy_your_stay" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="20dp" >

        <LinearLayout
            android:id="@+id/share_booking_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share" />

            <TextView
                style="@style/Widget.Button.White.Confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:text="@string/share_booking_info" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/show_on_map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/share_booking_info_button"
            android:layout_alignRight="@id/share_booking_info_button"
            android:layout_below="@id/share_booking_info_button"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_view_on_map" />

            <TextView
                style="@style/Widget.Button.White.Confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:text="@string/show_on_map" />
        </LinearLayout>

        <Button
            android:id="@+id/start_new_search_button"
            style="@style/Widget.Button.Yellow.Confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/start_new_search" />
    </RelativeLayout>

</LinearLayout>