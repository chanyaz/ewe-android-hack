<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/bg_row_summarized_room_rate" >

    <TextView
        android:id="@+id/availability_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#48505c"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/availability_chevron_image_view">

        <TextView
            android:id="@+id/availability_summary_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hotel_price_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/per_night_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/availability_summary_price_text_view"
            android:layout_toRightOf="@+id/availability_summary_price_text_view"
            android:text="@string/per_night"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/hotel_row_price_per_night_text_size" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/availability_chevron_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="10dp"
        android:scaleType="center"
        android:src="@drawable/room_rate_chevron"
        android:visibility="gone" />

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/one_pixel"
        android:layout_alignParentBottom="true"
        android:background="#d5d7d9" />

</RelativeLayout>