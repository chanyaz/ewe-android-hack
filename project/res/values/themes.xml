<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:editTextStyle">@style/Widget.EditText</item>
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="android:imageButtonStyle">@style/Widget.Button</item>
        <item name="android:ratingBarStyle">@style/RatingBarSmall.Shadowed.Star</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner</item>
        <item name="android:checkboxStyle">@style/Widget.CompoundButton.CheckBox</item>
    </style>

    <style name="Theme.Tablet" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionMenuTextColor">#505966</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:actionBarStyle">@style/Light.ActionBar</item>

        <!-- NumberPicker styles -->
        <item name="numberPickerUpButtonStyle">@style/Widget.ImageButton.NumberPickerUpButton</item>
        <item name="numberPickerDownButtonStyle">@style/Widget.ImageButton.NumberPickerDownButton</item>
        <item name="numberPickerInputTextStyle">@style/Widget.EditText.NumberPickerInputText</item>
        <item name="numberPickerStyle">@style/Widget.NumberPicker</item>
        <item name="simpleNumberPickerDownButtonStyle">@style/NumberPickerButton.Down</item>
        <item name="simpleNumberPickerInputTextStyle">@style/NumberPickerText</item>
        <item name="simpleNumberPickerUpButtonStyle">@style/NumberPickerButton.Up</item>
    </style>

    <style name="Theme.Tablet.Dark" parent="@android:style/Theme.Holo">
        <item name="android:actionMenuTextColor">#505966</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>

        <!-- NumberPicker styles -->
        <item name="numberPickerUpButtonStyle">@style/Widget.ImageButton.NumberPickerUpButton</item>
        <item name="numberPickerDownButtonStyle">@style/Widget.ImageButton.NumberPickerDownButton</item>
        <item name="numberPickerInputTextStyle">@style/Widget.EditText.NumberPickerInputText</item>
        <item name="numberPickerStyle">@style/Widget.NumberPicker</item>
    </style>

    <style name="Theme.Tablet.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Light.Fullscreen.Panel" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Tablet.Confirmation" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/Light.ActionBar.Sherlock</item>
        <item name="actionBarStyle">@style/Light.ActionBar.Sherlock</item>
    </style>

    <style name="Theme.Tablet.Preferences" parent="@style/Theme.Sherlock.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listSeparatorTextViewStyle">@style/TabletPreferenceSeparator</item>
    </style>

    <style name="TabletPreferenceSeparator">
        <item name="android:background">@drawable/light_header_with_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>

    <style name="Theme.Phone" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/bg_actionbar_button</item>
        <item name="actionBarStyle">@style/Dark.ActionBar</item>
        <item name="actionBarTabBarStyle">@style/ActionBarTabBar</item>
        <item name="actionBarTabStyle">@style/ActionBarTabView</item>
        <item name="actionBarTabTextStyle">@style/ActionBarTabText</item>
        <item name="actionMenuTextColor">@color/actionbar_text</item>
        <item name="actionModeBackground">@drawable/bg_action_mode</item>
        <item name="actionModeCloseDrawable">@drawable/btn_navigation_cancel</item>
        <item name="actionModeCloseButtonStyle">@style/ActionModeCloseMode</item>
        <item name="android:actionBarItemBackground">@drawable/bg_actionbar_button</item>
        <item name="android:actionBarStyle">@style/Dark.ActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabView</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabText</item>
        <item name="android:actionDropDownStyle">@style/Dark.DropDown</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
        <item name="android:actionModeBackground">@drawable/bg_action_mode</item>
        <item name="android:actionModeCloseDrawable">@drawable/btn_navigation_cancel</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionModeCloseMode</item>
        <item name="android:buttonStyle">@style/Widget.Button.Phone</item>
        <item name="android:dropDownListViewStyle">@style/Dark.DropDownListView</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Phone</item>
        <item name="android:textViewStyle">@style/Widget.TextView.Phone</item>
        <item name="android:selectableItemBackground">@drawable/bg_actionbar_button</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner.Phone</item>
        <item name="simpleNumberPickerDownButtonStyle">@style/NumberPickerButton.Down</item>
        <item name="simpleNumberPickerInputTextStyle">@style/NumberPickerText</item>
        <item name="simpleNumberPickerUpButtonStyle">@style/NumberPickerButton.Up</item>
        <item name="android:logo">@drawable/ic_logo_hotels</item>
        <item name="logo">@drawable/ic_logo_hotels</item>
    </style>

    <style name="Theme.Phone.Preferences">
        <item name="logo">@drawable/ic_action_bar_expedia_logo</item>
        <item name="android:logo">@drawable/ic_action_bar_expedia_logo</item>
    </style>

    <style name="Theme.Phone.Dark" parent="Theme.Phone">
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Phone.Dark</item>
        <item name="android:textViewStyle">@style/Widget.TextView.Phone.Dark</item>
    </style>

    <style name="Theme.Phone.WithStackedTabs">
        <item name="android:windowBackground">@color/actionbar_bg</item>
    </style>

    <style name="LaunchTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="logo">@drawable/ic_action_bar_expedia_logo</item>
        <item name="android:logo">@drawable/ic_action_bar_expedia_logo</item>
        <item name="actionBarStyle">@style/LaunchActionBar</item>
        <item name="android:actionBarStyle">@style/LaunchActionBar</item>
    </style>

    <style name="LaunchActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showHome|useLogo</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>

    <!-- Temporary theme for flights -->
    <style name="FlightTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="airPickerBackground">@android:color/white</item>
        <item name="airPickerHeaderBackground">@android:color/white</item>
        <item name="airPickerTextColor">@android:color/black</item>
        <item name="airPickerMessageTextColor">@android:color/black</item>
        <item name="airPickerActionTextColor">@android:color/black</item>
        <item name="rowDividerBackground">@android:color/black</item>
        <item name="rowBackground">@android:color/white</item>
        <item name="rowHeaderBackground">@android:color/white</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="numberPickerUpButtonStyle">@style/Widget.ImageButton.NumberPickerUpButton</item>
        <item name="numberPickerDownButtonStyle">@style/Widget.ImageButton.NumberPickerDownButton</item>
        <item name="numberPickerInputTextStyle">@style/Widget.EditText.NumberPickerInputText</item>
        <item name="numberPickerStyle">@style/Widget.NumberPicker</item>
        <item name="logo">@drawable/ic_logo_flights</item>
        <item name="android:logo">@drawable/ic_logo_flights</item>
        <item name="actionBarStyle">@style/FlightActionBar</item>
        <item name="android:actionBarStyle">@style/FlightActionBar</item>
        <item name="actionMenuTextColor">@color/action_bar_flight_text_color</item>
        <item name="android:actionMenuTextColor">@color/action_bar_flight_text_color</item>
    </style>

    <style name="FlightTheme.OverlayMode">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="FlightActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="background">@drawable/bg_action_bar_flight_top</item>
        <item name="android:background">@drawable/bg_action_bar_flight_top</item>
        <item name="backgroundSplit">@drawable/bg_action_bar_flight_bottom</item>
        <item name="android:backgroundSplit">@drawable/bg_action_bar_flight_bottom</item>
        <item name="titleTextStyle">@style/FlightActionBarTextAppearance</item>
        <item name="android:titleTextStyle">@style/FlightActionBarTextAppearance</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_bar_back_arrow</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_bar_back_arrow</item>
    </style>

    <style name="FlightActionBarTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/action_bar_flight_text_color</item>
    </style>

    <style name="FlightTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/FlightSearchOverlayAnimationStyle</item>
    </style>

    <style name="FlightSearchOverlayAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="FlightFilterDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/FlightFilterDialogAnimation</item>
    </style>

    <style name="FlightFilterDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>