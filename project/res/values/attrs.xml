<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Gallery">
    	<!-- These are styleables that are in a standard Gallery, 
    		reproduced here so we can use them -->
        <attr name="android:gravity" />
        <attr name="android:animationDuration" />
        <attr name="android:spacing" />
        <attr name="android:unselectedAlpha" />

        <!-- The rate at which we flip through images, in ms. -->
        <attr name="android:flipInterval" />
    </declare-styleable>
    
	<declare-styleable name="CustomEditText">
		<!--  Flag to indicate whether or not to use the 
		clear field functionality set up as a right drawable -->
    	<attr name="useClearFieldDrawable" format="boolean"/>
    </declare-styleable>
    
</resources>
