<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- STYLEABLE DECLARATIONS -->
    <!-- TextView -->
    <declare-styleable name="TextView">
        <attr name="textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="black" value="8" />
            <enum name="condensed" value="16" />
            <enum name="light" value="32" />
            <enum name="medium" value="64" />
            <enum name="thin" value="128" />
        </attr>
        <attr name="textAllCaps" format="boolean" />
    </declare-styleable>

    <!-- Gallery -->
    <declare-styleable name="Gallery">

        <!--
             These are styleables that are in a standard Gallery, 
    		reproduced here so we can use them
        -->
        <attr name="android:gravity" />
        <attr name="android:animationDuration" />
        <attr name="android:spacing" />
        <attr name="android:unselectedAlpha" />

        <!-- The rate at which we flip through images, in ms. -->
        <attr name="android:flipInterval" />

        <!-- The drawable or color to use as a placeholder image -->
        <attr name="placeholder" format="reference" />
    </declare-styleable>
    <declare-styleable name="CustomEditText">

        <!--
        Flag to indicate whether or not to use the 
		clear field functionality set up as a right drawable
        -->
        <attr name="useClearFieldDrawable" format="boolean" />
        <attr name="clearFieldDrawable" format="reference|color" />
        <attr name="errorTextColor" format="reference" />
        <!-- Defines how much extra area around the "X" allows touch (for clearing the content) -->
        <attr name="touchAreaPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="SlideToWidget">
        <attr name="sliderText" format="string" />
        <attr name="sliderImage" format="reference" />
        <attr name="dragImage" format="reference" />
        <attr name="destImage" format="reference" />
        <attr name="destComplete" format="reference" />
        <attr name="lineColor" format="color" />
    </declare-styleable>

    <!-- NumberPicker style. -->
    <attr name="numberPickerStyle" format="reference" />
    <!-- NumberPicker up button style. -->
    <attr name="numberPickerUpButtonStyle" format="reference" />
    <!-- NumberPicker down button style. -->
    <attr name="numberPickerDownButtonStyle" format="reference" />
    <!-- NumberPicker input text style. -->
    <attr name="numberPickerInputTextStyle" format="reference" />

    <!-- SimpleNumberPicker up button style. -->
    <attr name="simpleNumberPickerUpButtonStyle" format="reference" />
    <!-- SimpleNumberPicker down button style. -->
    <attr name="simpleNumberPickerDownButtonStyle" format="reference" />
    <!-- SimpleNumberPicker input text style. -->
    <attr name="simpleNumberPickerInputTextStyle" format="reference" />

    <declare-styleable name="NumberPicker">

        <!-- @hide Color for the solid color background if such for optimized rendering. -->
        <attr name="solidColor" format="color|reference" />
        <!-- @hide Whether the number picker supports fligning. -->
        <attr name="flingable" format="boolean" />
        <!-- @hide The divider for making the selection area. -->
        <attr name="selectionDivider" format="reference" />
        <!-- @hide The height of the selection divider. -->
        <attr name="selectionDividerHeight" format="dimension" />
        <!-- custom layout -->
        <attr name="customLayout" format="reference" />
    </declare-styleable>
    <declare-styleable name="ScrollView">

        <!-- Defines whether the scrollview should stretch its content to fill the viewport. -->
        <attr name="fillViewport" format="boolean" />
    </declare-styleable>

    <!-- This is for our flight cards on the checkout screen where we need to switch between normal (transparent) and opaque -->
    <declare-styleable name="flight_card_bg">
        <attr name="state_opaque" format="boolean" />
        <attr name="state_transparent" format="boolean" />
    </declare-styleable>

    <!-- This allows us to pass a layout to the TelephoneSpinner that it can hand to the TelephoneSpinnerAdapter that defines the layout to use for view when it is not expanded -->
    <declare-styleable name="TelephoneSpinner">
        <attr name="text_view_layout" format="reference" />
    </declare-styleable>

    <!-- So that we can define different credit card icons for flights vs hotels -->
    <declare-styleable name="stored_credit_card_section">
        <attr name="cardIcon" format="reference" />
        <attr name="primaryTextColor" format="color|reference" />
        <attr name="secondaryTextColor" format="color|reference" />
    </declare-styleable>

    <!-- So that we can define this in the layout xml rather than in code -->
    <declare-styleable name="hotel_summary_section">
        <attr name="selectedBackground" format="color|reference" />
        <attr name="salePriceTextColor" format="color" />
        <attr name="priceTextColor" format="color" />
    </declare-styleable>

    <!-- This is the flight line that shows layovers, we want to be able to control colors -->
    <declare-styleable name="FlightTripView">
        <attr name="flightLineColor" format="color|reference" />
        <attr name="waypointTextColor" format="color|reference" />
        <attr name="waypointTextSize" format="dimension|reference" />
        <attr name="waypointTextTypeface" format="enum">
            <enum name="medium" value="0" />
        </attr>
        <attr name="waypointTextTopMargin" format="dimension" />
    </declare-styleable>

    <!-- CheckBoxPreference -->
    <declare-styleable name="CheckBoxPreference">
        <attr name="id" format="reference" />
    </declare-styleable>

    <!-- ParallaxContainer -->
    <declare-styleable name="ParallaxContainer">
        <attr name="offsetTop" format="dimension" />
        <attr name="offsetBottom" format="dimension" />
        <attr name="scrollMin" format="dimension" />
        <attr name="scrollMax" format="dimension" />
    </declare-styleable>

    <!-- ItinListView -->
    <declare-styleable name="ItinListView">
        <attr name="pathViewWidth" format="dimension" />
        <attr name="pathViewColor" format="color" />
    </declare-styleable>

    <!-- AttractionBubbleView -->
    <declare-styleable name="AttractionBubbleView">
        <attr name="size">
            <enum name="small" value="0" />
            <enum name="large" value="1" />
        </attr>
    </declare-styleable>

    <!-- RingedCountView -->
    <declare-styleable name="RingedCountView">
        <attr name="caption" format="reference|string" />
        <attr name="backgroundColor" format="color" />
        <attr name="countTextColor" format="color" />
        <attr name="captionTextColor" format="color" />
        <attr name="primaryColor" format="color" />
        <attr name="secondaryColor" format="color" />
        <attr name="ringThickness" format="dimension" />
        <attr name="countTextSize" format="dimension" />
        <attr name="captionTextSize" format="dimension" />
        <attr name="countTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="black" value="8" />
            <enum name="condensed" value="16" />
            <enum name="light" value="32" />
            <enum name="medium" value="64" />
            <enum name="thin" value="128" />
        </attr>
        <attr name="captionTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="black" value="8" />
            <enum name="condensed" value="16" />
            <enum name="light" value="32" />
            <enum name="medium" value="64" />
            <enum name="thin" value="128" />
        </attr>
        <attr name="percent" format="float" />
    </declare-styleable>

    <!-- SlidingRadioGroup -->
    <declare-styleable name="SlidingRadioGroup">
        <attr name="unselectedDrawable" format="reference" />
        <attr name="selectedDrawable" format="reference" />
        <attr name="unselectedDividerColor" format="color" />
        <attr name="selectedDividerColor" format="color" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="sluggishness" format="integer" />
    </declare-styleable>

    <!-- CalendarPicker -->
    <declare-styleable name="CalendarPicker">

        <!-- The default color for elements on the calendar picker -->
        <attr name="calendarBaseColor" format="color" />

        <!-- Color used for secondary elements, like dates not in the current month -->
        <attr name="calendarSecondaryColor" format="color" />

        <!-- The highlight color; includes header buttons and selection -->
        <attr name="calendarHighlightColor" format="color" />

        <!-- Color used on top of the highlight color (should contrast) -->
        <attr name="calendarHighlightInverseColor" format="color" />

        <!-- Color used to indicate which day is today -->
        <attr name="calendarTodayColor" format="color" />

        <!-- Color used to indicate days which are not selectable for reasons -->
        <attr name="calendarInvalidDaysColor" format="color" />
    </declare-styleable>

    <!-- VSC/EB attributes used for style switching in themes -->
    <!-- Hotel Search price styles -->
    <attr name="hotelPriceStandardColor" format="reference|color" />
    <attr name="hotelPriceSaleColor" format="reference|color" />

    <!-- PhoneSearchActivity's actionbar padding required in VSC due to rainbow bar -->
    <attr name="hotelSearchActionBarPadding" format="reference|dimension" />

    <!-- ActionBar icon/logo in WebView/Preference/Info Activities -->
    <attr name="webViewPreferencesActionBarLogo" format="reference" />

    <!-- ActionBar icon/logo in WebView that also sets a title -->
    <attr name="webViewPreferencesActionBarLogoWithTitle" format="reference" />
    <!-- ActionBar icon/logo in HotelRulesActivities -->
    <attr name="hotelwebViewActionBarLogo" format="reference" />
    <attr name="actionBarBackgroundDrawable" format="reference" />
    <!-- ActionBar checkmark drawable -->
    <attr name="actionBarCheckMarkDrawable" format="reference" />
    <!-- ActionBar Done/Search button color -->
    <attr name="actionBarButtonTextColor" format="reference|color" />
    <!-- ActionBar checkout arrow drawable -->
    <attr name="actionBarCheckoutDrawable" format="reference" />
    <attr name="costSummaryHeaderTextColor" format="reference|color" />

    <!-- Ratingbar style in UserReviewsListActivity -->
    <attr name="ratingBarUserReviewStyle" format="reference" />

    <!-- Hotel calendar related styling -->
    <attr name="calendarDatePickerCellDrawable" format="reference" />
    <attr name="calendarDatePickerPopupDrawable" format="reference" />
    <attr name="calendarDatePickerDateFormat" format="reference|string" />
    <attr name="hotelCancellationPolicyDateFormat" format="reference|string" />

    <!-- Hotel promo pricing related styling -->
    <attr name="hotelListingSaleDrawable" format="reference" />
    <attr name="hotelDetailSaleRibbonDrawable" format="reference" />
    <attr name="roomsRatesSaleRibbonDrawable" format="reference" />

    <!-- Hotel listing user review rating style -->
    <attr name="hotelListingUserRatingStyle" format="reference" />

    <!-- Hotel listing Sort by price icon -->
    <attr name="hotelListingSortPriceDrawable" format="reference" />

    <!-- Hotel filters button style, for SegmentedControlGroups -->
    <attr name="hotelListingFilterGroupStyle" format="reference" />

    <!-- Hotel filters button style for VIP Toggle Button -->
    <attr name="hotelListingFilterToggleButtonStyle" format="reference" />

    <!-- Hotel listing Filter price strings -->
    <attr name="hotelListingFilterPriceCheapString" format="reference|string" />
    <attr name="hotelListingFilterPriceModerateString" format="reference|string" />
    <attr name="hotelListingFilterPriceExpensiveString" format="reference|string" />

    <!-- Hotel details tablet popup styles -->
    <attr name="hotelDetailsUserRatingStyle" format="reference" />
    <attr name="hotelDetailsStarRatingStyle" format="reference" />

    <!-- HangTag assets -->
    <attr name="hangTagProgressDrawable" format="reference" />
    <attr name="hangTagProgressRingFillDrawable" format="reference" />
    <attr name="hangTagKnobDrawable" format="reference" />
    <attr name="hangTagKnobBackgroundDrawable" format="reference" />

    <!-- Hotel Listing row thumbnail placeholder -->
    <attr name="HotelRowThumbPlaceHolderDrawable" format="reference" />

    <!-- Cost Summary Breakdown Dialog Stripe -->
    <attr name="costSummaryDialogStripeDrawable" format="reference" />

    <!-- Log in with Expedia/VSC screen -->
    <!-- This drawable is used in hotel detail for Book Now button as well -->
    <attr name="loginBookNowButtonDrawable" format="reference" />
    <attr name="loginWithExpediaButtonText" format="reference|string" />
    <attr name="loginWithExpediaTitleText" format="reference|string" />
    <attr name="hotelDetailPlaceHolderDrawable" format="reference" />

    <!-- Hotel Confirmation, Customer support option drawable -->
    <attr name="hotelConfirmationCallActionDrawable" format="reference" />

    <!-- Hotel confirmation screen, login button text and icons -->
    <attr name="hotelCheckoutLoginButtonText" format="reference|string" />
    <attr name="hotelCheckoutLogoutLogoDrawable" format="reference" />
    <attr name="hotelCheckoutLoginLogoDrawable" format="reference" />

    <!-- HotelCheckout CVV, Book button -->
    <attr name="cvvBookButtonKeypadDrawable" format="reference" />

    <!-- HotelCheckout Traveler Info screen after logged in, Logo to the left of the primary traveler -->
    <attr name="hotelPrimaryTravelerInfoLogoDrawable" format="reference" />
    <attr name="hotelListMapMarkerSaleDrawable" format="reference" />
    <attr name="ccCheckoutHologramDrawable" format="reference" />

    <!-- Placeholder image used in hotelReciept, Rooms&RatesListActivity -->
    <attr name="hotelImagePlaceHolderDrawable" format="reference" />

    <!-- Text defined separately for VSC, in the CVV entry screen -->
    <attr name="cvvEntryExplainationText" format="reference|string" />

    <!-- for hotels and flights travel type -->
    <attr name="travelerLabelOnCheckout" format="reference|string" />

    <!-- SwipeOutLayout style -->
    <declare-styleable name="SwipeOutLayout">
        <attr name="swipeOutDirection">
            <enum name="north" value="0" />
            <enum name="south" value="1" />
            <enum name="east" value="2" />
            <enum name="west" value="3" />
        </attr>
        <attr name="swipeOutEnabled" format="boolean" />
        <attr name="swipeOutContentId" format="reference" />
        <attr name="swipeOutIndicatorId" format="reference" />
    </declare-styleable>
    
    <!-- FruitList style -->
    <declare-styleable name="FruitList">
        <attr name="headerSpacerColor" format="reference|color" />
        <attr name="footerSpacerColor" format="reference|color" />
        <attr name="headerSpacePercentage" format="float" />
        <attr name="headerSpaceSize" format="dimension|reference" />
    </declare-styleable>

</resources>