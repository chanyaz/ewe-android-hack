<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ATTRIBUTE DELCARATIONS -->
    <attr name="textStyle">
        <flag name="normal" value="0" />
        <flag name="bold" value="1" />
        <flag name="italic" value="2" />
        <flag name="black" value="8" />
        <flag name="condensed" value="16" />
        <flag name="light" value="32" />
        <flag name="medium" value="64" />
        <flag name="thin" value="128" />
    </attr>

    <!-- STYLEABLE DECLARATIONS -->
    <!-- TextView -->
    <declare-styleable name="TextView">
        <attr name="textStyle" />
        <attr name="textAllCaps" format="boolean" />
    </declare-styleable>

    <!-- Gallery -->
    <declare-styleable name="Gallery">

        <!--
             These are styleables that are in a standard Gallery, 
    		reproduced here so we can use them
        -->
        <attr name="android:gravity" />
        <attr name="android:animationDuration" />
        <attr name="android:spacing" />
        <attr name="android:unselectedAlpha" />

        <!-- The rate at which we flip through images, in ms. -->
        <attr name="android:flipInterval" />

        <!-- The drawable or color to use as a placeholder image -->
        <attr name="placeholder" format="reference" />
    </declare-styleable>
    <declare-styleable name="CustomEditText">

        <!--
        Flag to indicate whether or not to use the 
		clear field functionality set up as a right drawable
        -->
        <attr name="useClearFieldDrawable" format="boolean" />
        <attr name="clearFieldDrawable" format="reference|color" />
        <attr name="errorTextColor" format="reference" />
        <!-- Defines how much extra area around the "X" allows touch (for clearing the content) -->
        <attr name="touchAreaPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="SlideToWidget">
        <attr name="sliderText" format="string" />
        <attr name="sliderImage" format="reference" />
        <attr name="dragImage" format="reference" />
        <attr name="destImage" format="reference" />
        <attr name="destComplete" format="reference" />
        <attr name="lineColor" format="color" />
    </declare-styleable>

    <!-- NumberPicker style. -->
    <attr name="numberPickerStyle" format="reference" />
    <!-- NumberPicker up button style. -->
    <attr name="numberPickerUpButtonStyle" format="reference" />
    <!-- NumberPicker down button style. -->
    <attr name="numberPickerDownButtonStyle" format="reference" />
    <!-- NumberPicker input text style. -->
    <attr name="numberPickerInputTextStyle" format="reference" />

    <!-- SimpleNumberPicker up button style. -->
    <attr name="simpleNumberPickerUpButtonStyle" format="reference" />
    <!-- SimpleNumberPicker down button style. -->
    <attr name="simpleNumberPickerDownButtonStyle" format="reference" />
    <!-- SimpleNumberPicker input text style. -->
    <attr name="simpleNumberPickerInputTextStyle" format="reference" />

    <declare-styleable name="NumberPicker">

        <!-- @hide Color for the solid color background if such for optimized rendering. -->
        <attr name="solidColor" format="color|reference" />
        <!-- @hide Whether the number picker supports fligning. -->
        <attr name="flingable" format="boolean" />
        <!-- @hide The divider for making the selection area. -->
        <attr name="selectionDivider" format="reference" />
        <!-- @hide The height of the selection divider. -->
        <attr name="selectionDividerHeight" format="dimension" />
        <!-- custom layout -->
        <attr name="customLayout" format="reference" />
    </declare-styleable>
    <declare-styleable name="ScrollView">

        <!-- Defines whether the scrollview should stretch its content to fill the viewport. -->
        <attr name="fillViewport" format="boolean" />
    </declare-styleable>

    <!-- This is for our flight cards on the checkout screen where we need to switch between normal (transparent) and opaque -->
    <declare-styleable name="flight_card_bg">
        <attr name="state_opaque" format="boolean" />
        <attr name="state_transparent" format="boolean" />
    </declare-styleable>

    <!-- This allows us to pass a layout to the TelephoneSpinner that it can hand to the TelephoneSpinnerAdapter that defines the layout to use for view when it is not expanded -->
    <declare-styleable name="TelephoneSpinner">
        <attr name="text_view_layout" format="reference" />
    </declare-styleable>

    <!-- So that we can define different credit card icons for flights vs hotels -->
    <declare-styleable name="stored_credit_card_section">
        <attr name="activeIcon" format="reference" />
        <attr name="storedIcon" format="reference" />
    </declare-styleable>

    <!-- This is the flight line that shows layovers, we want to be able to control colors -->
    <declare-styleable name="FlightTripView">
        <attr name="flightLineColor" format="color|reference" />
        <attr name="waypointTextColor" format="color|reference" />
        <attr name="waypointTextTopMargin" format="dimension" />
    </declare-styleable>

    <!-- CheckBoxPreference -->
    <declare-styleable name="CheckBoxPreference">
        <attr name="id" format="reference" />
    </declare-styleable>

    <!-- ItinHeaderImageView -->
    <declare-styleable name="ItinHeaderImageView">
        <attr name="mode">
            <enum name="mini" value="0" />
            <enum name="summary" value="1" />
            <enum name="full" value="2" />
        </attr>
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <!-- RoundedImageView -->
    <declare-styleable name="RoundedImageView">
        <attr name="radiusTL" format="dimension" />
        <attr name="radiusTR" format="dimension" />
        <attr name="radiusBL" format="dimension" />
        <attr name="radiusBR" format="dimension" />
    </declare-styleable>

    <!-- ParallaxContainer -->
    <declare-styleable name="ParallaxContainer">
        <attr name="offsetTop" format="dimension" />
        <attr name="offsetBottom" format="dimension" />
        <attr name="scrollMin" format="dimension" />
        <attr name="scrollMax" format="dimension" />
    </declare-styleable>
    
    <!-- ItinListView -->
    <declare-styleable name="ItinListView">
        <attr name="pathViewWidth" format="dimension" />
        <attr name="pathViewColor" format="color" />
    </declare-styleable>
</resources>
