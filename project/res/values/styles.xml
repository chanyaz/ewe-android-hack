<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="formSectionHeaderText">
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginLeft">8dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:textColor">#545454</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
	</style>     

	<!-- Partial import from @android:style/Widget.RatingBar.Small. -->	
	<style name="RatingBarSmall">
		<item name="android:indeterminateOnly">false</item>
		<item name="android:minHeight">14dip</item>
		<item name="android:maxHeight">14dip</item>
		<item name="android:thumb">@null</item>
		<item name="android:isIndicator">true</item>
	</style>
	
	<style name="RatingBarSmall.Shadowed">
		<item name="android:background">@null</item>
		<item name="android:progressDrawable">@drawable/star_shadowed_ratingbar</item>
		<item name="android:minHeight">16dp</item>
		<item name="android:maxHeight">16dp</item>
	</style>     

	<style name="RatingBarSmall.Shadowed.Inset">
		<item name="android:progressDrawable">@drawable/star_inset_ratingbar</item>
	</style>
	
	<style name="RatingBarSmall.Shadowed.InsetGray">
		<item name="android:minHeight">12dp</item>
		<item name="android:progressDrawable">@drawable/star_inset_gray_ratingbar</item>
	</style>     

	<style name="RatingBarSmall.Shadowed.UserRating">
		<item name="android:progressDrawable">@drawable/star_user_review_rating_bar_on_black_bg</item>
	</style>

	<style name="RatingBarSmall.Shadowed.UserReview">
		<item name="android:progressDrawable">@drawable/star_user_review_rating_bar</item>
	</style>

    <style name="Widget.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>
    </style>
    
    <style name="Widget.Button" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/btn_default</item>
    	<item name="android:textColor">#FF000000</item>
    </style>
    
    <style name="Widget.Button.HotelDetails" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/btn_hotel_details</item>
    	<item name="android:textColor">#424552</item>
    	<item name="android:shadowColor">#bfffffff</item>
    	<item name="android:shadowDx">1.0</item>
    	<item name="android:shadowDy">1.0</item>
    	<item name="android:shadowRadius">1.0</item>
    </style>
    
    <style name="Widget.SegmentedControlGroup" parent="@android:style/Widget" />
    
    <style name="Widget.SegmentedControlGroup.UserReviews">
    	<item name="centerButton">@drawable/btn_user_review_segmented_control_center</item>
    	<item name="leftButton">@drawable/btn_user_review_segmented_control_left</item>
    	<item name="rightButton">@drawable/btn_user_review_segmented_control_right</item>
    	<item name="textColor">@color/segmented_button_user_review_text</item>
    </style>
    
    <style name="Widget.Button.Orange" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/btn_default_orange</item>
    	<item name="android:textColor">#FF000000</item>
    </style>
    
    <style name="Widget.Button.Small" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/btn_default_small</item>
    	<item name="android:textColor">#FF000000</item>
    </style>
    
    <style name="Widget.Button.Small.Orange" parent="@android:style/Widget.Button.Small">
    	<item name="android:background">@drawable/btn_default_small_orange</item>
    	<item name="android:textColor">#FF000000</item>
    </style>
    
    <style name="Widget.Button.SearchBar" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/btn_search_bar</item>
    </style>
    
    <style name="Widget.Button.SearchBar.Orange" parent="@style/Widget.Button.SearchBar">
    	<item name="android:background">@drawable/btn_search_bar_orange</item>
    </style>
    
    <style name="Widget.Button.Floating" parent="@android:style/Widget.ImageButton">
    	<item name="android:background">@drawable/btn_floating</item>
    </style>

    <style name="Widget.Spinner" parent="@android:style/Widget.Spinner">
    	<item name="android:background">@drawable/btn_dropdown</item>
    </style>
    
    <style name="Widget.CompoundButton.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
    	<item name="android:button">@drawable/btn_check</item>
    </style>

    <style name="ExpediaList">
    	<item name="android:background">#e7e7e7</item>
		<item name="android:cacheColorHint">#e7e7e7</item>
		<item name="android:divider">@drawable/list_divider</item>
		<item name="android:footerDividersEnabled">false</item>
		<item name="android:fadingEdge">none</item>
    </style>
    
    <style name="rateInfoText">
    	<item name="android:textSize">12sp</item>
		<item name="android:textColor">#696969</item>
    </style>
    
    <style name="widgetHotelNameText">
    	<item name="android:textColor">#3d4552</item>
    	<item name="android:textSize">14sp</item>
    	<item name="android:shadowColor">@android:color/white</item>
		<item name="android:shadowRadius">.1</item>
      	<item name="android:shadowDx">0</item>
      	<item name="android:shadowDy">1</item>
      	<item name="android:textStyle">bold</item>
    </style>
    
    <style name="widgetHotelLocationText" parent="widgetHotelNameText">
        	<item name="android:textColor">#7b7b7b</item>
			<item name="android:textSize">12sp</item>
        	<item name="android:textStyle">normal</item>
    </style>
    
    <style name="headerText">
    	<item name="android:textColor">#E1E1E1</item>
    	<item name="android:textSize">18sp</item>
    	<item name="android:textStyle">bold</item>
    </style>
    
    <style name="SaleText">
    	<item name="android:textColor">@android:color/white</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:shadowColor">#88000000</item>
    	<item name="android:shadowDx">2</item>
    	<item name="android:shadowDy">1</item>
    	<item name="android:shadowRadius">0.1</item>
    </style>

    <style name="BookingSection">
    	<item name="android:layout_marginLeft">2dp</item>
    	<item name="android:layout_marginRight">2dp</item>
       	<item name="android:paddingTop">2dp</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:background">@drawable/bg_booking_section</item>
    </style>
</resources>
