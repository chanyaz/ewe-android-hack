        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">.1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="widgetHotelLocationText" parent="widgetHotelNameText">
        <item name="android:textColor">#7b7b7b</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="headerText">
        <item name="android:textColor">#E1E1E1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomBarText">
        <item name="android:textColor">#3d4552</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.1</item>
    </style>

    <style name="BookingSection">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:paddingTop">2dp</item>
