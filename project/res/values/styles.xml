<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="formSectionHeaderText">
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginLeft">8dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:textColor">#545454</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
	</style>
	
	<style name="Widget" />
	<style name="Widget.RatingBar" />

	<!-- Partial import from @android:style/Widget.RatingBar.Small. -->	
	<style name="Widget.RatingBar.Small">
		<item name="android:indeterminateOnly">false</item>
		<item name="android:minHeight">14dip</item>
		<item name="android:maxHeight">14dip</item>
		<item name="android:thumb">@null</item>
		<item name="android:isIndicator">true</item>
	</style>
	
	<style name="Widget.RatingBar.Small.Shadowed">
		<item name="android:background">@null</item>
		<item name="android:progressDrawable">@drawable/star_shadowed_ratingbar</item>
		<item name="android:minHeight">16dp</item>
		<item name="android:maxHeight">16dp</item>
	</style>     
	
	<style name="Widget.RatingBar.Small.Inset" parent="@style/Widget.RatingBar.Small.Shadowed">
		<item name="android:progressDrawable">@drawable/star_inset_ratingbar</item>
	</style>     
	
	<style name="Widget.RatingBar.Small.TripAdvisor" parent="@style/Widget.RatingBar.Small.Shadowed">
		<item name="android:progressDrawable">@drawable/star_tripadvisor_ratingbar</item>
	</style>

    <style name="Widget.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>
    </style>
    
    <style name="Widget.Button" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/btn_default</item>
    	<item name="android:textColor">#FF000000</item>
    </style>
    
    <style name="Widget.Button.Orange" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/btn_default_orange</item>
    	<item name="android:textColor">#FF000000</item>
    </style>
    
    <style name="Widget.Button.Small" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/btn_default_small</item>
    	<item name="android:textColor">#FF000000</item>
    </style>
    
    <style name="Widget.Button.Small.Orange" parent="@android:style/Widget.Button.Small">
    	<item name="android:background">@drawable/btn_default_small_orange</item>
    	<item name="android:textColor">#FF000000</item>
    </style>
    
    <style name="Widget.Button.SearchBar" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/btn_search_bar</item>
    </style>
    
    <style name="Widget.Button.SearchBar.Orange" parent="@style/Widget.Button.SearchBar">
    	<item name="android:background">@drawable/btn_search_bar_orange</item>
    </style>
    
    <style name="Widget.Button.Floating" parent="@android:style/Widget.ImageButton">
    	<item name="android:background">@drawable/btn_floating</item>
    </style>

    <style name="Widget.Spinner" parent="@android:style/Widget.Spinner">
    	<item name="android:background">@drawable/btn_dropdown</item>
    </style>
    
    <style name="Widget.CompoundButton.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
    	<item name="android:button">@drawable/btn_check</item>
    </style>

    <style name="ExpediaList">
    	<item name="android:background">#e7e7e7</item>
		<item name="android:cacheColorHint">#e7e7e7</item>
		<item name="android:divider">@drawable/list_divider</item>
		<item name="android:footerDividersEnabled">false</item>
		<item name="android:fadingEdge">none</item>
    </style>

    <style name="BookingSection">
    	<item name="android:layout_marginLeft">2dp</item>
    	<item name="android:layout_marginRight">2dp</item>
       	<item name="android:paddingTop">2dp</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:background">@drawable/bg_booking_section</item>
    </style>
</resources>
