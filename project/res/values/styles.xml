    </style>

    <style name="ExpediaList">
        <item name="android:background">@color/bg_expedia_list</item>
        <item name="android:cacheColorHint">@color/bg_expedia_list</item>
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:overScrollFooter">@null</item>
    </style>

    <style name="rateInfoText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#696969</item>
    </style>

    <style name="widgetHotelNameText">
