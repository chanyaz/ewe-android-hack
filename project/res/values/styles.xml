    <!-- TODO: get rid of all RatingBarSmall <<<<<<< -->

    <style name="ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_large_holo</item>
        <item name="android:minWidth">76dp</item>
        <item name="android:maxWidth">76dp</item>
        <item name="android:minHeight">76dp</item>
        <item name="android:maxHeight">76dp</item>
    </style>

    <style name="RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="RatingBar.Star">
        <item name="android:minHeight">14dip</item>
        <item name="android:maxHeight">14dip</item>
    </style>

    <style name="RatingBar.Star.Yellow" />

    <style name="RatingBar.Star.White">
        <item name="android:progressDrawable">@drawable/ratingbar_star_white</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="RatingBar.Star.Gray">
        <item name="android:progressDrawable">@drawable/ratingbar_star_gray</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="RatingBar.UserReview">
        <item name="android:progressDrawable">@drawable/ratingbar_userreview_yellow</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
    </style>

    <style name="RatingBar.UserReview.Yellow" />

    <style name="RatingBar.UserReview.White">
        <item name="android:progressDrawable">@drawable/ratingbar_userreview_white</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
    </style>

    <style name="Widget.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="Widget.SegmentedControlGroup" parent="@android:style/Widget" />

    <style name="Widget.SegmentedControlGroup.UserReviews">
        <item name="centerButton">@drawable/btn_user_review_segmented_control_center</item>
        <item name="leftButton">@drawable/btn_user_review_segmented_control_left</item>
        <item name="rightButton">@drawable/btn_user_review_segmented_control_right</item>
        <item name="textColor">@color/segmented_button_user_review_text</item>
    </style>

    <style name="Widget.Button.Orange" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_default_orange</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="Widget.Button.Yellow" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_yellow</item>
        <item name="android:textColor">@color/btn_yellow_text_color</item>
        <item name="android:shadowColor">#a5ffffff</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="Widget.Button.White" parent="@style/Widget.Button.Yellow">
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:textColor">#232323</item>
        <item name="android:shadowColor">#a5ffffff</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="Widget.Button.ChildAges" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_child_ages</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ConfirmationButtonText">
        <item name="android:textColor">#232323</item>
        <item name="android:shadowColor">#a5ffffff</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Button.Yellow.Search">
        <item name="android:background">@drawable/btn_search_hotels</item>
    </style>

    <style name="Widget.Button.Yellow.Confirmation">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Button.Small" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_default_small</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="Widget.Button.Small.Orange" parent="@android:style/Widget.Button.Small">
        <item name="android:background">@drawable/btn_default_small_orange</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="Widget.Button.Floating" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/btn_floating</item>
