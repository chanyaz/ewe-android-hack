    <style name="Widget.ActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/bg_action_bar_gallery</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Widget.ActionBar.Title</item>
    </style>

    <style name="TextAppearance.Widget.ActionBar.Title" parent="android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/tablet_gallery_actionbar_title</item>
        <item name="android:shadowColor">@color/tablet_gallery_actionbar_title_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <!-- App -->
    <style name="TabletSectionHeader">
        <item name="android:textColor">#545454</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">.1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TabletSectionHeader.Details" parent="@style/TabletSectionHeader">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="PhoneSectionHeader.Details" parent="@style/TabletSectionHeader.Details">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#3c608c</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <!-- TODO: get rid of all RatingBarSmall >>>>>>> -->
    <!-- Partial import from @android:style/Widget.RatingBar.Small. -->
    <style name="RatingBarSmall">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">14dip</item>
        <item name="android:maxHeight">14dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="RatingBarSmall.Shadowed">
        <item name="android:minHeight">@dimen/min_height_rating_bar_small</item>
        <item name="android:maxHeight">@dimen/max_height_rating_bar_small</item>
        <item name="android:background">@null</item>
    </style>

    <style name="RatingBarSmall.Shadowed.Star">
        <item name="android:progressDrawable">@drawable/star_rating_light</item>
    </style>

    <style name="RatingBarSmall.Shadowed.Star.Light" />

    <style name="RatingBarSmall.Shadowed.Star.Dark">
        <item name="android:progressDrawable">@drawable/star_rating_dark</item>
    </style>

    <style name="RatingBarSmall.Shadowed.Star.InsetGray">
        <item name="android:minHeight">12dp</item>
        <item name="android:progressDrawable">@drawable/star_inset_gray_ratingbar</item>
    </style>

    <style name="RatingBarSmall.UserReview">
        <item name="android:progressDrawable">@drawable/user_rating_small</item>
    </style>

    <style name="RatingBarSmall.Shadowed.UserReview">
        <item name="android:progressDrawable">@drawable/user_rating_light</item>
    </style>

    <style name="RatingBarSmall.Shadowed.UserReview.Light" />

    <style name="RatingBarSmall.Shadowed.UserReview.Dark">
        <item name="android:progressDrawable">@drawable/user_rating_dark</item>
