<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Parent made because the name "Theme" is already taken.  Don't put anything in here -->
    <style name="V2" parent="@android:style/Theme.Holo.Light.DarkActionBar" />

    <!-- Values that go into *everything*.  Don't put anything here unless you want it *everywhere* -->
    <style name="V2.Theme" />

    <!-- Values that go into every *activity*.  Don't put anything here unless you want it in every *activity* -->
    <style name="V2.Theme.Activity" />

    <style name="V2.Theme.Activity.TabletLaunch">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>