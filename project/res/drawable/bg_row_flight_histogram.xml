<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <color android:color="@color/tablet_white_pane_bg" />
    </item>
    <item android:bottom="@dimen/results_flight_histogram_vertical_margin"
          android:left="@dimen/results_flight_histogram_horizontal_margin"
          android:right="@dimen/results_flight_histogram_horizontal_margin"
          android:top="@dimen/results_flight_histogram_vertical_margin">
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="#4572ad" />
                    <corners android:radius="@dimen/tablet_result_corner_radius" />
                </shape>
            </item>
            <item android:state_checked="true">
                <shape>
                    <solid android:color="#4572ad" />
                    <corners android:radius="@dimen/tablet_result_corner_radius" />
                </shape>
            </item>
            <item android:state_activated="true">
                <shape>
                    <solid android:color="#4572ad" />
                    <corners android:radius="@dimen/tablet_result_corner_radius" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape>
                    <solid android:color="#4572ad" />
                    <corners android:radius="@dimen/tablet_result_corner_radius" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#374f6e" />
                    <corners android:radius="@dimen/tablet_result_corner_radius" />
                </shape>
            </item>
        </selector>
    </item>

</layer-list>