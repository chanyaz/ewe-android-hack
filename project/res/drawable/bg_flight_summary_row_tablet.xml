<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <color android:color="@color/tablet_white_pane_bg" />
    </item>
    <item android:bottom="@dimen/hotel_flight_card_padding_y"
          android:left="@dimen/hotel_flight_card_padding_x"
          android:right="@dimen/hotel_flight_card_padding_x"
          android:top="@dimen/hotel_flight_card_padding_y">
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="#4572ad" />
                </shape>
            </item>
            <item android:state_checked="true">
                <shape>
                    <solid android:color="#4572ad" />
                </shape>
            </item>
            <item android:state_activated="true">
                <shape>
                    <solid android:color="#4572ad" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape>
                    <solid android:color="#4572ad" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#374f6e" />
                </shape>
            </item>
        </selector>
    </item>

</layer-list>