<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mobiata="http://schemas.android.com/apk/res-auto" >

    <style name="CvvScreenCreditCard">
        <item name="android:layout_width">460dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_above">@+id/center</item>
        <item name="android:layout_alignRight">@+id/credit_card_input_section</item>
        <item name="android:layout_marginBottom">140dp</item>
        <item name="android:layout_marginRight">28dp</item>
    </style>

    <style name="CvvScreenInput">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_below">@+id/center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">80dp</item>
    </style>

    <style name="CvvScreenCreditCardSignature">
        <item name="android:layout_alignBottom">@+id/credit_card_signature_bg_view</item>
        <item name="android:layout_alignLeft">@+id/credit_card_signature_bg_view</item>
        <item name="android:layout_alignRight">@+id/credit_card_signature_bg_view</item>
        <item name="android:layout_alignTop">@+id/credit_card_signature_bg_view</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">132dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="CvvScreenCreditCardSignatureBackground">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="CvvScreenCreditCardSignatureSection">
        <item name="android:background">@drawable/bg_credit_card_back_full</item>
    </style>

    <style name="CvvScreenCvvInput">
        <item name="android:layout_above">@+id/center</item>
        <item name="android:layout_marginBottom">324dp</item>
    </style>

    <style name="Widget.TextView.CVVPrompt" parent="Widget.TextView.CVVPromptBase">
        <item name="android:layout_alignTop">@+id/cvv_text_view</item>
    </style>
</resources>
