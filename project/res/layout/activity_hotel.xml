<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<!-- Info bar at the top of the screen -->
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="6dp"
		android:orientation="horizontal"
		android:background="@drawable/bg_header">
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1">
			<TextView
				android:id="@+id/name_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:singleLine="true"
				android:ellipsize="end"
				android:textColor="#E1E1E1"
				android:textSize="18sp"
				android:textStyle="bold" />
			<LinearLayout
				android:id="@+id/hotel_rating_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/name_text_view"
				android:layout_alignLeft="@+id/name_text_view"
				android:orientation="vertical">
				<TextView
					android:id="@+id/hotel_rating_text_view"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/star_rating"
					android:textColor="#E1E1E1"
					android:textSize="12sp" />
				<RatingBar
					android:id="@+id/hotel_rating_bar"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:numStars="5"
					android:stepSize=".5"
					android:isIndicator="true" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/trip_advisor_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/hotel_rating_layout"
				android:layout_alignTop="@+id/hotel_rating_layout"
				android:layout_alignBottom="@+id/hotel_rating_layout"
				android:layout_marginLeft="14dp"
				android:orientation="vertical">
				<TextView
					android:id="@+id/trip_advisor_text_view"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="@string/trip_advisor"
					android:textColor="#E1E1E1"
					android:textSize="12sp" />
				<RatingBar
					android:id="@+id/trip_advisor_rating_bar"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_marginTop="1dp"
					android:numStars="5"
					android:stepSize=".5"
					android:isIndicator="true"
					style="@style/Widget.RatingBar.Small.TripAdvisor" />
			</LinearLayout>
		</RelativeLayout>
		<Button
			android:id="@+id/book_now_button"
			android:layout_width="100dp"
			android:layout_height="fill_parent"
			android:layout_toRightOf="@+id/hotel_name_text_view"
			android:layout_alignParentRight="true"
			android:layout_marginTop="4dp"
			android:layout_marginLeft="6dp"
			android:text="@string/book_now"
			style="@style/Widget.Button.Orange" />
	</LinearLayout>


	<!-- Rotating image gallery -->
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="200dp"
		android:background="@drawable/bg_gallery">
		<Gallery
			android:id="@+id/images_gallery"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:fadingEdge="none"
			android:spacing="2dp" />
		<LinearLayout
			android:id="@+id/price_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_marginTop="8dp"
			android:paddingTop="3dp"
			android:paddingRight="25dp"
			android:gravity="left"
			android:orientation="vertical"
			android:background="@drawable/bg_ribbon">
			<TextView
				android:id="@+id/from_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#333333"
				android:textStyle="bold"
				android:textSize="12dp"
				android:includeFontPadding="false" />
			<TextView
				android:id="@+id/price_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#00355F"
				android:textStyle="bold"
				android:textSize="18dp"
				android:includeFontPadding="false" />
		</LinearLayout>
		<TextView
			android:id="@+id/promo_description_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_marginRight="16dp"
			android:layout_marginLeft="16dp"
			android:maxWidth="220dp"
			android:gravity="center"
			android:padding="4dp"
			android:background="#A40000"
			android:textColor="@android:color/white"
			android:visibility="gone" />
		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:scaleType="fitXY"
			android:src="@drawable/shadow" />
	</RelativeLayout>

	<!-- Details about the hotel. This is filled in dynamically based on available 
		hotel data -->
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginTop="4dp"
			android:fadingEdge="none">
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="#E3E3E6"
				android:orientation="vertical">
				<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginRight="12dp">
					<TableRow
						android:id="@+id/amenities_table_row"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layoutAnimation="@anim/layout_wave_scale" />
				</TableLayout>
				<View
					android:layout_width="fill_parent"
					android:layout_height="@dimen/two_pixels"
					android:layout_marginTop="6dp"
					android:layout_marginBottom="6dp"
					android:background="@drawable/divider" />
				<TextView
					android:id="@+id/description_text_view"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="12dp"
					android:layout_marginBottom="10dp"
					android:text="Description here!"
					android:textColor="#333333" />
			</LinearLayout>
		</ScrollView>

		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/separator_view"
			android:scaleType="fitXY"
			android:src="@drawable/detail_divider" />
	</RelativeLayout>
</LinearLayout>
