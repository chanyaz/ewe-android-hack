<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- Booking Info Screen Setup -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/fragment_rooms"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />

        <ScrollView
            android:id="@+id/availability_list_shadow"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/receipt_and_details_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp" >

                    <LinearLayout
                        android:id="@+id/fragment_receipt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/fragment_room_descrption"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/fragment_complete_booking"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/fragment_room_descrption"
                            android:layout_marginTop="20dp"
                            android:gravity="bottom|center_horizontal" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/two_pixels"
                    android:layout_margin="20dp"
                    android:background="@drawable/divider" />

                <LinearLayout
                    android:id="@+id/fragment_booking_cancellation_policy"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Search Screen Setup -->

    <LinearLayout
        android:id="@+id/fragment_search_params"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <!-- Search list + Hotel Details Screen Setup -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/fragment_hotel_list"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7" >

            <LinearLayout
                android:id="@+id/fragment_hotel_map"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <LinearLayout
                android:id="@+id/fragment_mini_details"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/mini_details_height"
                android:layout_gravity="bottom" />

            <LinearLayout
                android:id="@+id/fragment_details"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <View
                android:id="@+id/search_results_list_shadow"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
        </FrameLayout>
    </LinearLayout>

    <!-- Confirmation Screen Setup -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/fragment_confirmation_receipt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/fragment_confirmation_cancellation_policy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_confirmation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" />
    </LinearLayout>

</FrameLayout>