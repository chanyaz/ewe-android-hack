<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E9A600" />

    <LinearLayout
        android:id="@+id/construction_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="6dp" >

        <ImageView
            android:id="@+id/construction_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_suitcase_baggage_fee_blue" />

        <LinearLayout
            android:id="@+id/construction_message_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.expedia.bookings.widget.TextView
                android:id="@+id/construction_top_text"
                style="@style/TextAppearance.RoomsAndRatesNoticeTop"
                android:text="@string/renovation_notice" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/construction_bottom_text"
                style="@style/TextAppearance.RoomsAndRatesNoticeBottom"
                android:text="@string/property_undergoing_renovations" />
        </LinearLayout>

        <ImageView
            android:id="@+id/construction_chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:src="@drawable/btn_reviews_chevron" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/rooms_and_rates_notice_bottom_div" />

</merge>