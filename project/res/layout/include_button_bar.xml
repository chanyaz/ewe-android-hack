<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:id="@+id/button_bar_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/refinements_layout"
    android:background="@drawable/button_bar_bg"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="6dp"
    android:visibility="gone" >

    <com.mobiata.android.widget.AutoResizeTextView
        android:id="@+id/refinement_info_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        mobiata:maxTextSize="16sp"
        mobiata:minTextSize="6sp"
        android:paddingBottom="3dp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/search_button"
        style="@style/Widget.Button.Small.Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/search" />

</LinearLayout>