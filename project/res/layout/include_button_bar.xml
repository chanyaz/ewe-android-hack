<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
	android:id="@+id/button_bar_layout"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:layout_above="@id/refinements_layout"
    android:padding="6dp"
    android:background="@drawable/button_bar_bg"
    android:visibility="gone">

    <com.mobiata.android.widget.AutoResizeTextView
		android:id="@+id/refinement_info_text_view"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="6dp"
		android:layout_weight="1"
		android:maxLines="1"
		android:paddingBottom="3dp"
		android:gravity="center_vertical|left"
		android:textColor="@android:color/white"
		mobiata:maxTextSize="16sp"
		mobiata:minTextSize="6sp" />

    <Button
		android:id="@+id/search_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:gravity="center_vertical|right"
		android:text="@string/search"
		style="@style/Widget.Button.Small.Orange" />

</LinearLayout>
