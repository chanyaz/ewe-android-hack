<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="@integer/booking_info_weight_sum" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="@integer/booking_info_content_weight"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@drawable/bg_booking_info_dialog"
            android:orientation="vertical" >

            <!--
                  Header Bar 
            	  NOTE: Using a defined height since the header in the 9patch
            	  is not stretchable and is 60px tall
            -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/booking_information_dialog_title"
                    android:textColor="#545454"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/confirm_book_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/close_booking_form"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_book" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/close_booking_form"
                        android:paddingLeft="5dp"
                        android:text="@string/book_now"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/close_booking_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_sort_normal"
                    android:paddingLeft="12dp"
                    android:src="@drawable/ic_action_close" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fadingEdge="none"
                android:fillViewport="true"
                android:overScrollMode="never" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="10dp" >

                        <include
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            layout="@layout/include_receipt" />

                        <!-- Expedia points disclaimer -->

                        <TextView
                            android:id="@+id/expedia_points_disclaimer_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@string/disclaimer_expedia_points"
                            android:textColor="#6A6D71" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <!-- Guest info section -->

                        <TextView
                            style="@style/formSectionHeaderText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/guest_info" />

                        <!-- Guest form fields (from saved data) -->

                        <include layout="@layout/include_saved_guest_info" />

                        <!-- Guest form fields (entering data) -->

                        <include layout="@layout/include_guest_info_fields" />

                        <!-- Billing info form fields -->

                        <TextView
                            style="@style/formSectionHeaderText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/billing_info" />

                        <!-- Billing form fields (from saved data) -->

                        <include layout="@layout/include_billing_info_fields" />

                        <!-- Billing form fields (entering data) -->

                        <include layout="@layout/include_saved_billing_info" />

                        <!-- Credit card info form fields -->

                        <TextView
                            style="@style/formSectionHeaderText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/credit_card_info" />

                        <include layout="@layout/include_credit_card_info" />

                        <!-- Terms and conditions -->

                        <RelativeLayout
                            android:id="@+id/rules_restrictions_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" >

                            <CheckBox
                                android:id="@+id/rules_restrictions_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="8dp" />

                            <TextView
                                android:id="@+id/rules_restrictions_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignWithParentIfMissing="true"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/rules_restrictions_checkbox"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>