<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/root_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#454235">

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/blurred_dest_image_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/bucket_showing_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:paddingTop="?android:attr/actionBarSize"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/trip_bucket_scroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/trip_bucket_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#40000000"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:id="@+id/trip_bucket_header_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/your_trip_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/your_trip"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/trip_date_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="18dp"/>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/bucket_hotel_frag_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>

                <FrameLayout
                    android:id="@+id/bucket_flight_frag_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <FrameLayout
                android:id="@+id/cvv_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <FrameLayout
                android:id="@+id/booking_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <ProgressBar
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:indeterminate="true" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/checkout_forms_and_slide_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/checkout_forms_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"/>

                <FrameLayout
                    android:id="@+id/slide_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/slide_to_purchase_container_height"
                    android:layout_gravity="bottom"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/confirmation_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>