<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/tablet_guest_picker_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="24sp"
                app:textStyle="light" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/tablet_guest_picker_done_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:textSize="14sp"
                android:text="@string/DONE"
                android:textColor="#3E79A3"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_tablet_traveler_checkmark"
                app:textStyle="light" />
        </FrameLayout>

        <com.expedia.bookings.widget.GuestPicker
            android:id="@+id/guest_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/tablet_lap_infant_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#FF9900"
            android:textColor="#F3F3F3"
            android:textSize="16sp"
            android:text="@string/max_one_infant_per_lap"
            android:visibility="gone"
            app:textStyle="light" />

    </LinearLayout>
</ScrollView>