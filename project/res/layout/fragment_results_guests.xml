<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/results_traveler_picker_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/tablet_guest_picker_header"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/results_list_header_height"
            android:layout_gravity="left"
            android:paddingLeft="@dimen/hotel_flight_card_padding_x"
            android:text="@string/travelers"
            android:textSize="@dimen/results_list_header_text_size"
            android:textColor="#222222"
            android:gravity="center_vertical"
            app:textStyle="light" />

        <com.expedia.bookings.widget.GuestPicker
            android:id="@+id/guest_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/results_guest_picker_padding_x"
            android:paddingRight="@dimen/results_guest_picker_padding_x"/>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/tablet_lap_infant_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#FF9900"
            android:textColor="#F3F3F3"
            android:textSize="16dp"
            android:text="@string/max_one_infant_per_lap"
            android:visibility="gone"
            app:textStyle="light" />

    </LinearLayout>
</ScrollView>