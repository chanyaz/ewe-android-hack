<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tablet_guest_picker_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/tablet_guest_picker_done_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:text="@string/DONE"
                android:textColor="#3E79A3"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_tablet_traveler_checkmark"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/adult_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/adults_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_tablet_traveler_minus"/>

            <TextView
                android:id="@+id/adult_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"/>

            <ImageView
                android:id="@+id/adults_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_tablet_traveler_plus"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/children_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/children_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_tablet_traveler_minus"/>

            <TextView
                android:id="@+id/child_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"/>

            <ImageView
                android:id="@+id/children_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_tablet_traveler_plus"/>
        </LinearLayout>

        <include
            layout="@layout/include_child_age_selectors"/>

        <TextView
            android:id="@+id/tablet_lap_infant_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#FF9900"
            android:textColor="#F3F3F3"
            android:textSize="16sp"
            android:text="@string/not_enough_laps_for_infants"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>