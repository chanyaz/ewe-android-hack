<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_header"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="2dp" >

    <com.mobiata.android.widget.AutoResizeTextView
        android:id="@+id/book_now_button"
        style="@style/Widget.Button.Orange"
        android:layout_width="@dimen/header_button_width"
        android:layout_height="@dimen/header_button_height"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical|right"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="@string/book_now"
        android:textStyle="bold"
        mobiata:maxTextSize="15dp" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/book_now_button"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#e1e1e1"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/hotel_rating_bar"
        style="@style/RatingBarSmall.Shadowed.Star.Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/name_text_view"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/book_now_button"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize=".5" />

</RelativeLayout>