<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="6dp"
	android:orientation="horizontal"
	android:background="@drawable/bg_header">
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1">
		<TextView
			android:id="@+id/name_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:singleLine="true"
			android:ellipsize="end"
			android:textColor="#E1E1E1"
			android:textSize="18sp"
			android:textStyle="bold" />
		<LinearLayout
			android:id="@+id/hotel_rating_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/name_text_view"
			android:layout_alignLeft="@+id/name_text_view"
			android:orientation="vertical">
			<TextView
				android:id="@+id/hotel_rating_text_view"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/star_rating"
				android:textColor="#E1E1E1"
				android:textSize="12sp" />
			<RatingBar
				android:id="@+id/hotel_rating_bar"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:numStars="5"
				android:stepSize=".5"
				android:isIndicator="true" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/trip_advisor_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/hotel_rating_layout"
			android:layout_alignTop="@+id/hotel_rating_layout"
			android:layout_alignBottom="@+id/hotel_rating_layout"
			android:layout_marginLeft="14dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/trip_advisor_text_view"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/trip_advisor"
				android:textColor="#E1E1E1"
				android:textSize="12sp" />
			<RatingBar
				android:id="@+id/trip_advisor_rating_bar"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginTop="1dp"
				android:numStars="5"
				android:stepSize=".5"
				android:isIndicator="true"
				style="@style/Widget.RatingBar.Small.TripAdvisor" />
		</LinearLayout>
	</RelativeLayout>
	<Button
		android:id="@+id/book_now_button"
		android:layout_width="100dp"
		android:layout_height="fill_parent"
		android:layout_toRightOf="@+id/hotel_name_text_view"
		android:layout_alignParentRight="true"
		android:layout_marginTop="4dp"
		android:layout_marginLeft="6dp"
		android:textStyle="bold"
		android:text="@string/book_now"
		style="@style/Widget.Button.Orange" />
</LinearLayout>
