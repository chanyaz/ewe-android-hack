<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.expedia.bookings.widget.CustomEditText
            android:id="@+id/card_number_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_card_number"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="20"
            android:nextFocusDown="@+id/expiration_month_edit_text"
            android:nextFocusLeft="@+id/postal_code_edit_text"
            android:nextFocusRight="@+id/expiration_month_edit_text"
            android:nextFocusUp="@+id/postal_code_edit_text"
            android:textColorHint="@color/hint_color"
            mobiata:errorTextColor="@android:color/black" />

        <com.expedia.bookings.widget.CustomEditText
            android:id="@+id/expiration_month_edit_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_expiration_month"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusDown="@+id/expiration_year_edit_text"
            android:nextFocusLeft="@+id/card_number_edit_text"
            android:nextFocusRight="@+id/expiration_year_edit_text"
            android:nextFocusUp="@+id/postal_code_edit_text"
            android:textColorHint="@color/hint_color"
            mobiata:useClearFieldDrawable="false" />

        <com.expedia.bookings.widget.CustomEditText
            android:id="@+id/expiration_year_edit_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_expiration_year"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusDown="@+id/security_code_edit_text"
            android:nextFocusLeft="@+id/expiration_month_edit_text"
            android:nextFocusRight="@+id/security_code_edit_text"
            android:nextFocusUp="@+id/postal_code_edit_text"
            android:textColorHint="@color/hint_color"
            mobiata:useClearFieldDrawable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/credit_card_security_code_container"
        style="@style/BookingSection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/credit_card_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cc_unknown" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/security_code"
                android:textColor="#545454"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/security_code_tip_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/security_code_tip_back"
                android:textColor="#545454"
                android:textSize="12sp" />
        </LinearLayout>

        <com.expedia.bookings.widget.CustomEditText
            android:id="@+id/security_code_edit_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="4"
            android:nextFocusLeft="@+id/expiration_year_edit_text"
            android:nextFocusUp="@+id/expiration_year_edit_text"
            mobiata:errorTextColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>