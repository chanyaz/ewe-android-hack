<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.FlightSegmentSection xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_flight_details_row"
    android:orientation="vertical" >

    <include
        android:id="@+id/flight_leg_summary"
        layout="@layout/section_flight_leg_summary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="6dp"
        android:background="#A8A8A8" />

    <TextView
        android:id="@+id/details_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="#5D656E"
        android:textSize="14dp" />

</com.expedia.bookings.section.FlightSegmentSection>