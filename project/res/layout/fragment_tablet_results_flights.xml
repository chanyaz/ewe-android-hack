<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BG FLIGHT MAP -->
    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bg_flight_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- FLIGHT LEG CONTAINER -->
    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/flight_leg_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- LOADING  -->
    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/loading_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- SEARCH ERROR -->
    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/search_error_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <!-- ADD TO TRIP SHADE - We set alpha on this view to create a fade effect-->
    <View
        android:id="@+id/flights_add_to_trip_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="invisible" />

    <!-- ADD TO TRIP -->
    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/flights_add_to_trip"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>