<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#FFF">

    <com.mobiata.android.time.widget.CalendarPicker
        android:id="@+id/calendar_picker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="2dp"
        app:calendarBaseColor="#000000"
        app:calendarSecondaryColor="#6F6F6F"
        app:calendarHighlightColor="@color/tablet_results_search_blue"
        app:calendarHighlightInverseColor="#FFFFFF"
        app:calendarTodayColor="#FF4F4F"
        app:calendarInvalidDaysColor="#CFCFCF"
        app:calendarDaysOfWeekColor="#000000"
        app:calendarChangeMonthCaretColor="@color/tablet_results_search_blue"
        app:calendarHeaderTextSize="18dp"
        app:calendarHeaderTextColor="#000000"/>
</LinearLayout>

