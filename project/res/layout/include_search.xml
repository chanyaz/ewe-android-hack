<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:id="@+id/location_layout"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="25dp"
    android:layout_weight="1"
    android:orientation="vertical" >

    <com.expedia.bookings.widget.CustomEditText
        android:id="@+id/location_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_large_text_box"
        android:hint="@string/hint_search_location"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        mobiata:touchAreaPadding="35dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_suggestions" >

        <LinearLayout
            android:id="@+id/suggestions_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/suggestion_error_text_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>