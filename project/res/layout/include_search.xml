<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:id="@+id/location_layout"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_marginBottom="7dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="7dp"
    android:layout_weight="1"
    android:orientation="vertical" >

    <com.expedia.bookings.widget.CustomEditText
        android:id="@+id/location_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_large_text_box"
        android:hint="@string/hint_search_location"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:singleLine="true"
        mobiata:touchAreaPadding="35dp" />

    <LinearLayout
        android:id="@+id/suggestions_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#a3a3a3"
        android:orientation="vertical"
        android:paddingBottom="@dimen/one_pixel"
        android:paddingLeft="@dimen/one_pixel"
        android:paddingRight="@dimen/one_pixel" />

</LinearLayout>