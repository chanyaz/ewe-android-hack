<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp" >

    <Button
        android:id="@+id/enter_info_manually_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_info_manually" />

    <LinearLayout
        android:id="@+id/saved_travelers_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/saved_travelers"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/load_from_contacts_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/from_contacts" />

</LinearLayout>