<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_tablet_hotel_details" >

    <com.expedia.bookings.widget.RoundedCornerFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:radius="2dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="20dp" >

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/hotel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    app:textStyle="light" />

                <LinearLayout
                    android:id="@+id/hotel_user_rating_container"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RatingBar
                        android:id="@+id/hotel_user_rating"
                        style="@style/V2.Widget.RatingBar.UserReview.Yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize=".5" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/hotel_number_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        app:textStyle="light" />

                </LinearLayout>

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/hotel_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    app:textStyle="light" />

            </LinearLayout>

            <ImageView
                android:id="@+id/hotel_thumbnail"
                android:layout_width="@dimen/tablet_hotel_map_popup_thumbnail_height"
                android:layout_height="@dimen/tablet_hotel_map_popup_thumbnail_width"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </com.expedia.bookings.widget.RoundedCornerFrameLayout>

</FrameLayout>
