<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/missing_flight_info_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tablet_white_pane_bg"
    android:gravity="center|bottom"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_tablet_sold_out_flight"/>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/missing_departure_text"
        android:gravity="center"
        style="@style/TabletSearchResultEmptyText"
        app:textStyle="condensed" />

</LinearLayout>

