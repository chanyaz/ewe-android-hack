<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default"
    android:orientation="vertical"
    android:paddingBottom="@dimen/bottom_bar_height"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <!-- Ticket stub summary at top of page -->

    <LinearLayout
        android:id="@+id/receipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_receipt"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="13dp"
                android:background="@drawable/candy_cane_top_rounded" />

            <!-- Enjoy your stay. / (âœˆ) Expedia -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp" >

                <TextView
                    android:id="@+id/text_enjoy_your_stay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@string/Enjoy_your_stay"
                    android:textColor="#00355f"
                    android:textSize="23dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/expedia_logo_126dp" />
            </LinearLayout>

            <!-- Map and thumbnail image -->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_pixel"
                android:background="#AEACA7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/receipt_map_layout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" >

                    <com.expedia.bookings.widget.MapImageView
                        android:id="@+id/mini_map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#aaaaaa"
                        android:focusable="false"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/thumbnail_image_view"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/receipt_photo_frame"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_image_placeholder" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_pixel"
                android:background="#AEACA7" />

            <!-- Hotel overview -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="14dp" >

                <RatingBar
                    android:id="@+id/hotel_rating_bar"
                    style="@style/RatingBar.Star.Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize=".5" />
                
                <TextView
                    android:id="@+id/name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/hotel_rating_bar"
                    android:maxWidth="240dp"
                    android:paddingRight="6dp"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/address1_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:includeFontPadding="false"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/address2_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:includeFontPadding="false"
                android:textColor="#333333" />

            <!-- Booking summary -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="@string/reservation_summary"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/two_pixels"
                android:layout_margin="6dp"
                android:background="@drawable/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                android:paddingBottom="6dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_cost"
                    android:textColor="@color/dark_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_cost_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/below_total_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/include_booking_cancellation_policy" />

</LinearLayout>
