<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <com.larvalabs.svgandroid.widget.SVGView
        android:id="@+id/search_error_img"
        android:layout_width="@dimen/tablet_empty_search_result_svg_width"
        android:layout_height="@dimen/tablet_empty_search_result_svg_height"
        app:zoomMode="fitDocument" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/error_tv"
        style="@style/TabletSearchResultEmptyText"
        app:textStyle="condensed"/>

</LinearLayout>