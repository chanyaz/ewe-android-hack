<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageButton
        android:id="@+id/decrement"
        style="?attr/numberPickerUpButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_lower"
        style="?attr/numberPickerInputTextStyle"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/text_current"
        style="?attr/numberPickerInputTextStyle"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableBottom="@drawable/number_picker_divider"
        android:drawableTop="@drawable/number_picker_divider" />

    <TextView
        android:id="@+id/text_higher"
        style="?attr/numberPickerInputTextStyle"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/increment"
        style="?attr/numberPickerDownButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</merge>
