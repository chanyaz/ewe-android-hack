<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/availability_summary_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_availability_summary"
    android:orientation="vertical" >

    <!--
    	Single line views
    
    	The availability header is actually two sets of headers - one for single-line views,
    	the second for dual-line (if there's too much text).  I tried to make it dynamic, but
    	there are some weird rendering bugs that one runs into when doing that.  So instead the
    	Views are duplicated here and below, and copy each other.
    -->

    <RelativeLayout
        android:id="@+id/availability_header"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:paddingBottom="3dp" >

        <TextView
            android:id="@+id/from_text_view"
            style="@style/DropShadowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/from"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/base_rate_text_view"
            style="@style/DropShadowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/from_text_view"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/from_text_view"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sale_rate_text_view"
            style="@style/DropShadowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/from_text_view"
            android:layout_toRightOf="@+id/base_rate_text_view"
            android:textColor="@color/hotel_price_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rate_qualifier_text_view"
            style="@style/DropShadowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sale_rate_text_view"
            android:layout_toRightOf="@+id/sale_rate_text_view"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <!-- Dual-line views -->

    <RelativeLayout
        android:id="@+id/availability_header_two_line"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/from_text_view_two_line"
            style="@style/DropShadowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/from"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/base_rate_text_view_two_line"
            style="@style/DropShadowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/from_text_view_two_line"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/from_text_view_two_line"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sale_rate_text_view_two_line"
            style="@style/DropShadowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from_text_view_two_line"
            android:textColor="@color/hotel_price_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rate_qualifier_text_view_two_line"
            style="@style/DropShadowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sale_rate_text_view_two_line"
            android:layout_toRightOf="@+id/sale_rate_text_view_two_line"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <LinearLayout
            android:id="@+id/rates_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone" />

        <TextView
            android:id="@+id/error_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center" />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/include_sold_out" />
    </LinearLayout>

    <com.mobiata.android.widget.AutoResizeTextView
        android:id="@+id/more_button"
        style="@style/Widget.Button.Yellow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:bufferType="spannable"
        android:maxLines="1"
        android:text="@string/see_details"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>