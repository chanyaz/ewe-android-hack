<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- BACKGROUND CONTAINERS -->

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bg_hotel_map_touch_delegate"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.TouchThroughFrameLayout
        android:id="@+id/bg_hotel_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- FORGROUND CONTAINERS -->s

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/column_two_hotel_filters"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/column_one_hotel_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/column_three_hotel_filtered_count"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/hotel_rooms_and_rates_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/hotel_rooms_and_rates"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>