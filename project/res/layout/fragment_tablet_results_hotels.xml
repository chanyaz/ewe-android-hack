<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BACKGROUND CONTAINERS -->

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bg_hotel_map_touch_delegate"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bg_hotel_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bg_map_dimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:alpha="0"
        android:background="@color/map_dimmer" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/results_top_gradient_height"
        android:layout_gravity="top"
        android:background="@drawable/bg_tablet_actionbar"/>

    <!-- FORGROUND CONTAINERS -->

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/column_two_hotel_filters"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/column_one_hotel_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/column_one_hotel_search_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/column_three_hotel_filtered_count"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/hotel_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/hotel_reviews"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/hotel_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/loading_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
