<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- The MapView is added dynamically to this layout -->

    <LinearLayout
        android:id="@+id/map_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/thumbnail_border" />

    <LinearLayout
        android:id="@+id/tilted_image_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="2" >

        <com.mobiata.android.widget.TiltedImageView
            android:id="@+id/thumbnail_image_view"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="40dp"
            android:layout_weight="1"
            android:background="@drawable/receipt_photo_frame"
            mobiata:rotation="-5"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image_placeholder" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/map_layout"
        android:layout_alignTop="@id/map_layout"
        android:paddingRight="50dp"
        android:paddingTop="50dp"
        android:src="@drawable/enjoy_your_stay" />

</RelativeLayout>