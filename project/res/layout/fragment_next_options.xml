<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/share_booking_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_share"
        android:drawablePadding="5dp"
        android:layout_marginLeft="10dp"
        android:text="@string/share_booking_info" 
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#232323"
        style="@style/Widget.Button.Yellow.Confirmation"/>
    
    <Button 
        android:id="@+id/show_on_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_booking_info_button"
        android:layout_alignLeft="@id/share_booking_info_button"
        android:layout_alignRight="@id/share_booking_info_button"
		android:drawableLeft="@drawable/ic_view_on_map"
		android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/show_on_map"
        style="@style/Widget.Button.Yellow.Confirmation"/>

    <Button
        android:id="@+id/start_new_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="@string/start_new_search"
		android:background="@drawable/btn_default_orange"
		style="@style/Widget.Button.Yellow.Confirmation"/>

</RelativeLayout>