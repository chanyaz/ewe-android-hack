<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
	android:id="@+id/root_widget_config_view"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:fadingEdge="none"
	android:background="#e7e7e7">
<RelativeLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

 	<RelativeLayout
 		android:id="@+id/widget_config_header"
 		android:layout_width="fill_parent"
 		android:layout_height="wrap_content"
 		android:padding="6dp"
 		android:background="@drawable/bg_header">
 		
 		<TextView
 			android:layout_width="wrap_content"
 			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:paddingLeft="4dp"
			android:text="@string/widget_config_title"
			style="@style/headerText"/>
			
		<Button
			android:id="@+id/add_widget_button"
			android:layout_width="@dimen/header_button_width"
			android:layout_height="@dimen/header_button_height"
			android:layout_marginTop="2dp"
			android:layout_marginLeft="6dp"
			android:gravity="center_vertical"
			android:layout_alignParentRight="true"
			android:textStyle="bold"
			android:text="@string/add_widget"
			style="@style/Widget.Button.Orange"/>
 	</RelativeLayout>
 	
 	<TextView
 		android:id="@+id/widget_description_text_view"
 		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/widget_description"
		android:layout_below="@id/widget_config_header"
		android:layout_centerVertical="true" 
		android:paddingLeft="10dp"
		android:paddingRight="2dp"
		android:paddingTop="10dp"
		android:textColor="@color/dark_gray"
		android:textSize="16sp"/>
	
	<FrameLayout
		android:id="@+id/widget_preview_container"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:paddingTop="10dp"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/widget_description_text_view">
		<include
			layout="@layout/include_widget_preview"/>
	</FrameLayout>	
		
	<TextView
		android:id="@+id/widget_config_options_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/widget_preview_container"
		android:paddingTop="10dp"
		android:paddingLeft="10dp"
		android:text="@string/config_options_title"
		android:textStyle="bold"
		android:textColor="@color/dark_gray"
		android:textSize="18sp" />
		
	<TextView
		android:id="@+id/widget_config_options_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/widget_config_options_title"
		android:paddingLeft="10dp"
		android:paddingTop="5dp"
		android:textColor="@color/dark_gray"
		android:text="@string/config_options_description"/>
		
	<RelativeLayout 
		android:id="@+id/widget_config_options"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:paddingTop="10dp"
		android:paddingLeft="10dp"
		android:layout_gravity="center_vertical"
		android:layout_below="@id/widget_config_options_description">
		
		<View
			android:id="@+id/dummy_container"
		  	android:layout_width="fill_parent"
		  	android:layout_height="fill_parent"
		  	android:focusable="true" 
		  	android:focusableInTouchMode="true"
		  	android:background="@null"/>

		<ImageButton
			android:id="@+id/current_location_option"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/btn_radio"
			android:background="@null"/>
		<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/current_location_option"
			android:layout_alignTop="@id/current_location_option"
			android:layout_alignBottom="@id/current_location_option"
			android:gravity="center_vertical"
			android:text="@string/current_location"
			android:textColor="@color/dark_gray"
			android:textSize="16sp"/>
		<ImageButton
			android:id="@+id/last_search_option"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/current_location_option"
			android:src="@drawable/btn_radio"
			android:background="@null"/>
		<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/last_search_option"
			android:layout_alignBottom="@id/last_search_option"
			android:layout_alignTop="@id/last_search_option"
			android:gravity="center_vertical"
			android:text="@string/last_hotel_search"
			android:textColor="@color/dark_gray"
			android:textSize="16sp"/>
		<ImageButton
			android:id="@+id/specify_location_option"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/last_search_option"
			android:src="@drawable/btn_radio"
			android:background="@null"/>
		<com.expedia.bookings.widget.CustomEditText
			android:id="@+id/location_option_text_view"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/specify_location_option"
			android:layout_toLeftOf="@+id/location_search_progress_bar"
			android:layout_alignBottom="@id/specify_location_option"
			android:singleLine="true"
			android:paddingLeft="10dp"
			android:layout_marginRight="10dp"/>
		<ProgressBar 
			android:id="@+id/location_search_progress_bar"
			android:layout_width="wrap_content"	
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/specify_location_option"
			android:layout_alignBottom="@id/specify_location_option"
			android:layout_alignParentRight="true"
			android:paddingRight="10dp"
			android:visibility="invisible"/>
		<TextView
			android:id="@+id/error_text_view"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/location_option_text_view"
			android:gravity="center_horizontal"
			android:layout_marginRight="10dp"
			android:textColor="#FF0000"/>
	</RelativeLayout>
 </RelativeLayout>
 </ScrollView>