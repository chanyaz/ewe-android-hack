<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.SectionStoredCreditCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:activeIcon="@drawable/ic_credit_card_blue_entered"
    app:storedIcon="@drawable/ic_credit_card" >

    <TextView
        android:id="@+id/display_stored_card_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:paddingLeft="8.5dp"
        android:textColor="@color/data_entry_text"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/validation_checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:src="@drawable/ic_checkout_checkmark"
        android:visibility="gone" />

</com.expedia.bookings.section.SectionStoredCreditCard>