<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:id="@+id/refinements_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#FF999999"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/dates_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.mobiata.android.widget.CalendarDatePicker
            android:id="@+id/dates_date_picker"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            mobiata:cellBackground="@drawable/bg_calendar_cell"
            mobiata:cellTextColor="@color/cell_text"
            mobiata:drawGridLines="false"
            mobiata:headerBackground="@color/calendar_header"
            mobiata:headerHeight="52dp"
            mobiata:otherMonthCellBackground="@drawable/bg_calendar_cell"
            mobiata:otherMonthCellTextColor="@color/cell_text_other_month"
            mobiata:popupBackground="@drawable/calendar_date_picker_popup"
            mobiata:rangeEndCellBackground="@drawable/bg_calendar_cell_range_end"
            mobiata:rangeStartCellBackground="@drawable/bg_calendar_cell_range_start"
            mobiata:todayCellBackground="@drawable/bg_calendar_cell_today" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/guests_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/child_ages_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_port_child_picker_header"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/prompt_please_specify_childrens_ages"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <include
                android:id="@+id/child_1_age_layout"
                layout="@layout/include_child_age_row"
                android:visibility="gone" />

            <include
                android:id="@+id/child_2_age_layout"
                layout="@layout/include_child_age_row"
                android:visibility="gone" />

            <include
                android:id="@+id/child_3_age_layout"
                layout="@layout/include_child_age_row"
                android:visibility="gone" />

            <include
                android:id="@+id/child_4_age_layout"
                layout="@layout/include_child_age_row"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.mobiata.android.widget.NumberPicker
                android:id="@+id/adults_number_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp" />

            <com.mobiata.android.widget.NumberPicker
                android:id="@+id/children_number_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>