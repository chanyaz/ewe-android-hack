<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tablet_list_bg"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:scrollbars="none" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="@string/flight_preferences" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Sort_By"
                android:textAllCaps="true" />

        <include layout="@layout/include_flight_tablet_sort" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stops"
                android:textAllCaps="true" />

        <include layout="@layout/include_flight_tablet_filter" />

        <TextView
                android:id="@+id/departure_airports_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_departure_airport"
                android:textAllCaps="true" />

        <Spinner
                android:id="@+id/departure_airports_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

        <TextView
                android:id="@+id/arrival_airports_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_arrival_airport"
                android:textAllCaps="true" />

        <Spinner
                android:id="@+id/arrival_airports_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/airlines"
                android:textAllCaps="true" />

        <LinearLayout
                android:id="@+id/filter_airline_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/grey_divider"
                android:showDividers="middle" />
    </LinearLayout>

</ScrollView>