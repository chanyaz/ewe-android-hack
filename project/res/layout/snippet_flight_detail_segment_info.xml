<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/flight_details_data_ll"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_margin="15dp"
           android:orientation="vertical">
           
           <LinearLayout android:id="@+id/flight_details_data_top_bar_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bg_flight_detail_carrier"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
               
               <ImageView 
                   android:id="@+id/flight_details_carrier_img"
                   android:layout_height="48dp"
                   android:layout_width="48dp"
                   android:background="#C8C8C8"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                  />
               
                <LinearLayout android:id="@+id/flight_details_data_top_bar_ll"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:background="@drawable/bg_flight_detail_carrier"     
		            android:orientation="vertical">
		               
		               <TextView
		                   android:id="@+id/flight_details_dep_arr_tv"
		                   android:layout_height="wrap_content"
		                   android:layout_width="fill_parent"
		                   android:text="Minneapolis to Boston"
		                   android:textSize="22dp"
		                   android:textStyle="bold"
		                   android:textColor="#F0F0F0"
		                   />
		            <LinearLayout android:id="@+id/flight_details_data_top_bar_ll"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:gravity="center_vertical"
			            android:background="@drawable/bg_flight_detail_carrier"
			            android:orientation="horizontal">   
		               <TextView
		                   android:id="@+id/flight_details_carrier_tv"
		                   android:layout_height="wrap_content"
		                   android:layout_width="wrap_content"
		                   android:text="Virgin America"
		                   android:textSize="20dp"
		                   android:textColor="#F0F0F0"      
		                   />
		               <TextView
		                   android:id="@+id/flight_details_flight_number_tv"
		                   android:layout_height="wrap_content"
		                   android:layout_width="wrap_content"
		                   android:text="2026"
		                   android:textSize="20dp"  
		                   android:textColor="#F0F0F0"
		                   />
		               </LinearLayout>
               </LinearLayout>
           </LinearLayout>
           
          
           
           <LinearLayout android:id="@+id/flight_details_data_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_flight_detail_info"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
               
            <LinearLayout android:id="@+id/flight_details_data_amenities_ll"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:orientation="horizontal"></LinearLayout>
            
            
             <!-- Time/Duration info -->
            <LinearLayout android:id="@+id/flight_details_data_flight_time_ll"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
                
                <!-- departure -->
                <LinearLayout android:id="@+id/flight_details_data_flight_departure_time_ll"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical|left"
		            android:layout_weight="0"
		            android:orientation="horizontal">
		        	
                    <TextView 
                        android:id="@+id/flight_details_departure_time_tv"
                   		android:layout_height="wrap_content"
                   		android:layout_width="wrap_content"
                   		android:textSize="24dp"
                   		android:textStyle="bold"
                   		android:text="7:35"/>
                    
                    <LinearLayout 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:orientation="vertical">
			            
                        <TextView 
                        android:id="@+id/flight_details_departure_tz_tv"
                   		android:layout_height="wrap_content"
                   		android:layout_width="wrap_content"
                   		android:textSize="10dp"
                   		android:text="CST"/>
                        
                        <TextView 
                        android:id="@+id/flight_details_departure_ampm_tv"
                   		android:layout_height="wrap_content"
                   		android:layout_width="wrap_content"
                   		android:textSize="10dp"
                   		android:textStyle="bold"
                   		android:text="AM"/>
                        
			        </LinearLayout>
                </LinearLayout>
                
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="center_vertical"
                    android:background="#C8C8C8"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
                
                
                <!-- duration -->
                <TextView 
                       android:id="@+id/flight_details_duration_tv"
                  		android:layout_height="fill_parent"
                  		android:layout_width="wrap_content"
                  		android:layout_weight="0"
                  		android:gravity="center_vertical"
                  		android:textSize="18dp"
                  		android:text="1h24m"/>
                
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="center_vertical"
                    android:background="#C8C8C8"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
                
                
                <!-- arrival -->
                <LinearLayout android:id="@+id/flight_details_data_flight_arrival_time_ll"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="0"
		            android:gravity="center_vertical|right"
		            android:layout_gravity="right"
		            android:orientation="horizontal">
		        	
                    <TextView 
                        android:id="@+id/flight_details_arrival_time_tv"
                   		android:layout_height="wrap_content"
                   		android:layout_width="wrap_content"
                   		android:textSize="24dp"
                   		android:textStyle="bold"
                   		android:text="9:22"/>
                    
                    <LinearLayout 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:orientation="vertical">
			            
                        <TextView 
                        android:id="@+id/flight_details_arrival_tz_tv"
                   		android:layout_height="wrap_content"
                   		android:layout_width="wrap_content"
                   		android:textSize="10dp"
                   		android:text="CST"/>
                        
                        <TextView 
                        android:id="@+id/flight_details_arrival_ampm_tv"
                   		android:layout_height="wrap_content"
                   		android:layout_width="wrap_content"
                   		android:textSize="10dp"
                   		android:textStyle="bold"
                   		android:text="AM"/>
                        
			        </LinearLayout>
                </LinearLayout>
                
            </LinearLayout>
            
            
            
            
            <!-- seperator -->
            <View android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_flight_detail_seperator"
                />
            
            <!-- button bar -->
	       <LinearLayout android:id="@+id/flight_details_data_buttons_ll"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingBottom="10dp"
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:orientation="horizontal">
	           
	           <Button 
	               android:id="@+id/flight_details_seat_map_btn"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Seat Map"
	            android:layout_weight="1"
	            android:textSize="12dp"
	            android:textStyle="bold"
	            android:layout_marginRight="5dp"
	               />
	           
	           <Button 
	               android:id="@+id/flight_details_baggage_fee_btn"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Baggage Fee"
	            android:layout_weight="1"
	            android:textSize="12dp"
	            android:textStyle="bold"
	            android:layout_marginLeft="5dp"
	               />
	           
	       </LinearLayout>
            
	</LinearLayout>
        
</LinearLayout>