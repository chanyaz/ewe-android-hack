<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:id="@+id/flight_details_data_ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/flight_details_data_top_bar_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_flight_detail_carrier"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/flight_details_carrier_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#C8C8C8" />

        <LinearLayout
            android:id="@+id/flight_details_data_top_bar_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/bg_flight_detail_carrier"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="0dp" >

            <TextView
                android:id="@+id/flight_details_dep_arr_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Minneapolis to Boston"
                android:textColor="#F0F0F0"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/flight_details_data_top_bar_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/bg_flight_detail_carrier"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="0dp" >

                <TextView
                    android:id="@+id/flight_details_carrier_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Virgin America"
                    android:textColor="#F0F0F0"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/flight_details_flight_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="2026"
                    android:textColor="#F0F0F0"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/flight_details_data_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_flight_detail_info"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:id="@+id/flight_details_data_amenities_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >
        </LinearLayout>

        <!-- Time/Duration info -->

        <LinearLayout
            android:id="@+id/flight_details_data_flight_time_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- departure -->

            <LinearLayout
                android:id="@+id/flight_details_data_flight_departure_time_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_vertical|left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/flight_details_departure_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:35"
                    android:textScaleX="0.9"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/flight_details_departure_tz_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CST"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/flight_details_departure_ampm_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#C8C8C8" />

            <!-- duration -->

            <TextView
                android:id="@+id/flight_details_duration_tv"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:text="1h24m"
                android:textScaleX="0.9"
                android:textSize="18dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#C8C8C8" />

            <!-- arrival -->

            <LinearLayout
                android:id="@+id/flight_details_data_flight_arrival_time_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:gravity="center_vertical|right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/flight_details_arrival_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:22"
                    android:textScaleX="0.9"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/flight_details_arrival_tz_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CST"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/flight_details_arrival_ampm_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- seperator -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/border_flight_detail_seperator" />

        <!-- button bar -->

        <LinearLayout
            android:id="@+id/flight_details_data_buttons_ll"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:paddingBottom="2dp" >

            <Button
                android:id="@+id/flight_details_seat_map_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="@string/btn_seat_map"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/flight_details_baggage_fee_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="@string/btn_baggage_fee"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>