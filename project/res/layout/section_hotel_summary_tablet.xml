<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.HotelSummarySection xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/tablet_list_bg"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp"
    mobiata:priceTextColor="?attr/hotelPriceStandardColor"
    mobiata:salePriceTextColor="?attr/hotelPriceSaleColor" >

    <!-- TODO: revisit the background view here. -->

    <com.expedia.bookings.widget.OptimizedImageView
        android:id="@+id/hotel_background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/tablet_result_row_primary_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/rating_proximity_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/not_rated_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:paddingTop="3dp"
                    android:singleLine="true"
                    android:text="@string/not_rated"
                    android:textColor="@color/hotel_cell_secondary_color"
                    android:visibility="gone" />

                <RatingBar
                    android:id="@+id/user_rating_bar"
                    style="?attr/hotelListingUserRatingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize=".5" />

                <TextView
                    android:id="@+id/proximity_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:paddingLeft="2dp"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/tablet_result_row_secondary_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/strikethrough_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:includeFontPadding="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/hotel_row_strikethrough_price_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/tablet_result_row_price_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/vip_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_vip_badge"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:text="@string/VIP"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <!-- TODO: place the urgency message somewhere -->

    <TextView
        android:id="@id/urgency_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/hotel_cell_primary_color"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/sale_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="?attr/hotelListingSaleDrawable"
        android:visibility="gone" />

    <com.mobiata.android.widget.TiltedTextView
        android:id="@+id/sale_text_view"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/percent_off_corner_margin_right"
        android:layout_marginTop="@dimen/percent_off_corner_margin_top"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/percent_off_corner_text_size"
        android:textStyle="bold"
        android:visibility="gone"
        mobiata:rotation="45" />

</com.expedia.bookings.section.HotelSummarySection>