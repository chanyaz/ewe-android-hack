<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:id="@+id/outer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <!-- Header message -->

        <TextView
            android:id="@+id/itin_heading_textview"
            style="@style/LoginFormHeading"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_side_margin_large"
            android:layout_marginRight="@dimen/login_side_margin_large"
            android:layout_marginTop="@dimen/login_header_top_spacing"
            android:bufferType="spannable"
            android:text="@string/find_itinerary"
            android:textColor="#f3f3f3"
            android:textSize="@dimen/login_header_text_size" />

        <View
            style="@style/LoginFormHeading"
            android:layout_height="@dimen/login_divider_height"
            android:layout_marginBottom="@dimen/login_divider_content_spacing"
            android:layout_marginLeft="@dimen/login_side_margin_medium"
            android:layout_marginRight="@dimen/login_side_margin_medium"
            android:layout_marginTop="@dimen/login_header_divider_spacing"
            android:background="#5CFFFFFF" />

        <!-- The fields for expedia login -->

        <LinearLayout
            android:id="@+id/expedia_signin_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_side_margin_medium"
            android:layout_marginRight="@dimen/login_side_margin_medium"
            android:gravity="center"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/email_edit_text"
                style="@style/LoginFormEditText"
                android:hint="@string/email_address"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:nextFocusDown="@+id/password_edit_text"
                android:nextFocusRight="@+id/password_edit_text" />

            <EditText
                android:id="@+id/itin_number_edit_text"
                style="@style/LoginFormEditText"
                android:layout_marginBottom="@dimen/login_bottom_room_spacing"
                android:layout_marginTop="@dimen/login_field_spacing"
                android:hint="@string/itinerary_number"
                android:imeOptions="actionDone"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/find_itinerary_button"
            style="@style/LoginFormButton"
            android:layout_marginLeft="@dimen/login_side_margin_small"
            android:layout_marginRight="@dimen/login_side_margin_small"
            android:background="@drawable/btn_cancel"
            android:gravity="center"
            android:text="@string/find_itinerary" />

        <LinearLayout
            android:id="@+id/login_extender_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
    </LinearLayout>

</ScrollView>