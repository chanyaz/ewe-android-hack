<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal" >

        <!-- This is a dummy center view, from which we can align things above/below -->

        <View
            android:id="@+id/center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

        <!-- Credit card to left of screen -->

        <include
            android:id="@+id/credit_card_section"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/center"
            layout="@layout/section_credit_card" />

        <!-- The entry overlay/shade, included here for z-order -->

        <include
            android:id="@+id/cvv_entry_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            layout="@layout/section_cvv" />

        <!-- Input buttons at bottom -->

        <include
            android:id="@+id/credit_card_input_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/center"
            layout="@layout/section_credit_card_input" />

    </RelativeLayout>

</FrameLayout>
