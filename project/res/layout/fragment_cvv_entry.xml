<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- This is a dummy center view, from which we can align things above/below -->

    <View
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <!-- Credit card at top of screen -->

    <FrameLayout
        android:id="@+id/credit_card_section_holder"
        android:layout_width="@dimen/credit_card_checkout_width"
        android:layout_height="@dimen/credit_card_checkout_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55dp"
        android:layout_above="@id/center">

        <!-- Credit card with logo and signature -->

        <include
            android:id="@+id/credit_card_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            layout="@layout/section_credit_card" />

        <!-- CVV text entry -->

        <com.expedia.bookings.widget.CVVTextView
            android:id="@+id/cvv_text_view"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/cvv_text_view_right_margin_other"
            android:layout_marginTop="@dimen/cvv_text_view_top_margin_other"
            android:background="@drawable/div_cvv"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:maxLength="4"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/cvv_normal"
            android:textSize="20dp" />
    </FrameLayout>

    <com.expedia.bookings.widget.MaskView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:exposedPadding="-4dp"
        app:exposedView="@id/cvv_text_view" />

    <!-- "Security Code for Doug's VISA" prompt -->

    <com.mobiata.android.widget.AutoResizeTextView
        android:id="@+id/cvv_prompt_text_view"
        style="@style/Widget.TextView.CVVPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/credit_card_section_holder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true" />

    <!-- Input buttons at bottom -->

    <com.expedia.bookings.section.CreditCardInputSection
        android:id="@+id/credit_card_input_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/center"
        android:layout_margin="24dp"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/one_button"
                style="@style/CreditCardButton"
                android:contentDescription="@string/cd_one_btn"
                android:text="@string/one" />

            <Button
                android:id="@+id/two_button"
                style="@style/CreditCardButton"
                android:contentDescription="@string/cd_two_btn"
                android:text="@string/two" />

            <Button
                android:id="@+id/three_button"
                style="@style/CreditCardButton"
                android:contentDescription="@string/cd_three_btn"
                android:text="@string/three" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/four_button"
                style="@style/CreditCardButton"
                android:contentDescription="@string/cd_four_btn"
                android:text="@string/four" />

            <Button
                android:id="@+id/five_button"
                style="@style/CreditCardButton"
                android:contentDescription="@string/cd_five_btn"
                android:text="@string/five" />

            <Button
                android:id="@+id/six_button"
                style="@style/CreditCardButton"
                android:contentDescription="@string/cd_six_btn"
                android:text="@string/six" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/seven_button"
                style="@style/CreditCardButton"
                android:contentDescription="@string/cd_seven_btn"
                android:text="@string/seven" />

            <Button
                android:id="@+id/eight_button"
                style="@style/CreditCardButton"
                android:contentDescription="@string/cd_eight_btn"
                android:text="@string/eight" />

            <Button
                android:id="@+id/nine_button"
                style="@style/CreditCardButton"
                android:contentDescription="@string/cd_nine_btn"
                android:text="@string/nine" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/delete_button"
                style="@style/CreditCardButton"
                android:contentDescription="@string/cd_delete_btn"
                android:src="@drawable/ic_keypad_delete" />

            <Button
                android:id="@+id/zero_button"
                style="@style/CreditCardButton"
                android:contentDescription="@string/cd_zero_btn"
                android:text="@string/zero" />

            <Button
                android:id="@+id/book_button"
                style="@style/CreditCardButton"
                android:background="?attr/cvvBookButtonKeypadDrawable"
                android:includeFontPadding="true"
                android:text="@string/book"
                android:textColor="?attr/cvvBookButtonTextColor"
                android:textSize="@dimen/cvv_keypad_book_text_size" />
        </TableRow>

    </com.expedia.bookings.section.CreditCardInputSection>

</RelativeLayout>