<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MarginPoint"
    android:layout_height="match_parent" >

    <!-- This is a dummy center view, from which we can align things above/below -->

    <View
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <!-- Credit card at top of screen -->

    <include
        android:id="@+id/credit_card_section"
        style="@style/CvvScreenCreditCard"
        layout="@layout/section_credit_card" />

    <!-- The entry overlay/shade, included here for z-order -->

    <include
        android:id="@+id/cvv_entry_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/section_cvv" />

    <!-- Input buttons at bottom -->

    <include
        android:id="@+id/credit_card_input_section"
        style="@style/CvvScreenInput"
        layout="@layout/section_credit_card_input" />

</RelativeLayout>
