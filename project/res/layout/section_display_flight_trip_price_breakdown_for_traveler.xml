<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.SectionFlightTrip xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >

        <com.mobiata.android.widget.AutoResizeTextView
            android:id="@+id/label_traveler_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/traveler_total"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/traveler_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label_traveler_name"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:gravity="right"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.mobiata.android.widget.AutoResizeTextView
            android:id="@+id/label_traveler_base_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/label_traveler_name"
            android:layout_toLeftOf="@+id/traveler_base_fare"
            android:text="@string/flight"
            android:textSize="18sp" />

        <TextView
            android:id="@id/traveler_base_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label_traveler_base_fare"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:gravity="right"
            android:textSize="18sp" />

        <com.mobiata.android.widget.AutoResizeTextView
            android:id="@+id/label_traveler_taxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/label_traveler_base_fare"
            android:layout_toLeftOf="@+id/traveler_taxes"
            android:text="@string/taxes_and_airline_fees"
            android:textSize="18sp" />

        <TextView
            android:id="@id/traveler_taxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label_traveler_taxes"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:gravity="right"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/label_traveler_taxes"
            android:layout_marginTop="10dp"
            android:background="@color/divider_grey" />
    </RelativeLayout>

</com.expedia.bookings.section.SectionFlightTrip>