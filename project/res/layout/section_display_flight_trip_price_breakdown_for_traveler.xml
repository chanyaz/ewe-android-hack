<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.SectionFlightTrip xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gridlayout="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.gridlayout.GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        gridlayout:alignmentMode="alignMargins"
        gridlayout:columnCount="2"
        gridlayout:rowOrderPreserved="false"
        gridlayout:useDefaultMargins="true" >

        <TextView
            android:id="@+id/travler_num_and_category"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/display_total_price"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:text="@string/flight"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/display_subtotal"
            android:layout_gravity="right"
            android:textSize="18sp" />

        <TextView
            android:text="@string/TaxesAndFees"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/display_taxes"
            android:layout_gravity="right"
            android:textSize="18sp" />

        <View
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            gridlayout:layout_columnSpan="2"
            android:background="@color/divider_grey" />

        <TextView
            android:text="@string/expedia_booking_fee"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/display_fees"
            android:layout_gravity="right"
            android:textSize="18sp" />

        <View
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            gridlayout:layout_columnSpan="2"
            android:background="@color/divider_grey" />

        <TextView
            android:text="@string/total_price_label"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/display_total_price_bottom"
            android:layout_gravity="right"
            android:textSize="22sp" />
    </com.gridlayout.GridLayout>

</com.expedia.bookings.section.SectionFlightTrip>