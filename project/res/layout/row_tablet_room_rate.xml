<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/tablet_detail_padding"
    android:paddingRight="@dimen/tablet_detail_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/text_room_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="17sp"
                app:textStyle="medium" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/text_bed_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#5f6061"
                android:textSize="15sp"
                app:textStyle="light" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_price_per_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="24dp"
            android:paddingTop="@dimen/non_refundable_tweak"
            android:text="@string/Non_Refundable"
            android:textSize="17sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/room_rate_button_add"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/tablet_hotel_room_add_button"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/room_rate_button_add_to_trip"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <Button
                android:id="@+id/room_rate_button_select"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/tablet_hotel_room_select_button"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/room_rate_button_select_room"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/room_rate_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/room_rate_image_view"
            android:layout_width="189dp"
            android:layout_height="125dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:scaleType="center" />

        <TextView
            android:id="@+id/room_rate_discount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/room_rate_image_view"
            android:layout_alignTop="@id/room_rate_image_view"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_sale_text_view"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:singleLine="true"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/room_rate_image_view"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/room_rate_urgency_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#008c5d"
                android:textSize="16sp"
                app:textStyle="bold" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/room_rate_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="5"
                android:textColor="#000000"
                android:textSize="16sp"
                app:textStyle="light" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/room_rate_refundable_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/non_refundable"
                android:textColor="#666666"
                android:textSize="16sp"
                app:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>