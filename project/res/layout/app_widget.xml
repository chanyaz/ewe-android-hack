<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:background="@drawable/widget_bg" >

        <!-- Text container -->

        <RelativeLayout
            android:id="@+id/loading_text_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/widget_text_view"
                style="@style/widgetHotelLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/loading_hotels"
                android:textColor="@color/widget_message_text_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/initial_expedia_logo_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/widget_logo_horiz" />
        </RelativeLayout>

        <!-- Hotels/branding container -->

        <RelativeLayout
            android:id="@+id/widget_contents_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layoutAnimation="@anim/layout_fade_in" >

            <!-- Branding -->

            <LinearLayout
                android:id="@+id/branding_container"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/navigation_container"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/hotel_radar_logo_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/radar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp" >

                    <TextView
                        style="@style/widgetHotelNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book_a_room_tonight" />

                    <TextView
                        style="@style/widgetHotelLocationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hotel_radar" />
                </LinearLayout>
            </LinearLayout>

            <!-- Hotels -->

            <RelativeLayout
                android:id="@+id/hotels_container"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/navigation_container" >

                <ImageView
                    android:id="@+id/hotel_image_view"
                    android:layout_width="75dp"
                    android:layout_height="66dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/widget_thumbnail_background" />

                <ImageView
                    android:id="@+id/hotel_image_view_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/hotel_image_view"
                    android:layout_alignLeft="@id/hotel_image_view"
                    android:layout_alignRight="@id/hotel_image_view"
                    android:layout_alignTop="@id/hotel_image_view"
                    android:background="@drawable/widget_rounded_pic_corners" />

                <LinearLayout
                    android:id="@+id/hotel_details_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@id/navigation_container"
                    android:layout_toRightOf="@id/hotel_image_view"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/hotel_name_text_view"
                        style="@style/widgetHotelNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingRight="5dp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/location_text_view"
                        style="@style/widgetHotelLocationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:singleLine="true" />

                    <RelativeLayout
                        android:id="@+id/price_per_night_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="0dp"
                        android:paddingTop="0dp" >

                        <TextView
                            android:id="@+id/price_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#064192"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/per_night_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/price_text_view"
                            android:layout_toRightOf="@id/price_text_view"
                            android:includeFontPadding="false"
                            android:paddingRight="3dp"
                            android:text="@string/per_night"
                            android:textColor="@color/light_gray"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/sale_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/price_text_view"
                            android:layout_toRightOf="@+id/sale_image_view"
                            android:includeFontPadding="false"
                            android:paddingBottom="5dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:textColor="@color/widget_text_color"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/sale_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_alignBottom="@id/price_text_view"
                            android:layout_alignTop="@id/price_text_view"
                            android:layout_toRightOf="@id/per_night_text_view"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:src="@drawable/sale_tag" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Navigation -->

            <LinearLayout
                android:id="@+id/navigation_container"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/prev_hotel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_widget_prev"
                    android:padding="0dp" />

                <ImageButton
                    android:id="@+id/next_hotel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_widget_next"
                    android:padding="0dp" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <!-- The hangtag looks like it's hanging over the widget, so it needs to be outside of it -->

    <ImageView
        android:id="@+id/widget_hang_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:src="@drawable/hangtag" />

</RelativeLayout>