<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.SectionStoredCreditCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:activeIcon="@drawable/ic_credit_card_white"
    app:primaryTextColor="@android:color/white"
    app:secondaryTextColor="#868a8f"
    app:storedIcon="@drawable/ic_credit_card_white"
    app:walletIcon="@drawable/ic_google_wallet_logo" >

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8.5dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="1dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/google_wallet_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/google_wallet"
            android:textColor="@color/data_entry_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/display_stored_card_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

</com.expedia.bookings.section.SectionStoredCreditCard>