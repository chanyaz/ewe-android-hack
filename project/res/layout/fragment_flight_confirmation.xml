<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/going_to_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius=".1"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/flight_card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/flight_card_container"
            android:background="@drawable/bg_confirmation_mask"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/itinerary_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/get_a_room_text_view"
                style="@style/FlightConfirmationHeader" />

            <View style="@style/FlightConfirmationHeaderDivider" />

            <TextView
                android:id="@+id/hotels_action_text_view"
                style="@style/FlightConfirmationAction"
                android:drawableLeft="@drawable/ic_bed" />

            <TextView
                android:id="@+id/more_actions_text_view"
                style="@style/FlightConfirmationHeader"
                android:layout_marginTop="16dp" />

            <View style="@style/FlightConfirmationHeaderDivider" />

            <TextView
                android:id="@+id/share_action_text_view"
                style="@style/FlightConfirmationAction"
                android:drawableLeft="@drawable/ic_social_share"
                android:text="@string/share_trip" />

            <View style="@style/FlightConfirmationActionDivider" />

            <TextView
                android:id="@+id/calendar_action_text_view"
                style="@style/FlightConfirmationAction"
                android:drawableLeft="@drawable/ic_calendar_add"
                android:text="@string/add_to_calendar" />

            <View
                android:id="@+id/calendar_divider"
                style="@style/FlightConfirmationActionDivider" />

            <TextView
                android:id="@+id/flighttrack_action_text_view"
                style="@style/FlightConfirmationAction"
                android:drawableLeft="@drawable/ic_flight_track"
                android:text="@string/add_to_flighttrack" />

            <View style="@style/FlightConfirmationActionDivider" />

            <TextView
                android:id="@+id/call_action_text_view"
                style="@style/FlightConfirmationAction"
                android:drawableLeft="@drawable/ic_phone"
                android:text="@string/call_expedia_customer_support" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>