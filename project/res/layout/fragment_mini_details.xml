<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_mini_details"
    android:orientation="horizontal"
    android:padding="15dp"
    android:weightSum="10" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="7"
        android:padding="5dp" >

        <TextView
            android:id="@+id/name_text_view"
            style="@style/HotelNameTitle_Tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/hotel_rating_bar"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="24sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/location_text_view"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/name_text_view"
            android:layout_centerVertical="true" >

            <RatingBar
                android:id="@+id/hotel_rating_bar"
                style="@style/RatingBarSmall.Shadowed.Star.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize=".5"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="@id/name_text_view"
            android:layout_below="@+id/name_text_view"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/hotel_details_text_color"
            android:textSize="16sp" />

        <include
            android:id="@+id/hotel_collage_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/location_text_view"
            layout="@layout/include_mini_details_hotel_collage" />
    </RelativeLayout>

    <include
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:gravity="right"
        layout="@layout/include_summarized_room_rates" />
</LinearLayout>