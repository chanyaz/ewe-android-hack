<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <com.mobiata.android.widget.CalendarDatePicker
        android:id="@+id/dates_date_picker"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        mobiata:cellBackground="?attr/calendarBackgroundCellDrawable"
        mobiata:cellTextColor="@color/cell_text"
        mobiata:drawGridLines="false"
        mobiata:calendarHeaderBackground="@color/calendar_header"
        mobiata:nextMonthBackground="@drawable/bg_calendar_next"
        mobiata:otherMonthCellBackground="?attr/calendarBackgroundCellDrawable"
        mobiata:otherMonthCellTextColor="@color/cell_text_other_month"
        mobiata:popupBackground="?attr/calendarDatePickerPopupDrawable"
        mobiata:previousMonthBackground="@drawable/bg_calendar_previous"
        mobiata:rangeEndCellBackground="?attr/calendarRangeEndCellDrawable"
        mobiata:rangeStartCellBackground="?attr/calendarRangeStartCellDrawable"
        mobiata:todayCellBackground="@drawable/bg_calendar_cell_today_tablet" />

</LinearLayout>
