<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/launch_header_height"
            android:background="#212528"
            android:orientation="horizontal"
            android:paddingTop="@dimen/launch_tile_space_width" >

            <RelativeLayout
                android:id="@+id/hotels_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/launch_header_height"
                android:layout_weight="1"
                android:background="@drawable/bg_launch_link_tile_header" >

                <ImageView
                    android:id="@+id/big_hotel_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/ic_big_hotels" />

                <TextView
                    android:id="@+id/hotels_label_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/launch_header_primary_text_margin"
                    android:layout_marginRight="@dimen/launch_header_primary_text_margin"
                    android:text="@string/nav_hotels"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/launch_header_primary_text_size" />

                <TextView
                    android:id="@+id/hotels_prompt_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/hotels_label_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/launch_header_secondary_text_margin"
                    android:layout_marginRight="@dimen/launch_header_primary_text_margin"
                    android:text="@string/launch_hotel_secondary_text"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/launch_header_secondary_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/launch_tile_space_width"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/flights_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/launch_header_height"
                android:layout_weight="1"
                android:background="@drawable/bg_launch_link_tile_header" >

                <ImageView
                    android:id="@+id/big_flights_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/ic_big_flights" />

                <TextView
                    android:id="@+id/flights_label_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/launch_header_primary_text_margin"
                    android:layout_marginRight="@dimen/launch_header_primary_text_margin"
                    android:text="@string/nav_flights"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/launch_header_primary_text_size" />

                <TextView
                    android:id="@+id/flights_prompt_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/flights_label_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/launch_header_secondary_text_margin"
                    android:layout_marginRight="@dimen/launch_header_primary_text_margin"
                    android:text="@string/launch_flight_secondary_text"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/launch_header_secondary_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/content_shadow"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/launch_content_top_shadow" />
    </LinearLayout>

</merge>