<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotel_list_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_expedia_list"
    android:gravity="center"
    android:orientation="vertical" >

    <include
        android:id="@+id/hotel_list_fixed_header"
        layout="@layout/include_hotel_list_fixed_header" />

    <com.expedia.bookings.widget.MeasureListView
        android:id="@android:id/list"
        style="@style/ExpediaList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/hotel_list_fixed_header"
        android:divider="@drawable/divider_horizontal_dark_opaque" />

    <LinearLayout
        android:id="@android:id/empty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/header_layout" >

        <TextView
            android:id="@+id/no_filter_results_text_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:padding="24dp"
            android:shadowColor="#88FFFFFF"
            android:shadowDx="0"
            android:shadowDy="-1"
            android:shadowRadius="0.1"
            android:text="@string/no_filter_results"
            android:textColor="#FF666666"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <include
            android:id="@+id/placeholder_container"
            layout="@layout/include_placeholder_progress" />
    </LinearLayout>

</RelativeLayout>
