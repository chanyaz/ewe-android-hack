<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotel_list_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical" >

    <!-- FrameLayout.background doesn't work on Gingerbread -->

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_expedia_list" />

    <com.expedia.bookings.widget.MeasureListView
        android:id="@android:id/list"
        style="@style/ExpediaList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider_horizontal_dark_opaque" />

    <LinearLayout
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/no_filter_results_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="24dp"
            android:text="@string/no_filter_results"
            android:textColor="#FF666666"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <include
            android:id="@+id/placeholder_container"
            layout="@layout/include_placeholder_progress" />
    </LinearLayout>

</FrameLayout>