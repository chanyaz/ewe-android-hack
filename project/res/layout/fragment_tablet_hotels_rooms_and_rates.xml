<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="64dp"
        android:gravity="top" >

        <LinearLayout
            android:id="@+id/rooms_and_rates_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/hotel_header_container"
                android:layout_width="match_parent"
                android:layout_height="200dp" >

                <!-- Hotel image (#1822) -->

                <TextView
                    android:id="@+id/hotel_header_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FF0000"
                    android:gravity="center"
                    android:text="Hotel Image" />

                <!-- Hotel header section (#2058) -->

                <RelativeLayout
                    android:id="@+id/hotel_header_caption"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:background="#80808080"
                    android:padding="16dp" >

                    <Button
                        android:id="@+id/button_add_to_trip"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:text="Add for $390"
                        android:textAllCaps="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@id/button_add_to_trip"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/hotel_header_hotel_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="Castille Paris"
                            android:textColor="#ffffff"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:id="@+id/rating_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/not_rated_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/not_rated"
                                android:textColor="@color/hotel_cell_secondary_color"
                                android:visibility="gone" />

                            <RatingBar
                                android:id="@+id/star_rating_bar"
                                style="?attr/hotelDetailsStarRatingStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="2.5"
                                android:stepSize=".5" />

                            <TextView
                                android:id="@+id/text_num_stars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:paddingLeft="4dp"
                                android:paddingRight="8dp"
                                android:text="3 stars"
                                android:textColor="@color/hotel_cell_secondary_color" />

                            <RatingBar
                                android:id="@+id/user_rating_bar"
                                style="?attr/hotelDetailsUserRatingStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="2.5"
                                android:stepSize=".5" />

                            <TextView
                                android:id="@+id/text_num_reviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:paddingLeft="4dp"
                                android:paddingRight="8dp"
                                android:text="140 reviews"
                                android:textColor="@color/hotel_cell_secondary_color" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

            <!-- Reviews section (#2059) -->

            <FrameLayout
                android:id="@+id/reviews_container"
                android:layout_width="match_parent"
                android:layout_height="80dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FF00"
                    android:gravity="center"
                    android:text="Reviews Section" />
            </FrameLayout>

            <!-- Amenities section (#2060) -->

            <FrameLayout
                android:id="@+id/amenities_container"
                android:layout_width="match_parent"
                android:layout_height="80dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000FF"
                    android:gravity="center"
                    android:text="Amenities Section"
                    android:textColor="#ffffff" />
            </FrameLayout>

            <!-- Rooms and Rates section -->

            <LinearLayout
                android:id="@+id/rooms_rates_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="#FFFF00"
                    android:gravity="center"
                    android:text="Rate #1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="#FF00FF"
                    android:gravity="center"
                    android:text="Rate #2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="#00FFFF"
                    android:gravity="center"
                    android:text="Rate #3" />
            </LinearLayout>

            <!-- Hotel Description section -->

            <LinearLayout
                android:id="@+id/description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#800000"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Long hotel description that most people probably won&apos;t read, with bullets, rules, etc. If you made it this far, you win. Congrats."
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>