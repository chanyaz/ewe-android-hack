<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#d2d2d4">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="horizontal">

		<!-- Recent searches -->
		<LinearLayout
			android:id="@+id/recent_searches_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:visibility="gone">
			<TextView
				android:id="@+id/recent_searches_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:textSize="24sp"
				android:textStyle="bold"
				android:text="@string/recent_searches" />
			<LinearLayout
				android:id="@+id/recent_searches_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<!-- Separator, appears as last item in the recent searches (since recent 
					searches is not always visible -->
				<View
					android:id="@+id/separator"
					android:layout_width="@dimen/two_pixels"
					android:layout_height="fill_parent"
					android:layout_margin="10dp"
					android:background="@color/light_gray" />
			</LinearLayout>
		</LinearLayout>

		<!-- Featured destinations -->
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView
				android:id="@+id/featured_destinations_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:textSize="24sp"
				android:textStyle="bold"
				android:text="@string/featured_destinations" />
			<LinearLayout
				android:id="@+id/featured_destinations_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal" />
		</LinearLayout>
	</LinearLayout>
</HorizontalScrollView>
