<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/header_text_button_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical"
            android:text="@string/done"
            app:textAllCaps="true"
            app:textStyle="medium"
            android:drawableLeft="@drawable/ic_action_bar_checkmark_disabled"
            android:textStyle="bold"
            android:textSize="14dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/divider_grey" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/header_tv"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/traveler_num_and_category_TEMPLATE"
            app:textStyle="light"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/header_right_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <com.expedia.bookings.widget.SlidingRadioGroup
                android:id="@+id/save_button_group"
                style="?attr/hotelListingFilterGroupStyle"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="24dp">

                <RadioButton
                    android:id="@+id/save_true"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:button="@android:color/transparent"
                    android:contentDescription="@string/save"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:text="@string/save_traveler"
                    android:textColor="@color/sliding_group_text" />

                <RadioButton
                    android:id="@+id/save_false"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:button="@android:color/transparent"
                    android:contentDescription="@string/dont_save"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:text="@string/dont_save"
                    android:textColor="@color/sliding_group_text" />
            </com.expedia.bookings.widget.SlidingRadioGroup>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E5E5E5"
            android:orientation="vertical"
            android:padding="16dp" />
    </ScrollView>

</LinearLayout>