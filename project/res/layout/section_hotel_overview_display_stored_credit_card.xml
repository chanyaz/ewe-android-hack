<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.SectionStoredCreditCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:activeIcon="@drawable/ic_credit_card_gray"
    app:storedIcon="@drawable/ic_credit_card_gray" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon_view"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/display_stored_card_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/data_entry_text"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/validation_checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:src="@drawable/ic_checkout_checkmark"
        android:visibility="gone" />

</com.expedia.bookings.section.SectionStoredCreditCard>