<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutAnimation="@anim/layout_fade_in" >

    <!-- Branding -->

    <LinearLayout
        android:id="@+id/branding_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/hotel_radar_logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/radar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <TextView
                style="@style/widgetHotelNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_a_room_tonight" />

            <TextView
                style="@style/widgetHotelLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotel_radar" />
        </LinearLayout>
    </LinearLayout>

    <!-- Hotels -->

    <RelativeLayout
        android:id="@+id/hotels_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/hotel_image_view"
            android:layout_width="75dp"
            android:layout_height="66dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/widget_thumbnail_background" />

        <ImageView
            android:id="@+id/hotel_image_view_wrapper"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignBottom="@id/hotel_image_view"
            android:layout_alignLeft="@id/hotel_image_view"
            android:layout_alignRight="@id/hotel_image_view"
            android:layout_alignTop="@id/hotel_image_view"
            android:background="@drawable/widget_rounded_pic_corners" />

        <LinearLayout
            android:id="@+id/hotel_details_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/navigation_container"
            android:layout_toRightOf="@id/hotel_image_view"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hotel_name_text_view"
                style="@style/widgetHotelNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingRight="5dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/location_text_view"
                style="@style/widgetHotelLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:singleLine="true" />

            <RelativeLayout
                android:id="@+id/price_per_night_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#064192"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/per_night_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/price_text_view"
                    android:layout_toRightOf="@id/price_text_view"
                    android:paddingRight="3dp"
                    android:text="@string/per_night"
                    android:textColor="@color/light_gray"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/sale_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/price_text_view"
                    android:layout_toRightOf="@+id/per_night_text_view"
                    android:drawableLeft="@drawable/sale_tag"
                    android:drawablePadding="2dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="@color/widget_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>