<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp" >

            <com.expedia.bookings.widget.TextView
                android:id="@+id/pick_up_date_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f4f4f4"
                android:textSize="24dp"
                app:textStyle="medium" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/itin_card_details_pick_up"
                android:textColor="#a9abae"
                android:textSize="14dp"
                app:textStyle="light" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="#4D555D" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp" >

            <com.expedia.bookings.widget.TextView
                android:id="@+id/drop_off_date_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f4f4f4"
                android:textSize="24dp"
                app:textStyle="medium" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/itin_card_details_drop_off"
                android:textColor="#a9abae"
                android:textSize="14dp"
                app:textStyle="light" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="#4D555D" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp" >

            <com.expedia.bookings.widget.TextView
                android:id="@+id/days_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f4f4f4"
                android:textSize="24dp"
                app:textStyle="medium" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/itin_card_details_days"
                android:textColor="#a9abae"
                android:textSize="14dp"
                app:textStyle="light" />
        </LinearLayout>
    </LinearLayout>

    <!-- MAP -->

    <com.expedia.bookings.widget.MapImageView
        android:id="@+id/mini_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itin_map_total_size"
        android:background="#aaaaaa"
        android:focusable="false"
        android:scaleType="centerCrop" />

    <!-- PICK UP -->

    <com.expedia.bookings.widget.TextView
        style="@style/TextView.Itin.SectionHeader.Padded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/itin_card_details_pick_up" />

    <com.expedia.bookings.widget.EventSummaryView
        android:id="@+id/pick_up_event_summary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp" />

    <!-- DROP OFF -->

    <com.expedia.bookings.widget.TextView
        style="@style/TextView.Itin.SectionHeader.Padded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/itin_card_details_drop_off" />

    <com.expedia.bookings.widget.EventSummaryView
        android:id="@+id/drop_off_event_summary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp" />

    <!-- PHONE -->

    <com.expedia.bookings.widget.TextView
        style="@style/TextView.Itin.SectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/itin_card_details_agency_phone" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/vendor_phone_text_view"
        style="@style/TextView.Itin.SectionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/list_selector_holo_dark"
        android:padding="8dp" />

    <!-- BOOKING INFO -->

    <com.expedia.bookings.widget.TextView
        style="@style/TextView.Itin.SectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/itin_card_details_booking_info" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/details_text_view"
        style="@style/TextView.Itin.SectionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/list_selector_holo_dark"
        android:padding="8dp"
        android:text="@string/itin_card_details_details" />

    <!-- Insurance -->

    <com.expedia.bookings.widget.TextView
        android:id="@+id/insurance_label"
        style="@style/TextView.Itin.SectionHeader.Padded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/insurance"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/insurance_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

</LinearLayout>