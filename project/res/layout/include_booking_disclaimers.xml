<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_default" >

    <!-- Rules & Restrictions section -->

    <RelativeLayout
        android:id="@+id/rules_restrictions_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <CheckBox
            android:id="@+id/rules_restrictions_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/rules_restrictions_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rules_restrictions_checkbox"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </RelativeLayout>

    <!-- Disclaimer notices at the bottom of the screen -->

    <TextView
        android:id="@+id/expedia_points_disclaimer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/disclaimer_expedia_points"
        android:textColor="#6A6D71" />

    <TextView
        style="@style/formSectionHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="6dp"
        android:text="@string/rules_restrictions" />

    <TextView
        android:id="@+id/cancellation_policy_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6A6D71" />

</LinearLayout>