<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/san_francisco"
    android:orientation="vertical" >

    <!-- TOOD: Remove this ll, it is only darkening the background, we should have blurred/darkened assets -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#77000000"
        android:orientation="vertical" >

        <!-- TODO: We might consider making this into a section, but it doesn't seem very reusable so no need for now -->

        <LinearLayout
            android:id="@+id/trip_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/your_trip_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:textColor="@color/trip_info_text"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/trip_info_inner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/icon_cal"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:background="#FFCC99" />

                <TextView
                    android:id="@+id/departure_date_long_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_cal"
                    android:textColor="@color/trip_info_text"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/icon_traveler"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/icon_cal"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFCC99" />

                <TextView
                    android:id="@+id/traveler_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/icon_traveler"
                    android:layout_toRightOf="@+id/icon_traveler"
                    android:textColor="@color/trip_info_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/trip_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/trip_info_text"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/trip_cost_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/trip_cost"
                    android:text="@string/total_price_label"
                    android:textColor="@color/trip_info_text"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flight_legs_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical" >

            <!-- TODO: These should be inflated into a container as to support more than two legs... -->

            <include
                android:id="@+id/departing_flight"
                layout="@layout/section_display_flight" />

            <!-- This is the downside of sections... -->

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <include
                android:id="@+id/return_flight"
                layout="@layout/section_display_flight" />
        </LinearLayout>

        <Button
            android:id="@+id/checkout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_small_yellow"
            android:text="@string/checkout_btn" />
    </LinearLayout>
</ScrollView>