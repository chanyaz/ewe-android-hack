<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.LaunchPin xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.expedia.bookings.widget.RoundImageView
        android:id="@+id/launch_pin_image_view"
        android:layout_width="@dimen/launch_pin_size"
        android:layout_height="@dimen/launch_pin_size"
        android:layout_gravity="center_horizontal" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/launch_pin_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/launch_pin_size"
        android:layout_gravity="center_horizontal|bottom" />

</com.expedia.bookings.widget.LaunchPin>
