<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The list view -->

    <com.expedia.bookings.widget.FruitList
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/results_list_margin_top"
        android:cacheColorHint="@color/tablet_white_pane_bg"
        android:choiceMode="singleChoice"
        android:divider="@color/tablet_white_pane_bg"
        android:dividerHeight="@dimen/results_list_spacer_height"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        app:footerSpacerColor="@color/tablet_white_pane_bg"
        app:headerSpacePercentage="0.5"
        app:headerSpacerColor="@android:color/transparent" />

    <!-- Empty List View -->
    <include
        android:id="@android:id/empty" layout="@layout/include_tablet_search_missing_layout"/>

    <!-- The sticky header view -->


    <!-- Note that the layout_height on this container equals ( layout_marginTop + dividerHeight ) on @android:id/list -->

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/sticky_header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/results_column_header_height"
        android:background="@color/tablet_white_pane_bg"
        android:gravity="center_vertical"
        android:layout_margin="0dp"
        android:visibility="visible">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/sticky_number_of_items"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/hotel_flight_card_padding_x"
            android:gravity="center_vertical|left"
            android:textSize="18sp"
            app:textStyle="light" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/top_right_text_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/hotel_flight_card_padding_x"
            android:gravity="center_vertical|right"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#FF0B4EA4"
            android:textSize="18sp"
            app:textStyle="light" />
    </com.expedia.bookings.widget.FrameLayoutTouchController>

</FrameLayout>