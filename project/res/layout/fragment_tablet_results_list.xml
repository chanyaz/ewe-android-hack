<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The list view -->

    <com.expedia.bookings.widget.FruitScrollUpListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:cacheColorHint="@color/tablet_list_bg"
        android:divider="@color/tablet_list_bg"
        android:dividerHeight="8dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <!-- The sticky header view -->


    <!-- Note that the layout_height on this container equals ( layout_marginTop + dividerHeight ) on @android:id/list -->

    <RelativeLayout
        android:id="@+id/sticky_header_container"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/tablet_list_bg"
        android:gravity="center_vertical" >

        <com.expedia.bookings.widget.TextView
            android:id="@+id/sticky_number_of_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            app:textStyle="light" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/sort_and_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:text="Sort &amp; Filter"
            android:textColor="#FF0B4EA4"
            android:textSize="18sp"
            app:textStyle="light" />
    </RelativeLayout>

</FrameLayout>