<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/destinations_scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tablet_bg_tiles"
    android:paddingTop="16dp" >

    <LinearLayout
        android:id="@+id/destinations_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@drawable/destinations_divider"
        android:orientation="horizontal" >

        <com.expedia.bookings.widget.CollectionStack
            android:layout_width="@dimen/destination_search_item_size"
            android:layout_height="@dimen/destination_search_item_size" />

        <View
            android:layout_width="@dimen/destination_search_item_size"
            android:layout_height="@dimen/destination_search_item_size"
            android:background="@android:color/holo_red_light" />

        <com.expedia.bookings.widget.CollectionStack
            android:layout_width="@dimen/destination_search_item_size"
            android:layout_height="@dimen/destination_search_item_size"
            android:padding="16dp" />

        <com.expedia.bookings.widget.CollectionStack
            android:layout_width="@dimen/destination_search_item_size"
            android:layout_height="@dimen/destination_search_item_size"
            android:padding="16dp" />

        <View
            android:layout_width="@dimen/destination_search_item_size"
            android:layout_height="@dimen/destination_search_item_size"
            android:background="@android:color/holo_blue_light" />

        <View
            android:layout_width="@dimen/destination_search_item_size"
            android:layout_height="@dimen/destination_search_item_size"
            android:background="@android:color/holo_red_light" />

        <View
            android:layout_width="@dimen/destination_search_item_size"
            android:layout_height="@dimen/destination_search_item_size"
            android:background="@android:color/holo_blue_light" />

        <View
            android:layout_width="@dimen/destination_search_item_size"
            android:layout_height="@dimen/destination_search_item_size"
            android:background="@android:color/holo_red_light" />

        <View
            android:layout_width="@dimen/destination_search_item_size"
            android:layout_height="@dimen/destination_search_item_size"
            android:background="@android:color/holo_blue_light" />
    </LinearLayout>

</com.expedia.bookings.widget.HorizontalScrollView>
