<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/destinations_scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp" >

    <LinearLayout
        android:id="@+id/destinations_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@drawable/destinations_divider"
        android:orientation="horizontal" >

        <com.expedia.bookings.widget.CollectionStack
            android:id="@+id/stack_asia"
            android:layout_width="@dimen/destination_search_stack_size"
            android:layout_height="@dimen/destination_search_stack_size" />

        <ImageView
            android:id="@+id/view_seattle"
            android:layout_width="@dimen/destination_search_item_size"
            android:layout_height="@dimen/destination_search_item_size"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop" />

        <com.expedia.bookings.widget.CollectionStack
            android:id="@+id/stack_historic"
            android:layout_width="@dimen/destination_search_stack_size"
            android:layout_height="@dimen/destination_search_stack_size" />

        <com.expedia.bookings.widget.CollectionStack
            android:id="@+id/stack_beaches"
            android:layout_width="@dimen/destination_search_stack_size"
            android:layout_height="@dimen/destination_search_stack_size" />

        <ImageView
            android:id="@+id/view_portland"
            android:layout_width="@dimen/destination_search_item_size"
            android:layout_height="@dimen/destination_search_item_size"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/view_toronto"
            android:layout_width="@dimen/destination_search_item_size"
            android:layout_height="@dimen/destination_search_item_size"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop" />

    </LinearLayout>

</com.expedia.bookings.widget.HorizontalScrollView>
