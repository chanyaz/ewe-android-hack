<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/calendar_action_text_view"
        style="@style/Confirmation.Tablet.Action"
        android:drawableLeft="@drawable/ic_tablet_confirmation_calendar"
        android:text="@string/add_to_calendar"
        android:textAllCaps="true"
        app:textStyle="condensed_bold" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/share_action_text_view"
        style="@style/Confirmation.Tablet.Action"
        android:drawableLeft="@drawable/ic_tablet_confirmation_share"
        android:text="@string/tablet_confirmation_share"
        android:textAllCaps="true"
        app:textStyle="condensed_bold" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/call_action_text_view"
        style="@style/Confirmation.Tablet.Action"
        android:drawableLeft="@drawable/ic_tablet_confirmation_phone"
        android:text="@string/tablet_confirmation_call_support"
        android:textAllCaps="true"
        app:textStyle="condensed_bold" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</merge>