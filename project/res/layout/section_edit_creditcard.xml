<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.SectionEditCreditCard xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3300FF00"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/creditcard_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:hint="@string/credit_card_hint" />

    <EditText
        android:id="@+id/creditcard_expiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/credit_card_expiration_hint" />

</com.expedia.bookings.section.SectionEditCreditCard>