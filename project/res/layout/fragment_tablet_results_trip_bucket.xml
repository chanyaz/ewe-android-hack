<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.FrameLayoutTouchController xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/trip_bucket_heading"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical|left"
            android:textSize="18sp"
            android:text="@string/your_trip"
            app:textStyle="light" />

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.expedia.bookings.widget.FrameLayoutTouchController
                android:id="@+id/trip_bucket_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/empty_bucket_container"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/empty_bucket_img"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_trip_empty_suitcase" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/empty_bucket_tv"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trip_empty"
                    app:textStyle="light" />
            </LinearLayout>

        </com.expedia.bookings.widget.FrameLayoutTouchController>
    </LinearLayout>
</com.expedia.bookings.widget.FrameLayoutTouchController>