<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include
    android:id="@+id/price_section"
    layout="@layout/section_display_flight_trip_price_bar" />

    <LinearLayout
        android:id="@+id/price_change_notification_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:gravity="right"
        android:layout_gravity="right"
        android:visibility="gone"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/little_up_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/numberpicker_up_btn" />

        <View
            android:id="@+id/grey_bar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#BFBFBF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DDDDDD"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/exclaimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_error" />

            <TextView
                android:id="@+id/price_change_notification_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>