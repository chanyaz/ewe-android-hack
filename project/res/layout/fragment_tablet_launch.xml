<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/action_bar_background"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_gravity="top"
        android:background="@drawable/top_gradient_launch"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bg_tablet_bottom_fade">

        <LinearLayout
            android:id="@+id/fake_search_bar_container"
            android:layout_width="@dimen/tablet_search_width"
            android:layout_height="@dimen/tablet_search_header_height"
            android:background="@drawable/bg_search_box"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/fake_waypoint_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_all_hint"
                android:background="@null"
                android:paddingLeft="16dp"
                android:drawableLeft="@drawable/ic_searchbox"
                android:drawablePadding="8dp"
                android:singleLine="true"
                android:textSize="18sp"
                app:textStyle="light"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/tiles_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/extra_navigation_bar_padding"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/waypoint_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@color/launch_pin_detail_background"/>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/pin_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@color/launch_pin_detail_background"/>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/no_connectivity_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="#070f24">

        <View
            android:id="@+id/globe_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.larvalabs.svgandroid.widget.SVGView
                android:layout_width="96dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                app:zoomMode="fitDocument"
                app:src="@raw/ic_no_connection"/>

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:gravity="center_horizontal"
                android:text="@string/network_unavailable"
                android:textSize="22sp"
                android:textColor="#ffffff"
                app:textStyle="medium"/>

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="@string/error_network_unavailable"
                android:textSize="16sp"
                android:textColor="#ffffff"
                app:textStyle="light"/>
        </LinearLayout>
    </com.expedia.bookings.widget.FrameLayoutTouchController>

</FrameLayout>
