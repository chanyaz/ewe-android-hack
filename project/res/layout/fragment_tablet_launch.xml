<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/action_bar_background"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_gravity="top"
        android:background="@drawable/bg_tablet_launch_ab_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bg_tablet_bottom_fade">

        <LinearLayout
            android:id="@+id/fake_search_bar_container"
            android:layout_width="@dimen/tablet_search_width"
            android:layout_height="@dimen/tablet_search_header_height"
            android:background="@drawable/bg_tablet_search_header"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fake_waypoint_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_all_hint"
                android:background="@null"
                android:paddingLeft="16dp"
                android:drawableLeft="@drawable/ic_searchbox"
                android:drawablePadding="8dp"
                android:singleLine="true"
                android:textSize="18dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/tiles_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/waypoint_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/pin_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#b2070f24"/>

</FrameLayout>
