<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tablet_white_pane_bg">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/results_column_header_height"
        android:layout_gravity="top"
        android:background="@color/tablet_white_pane_bg"
        android:paddingLeft="@dimen/hotel_flight_card_padding_x"
        android:paddingRight="@dimen/hotel_flight_card_padding_x"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/flight_histogram_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/when_to_fly"
            android:textSize="18sp"
            app:textStyle="light" />

        <ProgressBar
            android:id="@+id/flight_histogram_progress_bar"
            android:layout_weight="0"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:indeterminate="true"
            android:visibility="gone" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/flight_histogram_price_range"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:visibility="gone"
            android:textColor="#666666"
            app:textStyle="light" />

    </LinearLayout>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/histogram_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/results_column_header_height"
        android:paddingTop="8dp"/>

    <com.expedia.bookings.widget.CenteredCaptionedIcon
        android:id="@+id/missing_flight_info_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:svg="@raw/ic_tablet_sold_out_flight"/>
</FrameLayout>

