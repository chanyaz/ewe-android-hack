<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon_view"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/checkout_info_container_padding" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/google_wallet_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/google_wallet" />

            <TextView
                android:id="@+id/display_stored_card_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/validation_checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:src="@drawable/ic_checkout_checkmark"
        android:visibility="gone" />

</merge>