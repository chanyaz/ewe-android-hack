<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.SectionFlightLeg xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="20dp"
    android:orientation="vertical" >

    <include
        android:id="@+id/flight_info_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        layout="@layout/section_flight_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_flight_card_search_results"
        android:orientation="vertical" >

        <include
            android:id="@+id/flight_leg_summary"
            layout="@layout/section_flight_leg_summary" />
    </LinearLayout>

</com.expedia.bookings.section.SectionFlightLeg>