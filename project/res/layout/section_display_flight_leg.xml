<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.SectionFlightLeg xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_flight_detail_carrier"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/display_inbound_outbound_arrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="#88000000" />

        <TextView
            android:id="@+id/display_arrive_or_depart_with_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/trip_info_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/details_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:background="#66000000"
            android:text="@string/details"
            android:textColor="#FCFCFC"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/deselect_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:background="#66000000"
            android:text="X"
            android:textColor="#FCFCFC"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_flight_detail_info"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/display_flight_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:textColor="@color/flight_trip"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/display_carrier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/display_flight_price"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/display_departure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/display_carrier_name"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/display_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/display_departure_time"
            android:layout_alignParentRight="true"
            android:layout_below="@id/display_carrier_name"
            android:layout_toLeftOf="@id/display_departure_time" />
    </RelativeLayout>

</com.expedia.bookings.section.SectionFlightLeg>