<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_user_review" >

        <RatingBar
            android:id="@+id/user_review_rating_bar"
            style="@style/RatingBarSmall.Shadowed.UserReview.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/user_review_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@id/user_review_rating_bar"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#333"
            android:textStyle="bold" />

        <View
            android:id="@+id/user_review_separator"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/one_pixel"
            android:layout_below="@id/user_review_title_text_view"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:background="#CECFD3" />

        <TextView
            android:id="@+id/user_review_body_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_review_separator"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:textColor="#333" />

        <TextView
            android:id="@+id/user_review_read_more_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_review_body_text_view"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/btn_user_review_read_more_triangle"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="3dp"
            android:text="@string/user_review_read_more"
            android:textColor="@color/user_review_read_more"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_review_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/user_review_body_text_view"
            android:layout_margin="3dp"
            android:textColor="#787878" />

        <TextView
            android:id="@+id/user_review_name_and_location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/user_review_body_text_view"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@id/user_review_date_text_view"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#787878" />
    </RelativeLayout>

</LinearLayout>