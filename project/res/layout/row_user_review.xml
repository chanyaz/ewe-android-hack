<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:background="@drawable/bg_row_user_review" >

    <View
        android:id="@+id/user_review_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="9dp"
        android:background="@color/user_review_separator" />

    <RatingBar
        android:id="@+id/user_review_rating_bar"
        style="@style/RatingBar.UserReview.Yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/user_review_separator"
        android:layout_margin="3dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/user_review_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/user_review_separator"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@id/user_review_rating_bar"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#333"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_review_body_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_review_title_text_view"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="4dp"
        android:textColor="#333" />

    <View
        android:id="@+id/user_review_body_text_fade_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/user_review_body_text_view"
        android:layout_alignLeft="@id/user_review_body_text_view"
        android:layout_alignRight="@id/user_review_body_text_view"
        android:layout_alignTop="@id/user_review_body_text_view"
        android:background="@drawable/bg_user_review_fade" />

    <LinearLayout
        android:id="@+id/read_more_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_review_body_text_view"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/user_review_read_more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_expand"
            android:paddingBottom="4dp"
            android:text="@string/user_review_read_more"
            android:textColor="#898989"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/user_review_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/read_more_layout"
        android:layout_marginRight="3dp"
        android:layout_marginTop="4dp"
        android:textColor="#787878" />

    <TextView
        android:id="@+id/user_review_name_and_location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/read_more_layout"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/user_review_date_text_view"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#787878" />

</RelativeLayout>
