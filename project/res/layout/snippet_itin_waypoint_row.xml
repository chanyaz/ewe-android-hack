<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/waypoint_type_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:src="@drawable/ic_departure_details" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <com.expedia.bookings.widget.TextView
            android:id="@+id/layover_airport_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/itin_white_text"
            android:textSize="16sp"
            app:textStyle="light" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/layover_terminal_gate_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/itin_offwhite_text"
            android:textSize="15sp"
            app:textStyle="light" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/layover_terminal_gate_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/itin_offwhite_text"
            android:textSize="15sp"
            app:textStyle="light" />
    </LinearLayout>

</LinearLayout>