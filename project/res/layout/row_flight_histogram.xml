<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/flight_histogram_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/results_flight_histogram_vertical_padding"
        android:paddingLeft="@dimen/results_flight_histogram_horizontal_padding"
        android:paddingRight="@dimen/results_flight_histogram_horizontal_padding"
        android:paddingTop="@dimen/results_flight_histogram_vertical_padding"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:background="@drawable/bg_row_flight_histogram"
        app:textStyle="normal" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/flight_histogram_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/results_flight_histogram_price_horizontal_margin"
        android:layout_marginRight="@dimen/results_flight_histogram_price_horizontal_margin"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        app:textStyle="bold" />

</RelativeLayout>