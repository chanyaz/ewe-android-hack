<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/results_list_header_height" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_flight_card_height"
        android:layout_marginBottom="@dimen/hotel_flight_card_padding_y"
        android:layout_marginLeft="@dimen/hotel_flight_card_padding_x"
        android:layout_marginRight="@dimen/hotel_flight_card_padding_x"
        android:layout_marginTop="@dimen/hotel_flight_card_padding_y"
        android:background="#5c6874" >

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="top"
            android:background="@drawable/card_corners_top_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_gravity="bottom"
            android:background="@drawable/card_corners_bottom_white" />

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/results_list_spacer_height" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_flight_card_height"
        android:layout_marginBottom="@dimen/hotel_flight_card_padding_y"
        android:layout_marginLeft="@dimen/hotel_flight_card_padding_x"
        android:layout_marginRight="@dimen/hotel_flight_card_padding_x"
        android:layout_marginTop="@dimen/hotel_flight_card_padding_y"
        android:background="#5c6874" >

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="top"
            android:background="@drawable/card_corners_top_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_gravity="bottom"
            android:background="@drawable/card_corners_bottom_white" />

    </FrameLayout>

</LinearLayout>
