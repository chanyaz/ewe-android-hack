<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.FlightLayoverSection xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/layover_text_view"
        style="@style/FlightDetailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="60m layover in Fort Lauderdale, FL" />

</com.expedia.bookings.section.FlightLayoverSection>