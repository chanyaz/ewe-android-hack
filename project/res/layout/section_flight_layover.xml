<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.FlightLayoverSection xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/ic_clock_small" />

    <TextView
        android:id="@+id/layover_text_view"
        style="@style/FlightDetailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:singleLine="true" />

</com.expedia.bookings.section.FlightLayoverSection>