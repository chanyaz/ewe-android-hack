<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:focusable="true"
	android:orientation="vertical"
	android:background="@drawable/bg_sort_option_row">
	<View
		android:id="@+id/sort_option_divider"
		android:layout_height="@dimen/two_pixels"
		android:layout_width="fill_parent" />
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:layout_marginTop="15dp"
		android:layout_marginBottom="15dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="30dp">
		<ImageView
			android:id="@+id/sort_option_image"
			android:layout_width="25dp"
			android:layout_height="wrap_content"
			android:scaleType="center" />
		<TextView
			android:id="@+id/sort_option_text"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:includeFontPadding="false"
			android:paddingLeft="5dp"
			android:textStyle="bold"
			android:textSize="18sp"
			android:textColor="@color/sort_option_text_color"
			android:shadowColor="#ffffff"
			android:shadowRadius="0.1"
			android:shadowDx="0"
			android:shadowDy="1" />
	</LinearLayout>
</LinearLayout>
	