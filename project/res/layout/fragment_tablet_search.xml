<com.expedia.bookings.widget.BlockEventFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/block_event_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#182141" />

        <View
            android:id="@+id/header_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/search_header"
            android:layout_alignTop="@+id/search_header"
            android:background="#7000" />

        <RelativeLayout
            android:id="@+id/search_header"
            android:layout_width="@dimen/tablet_search_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="16dp" >

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:text="@string/search" />

            <LinearLayout
                android:id="@+id/search_header_top_container"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_toLeftOf="@+id/search_button"
                android:layout_toRightOf="@+id/cancel_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" >

                <EditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusableInTouchMode="false"
                    android:hint="Search destinations..."
                    android:textSize="18dp" />

                <View
                    android:id="@+id/search_divider_view"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/search_dates_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Anytime"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_header_bottom_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/search_header_top_container"
                android:layout_alignRight="@+id/search_header_top_container"
                android:layout_below="@+id/search_header_top_container"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" >

                <TextView
                    android:id="@+id/origin_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="From San Francisco"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/guests_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Just You"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="@dimen/tablet_search_width"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/search_header"
            android:layout_centerHorizontal="true"
            android:padding="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="CONTENT GOES HERE"
                android:textColor="@android:color/white"
                android:textSize="72sp"
                android:textStyle="bold" />
        </FrameLayout>
    </RelativeLayout>

</com.expedia.bookings.widget.BlockEventFrameLayout>