<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212527" >

    <View
        android:id="@+id/spacer_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <fragment
        android:id="@+id/itin_list_container"
        android:name="com.expedia.bookings.fragment.ItinItemListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/spacer_view"
        android:tag="@string/tag_itinerary_list"
        map:uiCompass="false"
        map:uiRotateGestures="false"
        map:uiScrollGestures="false"
        map:uiTiltGestures="false"
        map:uiZoomControls="false"
        map:uiZoomGestures="false" />

    <ImageView
        android:id="@+id/shadow_image_view"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/spacer_view"
        android:background="@drawable/ab_shadow" />

</RelativeLayout>