<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tablet_hotel_credit_card_and_zipcode_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:paddingLeft="6dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:id="@+id/credit_card_security_code_container"
        style="@style/BookingSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/billing_zipcode_edit_text"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/credit_card_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cc_unknown" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/security_code"
                android:textColor="#545454"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/security_code_tip_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/security_code_tip_back"
                android:textColor="#545454"
                android:textSize="12sp" />
        </LinearLayout>

        <com.expedia.bookings.widget.CustomEditText
            android:id="@+id/security_code_edit_text"
            android:layout_width="@dimen/hotel_tablet_cvv_edit_text_width"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="4"
            android:nextFocusDown="@id/billing_zipcode_edit_text"
            android:nextFocusLeft="@id/expiration_year_edit_text"
            android:nextFocusRight="@id/billing_zipcode_edit_text"
            android:nextFocusUp="@id/expiration_year_edit_text"
            mobiata:errorTextColor="@android:color/black" />
    </LinearLayout>

    <com.expedia.bookings.widget.CustomEditText
        android:id="@id/billing_zipcode_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:hint="@string/address_postal_code_hint"
        android:imeOptions="flagNoExtractUi"
        android:maxLength="5"
        android:nextFocusLeft="@id/security_code_edit_text"
        android:nextFocusUp="@id/security_code_edit_text"
        android:textColorHint="@color/hint_color"
        mobiata:useClearFieldDrawable="false" />

</RelativeLayout>