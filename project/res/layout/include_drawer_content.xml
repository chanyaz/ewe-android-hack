<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
	android:id="@id/drawer_content"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/search_results_drawer_content_bg">

	<View
		android:layout_width="fill_parent"
		android:layout_height="@dimen/one_pixel"
		android:background="#FFB5B5B5" />

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="6dp">

		<com.expedia.bookings.widget.CustomEditText
			android:id="@+id/filter_hotel_name_edit_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:singleLine="true"
			android:textSize="16sp"
			android:hint="@string/filter_hotel_name_hint" />

		<include
			android:id="@+id/radius_filter_button_group"
			layout="@layout/include_filter_radius"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp" />

		<include
			android:id="@+id/rating_filter_button_group"
			layout="@layout/include_filter_rating"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp" />

		<include
			android:id="@+id/price_filter_button_group"
			layout="@layout/include_filter_price"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp" />
	</LinearLayout>

	<!-- This image view exists only to account for (and offset by) the height 
		of the bottom bar so that the drawer content is not hidden underneath it -->
	<ImageView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:src="@drawable/btn_actionbar_map_normal" />


</LinearLayout>