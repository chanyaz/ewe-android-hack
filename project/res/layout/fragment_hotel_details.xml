<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:background="#dadada">

	<LinearLayout
		android:id="@+id/hotel_details_title_container"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="10dp"
		android:layout_alignParentLeft="true">
		<TextView
			android:id="@+id/hotel_name_text_view"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="center_vertical"
			android:shadowDx="0"
			android:shadowDy="1"
			android:shadowRadius="0.1"
			android:textColor="#394552"
			android:shadowColor="#ffffff"
			android:textStyle="bold"
			android:textSize="22sp" />
		<RatingBar
			android:id="@+id/hotel_rating_bar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_vertical"
			android:numStars="5"
			android:stepSize=".5"
			android:isIndicator="true"
			style="@style/RatingBarSmall.Shadowed.Star.Light" />
	</LinearLayout>
	<TextView
		android:id="@+id/hotel_address_text_view"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignLeft="@id/hotel_details_title_container"
		android:layout_below="@id/hotel_details_title_container"
		android:textSize="16sp"
		style="@style/widgetHotelLocationText" />

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_below="@id/hotel_address_text_view"
		android:orientation="horizontal"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp">
		<LinearLayout
			android:id="@+id/image_container"
			android:layout_height="200dp"
			android:layout_width="0dp"
			android:layout_weight="3">
			<ImageView
				android:id="@+id/big_left_property_image_view"
				android:layout_height="fill_parent"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:paddingLeft="10dp"
				android:scaleType="centerCrop"
				android:src="@drawable/ic_row_thumb_placeholder" />
			<LinearLayout
				android:id="@+id/right_image_container"
				android:layout_height="fill_parent"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_marginLeft="10dp"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/top_right_property_image_view"
					android:layout_height="0dp"
					android:layout_width="fill_parent"
					android:layout_weight="1"
					android:scaleType="centerCrop"
					android:src="@drawable/ic_row_thumb_placeholder" />
				<LinearLayout
					android:id="@+id/bottom_right_property_image_container"
					android:layout_height="0dp"
					android:layout_width="fill_parent"
					android:layout_weight="1"
					android:layout_marginTop="10dp"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/bottom_right_property_image_view_1"
						android:layout_height="fill_parent"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:paddingRight="5dp"
						android:scaleType="centerCrop"
						android:src="@drawable/ic_row_thumb_placeholder" />
					<ImageView
						android:id="@+id/bottom_right_property_image_view_2"
						android:layout_height="fill_parent"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:paddingLeft="5dp"
						android:scaleType="centerCrop"
						android:src="@drawable/ic_row_thumb_placeholder" />
				</LinearLayout>
			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:id="@+id/availability_summary_container"
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:orientation="vertical" />
		<TextView
			android:id="@+id/empty_summart_container"
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:layout_weight="1" />
	</LinearLayout>
</RelativeLayout>