<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_flights_background_blurred"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#AA000000"
        android:layout_weight="0">

        <LinearLayout
            android:id="@+id/header_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/play_pause_resume_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textColor="#000000"
                android:background="#F5C90A"
                android:text="START" />


            <TextView
                android:id="@+id/restart_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:textColor="#000000"
                android:background="#F5C90A"
                android:text="RESTART" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:textSize="20dp"
                android:text="" />

            <LinearLayout
                android:id="@+id/lives_container"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:gravity="right|bottom"
                android:layout_gravity="right|bottom"
                android:orientation="horizontal" />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.expedia.bookings.invaders.InvaderGameLayout
            android:id="@+id/board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000" />

        <LinearLayout
            android:id="@+id/game_message_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:background="#CC000000"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/game_message_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="32dp"
                android:text="Expedia Invaders" />

            <TextView
                android:id="@+id/game_message_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:maxWidth="400dp"
                android:gravity="center"
                android:textSize="16dp"
                android:text="" />

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/footer_container"
        android:background="#AA000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_weight="0">

        <TextView
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:padding="24dp"
            android:textColor="#000000"
            android:background="#F5C90A"
            android:text="left" />


        <TextView
            android:id="@+id/fire_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:padding="24dp"
            android:background="#66FF0000"
            android:text="Fire" />

        <TextView
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#F5C90A"
            android:padding="24dp"
            android:layout_weight="0"
            android:textColor="#000000"
            android:text="right" />
    </LinearLayout>

</LinearLayout>