<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/bg_default">
	<com.mobiata.android.widget.SegmentedControlGroup
		android:id="@+id/user_review_sort_group"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:orientation="horizontal"
		android:background="@drawable/bg_header"
		style="@style/Widget.SegmentedControlGroup.UserReviews">
		<RadioButton
			android:id="@+id/user_review_button_recent"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/user_review_sort_button_recent" />
		<RadioButton
			android:id="@+id/user_review_button_favorable"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/user_review_sort_button_favorable" />
		<RadioButton
			android:id="@+id/user_review_button_critical"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/user_review_sort_button_critical" />
	</com.mobiata.android.widget.SegmentedControlGroup>
	<FrameLayout
		android:id="@+id/lists_container"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/user_review_sort_group"
		android:paddingBottom="@dimen/bottom_bar_height"
		android:layout_alignParentBottom="true">
	</FrameLayout>
	<!-- Bottom button bar -->
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="@dimen/bottom_bar_height"
		android:layout_alignParentBottom="true"
		android:background="#C000"
		style="@android:style/ButtonBar">
		<TextView
			android:id="@+id/user_review_total_reviews"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="4dp"
			android:textStyle="bold"
			android:textColor="@color/user_reviews_text_color" />
		<RatingBar 
			android:id="@+id/user_review_rating_bar_bottom"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:layout_toRightOf="@id/user_review_total_reviews"
			android:layout_centerVertical="true"
			android:numStars="5" 
			android:stepSize="0.5" 
			android:isIndicator="true"
			style="@style/RatingBarSmall.Shadowed.UserReview.Dark" />
		<Button
			android:id="@+id/book_now_button"
			android:layout_width="@dimen/header_button_width"
			android:layout_height="@dimen/action_bar_button_height"
			android:layout_alignParentRight="true"
			android:textStyle="bold"
			android:text="@string/book_now"
			style="@style/Widget.Button.Orange" />
	</RelativeLayout>
</RelativeLayout>
