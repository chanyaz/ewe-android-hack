<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/account_loading_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_signin"
        android:orientation="horizontal"
        android:padding="@dimen/booking_form_saved_section_padding"
        android:visibility="gone"
        style="@style/BookingSection" >
        <ProgressBar
            android:id="@+id/loading_progress_bar"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:padding="@dimen/card_icon_padding" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/loading_progress_bar"
            android:text="@string/loading_expedia_account"
            android:textColor="#FFFFFF" />
        <ImageView
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_close" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/account_login_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_signin"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/booking_form_saved_section_padding"
        android:visibility="gone"
        style="@style/BookingSection" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_icon_padding"
            android:src="@drawable/ic_log_in" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_in_for_faster_booking"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/account_logout_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/booking_form_saved_section_padding"
        android:visibility="gone"
        style="@style/BookingSection" >
        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/card_icon_padding"
            android:src="@drawable/ic_log_in" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/card_icon"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/account_top_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#545454" />
            <TextView
                android:id="@+id/account_bottom_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#545454" />
        </LinearLayout>
        <ImageView
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_close" />
    </RelativeLayout>
</LinearLayout>
