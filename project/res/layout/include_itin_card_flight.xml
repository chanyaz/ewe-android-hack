<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- DEPARTURE/ARRIVAL TIMES -->

    <RelativeLayout
        android:id="@+id/arrival_departure_times_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <TextView
            android:id="@+id/departure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/itin_white_text"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/departure_time_tz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/departure_time"
            android:textColor="@color/itin_offwhite_text"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/departure_arrival_arrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:src="@drawable/slide_hint" />

        <TextView
            android:id="@+id/arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/itin_white_text"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/arrival_time_tz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/arrival_time"
            android:textColor="@color/itin_offwhite_text"
            android:textSize="12sp" />
    </RelativeLayout>

    <!-- MAP -->

    <com.expedia.bookings.widget.MapImageView
        android:id="@+id/mini_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itin_map_total_size"
        android:background="#aaaaaa"
        android:focusable="false"
        android:scaleType="centerCrop" />

    <!-- Flight legs -->

    <LinearLayout
        android:id="@+id/flight_leg_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical" />

    <!-- Confirmation Code -->

    <TextView
        android:id="@+id/confirmation_code_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/confirmation_code_label"
        android:textColor="@color/itin_flight_header_text_color"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/itin_flight_divider_color" />

    <TextView
        android:id="@+id/confirmation_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="@color/itin_white_text" />

    <!-- Passengers -->

    <TextView
        android:id="@+id/passengers_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/passengers_label"
        android:textColor="@color/itin_flight_header_text_color"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/itin_flight_divider_color" />

    <TextView
        android:id="@+id/passenger_name_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="@color/itin_white_text" />

    <!-- Booking Info -->

    <TextView
        android:id="@+id/booking_info_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/booking_info"
        android:textColor="@color/itin_flight_header_text_color"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/itin_flight_divider_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_info_small"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="@string/flight_receipt_and_policies"
        android:textColor="@color/itin_white_text" />

    <!-- Insurance -->

    <TextView
        android:id="@+id/insurance_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/insurance"
        android:textColor="@color/itin_flight_header_text_color"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/itin_flight_divider_color" />

    <LinearLayout
        android:id="@+id/incusrance_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/insurance_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/itin_white_text" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_margin="12dp"
            android:layout_weight="0"
            android:background="@color/itin_divider_color" />

        <ImageView
            android:id="@+id/insurance_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/ic_passport_country" />
    </LinearLayout>

</LinearLayout>