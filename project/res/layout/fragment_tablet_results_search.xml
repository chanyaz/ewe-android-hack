<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/action_bar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/ab_gradient" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/search_bar_container"
        android:background="@drawable/bg_tablet_bottom_fade"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        tools:ignore="NewApi">

        <LinearLayout style="@style/V2.Widget.LinearLayout.TabletSearchControls">

            <com.mobiata.android.widget.AutoResizeTextView
                android:id="@+id/dest_btn"
                style="@style/V2.Widget.TextView.TabletSearchDestination" />


            <LinearLayout
                android:id="@+id/right_buttons_container"
                style="@style/V2.Widget.LinearLayout.TabletSearchRightButtonsContainer">

                <TextView
                    android:id="@+id/origin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_suggest_current_location" />


                <TextView
                    android:id="@+id/calendar_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_calendar" />


                <TextView
                    android:id="@+id/traveler_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_traveler_white" />


            </LinearLayout>
        </LinearLayout>
    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <FrameLayout
        android:id="@+id/search_popup_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <View
            android:id="@+id/search_popup_shade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#66000000" />

        <LinearLayout
            android:id="@+id/search_popup_content_container"
            android:orientation="horizontal"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/popup_left_content_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="24dp"
                android:background="@drawable/bg_tablet_search_results_popup">

                <!-- Calendar popup content -->

                <LinearLayout
                    android:id="@+id/calendar_popup_content_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/trip_starts"
                            android:textAllCaps="true" />

                        <EditText
                            android:id="@+id/popup_start_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="96dp"
                            android:focusable="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/trip_ends"
                            android:textAllCaps="true" />

                        <EditText
                            android:id="@+id/popup_end_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="96dp"
                            android:focusable="false"
                            android:hint="@string/trip_end_optional" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Traveler popup content -->

                <TextView
                    android:id="@+id/traveler_popup_num_guests_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:textSize="18dp"
                    android:layout_gravity="center_vertical" />

            </FrameLayout>

            <TextView
                android:id="@+id/search_popup_done"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_overview_checkmark"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="24dp"
                android:text="@string/done"
                android:textAllCaps="true"
                android:textSize="18dp"
                android:background="@drawable/bg_tablet_search_results_popup_done" />

        </LinearLayout>

    </FrameLayout>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bottom_center_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/gde_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/traveler_picker_port_white_space"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF" />

    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bottom_right_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/calendar_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/traveler_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/waypoint_container"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
