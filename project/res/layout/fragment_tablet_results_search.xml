<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/search_bar_conatiner"
        android:background="#66000000"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        tools:ignore="NewApi">

        <TextView
            android:id="@+id/dest_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Paris, France"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_margin="8dp"
            android:drawablePadding="8dp"
            android:layout_gravity="center_vertical|left"
            android:drawableLeft="@drawable/ic_action_bar_magnifying_glass" />


        <LinearLayout
            android:id="@+id/right_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical|right">


            <TextView
                android:id="@+id/origin_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_suggest_current_location" />


            <TextView
                android:id="@+id/calendar_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_calendar" />


            <TextView
                android:id="@+id/traveler_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_traveler_white" />


        </LinearLayout>
    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bottom_center_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/bottom_center_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/gde_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bottom_right_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/bottom_right_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/calendar_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/traveler_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/waypoint_container"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>