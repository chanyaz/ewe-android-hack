<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/search_actions_container"
        android:background="#66000000"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:paddingLeft="16dp"
        android:animateLayoutChanges="true"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        tools:ignore="NewApi">

        <TextView
            android:id="@+id/clear_dates_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_reload_details"
            android:text="@string/clear_dates" />

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_coupon_clear"
            android:text="@string/cancel" />

        <TextView
            android:id="@+id/search_now_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/abs__ic_search"
            android:text="@string/search_now" />
    </LinearLayout>


    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/search_bar_container"
        android:background="@drawable/bg_tablet_bottom_fade"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        tools:ignore="NewApi">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.mobiata.android.widget.AutoResizeTextView
                android:id="@+id/dest_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                app:minTextSize="14dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:drawablePadding="8dp"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="1"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_action_bar_magnifying_glass" />


            <LinearLayout
                android:id="@+id/right_buttons_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="0"
                android:layout_gravity="center_vertical|right">

                <TextView
                    android:id="@+id/origin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_suggest_current_location" />


                <TextView
                    android:id="@+id/calendar_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_calendar" />


                <TextView
                    android:id="@+id/traveler_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_traveler_white" />


            </LinearLayout>
        </LinearLayout>
    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bottom_center_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/gde_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bottom_right_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/calendar_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/traveler_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/waypoint_container"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
