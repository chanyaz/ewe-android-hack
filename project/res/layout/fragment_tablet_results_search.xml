<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/action_bar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/ab_gradient"/>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/search_popup_container"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_bright" />

    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/search_bar_container"
        android:background="@drawable/bg_tablet_bottom_fade"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        tools:ignore="NewApi">

        <LinearLayout
            style="@style/V2.Widget.LinearLayout.TabletSearchControls">

            <com.mobiata.android.widget.AutoResizeTextView
                android:id="@+id/dest_btn"
                style="@style/V2.Widget.TextView.TabletSearchDestination" />


            <LinearLayout
                android:id="@+id/right_buttons_container"
                style="@style/V2.Widget.LinearLayout.TabletSearchRightButtonsContainer">

                <TextView
                    android:id="@+id/origin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_suggest_current_location" />


                <TextView
                    android:id="@+id/calendar_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_calendar" />


                <TextView
                    android:id="@+id/traveler_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_traveler_white" />


            </LinearLayout>
        </LinearLayout>
    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bottom_center_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/gde_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/traveler_picker_port_white_space"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"/>

    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bottom_right_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/calendar_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/traveler_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/waypoint_container"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
