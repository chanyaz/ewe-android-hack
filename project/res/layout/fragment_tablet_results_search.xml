<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/action_bar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/ab_gradient"/>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/search_popup_container"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/calendar_popup_content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:visibility="invisible"
            android:orientation="horizontal"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp">

                <com.expedia.bookings.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/trip_starts"
                    android:textAllCaps="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.expedia.bookings.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/trip_ends"
                    android:textAllCaps="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/trip_end_optional"/>

            </LinearLayout>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/search_calendar_done"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_overview_checkmark"
                android:text="@string/done"
                android:textAllCaps="true"
                android:background="@color/divider_grey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/traveler_popup_content_container"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="bottom|right"
            android:visibility="invisible"
            android:orientation="horizontal"
            android:background="@android:color/white">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/traveler_popup_num_guests_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/search_traveler_done"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_overview_checkmark"
                android:text="@string/done"
                android:textAllCaps="true"
                android:background="@color/divider_grey" />

        </LinearLayout>

    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/search_bar_container"
        android:background="@drawable/bg_tablet_bottom_fade"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        tools:ignore="NewApi">

        <LinearLayout
            style="@style/V2.Widget.LinearLayout.TabletSearchControls">

            <com.mobiata.android.widget.AutoResizeTextView
                android:id="@+id/dest_btn"
                style="@style/V2.Widget.TextView.TabletSearchDestination" />


            <LinearLayout
                android:id="@+id/right_buttons_container"
                style="@style/V2.Widget.LinearLayout.TabletSearchRightButtonsContainer">

                <TextView
                    android:id="@+id/origin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_suggest_current_location" />


                <TextView
                    android:id="@+id/calendar_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_calendar" />


                <TextView
                    android:id="@+id/traveler_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_traveler_white" />


            </LinearLayout>
        </LinearLayout>
    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bottom_center_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/gde_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/traveler_picker_port_white_space"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"/>

    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bottom_right_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/calendar_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.expedia.bookings.widget.FrameLayoutTouchController
            android:id="@+id/traveler_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.expedia.bookings.widget.FrameLayoutTouchController>

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/waypoint_container"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
