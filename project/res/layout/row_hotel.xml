<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="horizontal"
	android:background="@drawable/bg_row">
	<RelativeLayout
		android:layout_width="100dp"
		android:layout_height="100dp">
		<ImageView
			android:id="@+id/thumbnail_image_view"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:scaleType="centerCrop"
			android:background="@android:color/black" />
		<ImageView
			android:id="@+id/sale_image_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:src="@drawable/sale_corner_left" />
		<com.mobiata.android.widget.TiltedTextView
			android:id="@+id/sale_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="2dp"
			android:textColor="@android:color/white"
			android:textStyle="bold"
			android:textSize="14dp"
			android:text="@string/sale_caps"
			mobiata:rotation="-45" />
	</RelativeLayout>

	<!-- This needs to be in a LinearLayout so it can be centered vertically -->
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="6dp">
		<TextView
			android:id="@+id/name_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingRight="30dp"
			android:ellipsize="end"
			android:singleLine="true"
			android:textColor="#3D4552"
			android:textStyle="bold"
			android:textSize="18sp" />
		<TextView
			android:id="@+id/from_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/name_text_view"
			android:text="@string/from"
			android:textColor="@color/light_gray"
			android:textSize="11sp" />
		<TextView
			android:id="@+id/highly_rated_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/name_text_view"
			android:layout_alignParentRight="true"
			android:paddingRight="30dp"
			android:text="@string/highly_rated"
			android:textColor="@color/light_gray"
			android:textSize="11sp"
			android:visibility="gone" />
		<TextView
			android:id="@+id/price_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/from_text_view"
			android:textColor="#064192"
			android:textStyle="bold"
			android:textSize="20sp" />
		<TextView
			android:id="@+id/per_night_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/price_text_view"
			android:layout_alignBaseline="@id/price_text_view"
			android:text="@string/per_night"
			android:textColor="@color/light_gray"
			android:textSize="11sp" />
		<ImageView
			android:id="@+id/highly_rated_image_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/highly_rated_text_view"
			android:layout_alignBottom="@id/price_text_view"
			android:layout_alignParentRight="true"
			android:paddingTop="2dp"
			android:src="@drawable/ic_highly_rated"
			android:visibility="gone" />
		<RatingBar
			android:id="@+id/hotel_rating_bar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/price_text_view"
			android:numStars="5"
			android:stepSize=".5"
			android:isIndicator="true"
			style="@style/Widget.RatingBar.Small.Inset" />
		<TextView
			android:id="@+id/distance_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignBottom="@id/hotel_rating_bar"
			android:paddingRight="30dp"
			android:textColor="@color/light_gray"
			android:textSize="11sp" />

		<!-- TODO: Add "TripAdvisor" bookmark -->
	</RelativeLayout>
</LinearLayout>
