<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_row"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/thumbnail_image_view"
        android:layout_width="@dimen/hotel_row_thumbnail_width"
        android:layout_height="@dimen/hotel_row_thumbnail_height"
        android:background="@android:color/black"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hotel_row_content_margin"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/thumbnail_image_view"
        android:ellipsize="end"
        android:paddingRight="@dimen/right_padding_for_scroll_bar"
        android:singleLine="true"
        android:textColor="#3D4552"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/from_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_text_view"
        android:layout_below="@id/name_text_view"
        android:includeFontPadding="false"
        android:text="@string/from"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/hotel_row_from_text_size" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_text_view"
        android:layout_below="@id/from_text_view"
        android:includeFontPadding="false"
        android:textColor="@color/hotel_price_text_color"
        android:textSize="@dimen/hotel_row_price_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/per_night_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/price_text_view"
        android:layout_toRightOf="@id/price_text_view"
        android:text="@string/per_night"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/hotel_row_price_per_night_text_size" />

    <TextView
        android:id="@+id/sale_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_highly_rated"
        android:gravity="left"
        android:includeFontPadding="false"
        android:paddingLeft="12dp"
        android:paddingTop="2dp"
        android:text="@string/highly_rated"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <RatingBar
        android:id="@+id/user_rating_bar"
        style="@style/RatingBarSmall.Shadowed.UserReview.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_text_view"
        android:layout_below="@id/price_text_view"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize=".5" />

    <TextView
        android:id="@+id/not_rated_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_rating_bar"
        android:layout_alignLeft="@+id/user_rating_bar"
        android:layout_alignTop="@+id/user_rating_bar"
        android:gravity="center"
        android:text="@string/not_rated"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/distance_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_rating_bar"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/right_padding_for_scroll_bar"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/hotel_row_distance_text_size" />

</RelativeLayout>