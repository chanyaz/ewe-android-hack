<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.SectionDisplayCreditCard xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/credit_card_brand_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_select_credit_card" />

    <TextView
        android:id="@+id/creditcard_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/enter_payment_info"
        android:textSize="16sp" />

</com.expedia.bookings.section.SectionDisplayCreditCard>