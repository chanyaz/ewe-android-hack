<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginBottom="@dimen/bottom_bar_height"
		android:fillViewport="true"
		android:fadingEdge="none"
		android:background="@color/bg_default">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:padding="8dp"
			android:orientation="vertical"
			android:background="@color/bg_default"
			android:focusableInTouchMode="true">

			<!-- Ticket stub summary at top of page -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_ticket_shadow">
				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:background="@drawable/bg_ticket">
					<ImageView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:src="@drawable/expedia_candy_cane"
						android:scaleType="fitXY" />

					<!-- Header with Expedia images -->
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_below="@+id/top_candy_cane_image_view"
						android:padding="6dp"
						android:orientation="horizontal"
						android:gravity="center_vertical">
						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/expedia_logo" />
						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="right"
							android:src="@drawable/enjoy_your_stay" />
					</LinearLayout>

					<!-- Map and thumbnail image -->
					<View
						android:layout_width="fill_parent"
						android:layout_height="@dimen/one_pixel"
						android:background="#AEACA7" />
					<RelativeLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">
						<!-- The MapView is added dynamically to this layout -->
						<LinearLayout
							android:id="@+id/map_layout"
							android:layout_width="fill_parent"
							android:layout_height="150dp"
							android:layout_below="@+id/header_layout" />

						<com.mobiata.android.widget.TiltedImageView
							android:id="@+id/thumbnail_image_view"
							android:layout_width="120dp"
							android:layout_height="120dp"
							android:layout_alignTop="@+id/map_view"
							android:layout_marginLeft="10dp"
							android:layout_marginTop="10dp"
							android:scaleType="centerCrop"
							android:src="@drawable/ic_image_placeholder"
							android:background="@drawable/receipt_photo_frame"
							mobiata:rotation="-5" />
					</RelativeLayout>
					<View
						android:layout_width="fill_parent"
						android:layout_height="@dimen/one_pixel"
						android:background="#AEACA7" />

					<!-- Hotel overview -->
					<TextView
						android:id="@+id/name_text_view"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_below="@+id/map_view"
						android:paddingTop="6dp"
						android:paddingLeft="6dp"
						android:paddingRight="6dp"
						android:paddingBottom="2dp"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#333333" />

					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingRight="6dp"
						android:orientation="horizontal">
						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">
							<TextView
								android:id="@+id/address1_text_view"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#333333" />
							<TextView
								android:id="@+id/address2_text_view"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#333333" />
						</LinearLayout>
						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingRight="10dp"
							android:orientation="vertical">
							<TextView
								android:id="@+id/hotel_rating_text_view"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								android:text="@string/star_rating"
								android:textColor="#333333"
								android:textSize="12sp" />
							<RatingBar
								android:id="@+id/hotel_rating_bar"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								android:numStars="5"
								android:stepSize=".5"
								android:isIndicator="true"
								style="@style/Widget.RatingBar.Small.Shadowed" />
							<TextView
								android:id="@+id/trip_advisor_text_view"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								android:text="@string/trip_advisor"
								android:textColor="#333333"
								android:textSize="12sp" />
							<RatingBar
								android:id="@+id/trip_advisor_rating_bar"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								android:numStars="5"
								android:stepSize=".5"
								android:isIndicator="true"
								style="@style/Widget.RatingBar.Small.TripAdvisor" />
						</LinearLayout>
					</LinearLayout>

					<!-- Booking summary -->
					<TextView
						android:id="@+id/name_text_view"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_below="@+id/map_view"
						android:paddingTop="6dp"
						android:paddingLeft="6dp"
						android:paddingRight="6dp"
						android:paddingBottom="2dp"
						android:textSize="18sp"
						android:textStyle="bold"
						android:textColor="#333333"
						android:text="@string/reservation_summary" />

					<LinearLayout
						android:id="@+id/details_layout"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingRight="6dp"
						android:orientation="vertical" />

					<View
						android:layout_width="fill_parent"
						android:layout_height="@dimen/two_pixels"
						android:layout_margin="6dp"
						android:background="@drawable/divider" />

					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="6dp"
						android:paddingRight="6dp"
						android:paddingBottom="6dp"
						android:orientation="horizontal">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/dark_blue"
							android:textSize="18sp"
							android:textStyle="bold"
							android:text="@string/total_cost" />
						<TextView
							android:id="@+id/total_cost_text_view"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="right"
							android:textSize="18sp"
							android:textColor="@android:color/black"
							android:textStyle="bold" />
					</LinearLayout>

					<ImageView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:src="@drawable/expedia_candy_cane"
						android:scaleType="fitXY" />
				</LinearLayout>
			</LinearLayout>

			<TextView
				android:id="@+id/cancellation_policy_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:textColor="#6A6D71" />
			<TextView
				android:id="@+id/contact_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:textColor="#6A6D71"
				android:autoLink="phone" />
		</LinearLayout>
	</ScrollView>

	<!-- Bottom button bar -->
	<RelativeLayout
		android:id="@+id/button_bar_layout"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/bottom_bar_height"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal"
		android:background="#C000"
		style="@android:style/ButtonBar">
		<ImageButton
			android:id="@+id/share_button"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:src="@drawable/btn_share" />
		<ImageButton
			android:id="@+id/map_button"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:layout_toRightOf="@+id/share_button"
			android:layout_marginLeft="8dp"
			android:src="@drawable/btn_map" />
		<Button
			android:id="@+id/new_search_button"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:layout_alignParentRight="true"
			android:text="@string/new_search" />
	</RelativeLayout>
</RelativeLayout>