<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:id="@+id/confirmation_content_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/bottom_bar_height"
        android:background="@color/bg_default"
        android:fadingEdge="none"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_default"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="8dp" >

            <!-- Ticket stub summary at top of page -->

            <LinearLayout
                android:id="@+id/receipt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ticket_shadow" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ticket"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/expedia_candy_cane" />

                    <!-- Header with Expedia images -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="6dp" >

                        <ImageView
                            android:id="@+id/expedia_logo_confirmation_receipt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/expedia_logo" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:paddingTop="13dp"
                                android:src="@drawable/enjoy_your_stay" />
                        </FrameLayout>
                    </LinearLayout>

                    <!-- Map and thumbnail image -->

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/one_pixel"
                        android:background="#AEACA7" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <!-- The MapView is added dynamically to this layout -->

                        <LinearLayout
                            android:id="@+id/map_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="150dp" />

                        <com.mobiata.android.widget.TiltedImageView
                            android:id="@+id/thumbnail_image_view"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/receipt_photo_frame"
                            mobiata:rotation="-5"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_image_placeholder" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/one_pixel"
                        android:background="#AEACA7" />

                    <!-- Hotel overview -->

                    <TextView
                        android:id="@+id/name_text_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="6dp"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/address1_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333" />

                            <TextView
                                android:id="@+id/address2_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingRight="10dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/star_rating"
                                android:textColor="#333333"
                                android:textSize="12sp" />

                            <RatingBar
                                android:id="@+id/hotel_rating_bar"
                                style="@style/RatingBarSmall.Shadowed.Star.Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize=".5" />

                            <TextView
                                android:id="@+id/user_rating_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_rating"
                                android:textColor="#333333"
                                android:textSize="12sp" />

                            <RatingBar
                                android:id="@+id/user_rating_bar"
                                style="@style/RatingBarSmall.Shadowed.UserReview.Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize=".5" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Booking summary -->

                    <TextView
                        android:id="@id/name_text_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="6dp"
                        android:text="@string/reservation_summary"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/details_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/two_pixels"
                        android:layout_margin="6dp"
                        android:background="@drawable/divider" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_cost"
                            android:textColor="@color/dark_blue"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/total_cost_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/below_total_details_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="6dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/expedia_candy_cane" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/include_booking_cancellation_policy" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom button bar -->

    <RelativeLayout
        android:id="@+id/button_bar_layout"
        style="@android:style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_alignParentBottom="true"
        android:background="#C000"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:src="@drawable/btn_share" />

        <ImageButton
            android:id="@+id/map_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/share_button"
            android:src="@drawable/btn_map" />

        <Button
            android:id="@+id/new_search_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:text="@string/new_search" />
    </RelativeLayout>

</RelativeLayout>