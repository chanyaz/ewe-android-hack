<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outer_itin_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/inner_itin_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/itin_list_card_top_image_offset"
        android:background="#66FF0000"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/itin_image_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itin_card_bg_image_height"
            android:gravity="center" >

            <com.expedia.bookings.widget.OptimizedImageView
                android:id="@+id/itin_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_flights_background" />

            <View
                android:id="@+id/target_type_icon_space_holder"
                android:layout_width="@dimen/itin_list_icon_end_size"
                android:layout_height="@dimen/itin_list_icon_end_size"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/itin_heading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/target_type_icon_space_holder"
                android:layout_centerHorizontal="true"
                android:text="The Ames Hotel"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/itin_expanded_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/action_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_urgency_clock"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="Check in after 3:00 PM"
                android:textSize="18dp" />

            <LinearLayout
                android:id="@+id/itin_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/btn_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Directions"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/btn_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Call Hotel"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/float_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_radio_off_pressed_holo_dark" />

</RelativeLayout>