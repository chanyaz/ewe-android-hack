<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_background_light"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="0dp" >

    <!-- Title label/border -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E8E8"
        android:orientation="vertical" >

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="@string/cost_summary"
            android:textColor="#00467E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/border_horizontal_expedia_striped" >

            <!-- This is sort of silly, but we want to ensure the correct height -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/border_horizontal_expedia_striped"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <!-- Traveler price breakdown -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/traveler_price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp" >
        </LinearLayout>
    </ScrollView>

    <!-- Divider -->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_px_hdpi_two_px_xhdpi"
        android:layout_margin="15dp"
        android:background="@color/divider_grey" />

    <!-- Booking fee -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <com.mobiata.android.widget.AutoResizeTextView
            android:id="@+id/label_flight_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/expedia_booking_fee"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/display_fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label_flight_fee"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/label_flight_fee"
            android:gravity="right"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- Divider -->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_px_hdpi_two_px_xhdpi"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/divider_grey" />

    <!-- Total -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp" >

        <com.mobiata.android.widget.AutoResizeTextView
            android:id="@+id/label_flight_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/total_price_label"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/display_total_price_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label_flight_total"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/label_flight_total"
            android:gravity="right"
            android:textSize="22sp" />
    </RelativeLayout>

    <!-- Divider -->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_px_hdpi_two_px_xhdpi"
        android:background="@color/hotel_details_separator" />

    <!-- Ok button -->

    <Button
        android:id="@+id/positive_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="0"
        android:background="@drawable/bg_signin_dialog_button"
        android:text="@string/button_done"
        android:textSize="14sp" />

</LinearLayout>