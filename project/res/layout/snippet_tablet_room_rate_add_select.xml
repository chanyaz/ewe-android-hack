<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/text_room_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="17sp"
            app:textStyle="medium" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/text_bed_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#5f6061"
            android:textSize="15sp"
            app:textStyle="light" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_price_per_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="24dp"
        android:paddingTop="@dimen/non_refundable_tweak"
        android:textSize="17sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/room_rate_button_add"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/tablet_hotel_room_add_button"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/room_rate_button_add_to_trip"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/room_rate_button_select"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/tablet_hotel_room_select_button"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/room_rate_button_select_room"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </FrameLayout>
</LinearLayout>
