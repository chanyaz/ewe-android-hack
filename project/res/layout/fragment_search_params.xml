<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_search"
    android:orientation="vertical" >

    <!-- This is a dummy View to keep the EditText from first grabbing focus -->

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <!-- Instructions at top of page -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="6dp" >

        <TextView
            android:id="@+id/where_text_view"
            style="@style/InstructionText"
            android:layout_marginLeft="30dp"
            android:paddingLeft="11dp" />

        <TextView
            android:id="@+id/when_text_view"
            style="@style/InstructionText"
            android:layout_marginLeft="@dimen/search_params_calendar_margin_left"
            android:layout_marginRight="@dimen/search_params_calendar_margin_right"
            android:paddingLeft="@dimen/when_text_padding_left" />

        <TextView
            android:id="@+id/who_text_view"
            style="@style/InstructionText"
            android:layout_marginLeft="@dimen/search_params_guests_margin_left"
            android:layout_marginRight="30dp"
            android:paddingLeft="12dp" />
    </LinearLayout>

    <!-- User input params -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/search_params_input_weight"
        android:orientation="horizontal"
        android:paddingBottom="32dp"
        android:paddingTop="4dp" >

        <!-- Search location fields -->

        <include
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="@dimen/search_params_search_margin_right"
            android:layout_weight="1"
            layout="@layout/include_search" />

        <!-- Checkin/checkout fields -->

        <include
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/search_params_calendar_margin_left"
            android:layout_marginRight="@dimen/search_params_calendar_margin_right"
            android:layout_weight="1"
            layout="@layout/include_calendar" />

        <!-- Number of adults/kids, plus search button -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="@dimen/search_params_guests_margin_left"
            android:layout_marginRight="30dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <include
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                layout="@layout/include_guests" />

            <Button
                android:id="@+id/search_button"
                style="@style/Widget.Button.Yellow.Search"
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:text="@string/search_for_hotels"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/search_params_image_weight"
        android:paddingTop="20dp"
        android:scaleType="center"
        android:src="@drawable/expedia_logo_large" />

</LinearLayout>