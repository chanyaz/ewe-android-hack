<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.SectionDisplayAddress xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/display_picture"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/btn_map" />

    <TextView
        android:id="@+id/address_line_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/enter_address_info"
        android:textSize="16sp" />

</com.expedia.bookings.section.SectionDisplayAddress>