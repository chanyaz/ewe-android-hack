<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="8dp"
	android:paddingBottom="8dp"
	android:background="@drawable/bg_row">

    <TextView
        android:id="@+id/sale_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/sale_ribbon"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:paddingLeft="12dp"
        android:paddingRight="@dimen/padding_right_sale_ribbon"
        android:paddingTop="@dimen/padding_top_sale_ribbon"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="gone" />
	
	<TextView
		android:id="@+id/room_description_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@id/sale_text_view"
		android:paddingTop="8dp"
		android:paddingRight="4dp"
		android:gravity="left"
		android:textColor="@android:color/black"
		android:textSize="15sp"
		android:textStyle="bold" />
	<LinearLayout
		android:id="@+id/price_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/room_description_text_view"
		android:layout_alignParentLeft="true" 
		android:orientation="vertical">
		<TextView
			android:id="@+id/price_explanation_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:textSize="12sp"
			android:textColor="#696969" />
		<TextView
			android:id="@+id/price_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:textSize="26sp"
			android:textColor="@color/hotel_price_text_color"
			android:textStyle="bold"
			android:includeFontPadding="false" />
	</LinearLayout>
	<TextView
		android:id="@+id/beds_text_view"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_toRightOf="@id/price_layout"
		android:layout_marginRight="10dp"
		android:gravity="right"
		style="@style/rateInfoText"/>

	<!-- This view replaces the above beds_text_view if the row has value-adds -->
	<LinearLayout
		android:id="@+id/value_adds_layout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/price_layout"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal"
		android:visibility="gone">
		<TextView
			android:id="@+id/value_adds_text_view"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			style="@style/rateInfoText" />
		<TextView
			android:id="@+id/value_adds_beds_text_view"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginRight="8dp"
			android:gravity="right"
			style="@style/rateInfoText" />
	</LinearLayout>
</RelativeLayout>
