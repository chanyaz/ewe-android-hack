<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
    
    <FrameLayout
    	android:id="@+id/content_layout"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" />
    	
    <ImageButton
    	android:id="@+id/view_button"
		android:layout_width="@dimen/action_bar_button_height"
		android:layout_height="@dimen/action_bar_button_height"
    	android:layout_alignParentBottom="true"
    	android:layout_alignParentRight="true"
    	android:layout_margin="6dp" />
	
	<com.mobiata.android.widget.Panel
		android:id="@+id/drawer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/search_bar_layout"
		mobiata:handle="@+id/drawer_handle"
		mobiata:content="@+id/drawer_content"
		mobiata:position="top"
		mobiata:openedHandle="#c2e2f9"
		mobiata:closedHandle="#c2e2f9"
		mobiata:animationDuration="300">

		<View
			android:id="@id/drawer_handle"
			android:layout_width="90dp"
			android:layout_height="24dp"
			android:layout_gravity="center" />
		
		<LinearLayout
			android:id="@id/drawer_content"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="6dp"
			android:background="#c2e2f9">
			
			<LinearLayout
				android:id="@+id/sort_layout"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
			
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="6dp"
					android:text="Sort"
					android:textStyle="bold"
					android:textColor="#FF000000"
					android:shadowColor="#88FFFFFF"
					android:shadowDx="0"
					android:shadowDy="1"
					android:shadowRadius="0.1" />
				
				<com.mobiata.android.widget.SegmentedControlGroup 
					android:id="@+id/sort_options_group"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="6dp"
					android:orientation="horizontal">
						
					<RadioButton
						android:id="@+id/sort_popular_radio"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="Popular" />
				
					<RadioButton
						android:id="@+id/sort_price_radio"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="Price" />
				
				</com.mobiata.android.widget.SegmentedControlGroup>			
			
			</LinearLayout>
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="6dp"
				android:text="Distance"
				android:textStyle="bold"
				android:textColor="#FF000000"
				android:shadowColor="#88FFFFFF"
				android:shadowDx="0"
				android:shadowDy="1"
				android:shadowRadius="0.1" />
			
			<com.mobiata.android.widget.SegmentedControlGroup 
				android:id="@+id/distance_options_group"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="6dp"
				android:orientation="horizontal">
			
				<RadioButton
					android:id="@+id/distance_near_radio"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="2 mi" />
					
				<RadioButton
					android:id="@+id/distance_normal_radio"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="5 mi" />
					
				<RadioButton
					android:id="@+id/distance_far_radio"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="10 mi" />
					
				<RadioButton
					android:id="@+id/distance_all_radio"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="All" />
				
			</com.mobiata.android.widget.SegmentedControlGroup>
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="6dp"
				android:text="Price"
				android:textStyle="bold"
				android:textColor="#FF000000"
				android:shadowColor="#88FFFFFF"
				android:shadowDx="0"
				android:shadowDy="1"
				android:shadowRadius="0.1" />
			
			<com.mobiata.android.widget.SegmentedControlGroup 
				android:id="@+id/price_options_group"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
			
				<RadioButton
					android:id="@+id/price_cheap_radio"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="$" />
					
				<RadioButton
					android:id="@+id/price_normal_radio"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="$$" />
					
				<RadioButton
					android:id="@+id/price_expensive_radio"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="$$$" />
					
				<RadioButton
					android:id="@+id/price_all_radio"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="All" />
				
			</com.mobiata.android.widget.SegmentedControlGroup>
			
		</LinearLayout>

	</com.mobiata.android.widget.Panel>
	
	<LinearLayout
		android:id="@id/search_bar_layout"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="6dp"
	    android:background="#3e9ad2">
			
	    <!-- Search box -->
	    <EditText
            android:id="@+id/search_text"
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="16sp" />
            
		<ImageButton
			android:id="@+id/dates_button"
			android:layout_width="@dimen/action_bar_button_height"
			android:layout_height="@dimen/action_bar_button_height"
            android:layout_marginLeft="6dip" />
			
		<ImageButton
			android:id="@+id/guests_button"
			android:layout_width="@dimen/action_bar_button_height"
			android:layout_height="@dimen/action_bar_button_height"
            android:layout_marginLeft="6dip" />
	        
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/button_bar_layout"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:padding="6dp"
	    android:background="#3e9ad2">
	    
    </LinearLayout>
    	
	<ImageView
		android:layout_below="@id/search_bar_layout"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:src="@drawable/action_bar_shadow"
		android:scaleType="fitXY" />
    	
</RelativeLayout>