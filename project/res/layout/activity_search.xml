<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		android:id="@+id/focus_layout"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:focusable="true"
		android:focusableInTouchMode="true" />

	<ImageView
		android:id="@+id/view_flip_image"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="8dp"
		android:layout_below="@+id/search_bar_layout" />

	<FrameLayout
		android:id="@+id/content_layout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="8dp"
		android:layout_below="@id/search_bar_layout" />

	<include
		android:id="@+id/map_search_button"
		layout="@layout/include_map_search_button" />

	<ImageButton
		android:id="@+id/view_button"
		android:layout_width="@dimen/action_bar_button_height"
		android:layout_height="@dimen/action_bar_button_height"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_margin="6dp"
		style="@style/Widget.Button.Floating" />

	<LinearLayout
		android:id="@+id/placeholder_progress_layout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/search_bar_layout"
		android:gravity="center"
		android:orientation="vertical"
		android:background="@color/bg_default"
		android:visibility="gone">
		<ProgressBar
			android:id="@+id/placeholder_progress_bar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:indeterminate="true"
			style="@android:style/Widget.ProgressBar.Large.Inverse" />
		<TextView
			android:id="@+id/placeholder_progress_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="24dp"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#FF666666"
			android:shadowColor="#88FFFFFF"
			android:shadowDx="0"
			android:shadowDy="-1"
			android:shadowRadius="0.1" />
	</LinearLayout>

	<!-- 
	<com.expedia.bookings.widget.DumbTagProgressBar
		android:id="@+id/search_progress_bar"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/search_bar_layout"
		android:visibility="gone" />
     -->

	<View
		android:id="@+id/panel_dismiss_view"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:visibility="gone"
		android:background="@color/dismiss" />

	<com.mobiata.android.widget.Panel
		android:id="@+id/drawer_panel"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/search_bar_layout"
		mobiata:handle="@+id/drawer_handle"
		mobiata:content="@+id/drawer_content"
		mobiata:position="top"
		mobiata:openedHandle="@drawable/search_results_drawer_handle"
		mobiata:closedHandle="@drawable/search_results_drawer_handle"
		mobiata:animationDuration="300">

		<View
			android:id="@id/drawer_handle"
			android:layout_width="fill_parent"
			android:layout_height="32dp"
			android:layout_gravity="center" />

		<include
			android:id="@id/drawer_content"
			layout="@layout/include_drawer_content" />

	</com.mobiata.android.widget.Panel>

	<View
		android:id="@+id/refinement_dismiss_view"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:visibility="gone"
		android:background="@color/dismiss" />

	<ListView
		android:id="@+id/search_suggestions_list_view"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/search_bar_layout"
		android:drawingCacheQuality="low"
		android:footerDividersEnabled="false"
		android:visibility="gone"
		android:background="@android:color/white"
		android:cacheColorHint="@android:color/white"
		android:listSelector="@null" />

	<include
		android:id="@id/search_bar_layout"
		layout="@layout/include_search_bar" />

	<include
		android:id="@+id/refinements_layout"
		layout="@layout/include_refinements_layout" />

	<include
		android:id="@id/button_bar_layout"
		layout="@layout/include_button_bar" />

</RelativeLayout>