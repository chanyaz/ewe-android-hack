<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout
		android:id="@+id/focus_layout"
    	android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:focusable="true" 
   		android:focusableInTouchMode="true"/>
    	
    <ImageView
    	android:id="@+id/view_flip_image"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_marginTop="8dp"
    	android:layout_below="@+id/search_bar_layout" />
    
    <FrameLayout
    	android:id="@+id/content_layout"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_marginTop="8dp"
    	android:layout_below="@id/search_bar_layout" />
    	
    <com.expedia.bookings.widget.TagProgressBar
	    android:id="@+id/search_progress_bar"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
		android:layout_below="@id/search_bar_layout"
		android:visibility="gone" />
	
	<com.mobiata.android.widget.Panel
		android:id="@+id/drawer_panel"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/search_bar_layout"
		mobiata:handle="@+id/drawer_handle"
		mobiata:content="@+id/drawer_content"
		mobiata:position="top"
		mobiata:openedHandle="@drawable/search_results_drawer_handle"
		mobiata:closedHandle="@drawable/search_results_drawer_handle"
		mobiata:animationDuration="300">

		<View
			android:id="@id/drawer_handle"
			android:layout_width="fill_parent"
			android:layout_height="32dp"
			android:layout_gravity="center" />
	
		<include 
			android:id="@id/drawer_content"
			layout="@layout/include_drawer_content" />		
		

	</com.mobiata.android.widget.Panel>
	
	<include 
		android:id="@id/search_bar_layout"
		layout="@layout/include_search_bar" /> 
	
	<LinearLayout
		android:id="@+id/refinements_layout"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:background="#FF999999"
	    android:gravity="center">
	    
	    <LinearLayout
	    	android:id="@+id/dates_layout"
	    	android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:visibility="gone">
	    	
	    	<com.mobiata.android.widget.CalendarDatePicker
	    		android:id="@+id/dates_date_picker"
	    		android:layout_width="fill_parent"
	    		android:layout_height="300dp"
	    		mobiata:cellBackground="@drawable/bg_calendar_cell"
	    		mobiata:otherMonthCellBackground="@drawable/bg_calendar_cell_other_month"
	    		mobiata:rangeStartCellBackground="@drawable/bg_calendar_cell"
	    		mobiata:rangeEndCellBackground="@drawable/bg_calendar_cell"
	    		mobiata:cellTextColor="@color/cell_text"
	    		mobiata:otherMonthCellTextColor="@color/cell_text_other_month" />
	    	
	    </LinearLayout>
	    
	    <LinearLayout
	    	android:id="@+id/guests_layout"
	    	android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:visibility="gone">
		    
		    <com.mobiata.android.widget.NumberPicker
				android:id="@+id/adults_number_picker"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1" />
		    	
		    <com.mobiata.android.widget.NumberPicker
				android:id="@+id/children_number_picker"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1" />
	    
	    </LinearLayout>
	    
	</LinearLayout>
	
	<include 
		android:id="@id/button_bar_layout"
		layout="@layout/include_button_bar" /> 

    <View 
    	android:id="@+id/dismiss_view"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_below="@id/search_bar_layout"
    	android:layout_above="@id/button_bar_layout"
    	android:visibility="gone"
    	android:background="@color/dismiss" />
    	
    <ListView
    	android:id="@+id/search_suggestions_list_view"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_below="@id/search_bar_layout"
    	android:layout_above="@id/button_bar_layout"
    	android:visibility="gone"
    	android:background="@android:color/white" />
    		
    
</RelativeLayout>