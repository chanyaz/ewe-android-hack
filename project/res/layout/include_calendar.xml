<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_marginLeft="45dp"
    android:layout_marginRight="45dp"
    android:layout_weight="1"
    android:background="@drawable/bg_calendar" >

    <com.mobiata.android.widget.CalendarDatePicker
        android:id="@+id/dates_date_picker"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        mobiata:calendarHeaderBackground="@color/calendar_header_tablet"
        mobiata:cellTextColor="@color/calendar_cell_text"
        mobiata:drawGridLines="false"
        mobiata:headerHeight="52dp"
        mobiata:popupBackground="?attr/calendarDatePickerPopupDrawable"
        mobiata:stateCellDrawable="?attr/calendarDatePickerCellDrawable" />

</FrameLayout>