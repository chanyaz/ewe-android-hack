<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include
        android:id="@+id/creditcard_type_section"
        layout="@layout/section_edit_creditcard_type" />

    <include
        android:id="@+id/contact_info_section"
        layout="@layout/section_edit_contact_info" />
    
    <include
        android:id="@+id/creditcard_section"
        layout="@layout/section_edit_creditcard" />

    <Button
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_done"
        android:enabled="false" />

</LinearLayout>