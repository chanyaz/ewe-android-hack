<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp" >

    <TextView
        android:id="@+id/expedia_account_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="15dp"
        android:text="@string/expedia_account"
        android:textColor="#BBFFFFFF"
        android:textSize="@dimen/data_form_section_header_text"
        android:visibility="gone" />

    <include
        android:id="@+id/account_button_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        layout="@layout/include_account_button" />

    <TextView
        android:id="@+id/checkout_information_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/checkout_information"
        android:textColor="#BBFFFFFF"
        android:textSize="@dimen/data_form_section_header_text" />

    <!-- Traveler(s) -->

    <LinearLayout
        android:id="@+id/traveler_outer_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/bg_checkout_information_top_tab"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/traveler_info_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:src="@drawable/ic_traveler" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/enter_traveler_info"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/travelers_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:addStatesFromChildren="true"
            android:orientation="vertical"
            android:visibility="gone" >

            <!-- This container gets filled with travelers -->

        </LinearLayout>
    </LinearLayout>

    <!-- Payment -->

    <LinearLayout
        android:id="@+id/payment_outer_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/bg_checkout_information_bottom_tab"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/payment_info_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:src="@drawable/ic_credit_card" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/payment_method"
                android:textSize="16sp" />
        </LinearLayout>

        <include
            android:id="@+id/creditcard_section_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/section_display_creditcard_btn" />

        <include
            android:id="@+id/stored_creditcard_section_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/section_display_stored_credit_card" />
    </LinearLayout>

    <!-- Legal -->

    <TextView
        android:id="@+id/legal_blurb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white" />

</LinearLayout>
