<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:fadingEdge="none"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:paddingLeft="@dimen/booking_form_section_margin"
    android:paddingRight="@dimen/booking_form_section_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/include_receipt" />

            <!-- Expedia points disclaimer -->

            <TextView
                android:id="@+id/expedia_points_disclaimer_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingTop="@dimen/booking_form_section_margin"
                android:paddingBottom="@dimen/booking_form_section_margin"
                android:text="@string/disclaimer_expedia_points"
                android:textColor="#6A6D71" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Login Section -->
            <include
                android:id="@+id/account_button_root"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/include_account_button" />

            <!-- Guest info section -->

            <TextView
                style="@style/TabletSectionHeader.Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/booking_form_section_margin"
                android:text="@string/guest_info" />

            <!-- Guest form fields (from saved data) -->

            <include layout="@layout/include_saved_guest_info" />

            <!-- Guest form fields (entering data) -->

            <include layout="@layout/include_guest_info_fields" />

            <!-- Credit card info form fields -->

            <TextView
                style="@style/TabletSectionHeader.Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/booking_form_section_margin"
                android:text="@string/credit_card_info" />

            <include layout="@layout/include_stored_card_spinner" />
            <include layout="@layout/include_credit_card_info" />
            <include layout="@layout/include_credit_card_security" />

            <!-- Coupon codes -->
            <include layout="@layout/include_coupon_code" />

            <!-- Terms and conditions -->
            <include layout="@layout/snippet_hotel_tablet_checkout_rules_restrictions" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
