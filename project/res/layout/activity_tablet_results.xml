<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BACKGROUND CONTAINERS -->

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bg_dest_image_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- TRIP BUCKET -->
    <com.expedia.bookings.widget.FixedTranslationFrameLayout
        android:id="@+id/trip_bucket_container"
        android:background="@color/trip_bucket_background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- FLIGHT LIST PLACEHOLDER FOR WHEN WE DONT HAVE ENOUGH FLIGHT DATA -->
    <LinearLayout
        android:id="@+id/missing_flight_info_container"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:gravity="center"
            android:text="@string/missing_flight_info_header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="center"
            android:text="@string/missing_flight_info_message" />
    </LinearLayout>

    <!-- CONTROLLER CONTAINERS -->

    <com.expedia.bookings.widget.FixedTranslationFrameLayout
        android:id="@+id/full_width_flights_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FixedTranslationFrameLayout
        android:id="@+id/full_width_hotels_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FixedTranslationFrameLayout
        android:id="@+id/full_width_search_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</FrameLayout>