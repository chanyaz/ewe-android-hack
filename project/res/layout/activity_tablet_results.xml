<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BACKGROUND CONTAINERS -->

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bg_dest_image_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/results_top_gradient_height"
        android:layout_gravity="top"
        android:background="@drawable/bg_tablet_actionbar"/>

    <!-- FLIGHT LIST PLACEHOLDER FOR WHEN WE DONT HAVE ENOUGH FLIGHT DATA -->

    <com.expedia.bookings.widget.CenteredCaptionedIcon
        android:id="@+id/missing_flight_info_view"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="@color/tablet_white_pane_bg"
        app:svg="@raw/ic_tablet_sold_out_flight"/>

    <!-- CONTROLLER CONTAINERS -->

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/full_width_flights_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/full_width_hotels_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- TRIP BUCKET -->
    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/trip_bucket_container"
        android:background="@color/trip_bucket_background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/full_width_search_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
