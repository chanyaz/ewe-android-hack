<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- BACKGROUND CONTAINERS -->

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/bg_dest_image_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- CONTROLLER CONTAINERS -->

    <com.expedia.bookings.widget.FixedTranslationFrameLayout
        android:id="@+id/full_width_flights_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FixedTranslationFrameLayout
        android:id="@+id/full_width_hotels_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.FixedTranslationFrameLayout
        android:id="@+id/full_width_trip_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- LOADING -->

    <com.expedia.bookings.widget.FrameLayoutTouchController
        android:id="@+id/loading_frag_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>