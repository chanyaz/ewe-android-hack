<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Details of each flight -->

    <ScrollView
        android:id="@+id/flight_info_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/flight_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="36dp"
            android:paddingTop="36dp" />
    </ScrollView>

    <!-- Header stuff -->

    <include
        android:id="@+id/info_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/section_info_bar" />

    <!-- Bagge fee footer -->

    <LinearLayout
        android:id="@+id/bagge_fee_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/baggage_fee_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_suitcase_small"
            android:drawablePadding="5dp"
            android:text="@string/baggage_fee_info"
            android:textColor="#CCCCCC"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carry_on_baggage_fees_apply_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:drawablePadding="5dp"
            android:text="@string/carry_on_baggage_fees_apply"
            android:textColor="#838794"
            android:textSize="12dp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>