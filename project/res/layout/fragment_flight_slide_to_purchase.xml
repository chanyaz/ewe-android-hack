<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideto="http://schemas.android.com/apk/res/com.expedia.bookings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#66000000"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="15dp" >

    <com.expedia.bookings.widget.SlideToWidget
        android:id="@+id/slide_to_wid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        slideto:sliderImage="@drawable/ic_slide_to_purchase"
        slideto:sliderText="@string/slide_to_purchase" />

    <TextView
        android:id="@+id/trip_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_card_will_be_charged_TEMPLATE"
        android:textColor="#FCFCFC" />

</LinearLayout>