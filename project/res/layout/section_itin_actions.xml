<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.ItinActionsSection xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itin_action_button_height"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#4D555D" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <com.expedia.bookings.widget.TextView
            android:id="@+id/summary_left_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list_selector_holo_dark"
            android:focusable="true"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/itin_white_text"
            android:textSize="12dp"
            app:textAllCaps="true"
            app:textStyle="bold" />

        <View
            android:id="@+id/action_button_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#4D555D" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/summary_right_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list_selector_holo_dark"
            android:focusable="true"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/itin_white_text"
            android:textSize="12dp"
            app:textAllCaps="true"
            app:textStyle="bold" />
    </LinearLayout>

</com.expedia.bookings.widget.ItinActionsSection>