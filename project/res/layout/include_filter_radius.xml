<?xml version="1.0" encoding="utf-8"?>
<com.mobiata.android.widget.SegmentedControlGroup
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:mobiata="http://schemas.android.com/apk/res/com.expedia.bookings"
	android:id="@+id/radius_filter_button_group"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center"
	android:paddingTop="5dp"
	mobiata:textColor="@color/segmented_button_text">

	<RadioButton
		android:id="@+id/radius_small_button"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:textStyle="bold" />

	<RadioButton
		android:id="@+id/radius_medium_button"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:textStyle="bold" />

	<RadioButton
		android:id="@+id/radius_large_button"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:textStyle="bold"
		android:checked="true" />

	<RadioButton
		android:id="@+id/radius_all_button"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="@string/all"
		android:textStyle="bold" />

</com.mobiata.android.widget.SegmentedControlGroup>
