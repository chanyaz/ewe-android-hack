<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="TitleBarTextColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="textColor">@color/actionbar_text</item>
    </style>

    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow_image</item>
    </style>


    <style name="LaunchTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarTabStyle">@style/LaunchActionBarTabStyle</item>
        <item name="actionBarTabBarStyle">@style/ActionBarTabBar</item>
        <item name="actionBarTabTextStyle">@style/LaunchActionBarTabTextStyle</item>
        <item name="android:actionBarTabStyle">@style/LaunchActionBarTabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBar</item>
        <item name="android:actionBarTabTextStyle">@style/LaunchActionBarTabTextStyle</item>
        <item name="android:actionBarStyle">@style/LaunchActionBar</item>
        <item name="actionBarStyle">@style/LaunchActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        <item name="actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        <item name="textColor">@color/actionbar_text</item>

        <!-- PopupMenu -->
        <item name="skin_itinActivityPlaceholderDrawable">@drawable/itin_header_placeholder_activities</item>
        <item name="skin_itinCarPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinFlightPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinFlightsTripLineColor">@color/itin_flight_line_color</item>
        <item name="skin_itinCardActionBarCheckmark">@drawable/ic_action_bar_checkmark</item>
        <item name="skin_itinCardTitleTextColor">@color/actionbar_text</item>
        <item name="skin_tripsTabText">@string/Your_Trips</item>

    </style>

    <style name="NewLaunchTheme" parent="AppTheme.Base">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorPrimaryDark">#04445e</item>
        <item name="android:colorButtonNormal">@color/new_launch_primary_color</item>
        <item name="colorAccent">@color/new_launch_primary_color</item>
        <item name="android:colorEdgeEffect">@color/new_launch_primary_color</item>
        <item name="primary_color">@color/new_launch_primary_color</item>

        <!-- PopupMenu -->
        <item name="android:dropDownListViewStyle">@android:style/Widget.Holo.Light.ListView.DropDown</item>
        <item name="skin_itinActivityPlaceholderDrawable">@drawable/itin_header_placeholder_activities</item>
        <item name="skin_itinCarPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinFlightPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinFlightsTripLineColor">@color/itin_flight_line_color</item>
        <item name="skin_itinDismissListSelectorDrawable">?android:attr/selectableItemBackground</item>
        <item name="skin_itinCardActionBarCheckmark">@drawable/ic_action_bar_checkmark</item>
        <item name="skin_itinCardTitleTextColor">@color/actionbar_text</item>
        <item name="skin_tripsTabText">@string/trips</item>

        <item name="itin_card_summary_left_action_button_flight_drawable">@drawable/ic_direction</item>
        <item name="itin_card_summary_left_action_button_hotel_drawable">@drawable/ic_direction</item>
        <item name="itin_card_summary_right_action_button_flight_drawable">@drawable/ic_confirmation_checkmark_crystal</item>
        <item name="itin_card_summary_right_action_button_hotel_drawable">@drawable/ic_support_crystal</item>
        <item name="itin_card_list_icon_flight_drawable">@drawable/ic_type_circle_flight</item>
        <item name="itin_card_list_icon_hotel_drawable">@drawable/ic_type_circle_hotel</item>
    </style>

    <style name="FlightActionBarWotif" parent="FlightActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar</item>
    </style>

    <style name="LoginTheme" parent="Theme.Phone.Dark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="TerminalMapTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/TerminalMapActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionBar.ActionButton.Overflow</item>
        <item name="android:windowBackground">@android:color/white</item>

        <!-- PopupMenu -->
        <item name="android:dropDownListViewStyle">@style/TerminalMapThemeDropDownListView</item>
        <item name="spinnerDropDownItemStyle">@style/TerminalMapThemeSpinnerDropDownItemStyle</item>
        <item name="skin_terminalChooserTextColor">@color/actionbar_text</item>
    </style>

    <style name="TerminalMapActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="android:background">@color/action_bar_bg_color</item>
    </style>

    <style name="TerminalMapThemeSpinnerDropDownItemStyle" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@color/action_bar_bg_color</item>
        <item name="background">@color/action_bar_bg_color</item>
    </style>

    <style name="TerminalMapThemeDropDownListView" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:background">@color/action_bar_bg_color</item>
    </style>
    
    <style name="Theme.AccountLib" parent="Theme.Base.AccountLib">
        <item name="skin_acctLogoSmallDrawable">@android:color/transparent</item>
        <item name="skin_acctLogoTextDrawableMarginLeft">-36dp</item>
        <item name="skin_acctLogoTextDrawableMarginTop">20dp</item>
        <item name="android:checkboxStyle">@style/Widget.CompoundButton.CheckBox</item>
    </style>

</resources>
