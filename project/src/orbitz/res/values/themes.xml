<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Orbitz" parent="@style/Theme.Expedia">
        <item name="skin_hotelImagePlaceHolderDrawable">@drawable/ic_image_placeholder_orb</item>
        <item name="skin_HotelRowThumbPlaceHolderDrawable">@drawable/ic_row_thumb_placeholder_orb</item>
        <item name="skin_hotelListingUserRatingStyle">@style/RatingBar.UserReview.Blue</item>
        <item name="skin_ratingBarUserReviewStyle">@style/RatingBar.UserReview.Blue</item>
        <item name="skin_bestPriceGuaranteeString">@string/orbitz_best_price_guarantee</item>
        <item name="skin_costSummaryDialogStripeDrawable">@drawable/dialog_breakdown_stripe</item>
        <item name="skin_actionBarSpinnerBackground">@drawable/ab_spinner_orbitz</item>
        <item name="skin_cvvBookButtonTextColor">@android:color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        <item name="actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_hotels</item>
        <item name="skin_hotelConfirmationPlaceholderDrawable">@drawable/placeholder_lg_orb</item>
        <item name="skin_couponSuccessMessageColor">@color/coupon_success_message_color_orbitz</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow</item>
        <item name="skin_travellerInfoPageLogo">@drawable/ic_traveller_info_page_logo</item>
        <item name="skin_hotelRulesActionBarLogo">@drawable/ic_action_bar_logo_dark</item>
        <item name="skin_flightRulesActionBarLogo">@drawable/ic_action_bar_logo_dark</item>
        <item name="skin_errorIndicationExclaimationDrawable">@drawable/ic_error_blue</item>
    </style>

    <style name="FlightTheme" parent="@style/Theme.Orbitz">
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_flights</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/FlightActionBarOrbitz</item>
        <item name="android:actionMenuTextColor">@color/action_bar_flight_text_color</item>
        <item name="android:actionModeCloseDrawable">@drawable/btn_navigation_cancel</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Phone</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner.Phone.Flights</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AutoComplete</item>
        <item name="skin_travelerLabelOnCheckout">@string/Add_Traveler</item>
        <item name="spinner_traveler_text_color_drawable">@drawable/flight_traveler_text_color</item>
    </style>

    <style name="ItineraryThemeOverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow_image</item>
    </style>

    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow_image</item>
    </style>

    <!-- Override the phone theme -->
    <style name="Theme.Phone" parent="@style/Theme.Orbitz">
        <item name="android:actionBarStyle" tools:targetApi="11">@style/Dark.ActionBar.Orbitz</item>
        <item name="android:actionBarTabStyle">@style/LaunchActionBarTabOrbitzStyle</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat">
        <item name="android:logo">@drawable/ic_ab_orb_logo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        <item name="actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        
        <!-- PopupMenu -->
        <item name="skin_itinActivityPlaceholderDrawable">@drawable/itin_header_orb_placeholder_activities</item>
        <item name="skin_itinCarPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinHotelPlaceholderDrawable">@drawable/placeholder_lg_orb</item>
        <item name="skin_itinFlightPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinDefaultPlaceholderDrawable">@drawable/bg_itin_orbitz_fallback_activity</item>
        <item name="skin_itinFlightsTripLineColor">@color/itin_flight_line_color</item>
        <item name="skin_itinDismissListSelectorDrawable">@drawable/list_selector_orbitz</item>
        <item name="skin_itinCardActionBarCheckmark">@drawable/ic_action_bar_checkmark_white</item>
        <item name="skin_itinCardTitleTextColor">@color/itin_white_text</item>
        <item name="skin_tripsTabText">@string/Your_Trips</item>
    </style>

    <style name="LaunchActionBarTabOrbitzStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background" tools:targetApi="11">@drawable/tab_indicator_ab_orbitz_launch</item>
    </style>

    <style name="FlightActionBarOrbitz" parent="FlightActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar</item>
        <item name="android:backgroundSplit" tools:targetApi="11">@drawable/bg_action_bar_flight_bottom_orb</item>
    </style>

    <style name="ItineraryTheme" parent="Theme.Orbitz">
        <item name="android:logo" tools:targetApi="11">@drawable/ic_ab_logo</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/Dark.ActionBar.Orbitz</item>

        <!-- PopupMenu -->
        <item name="android:dropDownListViewStyle">@style/Widget.ListView.DropDown.Orbitz</item>
        <item name="skin_itinActivityPlaceholderDrawable">@drawable/itin_header_orb_placeholder_activities</item>
        <item name="skin_itinCarPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinHotelPlaceholderDrawable">@drawable/placeholder_lg_orb</item>
        <item name="skin_itinFlightPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinDefaultPlaceholderDrawable">@drawable/bg_itin_orbitz_fallback_activity</item>
        <item name="skin_itinFlightsTripLineColor">@color/itin_flight_line_color</item>
        <item name="skin_itinDismissListSelectorDrawable">@drawable/list_selector_orbitz</item>
        <item name="skin_itinCardActionBarCheckmark">@drawable/ic_action_bar_checkmark_white</item>
        <item name="skin_itinCardTitleTextColor">@color/itin_white_text</item>
        <item name="android:actionOverflowButtonStyle">@style/ItineraryThemeOverflowMenuButton</item>
        <item name="actionOverflowButtonStyle">@style/ItineraryThemeOverflowMenuButton</item>
    </style>

    <style name="LoginTheme" parent="Theme.Phone.Dark">
        <item name="android:logo" tools:targetApi="11">@drawable/ic_ab_logo</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

	<style name="HotelWebViewActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_hotels</item>
        <item name="android:titleTextStyle" tools:targetApi="11">@style/FlightActionBarTextAppearance</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow</item>
    </style>

    <style name="Theme.AccountLib" parent="Theme.Base.AccountLib">
        <item name="skin_acctLogoSmallDrawable">@android:color/transparent</item>
        <item name="skin_acctLogoTextDrawable">@drawable/acct__logo_text</item>
        <item name="skin_acctSignInButtonTextColor">@color/acct__btn_sign_in_text_orbitz</item>
        <item name="skin_acctLogoTextDrawableMarginLeft">0dp</item>
        <item name="skin_acctLogoTextDrawableMarginTop">20dp</item>
        <item name="android:checkboxStyle">@style/Widget.CompoundButton.CheckBox</item>
        <item name="skin_acctInputTextHintColor">?android:textColorHint</item>
    </style>

    <style name="TerminalMapThemeSpinnerDropDownItemStyle" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@color/action_bar_bg_color</item>
        <item name="background">@color/action_bar_bg_color</item>
    </style>

    <style name="TerminalMapThemeDropDownListView" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:background">@color/action_bar_bg_color</item>
        <item name="background">@color/action_bar_bg_color</item>
    </style>

</resources>
