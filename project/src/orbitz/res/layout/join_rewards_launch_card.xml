<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/HomeScreenCardViewStyle"
    app:cardPreventCornerOverlap="false"
    android:contentDescription="@string/reward_launch_card_text_content_description">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/launch_tile_padding">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="4dp"
            android:tint="@color/loyalty_earn_color"
            android:src="@drawable/reward_launch_card_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/join_rewards_main_text_color"
            android:lineSpacingExtra="3sp"
            android:gravity="center_horizontal"
            android:text="@string/join_now_launch_card_text"/>

        <android.support.v7.widget.CardView
            android:id="@+id/join_rewards_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="2.5dp"
            app:cardElevation="0dp"
            android:background="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/loyalty_earn_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                style="@style/Core.Text.200"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                android:text="@string/join_rewards_button_text"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v7.widget.CardView>