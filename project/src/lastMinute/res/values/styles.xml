<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RatingBar.UserReview.HotelListing">
        <item name="android:progressDrawable">@drawable/ratingbar_userreview_hotel_listing</item>
    </style>
    <style name="RatingBar.UserReview.Pink">
        <item name="android:progressDrawable">@drawable/ratingbar_userreview_pink</item>
    </style>

    <style name="Dark.ActionBar.LM" parent="Dark.ActionBar">
        <item name="android:background">@drawable/bg_action_bar</item>
        <item name="android:backgroundSplit">@drawable/bg_action_bar_bottom_lm</item>
    </style>

    <style name="Widget.ListView.DropDown.LM" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:background">@drawable/bg_action_bar</item>
    </style>

    <style name="ActionBarMenu.NoCaps">
        <item name="android:textColor">@color/actionbar_text_lm</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Header" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/actionbar_text_lm</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.SegmentedControlGroup.DarkFilterControls">
        <item name="centerButton">@drawable/dark_segmented_center</item>
        <item name="leftButton">@drawable/dark_segmented_left</item>
        <item name="rightButton">@drawable/dark_segmented_right</item>
        <item name="textColor">@color/menu_bar_text_color</item>
    </style>

    <!-- Styles for our custom Switch -->
    <style name="Widget.CompoundButton.Switch" parent="android:Widget.CompoundButton">
        <item name="thumbTrack">@drawable/btn_tablet_filter_normal</item>
        <item name="thumb">@drawable/btn_tablet_filter_switch_lm</item>
        <item name="thumbTextAppearance">@style/TextAppearance.Widget.Switch</item>
        <item name="textOn">@string/switch_on</item>
        <item name="textOff">@string/switch_off</item>
        <item name="textPadding">13dip</item>
        <item name="thumbMinWidth">100dip</item>
        <item name="thumbPadding">15dip</item>
    </style>
</resources>