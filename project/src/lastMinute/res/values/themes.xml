<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow_white</item>
    </style>

    <style name="LaunchActionBarTabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.LM" parent="@style/Theme.Expedia">
        <item name="skin_costSummaryDialogStripeDrawable">@drawable/dialog_breakdown_stripe</item>
        <item name="skin_cvvBookButtonTextColor">@android:color/white</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_hotels</item>
        <item name="skin_couponSuccessMessageColor">@color/coupon_success_message_color</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow</item>
        <item name="skin_hotelRulesActionBarLogo">@drawable/ic_action_bar_brand_logo</item>
        <item name="skin_flightRulesActionBarLogo">@drawable/ic_action_bar_brand_logo</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        <item name="actionOverflowButtonStyle">@style/OverflowMenuButton</item>
    </style>

    <style name="FlightTheme" parent="@style/Theme.LM">
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="android:actionModeCloseDrawable">@drawable/btn_navigation_cancel</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Phone</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner.Phone.Flights</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AutoComplete</item>
        <item name="skin_travelerLabelOnCheckout">@string/Add_Traveler</item>
        <item name="checkout_icon_right_margin_attr">@dimen/checkout_icon_right_margin_car_lx</item>
        <item name="spinner_traveler_text_color_drawable">@drawable/flight_traveler_text_color</item>
    </style>

    <!-- Override the phone theme -->
    <style name="Theme.Phone" parent="@style/Theme.LM">
        <item name="android:actionBarTabStyle">@style/LaunchActionBarTabStyle</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarTabStyle">@style/LaunchActionBarTabStyle</item>
        <item name="actionBarTabBarStyle">@style/ActionBarTabBar</item>
        <item name="actionBarTabTextStyle">@style/LaunchActionBarTabTextStyle</item>
        <item name="android:actionBarTabStyle">@style/LaunchActionBarTabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBar</item>
        <item name="android:actionBarTabTextStyle">@style/LaunchActionBarTabTextStyle</item>
        <item name="android:actionBarStyle">@style/LaunchActionBar</item>
        <item name="actionBarStyle">@style/LaunchActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        <item name="actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        <item name="android:textColor">@color/actionbar_text</item>

        <!-- PopupMenu -->
        <item name="skin_itinCarPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinFlightPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinCardActionBarCheckmark">@drawable/ic_action_bar_checkmark</item>
        <item name="skin_tripsTabText">@string/Your_Trips</item>
    </style>

    <style name="FlightActionBarlm" parent="FlightActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar</item>
    </style>

    <style name="ItineraryThemeOverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow_white</item>
    </style>

    <style name="LoginTheme" parent="Theme.Phone.Dark">
        <item name="android:logo" tools:targetApi="11">@drawable/ic_ab_lm_logo</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="HotelWebViewActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_hotels</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow</item>
    </style>

    <style name="FlightActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar_flight_top</item>
        <item name="android:backgroundSplit" tools:targetApi="11">@drawable/bg_action_bar_flight_bottom</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow</item>
    </style>

    <style name="FlightTheme.OverlayMode">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="TerminalMapTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/TerminalMapActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionBar.ActionButton.Overflow</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow</item>

        <!-- PopupMenu -->
        <item name="android:dropDownListViewStyle">@style/TerminalMapThemeDropDownListView</item>
        <item name="spinnerDropDownItemStyle">@style/TerminalMapThemeSpinnerDropDownItemStyle</item>

    </style>

    <style name="TerminalMapActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="android:background">@color/action_bar_bg_color</item>
    </style>

    <style name="TerminalMapThemeSpinnerDropDownItemStyle" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@color/action_bar_bg_color</item>
        <item name="background">@color/action_bar_bg_color</item>
    </style>

    <style name="Theme.AccountLib" parent="Theme.Base.AccountLib">
        <item name="skin_acctLogoSmallDrawable">@android:color/transparent</item>
        <item name="skin_acctLogoTextDrawable">@drawable/acct__logo_large</item>
        <item name="skin_acctLogoTextDrawableMarginLeft">-36dp</item>
        <item name="skin_acctLogoTextDrawableMarginTop">5dp</item>
        <item name="android:checkboxStyle">@style/Widget.CompoundButton.CheckBox</item>
        <item name="skin_acctInputTextHintColor">?android:textColorHint</item>
    </style>

</resources>
