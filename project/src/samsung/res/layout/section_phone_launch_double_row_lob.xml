<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/samsung_launch_lob_bg" />

    <FrameLayout
        android:id="@+id/lob_top_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/lob_top_row_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/launch_lob_double_row_height"
            android:background="@color/samsung_launch_lob_bg" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:showDividers="middle">

            <com.expedia.bookings.widget.PhoneLaunchDoubleRowButton
                android:id="@+id/hotels_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/launch_lob_margin"
                android:layout_marginRight="@dimen/launch_lob_margin"
                android:layout_weight="1"
                app:btn_bg="@color/samsung_hotel_lob_bg"
                app:btn_icon="@drawable/ic_launch_hotels"
                app:btn_text="@string/nav_hotels"
                app:icon_min_scale=".70" />

            <com.expedia.bookings.widget.PhoneLaunchDoubleRowButton
                android:id="@+id/flights_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/launch_lob_margin"
                android:layout_weight="1"
                app:btn_bg="@color/samsung_flight_lob_bg"
                app:btn_icon="@drawable/ic_launch_flights"
                app:btn_text="@string/nav_flights"
                app:icon_min_scale=".68" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:id="@+id/vertical_divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/samsung_launch_lob_bg" />

    <FrameLayout
        android:id="@+id/lob_bottom_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/lob_bottom_row_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/launch_lob_double_row_height"
            android:background="@color/samsung_launch_lob_bg" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:showDividers="middle">

            <com.expedia.bookings.widget.PhoneLaunchDoubleRowButton
                android:id="@+id/cars_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/launch_lob_margin"
                android:layout_marginRight="@dimen/launch_lob_margin"
                android:layout_weight="1"
                app:btn_bg="@color/samsung_car_lob_bg"
                app:btn_icon="@drawable/ic_launch_cars"
                app:btn_text="@string/nav_cars"
                app:icon_min_scale=".75" />

            <com.expedia.bookings.widget.PhoneLaunchDoubleRowButton
                android:id="@+id/activities_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/launch_lob_margin"
                android:layout_weight="1"
                app:btn_bg="@color/samsung_lx_lob_bg"
                app:btn_icon="@drawable/ic_launch_activities"
                app:btn_text="@string/nav_lx"
                app:icon_min_scale=".75" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/samsung_launch_lob_bg" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/lob_shadow" />
    </LinearLayout>

</LinearLayout>