<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CollectionLOBButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="HotelCollectionLOBButton" parent="CollectionLOBButton">
        <item name="android:background">@drawable/bg_collection_hotel_btn</item>
    </style>

    <style name="FlightCollectionLOBButton" parent="CollectionLOBButton">
        <item name="android:background">@drawable/bg_collection_flight_btn</item>
    </style>

    <style name="LXCollectionLOBButton" parent="CollectionLOBButton">
        <item name="android:background">@drawable/bg_collection_lx_btn</item>
    </style>

    <style name="Dark.ActionBar.Samsung" parent="Dark.ActionBar">
        <item name="android:background">@drawable/bg_action_bar</item>
        <item name="android:backgroundSplit">@drawable/bg_action_bar_bottom_samsung</item>
    </style>

    <style name="RatingBar.UserReview.Blue">
        <item name="android:progressDrawable">@drawable/ratingbar_userreview_blue</item>
    </style>

    <style name="Widget.ListView.DropDown.Samsung" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:background">@drawable/bg_action_bar</item>
    </style>

    <style name="HotelPriceTextStyleSamsung" />

</resources>