<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Samsung" parent="@style/Theme.Expedia">
        <item name="skin_hotelImagePlaceHolderDrawable">@drawable/ic_image_placeholder_samsung</item>
        <item name="skin_HotelRowThumbPlaceHolderDrawable">@drawable/ic_row_thumb_placeholder_samsung</item>
        
        <item name="skin_hotelListingUserRatingStyle">@style/RatingBar.UserReview.Blue</item>
        <item name="skin_ratingBarUserReviewStyle">@style/RatingBar.UserReview.Blue</item>
        
        <item name="skin_bestPriceGuaranteeString">@string/price_guarantee</item>
        <item name="skin_costSummaryDialogStripeDrawable">@drawable/dialog_breakdown_stripe</item>
        <item name="skin_actionBarSpinnerBackground">@drawable/ab_spinner_samsung</item>
        
        <item name="skin_hotelPrimaryTravelerInfoLogoDrawable">@drawable/ic_samsung_white_logo_small</item>
        
        <item name="skin_hotelPriceStandardColor">@color/hotel_cell_primary_color</item>
        <item name="skin_hotelPriceSaleColor">@color/hotel_price_sale_text_color_samsung</item>

        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_hotels</item>
        
        <item name="skin_hotelConfirmationPlaceholderDrawable">@drawable/placeholder_lg_samsung</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow_samsung</item>
        <item name="skin_travellerInfoPageLogo">@drawable/ic_samsung_traveller_logo</item>
        <item name="skin_travellerInfoPageLogoDisabled">@drawable/ic_samsung_white_logo_small</item>
        <item name="skin_hotelRulesActionBarLogo">@drawable/ic_logo_hotels</item>
        <item name="skin_flightRulesActionBarLogo">@drawable/ic_logo_flights_samsung</item>
        <item name="skin_couponSuccessMessageColor">@color/hotel_price_text_color_samsung</item>
        <item name="skin_errorIndicationExclaimationDrawable">@drawable/invalid</item>
    </style>

    <style name="FlightTheme" parent="@style/Theme.Samsung">
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_flights_samsung</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/FlightActionBarSamsung</item>
        <item name="android:actionMenuTextColor">@color/action_bar_flight_text_color</item>
        <item name="android:actionModeCloseDrawable">@drawable/btn_navigation_cancel</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Phone</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner.Phone.Flights</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AutoComplete</item>
        <item name="skin_travelerLabelOnCheckout">@string/Add_Traveler</item>
        <item name="checkout_icon_right_margin_attr">@dimen/checkout_icon_right_margin_flight</item>
        <item name="spinner_traveler_text_color_drawable">@drawable/flight_traveler_text_color</item>
    </style>


    <style name="LaunchTheme" parent="Theme.AppCompat">
        <item name="android:logo">@drawable/ic_ab_logo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionBar.ActionButton.Overflow</item>
        
        <!-- PopupMenu -->
        <item name="skin_itinActivityPlaceholderDrawable">@drawable/itin_header_placeholder_activities</item>
        <item name="skin_itinCarPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinHotelPlaceholderDrawable">@drawable/placeholder_lg_samsung</item>
        <item name="skin_itinFlightPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinDefaultPlaceholderDrawable">@drawable/bg_itin_samsung_fallback_activity</item>
        <item name="skin_itinFlightsTripLineColor">@color/itin_flight_line_color</item>
        <item name="skin_itinDismissListSelectorDrawable">@drawable/list_selector_samsung</item>
        <item name="skin_itinCardActionBarCheckmark">@drawable/ic_action_bar_checkmark_white</item>
        <item name="skin_itinCardTitleTextColor">@color/itin_white_text</item>
        <item name="skin_tripsTabText">@string/my_trips</item>
    </style>

    <style name="FlightActionBarSamsung" parent="FlightActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar</item>
        <item name="android:backgroundSplit" tools:targetApi="11">@drawable/bg_action_bar_flight_bottom_samsung</item>
    </style>

    <style name="ItineraryTheme" parent="Theme.Samsung">
        <item name="android:logo" tools:targetApi="11">@drawable/ic_ab_logo</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/Dark.ActionBar.Samsung</item>

        <!-- PopupMenu -->
        <item name="android:dropDownListViewStyle">@style/Widget.ListView.DropDown.Samsung</item>
        <item name="skin_itinActivityPlaceholderDrawable">@drawable/itin_header_samsung_placeholder_activities</item>
        <item name="skin_itinCarPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinHotelPlaceholderDrawable">@drawable/placeholder_lg_samsung</item>
        <item name="skin_itinFlightPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinDefaultPlaceholderDrawable">@drawable/bg_itin_samsung_fallback_activity</item>
        <item name="skin_itinFlightsTripLineColor">@color/itin_flight_line_color</item>
        <item name="skin_itinDismissListSelectorDrawable">@drawable/list_selector_samsung</item>
        <item name="skin_itinCardActionBarCheckmark">@drawable/ic_action_bar_checkmark_white</item>
        <item name="skin_itinCardTitleTextColor">@color/itin_white_text</item>
    </style>

    <style name="LoginTheme" parent="Theme.Phone.Dark">
        <item name="android:logo" tools:targetApi="11">@drawable/ic_ab_logo</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="HotelWebViewActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_hotels</item>
        <item name="android:titleTextStyle" tools:targetApi="11">@style/FlightActionBarTextAppearance</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow_samsung</item>
    </style>

    <style name="FlightActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar_flight_top</item>
        <item name="android:backgroundSplit" tools:targetApi="11">@drawable/bg_action_bar_flight_bottom</item>
        <item name="android:titleTextStyle" tools:targetApi="11">@style/FlightActionBarTextAppearance</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow_samsung</item>
    </style>

    <!-- Override the phone theme -->
    <style name="Theme.Phone" parent="@style/Theme.Samsung">
        <item name="android:actionBarStyle" tools:targetApi="11">@style/Dark.ActionBar.Samsung</item>
        <item name="android:actionBarTabStyle">@style/LaunchActionBarTabSamsungStyle</item>
    </style>

    <style name="LaunchActionBarTabSamsungStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_launch_samsung</item>
    </style>

</resources>
