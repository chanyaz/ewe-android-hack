<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ebookers" parent="@style/Theme.Expedia">
        <item name="skin_actionBarButtonTextColor">@color/action_bar_text_blue</item>
        <item name="skin_actionBarCheckMarkDrawable">@drawable/ic_action_bar_checkmark_blue</item>
        <item name="skin_actionBarBackgroundDrawable">@drawable/bg_action_bar</item>
        <item name="skin_flightsCostSummaryDialogStripeDrawable">@drawable/dialog_breakdown_stripe</item>
        <item name="skin_travellerInfoPageLogo">@drawable/ic_traveller_logo</item>
        <item name="skin_travellerInfoPageLogoDisabled">@drawable/ic_traveller_logo_disabled</item>
        <item name="skin_hotelCheckoutLogoutLogoDrawable">@drawable/brand_phone_checkout_logo_drawable</item>
        <item name="skin_cvvBookButtonTextColor">@android:color/white</item>
    </style>

    <!-- Override the phone theme -->
    <style name="Theme.Phone" parent="@style/Theme.ebookers">
        <item name="android:actionBarStyle" tools:targetApi="11">@style/Dark.ActionBar</item>
    </style>

    <style name="ItineraryTheme" parent="Theme.ebookers">

    </style>

    <style name="LoginTheme" parent="Theme.Phone.Dark">
        <item name="android:logo" tools:targetApi="11">@drawable/ic_ab_logo</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="FlightTheme" parent="@style/Theme.ebookers">
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_flights</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/FlightActionBar</item>
        <item name="android:actionModeCloseDrawable">@drawable/btn_navigation_cancel</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Phone</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner.Phone.Flights</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AutoComplete</item>
        <item name="skin_travelerLabelOnCheckout">@string/Add_Traveler</item>
        <item name="skin_flightCalendarDatePickerCellDrawable">@drawable/calendar_date_picker_cell</item>
        <item name="skin_flightCalendarDatePickerPopupDrawable">@drawable/calendar_date_picker_popup</item>
        <item name="skin_flightFreeCancellationTextColor">@color/flight_free_cancellation_text_color</item>
    </style>

</resources>
