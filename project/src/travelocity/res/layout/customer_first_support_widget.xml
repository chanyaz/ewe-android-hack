<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray100"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/customer_first_support_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/app_primary"
            android:minHeight="?attr/actionBarSize"
            app:navigationContentDescription="@string/toolbar_nav_icon_close_cont_desc"
            app:navigationIcon="@drawable/ic_close_white_24dp"
            app:title="@string/customer_first_support_toolbar_title"
            app:titleTextAppearance="@style/ToolbarTitleTextAppearance" />

        <com.expedia.bookings.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="@string/customer_first_guarantee_title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.expedia.bookings.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/customer_first_guarantee_subtitle"
            android:textSize="10sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            style="@style/MaterialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="16dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/customer_first_support_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>

        <com.expedia.bookings.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="22dp"
            android:text="@string/customer_first_browse_solutions"
            android:textSize="16sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:id="@+id/browse_card_view"
            style="@style/MaterialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:foreground="?android:attr/selectableItemBackground">

            <include layout="@layout/customer_first_support_row" />

        </android.support.v7.widget.CardView>
    </LinearLayout>
</merge>
