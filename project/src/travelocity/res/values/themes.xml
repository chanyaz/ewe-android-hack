<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Travelocity" parent="@style/Theme.Expedia">
        <item name="skin_hotelImagePlaceHolderDrawable">@drawable/ic_image_placeholder_travelocity</item>
        <item name="skin_HotelRowThumbPlaceHolderDrawable">@drawable/ic_row_thumb_placeholder_travelocity</item>
        <item name="skin_hotelListingUserRatingStyle">@style/RatingBar.UserReview.Blue</item>
        <item name="skin_ratingBarUserReviewStyle">@style/RatingBar.UserReview.Blue</item>
        <item name="skin_bestPriceGuaranteeString">@string/travelocity_best_price_guarantee</item>
        <item name="skin_costSummaryDialogStripeDrawable">@drawable/dialog_breakdown_stripe</item>
        <item name="skin_actionBarSpinnerBackground">@drawable/ab_spinner_travelocity</item>
        <item name="skin_cvvBookButtonTextColor">@android:color/white</item>
        <item name="skin_hotelPrimaryTravelerInfoLogoDrawable">@drawable/ic_tvly_white_logo_small</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_hotels</item>
        <item name="skin_hotelConfirmationPlaceholderDrawable">@drawable/placeholder_lg_travelocity</item>
        <item name="skin_couponSuccessMessageColor">@color/coupon_success_message_color</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow_travelocity</item>
        <item name="skin_travellerInfoPageLogo">@drawable/ic_tvly_traveller_logo</item>
        <item name="skin_travellerInfoPageLogoDisabled">@drawable/ic_tvly_white_logo_small</item>
        <item name="skin_tablet_ab_launch_text1_base">@string/app_name</item>
        <item name="skin_hotelRulesActionBarLogo">@drawable/ic_action_bar_brand_logo</item>
        <item name="skin_flightRulesActionBarLogo">@drawable/ic_action_bar_brand_logo</item>
        <item name="skin_errorIndicationExclaimationDrawable">@drawable/invalid</item>
    </style>

    <style name="FlightTheme" parent="@style/Theme.Travelocity">
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_flights_travelocity</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/FlightActionBarTravelocity</item>
        <item name="android:actionMenuTextColor">@color/action_bar_flight_text_color</item>
        <item name="android:actionModeCloseDrawable">@drawable/btn_navigation_cancel</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Phone</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner.Phone.Flights</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AutoComplete</item>
        <item name="skin_travelerLabelOnCheckout">@string/Add_Traveler</item>
        <item name="checkout_icon_right_margin_attr">@dimen/checkout_icon_right_margin_flight</item>
        <item name="spinner_traveler_text_color_drawable">@drawable/flight_traveler_text_color</item>
    </style>

    <!-- Override the phone theme -->
    <style name="Theme.Phone" parent="@style/Theme.Travelocity">
        <item name="android:actionBarStyle" tools:targetApi="11">@style/Dark.ActionBar.Travelocity</item>
        <item name="android:actionBarTabStyle">@style/LaunchActionBarTabTravelocityStyle</item>
    </style>

    <style name="TerminalMapTheme" parent="@android:style/Theme.Holo">
        <item name="android:logo">@drawable/ic_ab_tvly_logo</item>
        <item name="android:actionBarStyle">@style/TerminalMapActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionBar.ActionButton.Overflow</item>
        <item name="android:windowBackground">@android:color/white</item>

        <!-- PopupMenu -->
        <item name="android:dropDownListViewStyle">@android:style/Widget.Holo.Light.ListView.DropDown</item>
        <item name="skin_terminalChooserTextColor">@android:color/white</item>
    </style>

    <style name="TerminalMapActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="android:background">@color/bg_blue_color_travelocity</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat">
        <item name="android:logo">@drawable/ic_ab_travelocity_logo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionBar.ActionButton.Overflow</item>
        
        <!-- PopupMenu -->
        <item name="skin_itinActivityPlaceholderDrawable">@drawable/itin_header_travelocity_placeholder_activities</item>
        <item name="skin_itinCarPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinHotelPlaceholderDrawable">@drawable/placeholder_lg_travelocity</item>
        <item name="skin_itinFlightPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinDefaultPlaceholderDrawable">@drawable/bg_itin_travelocity_fallback_activity</item>
        <item name="skin_itinFlightsTripLineColor">@color/itin_flight_line_color_tvly</item>
        <item name="skin_itinDismissListSelectorDrawable">@drawable/list_selector_travelocity</item>
        <item name="skin_itinCardActionBarCheckmark">@drawable/ic_action_bar_checkmark_white</item>
        <item name="skin_itinCardTitleTextColor">@color/itin_white_text</item>
        <item name="skin_tripsTabText">@string/Your_Trips</item>
    </style>

    <style name="LaunchActionBarTabTravelocityStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background" tools:targetApi="11">@drawable/tab_indicator_ab_travelocity_launch</item>
    </style>

    <style name="FlightActionBarTravelocity" parent="FlightActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar</item>
        <item name="android:backgroundSplit" tools:targetApi="11">@drawable/bg_action_bar_flight_bottom_travelocity</item>
    </style>

    <style name="ItineraryTheme" parent="Theme.Travelocity">
        <item name="android:logo" tools:targetApi="11">@drawable/ic_ab_travelocity_logo</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/Dark.ActionBar.Travelocity</item>

        <!-- PopupMenu -->
        <item name="android:dropDownListViewStyle">@style/Widget.ListView.DropDown.TVLY</item>
        <item name="skin_itinActivityPlaceholderDrawable">@drawable/itin_header_travelocity_placeholder_activities</item>
        <item name="skin_itinCarPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinHotelPlaceholderDrawable">@drawable/placeholder_lg_travelocity</item>
        <item name="skin_itinFlightPlaceholderDrawable">@drawable/bg_itin_placeholder_cloud</item>
        <item name="skin_itinDefaultPlaceholderDrawable">@drawable/bg_itin_travelocity_fallback_activity</item>
        <item name="skin_itinFlightsTripLineColor">@color/itin_flight_line_color_tvly</item>
        <item name="skin_itinDismissListSelectorDrawable">@drawable/list_selector_travelocity</item>
        <item name="skin_itinTabletCardPopupBackgroundDrawable">@drawable/bg_itin_card</item>
        <item name="skin_itinTabletCardPopupHeaderDrawable">@drawable/bg_itin_card_title</item>
        <item name="skin_itinCardActionBarCheckmark">@drawable/ic_action_bar_checkmark_white</item>
        <item name="skin_itinCardTitleTextColor">@color/itin_white_text</item>
    </style>

    <style name="LoginTheme" parent="Theme.Phone.Dark">
        <item name="android:logo" tools:targetApi="11">@drawable/ic_ab_travelocity_logo</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

	<style name="HotelWebViewActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_hotels</item>
        <item name="android:titleTextStyle" tools:targetApi="11">@style/FlightActionBarTextAppearance</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow_travelocity</item>
    </style>

    <style name="FlightActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar_flight_top</item>
        <item name="android:backgroundSplit" tools:targetApi="11">@drawable/bg_action_bar_flight_bottom</item>
        <item name="android:titleTextStyle" tools:targetApi="11">@style/FlightActionBarTextAppearance</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow_travelocity</item>
    </style>

    <style name="Theme.Phone.WebView">
        <item name="android:logo" tools:targetApi="11">@drawable/icon_home_tvly</item>
    </style>

    <style name="Theme.AccountLib" parent="Theme.Base.AccountLib">
        <item name="skin_acctLogoSmallDrawable">@drawable/acct__logo_small_tvly</item>
        <item name="skin_acctLogoTextDrawable">@drawable/acct__logo_text_tvly</item>
        <item name="skin_acctSignInButtonTextColor">@color/acct__btn_sign_in_text_tvly</item>
        <item name="skin_acctLogoTextDrawableMarginLeft">6dp</item>
        <item name="skin_acctLogoTextDrawableMarginTop">20dp</item>
        <item name="android:checkboxStyle">@style/Widget.CompoundButton.CheckBox</item>
    </style>
</resources>
