<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Travelocity" parent="@style/Theme.Expedia">
        <item name="skin_cvvBookButtonTextColor">@android:color/white</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_hotels</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow_travelocity</item>
        <item name="skin_hotelRulesActionBarLogo">@drawable/ic_action_bar_brand_logo</item>
        <item name="skin_errorIndicationExclaimationDrawable">@drawable/invalid</item>
    </style>

    <style name="FlightTheme" parent="@style/Theme.Travelocity">
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="android:logo" tools:targetApi="11">@drawable/ic_logo_flights_travelocity</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/FlightActionBarTravelocity</item>
        <item name="android:actionMenuTextColor">@color/action_bar_flight_text_color</item>
        <item name="android:actionModeCloseDrawable">@drawable/btn_navigation_cancel</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Phone</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner.Phone.Flights</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AutoComplete</item>
        <item name="checkout_icon_right_margin_attr">@dimen/checkout_icon_right_margin_flight</item>
        <item name="spinner_traveler_text_color_drawable">@drawable/flight_traveler_text_color</item>
    </style>

    <!-- Override the phone theme -->
    <style name="Theme.Phone" parent="@style/Theme.Travelocity">
        <item name="android:actionBarStyle" tools:targetApi="11">@style/Dark.ActionBar.Travelocity</item>
        <item name="android:actionBarTabStyle">@style/LaunchActionBarTabTravelocityStyle</item>
    </style>

    <style name="LaunchActionBarTabTravelocityStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background" tools:targetApi="11">@drawable/tab_indicator_ab_travelocity_launch</item>
    </style>

    <style name="FlightActionBarTravelocity" parent="FlightActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar</item>
        <item name="android:backgroundSplit" tools:targetApi="11">@drawable/bg_action_bar_flight_bottom_travelocity</item>
    </style>

    <style name="LoginTheme" parent="Theme.Phone.Dark">
        <item name="android:logo" tools:targetApi="11">@drawable/ic_ab_travelocity_logo</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="FlightActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background" tools:targetApi="11">@drawable/bg_action_bar_flight_top</item>
        <item name="android:backgroundSplit" tools:targetApi="11">@drawable/bg_action_bar_flight_bottom</item>
        <item name="android:titleTextStyle" tools:targetApi="11">@style/FlightActionBarTextAppearance</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_action_bar_back_arrow_travelocity</item>
    </style>

    <style name="Theme.Phone.WebView">
        <item name="android:logo" tools:targetApi="11">@drawable/icon_home_tvly</item>
    </style>

    <style name="Theme.AccountLib" parent="Theme.Base.AccountLib">
        <item name="skin_acctLogoSmallDrawable">@android:color/transparent</item>
        <item name="skin_acctLogoTextDrawable">@drawable/icon_home_tvly</item>
        <item name="skin_acctSignInButtonTextColor">@color/acct__btn_sign_in_text_tvly</item>
        <item name="skin_acctLogoTextDrawableMarginLeft">6dp</item>
        <item name="skin_acctLogoTextDrawableMarginTop">20dp</item>
        <item name="android:checkboxStyle">@style/Widget.CompoundButton.CheckBox</item>
        <item name="skin_acctInputTextHintColor">@color/acct__bg_input_text_hint</item>
    </style>
</resources>
