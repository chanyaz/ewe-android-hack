<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Travelocity Rating bar -->
    <style name="RatingBar.UserReview.Blue">
        <item name="android:progressDrawable">@drawable/ratingbar_userreview_blue</item>
    </style>

    <style name="Dark.ActionBar.Travelocity" parent="Dark.ActionBar">
        <item name="android:background">@drawable/bg_action_bar_travelocity</item>
        <item name="android:backgroundSplit">@drawable/bg_action_bar_bottom_travelocity</item>
    </style>

    <style name="Widget.ListView.DropDown.TVLY" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:background">@drawable/bg_action_bar_travelocity</item>
    </style>

    <style name="DestinationTileUpperTextAppearance">
        <item name="android:textColor">@color/bg_blue_color_travelocity</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DestinationTileLowerTextAppearance">
        <item name="android:textColor">@color/bg_blue_color_travelocity</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
