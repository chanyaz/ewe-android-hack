<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Login Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_smart_lock"
            android:layout="@layout/preference"
            android:summary="Easy way to login use smart lock."
            android:title="Enable Smart Lock Feature" />

        <CheckBoxPreference
            android:key="@string/preference_enable_rail_checkout_login"
            android:layout="@layout/preference"
            android:summary="Login on Rail checkout screen."
            android:title="Enable Login on Rail Checkout" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Activity Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_activity_map"
            android:layout="@layout/preference"
            android:summary="Activity Infosite Map."
            android:title="Enable Activity Infosite Map" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="CheckOut Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_universal_checkout_on_lx"
            android:layout="@layout/preference"
            android:summary="Bring universal checkout to LX"
            android:title="Enable Universal Checkout on LX" />

        <CheckBoxPreference
            android:key="@string/preference_universal_checkout_material_forms"
            android:layout="@layout/preference"
            android:summary="Universal Checkout Material Forms"
            android:title="Enable Universal Checkout Material Forms" />

        <CheckBoxPreference
            android:key="@string/preference_enable_3DS_checkout"
            android:layout="@layout/preference"
            android:summary="Enable 3DS payment webview checkout"
            android:title="Enable 3DS payment" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Material Flight Features">

        <CheckBoxPreference
            android:key="@string/preference_flight_premium_class"
            android:layout="@layout/preference"
            android:summary="Show Flight Premium Class"
            android:title="Show Flight Premium Class" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Itin Features">

        <CheckBoxPreference
            android:key="@string/preference_itin_hotel_upgrade"
            android:layout="@layout/preference"
            android:summary="Upgrade your hotel room booking"
            android:title="Enable Hotel Upgrade Feature" />

        <CheckBoxPreference
            android:key="@string/preference_hotel_itin_soft_change_button"
            android:layout="@layout/preference"
            android:summary="Hotel Itinerary Soft Change."
            android:title="Enable Hotel Itin Soft Change Button" />

        <CheckBoxPreference
            android:key="@string/preference_itin_card_detail"
            android:layout="@layout/preference"
            android:summary="Itinerary card detail view"
            android:title="Enable new itinerary detail view" />

        <CheckBoxPreference
            android:key="@string/preference_itin_hotel_map_click"
            android:layout="@layout/preference"
            android:summary="Hotel Itinerary Map View Clickable"
            android:title="Enable users to navigate to Google Maps" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Hotel Features">

        <CheckBoxPreference
            android:key="@string/preference_hotel_image_load_latency"
            android:layout="@layout/preference"
            android:summary="Performance improvements on image loading latency."
            android:title="Enable Hotel Image Load Latency" />

    </PreferenceCategory>
</PreferenceScreen>