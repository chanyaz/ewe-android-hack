<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Hotel Features">

        <CheckBoxPreference
            android:key="@string/preference_user_search_history"
            android:summary="Enable TG user search history"
            android:title="Enable TG user search history" />

    </PreferenceCategory>


    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Home Screen Feature">

        <CheckBoxPreference
            android:key="@string/preference_enable_last_minute_deals"
            android:summary="Enable Last Minute Deals"
            android:title="Enable Last Minute Deals" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Flights Features">

        <CheckBoxPreference
            android:key="@string/preference_switch_to_from_flight_locations"
            android:summary="Switch between to and from flight locations"
            android:title="Switch between to and from flight locations" />

        <CheckBoxPreference
            android:key="@string/preference_flight_rate_detail_from_cache"
            android:summary="Flight rate details from cache"
            android:title="Flight rate details from cache (i.e. remove fullscreen progress)" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Account Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_smart_lock"
            android:summary="Easy way to login use smart lock."
            android:title="Enable Smart Lock Feature" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Activity Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_activity_map"
            android:summary="Activity Infosite Map."
            android:title="Enable Activity Infosite Map" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="CheckOut Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_disabled_stp_hotels"
            android:summary="Enable Disabled STP state for hotels"
            android:title="Disabled STP state for hotels" />

        <CheckBoxPreference
            android:key="@string/preference_enable_universal_checkout_on_lx"
            android:summary="Bring universal checkout to LX"
            android:title="Enable Universal Checkout on LX" />

        <CheckBoxPreference
            android:key="@string/pay_later_credit_card_messaging"
            android:summary="Enable credit card messaging for pay later"
            android:title="Enable credit card messaging pay later" />

        <CheckBoxPreference
            android:key="@string/preference_enable_hotel_material_forms"
            android:summary="Enable Hotel Material Forms"
            android:title="Enable Hotel Material Forms" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Itin Features">

        <CheckBoxPreference
            android:key="@string/preference_trips_new_flights_design"
            android:summary="Trips New Flights Design"
            android:title="Trips New Flights Design" />

        <CheckBoxPreference
            android:key="@string/preference_trips_new_flights_managing_booking_design"
            android:summary="Trips New Flights Managing Booking Design"
            android:title="Trips New Flights Managing Booking Design" />

        <CheckBoxPreference
            android:key="@string/preference_enable_trips_flight_alerts"
            android:summary="Trips New Flight Alerts"
            android:title="Trips - Flight Alerts" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Packages Features">

        <CheckBoxPreference
            android:key="@string/preference_packages_mid_api"
            android:summary="Packages MID API"
            android:title="Packages MID API" />

        <CheckBoxPreference
            android:key="@string/preference_packages_breadcrumbs"
            android:summary="Packages Breadcrumbs"
            android:title="Packages Breadcrumbs" />

        <CheckBoxPreference
            android:key="@string/preference_packages_breadcrumbs_move_bundle_overview"
            android:summary="Packages Breadcrumbs - Move Bundle Overview Bar"
            android:title="Packages Breadcrumbs - Move Bundle Overview Bar" />

        <CheckBoxPreference
            android:key="@string/preference_packages_mis_real_world_geo"
            android:summary="Packages RWG Migration"
            android:title="Packages MISRealWorldGeo" />

    </PreferenceCategory>

</PreferenceScreen>
