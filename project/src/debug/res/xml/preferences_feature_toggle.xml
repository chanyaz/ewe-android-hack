<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Login Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_smart_lock"
            android:layout="@layout/preference"
            android:summary="Easy way to login use smart lock."
            android:title="Enable Smart Lock Feature" />

        <CheckBoxPreference
            android:key="@string/preference_show_popular_hotels_on_launch_screen"
            android:layout="@layout/preference"
            android:summary="Show popular hotels card to users on launch screen"
            android:title="Enable Popular Hotels Card on Launch Screen" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Hotel Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_hotel_loyalty_earn_message"
            android:layout="@layout/preference"
            android:summary="Enable Hotel Loyalty Earn Message."
            android:title="Enable Enable Hotel Loyalty Earn Message" />

        <CheckBoxPreference android:key="@string/preference_urgency_hotel_results"
            android:layout="@layout/preference"
            android:summary="Displays percent sold out on hotel results page"
            android:title="Hotel Results Urgency Message" />

        <CheckBoxPreference
            android:key="@string/preference_hotel_server_side_filters"
            android:layout="@layout/preference"
            android:summary="Server side result filtering"
            android:title="Enable Server Side Filters" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Activity Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_activity_map"
            android:layout="@layout/preference"
            android:summary="Activity Infosite Map."
            android:title="Enable Activity Infosite Map" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="CheckOut Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_universal_checkout_on_lx"
            android:layout="@layout/preference"
            android:summary="Bring universal checkout to LX"
            android:title="Enable Universal Checkout on LX" />

        <CheckBoxPreference
            android:key="@string/preference_universal_checkout_material_forms"
            android:layout="@layout/preference"
            android:summary="Universal Checkout Material Forms"
            android:title="Enable Universal Checkout Material Forms" />

        <CheckBoxPreference
            android:key="@string/preference_enable_new_cookies"
            android:layout="@layout/preference"
            android:summary="Please restart the app"
            android:title="Enable new cookies sync" />

        <CheckBoxPreference
            android:key="@string/preference_enable_3DS_checkout"
            android:layout="@layout/preference"
            android:summary="Enable 3DS payment webview checkout"
            android:title="Enable 3DS payment" />

        <CheckBoxPreference
            android:key="@string/preference_enable_payment_traveler_updated_strings"
            android:layout="@layout/preference"
            android:summary="Enable payment and traveler updated strings AB test"
            android:title="Enable Traveler and Payment Info Test" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Material Flight Features">

        <CheckBoxPreference
            android:key="@string/preference_flight_byot"
            android:layout="@layout/preference"
            android:summary="Enable flight byot"
            android:title="Enable Flight Byot" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Itin Features">

        <CheckBoxPreference
            android:key="@string/preference_itin_hotel_upgrade"
            android:layout="@layout/preference"
            android:summary="Upgrade your hotel room booking"
            android:title="Enable Hotel Upgrade Feature" />

        <CheckBoxPreference
            android:key="@string/preference_itin_card_detail"
            android:layout="@layout/preference"
            android:summary="Itinerary card detail view"
            android:title="Enable new itinerary detail view" />

        <CheckBoxPreference
            android:key="@string/preference_itin_new_sign_in_screen"
            android:layout="@layout/preference"
            android:summary="Itin new sign in screen"
            android:title="Enable new Itin sign in screen" />

        <CheckBoxPreference
            android:key= "@string/preference_active_itin_on_launch"
            android:layout="@layout/preference"
            android:summary="Enable active itin on launch screen"
            android:title="Launch Screen Active Itin" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="General">

        <CheckBoxPreference
            android:key="@string/preference_member_deal_on_launch_screen"
            android:layout="@layout/preference"
            android:summary="Member Deal On Launch Screen"
            android:title="New item on launch + new screen (WIP)"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Cars Features">
        <CheckBoxPreference
            android:key="@string/preference_open_car_web_view"
            android:layout="@layout/preference"
            android:summary="Open Cars in WebView"
            android:title="Open Cars in WebView" />
    </PreferenceCategory>

</PreferenceScreen>