<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Hotel Features">

        <CheckBoxPreference
            android:key="@string/preference_satellite_config"
            android:summary="Enable satellite remote feature config."
            android:title="Enable satellite" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Flights Features">

        <CheckBoxPreference
            android:key="@string/preference_switch_to_from_flight_locations"
            android:summary="Switch between to and from flight locations"
            android:title="Switch between to and from flight locations" />

        <CheckBoxPreference
            android:key="preference_flight_traveler_form_revamp"
            android:summary="Flight Traveler Form Revamp"
            android:title="Flight Traveler Form Revamp" />

        <CheckBoxPreference
            android:key="@string/preference_fare_family_flight_summary"
            android:summary="Fare Family on Flight Summary"
            android:title="Fare Family on Flight Summary" />

        <CheckBoxPreference
            android:key="@string/preference_flight_rate_detail_from_cache"
            android:summary="Flight rate details from cache"
            android:title="Flight rate details from cache (i.e. remove fullscreen progress)" />

        <CheckBoxPreference
            android:key="@string/preference_show_baggage_info_payment_info_overview"
            android:summary="Show Baggage Info and Payment Info on Overview Screen"
            android:title="Baggage and Payment Info" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Account Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_smart_lock"
            android:summary="Easy way to login use smart lock."
            android:title="Enable Smart Lock Feature" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Activity Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_activity_map"
            android:summary="Activity Infosite Map."
            android:title="Enable Activity Infosite Map" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="CheckOut Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_universal_checkout_on_lx"
            android:summary="Bring universal checkout to LX"
            android:title="Enable Universal Checkout on LX" />

        <CheckBoxPreference
            android:key="@string/preference_populate_cardholder_name"
            android:summary="Enable populate cardholder name"
            android:title="Enable populate cardholder name" />

        <CheckBoxPreference
            android:key="@string/preference_enable_secure_icon"
            android:summary="Enable secure icon for Flight and Bundle Checkout pages"
            android:title="Enable secure icon for Flight and Bundle Checkout pages" />

        <CheckBoxPreference
            android:key="@string/preference_enable_flights_frequent_flyer_number"
            android:summary="Enable Frequent Flyer Number for Flights"
            android:title="Enable Frequent Flyer Number for Flights" />

        <CheckBoxPreference
            android:key="@string/preference_hide_form_fields_based_on_billing_country_address"
            android:summary="Hide Form Fields Based on Billing Country Address"
            android:title="Hide Form Fields Based on Billing Country Address" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Itin Features">

        <CheckBoxPreference
            android:key="@string/preference_trips_hotel_scheduled_notifications"
            android:summary="Trips Hotel Scheduled Notifications V2"
            android:title="Trips Hotel Scheduled Notifications V2" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Packages Features">

        <CheckBoxPreference
            android:key="@string/preference_packages_mid_api"
            android:summary="Packages MID API"
            android:title="Packages MID API" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Material Flight Features">

        <CheckBoxPreference
            android:key="@string/preference_flight_enable_search_suggestion_label"
            android:summary="Show search suggestion label"
            android:title="Enable search with suggestion label" />

    </PreferenceCategory>

</PreferenceScreen>
