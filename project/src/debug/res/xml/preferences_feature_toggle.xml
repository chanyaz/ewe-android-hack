<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Hotel Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_hotel_favorite"
            android:layout="@layout/preference"
            android:summary="Save your favorite hotels."
            android:title="Enable Hotel Favorite Feature" />

        <CheckBoxPreference
            android:key="@string/preference_enable_hotel_results_perceived_instant"
            android:layout="@layout/preference"
            android:summary="Hotel Results Perceived Instant."
            android:title="Enable Hotel Results Perceived Instant Feature" />

        <CheckBoxPreference
            android:key="@string/preference_enable_hotel_filter_prominence"
            android:layout="@layout/preference"
            android:summary="AB test with 2 variants"
            android:title="Enable Hotel Filter Prominence Test" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Flight Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_material_flight"
            android:layout="@layout/preference"
            android:summary="Enable Flight AB test"
            android:title="Material Flight AB test" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Login Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_smart_lock"
            android:layout="@layout/preference"
            android:summary="Easy way to login use smart lock."
            android:title="Enable Smart Lock Feature" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Rail Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_rail"
            android:layout="@layout/preference"
            android:summary="Book Rail"
            android:title="Enable Rail LOB" />

    </PreferenceCategory>


    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Activity Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_activity_map"
            android:layout="@layout/preference"
            android:summary="Activity Infosite Map."
            android:title="Enable Activity Infosite Map" />

    </PreferenceCategory>
</PreferenceScreen>