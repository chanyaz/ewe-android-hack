<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Login Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_smart_lock"
            android:layout="@layout/preference"
            android:summary="Easy way to login use smart lock."
            android:title="Enable Smart Lock Feature" />

    </PreferenceCategory>


    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Activity Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_activity_map"
            android:layout="@layout/preference"
            android:summary="Activity Infosite Map."
            android:title="Enable Activity Infosite Map" />

        <CheckBoxPreference
            android:key="@string/preference_enable_filter_text_search"
            android:layout="@layout/preference"
            android:summary="Activity Filter Text Search."
            android:title="Enable Activity Filter Text Search" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="GAIA Suggestions">

        <CheckBoxPreference
            android:key="@string/preference_enable_gaia_current_location_suggestion"
            android:layout="@layout/preference"
            android:summary="GAIA Current Location Suggestion"
            android:title="Enable GAIA Current Location Suggestion" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="CheckOut Features">

        <CheckBoxPreference
            android:key="@string/preference_enable_new_checkout_forms_behavior"
            android:layout="@layout/preference"
            android:summary="New checkout form behavior in Universal Checkout"
            android:title="Enable new Checkout Behavior" />

        <CheckBoxPreference
            android:key="@string/preference_enable_universal_checkout_on_lx"
            android:layout="@layout/preference"
            android:summary="Bring universal checkout to LX"
            android:title="Enable Universal Checkout on LX" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_title"
        android:title="Itin Features">

        <CheckBoxPreference
            android:key="@string/preference_itin_hotel_upgrade"
            android:layout="@layout/preference"
            android:summary="Upgrade your hotel room booking"
            android:title="Enable Hotel Upgrade Feature" />
    </PreferenceCategory>
</PreferenceScreen>