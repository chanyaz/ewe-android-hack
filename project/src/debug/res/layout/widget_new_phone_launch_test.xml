<?xml version="1.0" encoding="utf-8"?><!-- TODO This entire layout is gonna change. it just placeholder, all colors, heights are just placeholders. -->
<com.expedia.bookings.widget.NewPhoneLaunchWidget android:id="@+id/new_phone_launch_widget"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:visibility="invisible">

        <View
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed" />

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/launch_list_widget"
        layout="@layout/widget_launch_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <View
        android:id="@+id/darkness"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="#000000"
        android:visibility="invisible" />

    <View
        android:id="@+id/lob_view"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/new_launch_toolbar_background_color"
        app:layout_behavior="com.expedia.bookings.widget.ScrollMatchBehaviour" />

    <LinearLayout
        android:id="@+id/air_attach_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_air_attach_phone_launch_banner"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/air_attach_plane_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#fd8126">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:src="@drawable/itin_plane" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/itin_air_attach_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/air_attach_alert"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itin_air_attach_savings_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/air_attach_potential_savings"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <ImageView
            android:id="@+id/air_attach_banner_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_air_attach_phone_launch_close"
            android:padding="22dp"
            android:src="@drawable/btn_air_attach_close" />

    </LinearLayout>

    <!-- TODO: replace with actual FAB exactly how we want it -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_launch_screen_fab_bottom_margin"
        android:layout_marginRight="24dp"
        android:visibility="gone"
        app:layout_anchor="@id/launch_list_widget"
        app:layout_anchorGravity="bottom|right|end" />

    <include
        android:id="@+id/launch_error"
        layout="@layout/section_launch_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/launch_lob_height"
        android:visibility="gone" />

    <View
        android:id="@+id/toolbar_dropshadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_dropshadow_height"
        android:background="@drawable/tb_shadow"
        android:alpha="0.0" />

</com.expedia.bookings.widget.NewPhoneLaunchWidget>