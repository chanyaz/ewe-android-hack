<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="16dp">

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        style="@style/Core.Text.Small"
        android:text="Small" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        style="@style/Core.Text.Small.LightColor"
        android:text="Small LightColor" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        style="@style/Core.Text.Default"
        android:text="Default" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        style="@style/Core.Text.Default.Medium"
        android:text="Default Medium" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        style="@style/Core.Text.Default.LightColor"
        android:text="Default LightColor" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        style="@style/Core.Text.Default.Medium.LightColor"
        android:text="Default Medium LightColor" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        style="@style/Core.Text.Large"
        android:text="Large" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        style="@style/Core.Text.Large.Medium"
        android:text="Large Medium" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        style="@style/Core.Text.Large.Medium.LightColor"
        android:text="Large Medium LightColor" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        style="@style/Core.Text.XLarge"
        android:text="XLarge" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        style="@style/Core.Text.XLarge.Medium"
        android:text="XLarge Medium" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Core.Text.Default.WhiteColor"
        android:background="@color/rail_primary_dark_background_color"
        android:padding="8dp"
        android:text="Default WhiteColor"/>

    <com.expedia.bookings.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Core.Text.Large.Medium.WhiteColor"
        android:background="@color/rail_primary_dark_background_color"
        android:padding="8dp"
        android:text="Large Medium WhiteColor"/>
</LinearLayout>