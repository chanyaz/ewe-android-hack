<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.expedia.bookings.widget.CheckoutToolbar
        android:id="@+id/checkout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/primary_color"
        android:minHeight="?attr/actionBarSize" />

    <com.expedia.bookings.widget.traveler.TravelerSummaryCard
        android:id="@+id/traveler_default_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background" />

    <ViewStub
        android:id="@+id/traveler_presenter_stub"
        android:inflatedId="@+id/traveler_presenter"
        android:layout="@layout/hotel_traveler_presenter_view_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>