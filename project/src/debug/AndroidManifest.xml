<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Used by tests only. Do not include in production apps unless necessary! -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <application>
        <!-- Preferences are only for development purposes -->

        <!-- Google Smart -->
        <meta-data android:name="asset_statements" android:resource="@string/asset_statements" />

        <activity
            android:name="com.expedia.bookings.activity.ExpediaBookingPreferenceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Phone.Preferences" />
        <activity
            android:name="com.expedia.bookings.activity.TabletPreferenceActivity"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.Tablet.Preferences" />

        <activity
            android:name="com.expedia.bookings.activity.PlaygroundActivity"
            android:label="Playground"
            android:taskAffinity="com.expedia.bookings.activity.PlaygroundActivity"
            android:theme="@style/V2.Theme.Cars" />
        <activity
            android:name="com.expedia.ui.PackageActivity"
            android:exported="true"
            android:label="Packages"
            android:screenOrientation="portrait"
            android:taskAffinity="com.expedia.ui.PackageActivity"
            android:theme="@style/V2.Theme.Packages">
            <meta-data
                android:name="debug"
                android:value="true" />
        </activity>

        <activity
            android:name="com.expedia.ui.PackageHotelActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:launchMode="singleTop"
            android:theme="@style/V2.Theme.Packages"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.expedia.ui.PackageFlightActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:launchMode="singleTop"
            android:theme="@style/V2.Theme.Packages" />

        <activity
            android:name="com.expedia.ui.FlightActivity"
            android:exported="true"
            android:label="Flights"
            android:screenOrientation="portrait"
            android:taskAffinity="com.expedia.ui.FlightActivity"
            android:theme="@style/V2.Theme.Packages">
            <meta-data
                android:name="debug"
                android:value="true" />
        </activity>

        <activity
            android:name="com.expedia.ui.RailActivity"
            android:exported="true"
            android:label="Rail"
            android:screenOrientation="portrait"
            android:taskAffinity="com.expedia.ui.RailActivity"
            android:theme="@style/V2.Theme.Rail">
            <meta-data
                android:name="debug"
                android:value="true" />
        </activity>

        <activity
            android:name="com.expedia.bookings.deeplink.DeepLinkTestActivity"
            android:exported="true"
            android:label="DeepLink Tester"
            android:screenOrientation="portrait"
            android:taskAffinity=""
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data
                android:name="debug"
                android:value="true" />
        </activity>
    </application>

</manifest>
