        <item name="android:backgroundSplit">@drawable/bg_action_bar_flight_bottom</item>
        <item name="android:titleTextStyle">@style/FlightActionBarTextAppearance</item>
    </style>

    <style name="LaunchActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="android:background">@drawable/bg_launch_ab_vsc</item>
    </style>

    <style name="LaunchActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_launch_vsc</item>
    </style>

    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow_white</item>
    </style>

    <style name="LaunchActionBarTabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.Phone.WebView">
        <item name="android:logo">@drawable/ic_action_bar_brand_logo</item>
    </style>

    <style name="LoginTheme" parent="Theme.Phone.Dark">
        <item name="android:logo" tools:targetApi="11">@drawable/ic_action_bar_brand_logo</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
