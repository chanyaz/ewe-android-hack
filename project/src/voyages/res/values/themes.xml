    <!-- Inherit EB or VSC theme based on desired project -->
    <style name="Theme.Phone" parent="@style/Theme.VSC"/>

    <style name="FlightTheme" parent="@style/Theme.VSC">
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="android:logo">@drawable/ic_logo_flights</item>
        <item name="android:actionBarStyle">@style/FlightActionBarVSC</item>
