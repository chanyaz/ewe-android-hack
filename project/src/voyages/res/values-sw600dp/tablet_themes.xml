        <item name="android:actionMenuTextColor">@color/actionbar_menu_text_color</item>
        <item name="skin_hotelPriceStandardColor">#ffffff</item>
        <item name="skin_hotelPriceSaleColor">#ffffff</item>
        <item name="skin_hotelListingUserRatingStyle">@style/RatingBar.UserReview.White</item>
        <item name="skin_hotelListingFilterGroupStyle">@style/Widget.SlidingRadioGroup.TabletFilterControls</item>
        <item name="skin_hotelListingFilterToggleButtonStyle">@style/Widget.CompoundButton.Switch.TabletFilterControls</item>
        <item name="skin_HotelRowThumbPlaceHolderDrawable">@drawable/bg_tablet_hotel_results_placeholder</item>
