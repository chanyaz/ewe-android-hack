        <item name="skin_tablet_price_expanded_bucket_text_color">@color/vsc_primary_color</item>
        <item name="android:checkboxStyle">@style/Widget.CompoundButton.CheckBox</item>
        <item name="android:homeAsUpIndicator" >@drawable/ic_action_bar_back_arrow_white</item>
        <item name="skin_tabletCalenderResultsSearchBlue">@color/tablet_results_calendar_dates</item>
