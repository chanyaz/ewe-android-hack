        <!-- Flight Map -->
        <item name="skin_tablet_search_result_error_button_text_color">@color/tablet_search_error_text_color</item>
        <item name="skin_tablet_dates_popup_done_color">@color/tablet_results_search_done</item>
        <item name="skin_tabletHotelDetailsCircleRatingStyle">@style/RatingBar.Star.HotelDetails</item>
