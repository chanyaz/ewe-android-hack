<?xml version="1.0" encoding="utf-8"?><!-- See Widget.BorderlessButton in styles.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed state -->
    <item android:state_pressed="true">
        <inset android:insetBottom="@dimen/acct__button_inset_vertical_material" android:insetLeft="@dimen/acct__button_inset_horizontal_material" android:insetRight="@dimen/acct__button_inset_horizontal_material" android:insetTop="@dimen/acct__button_inset_vertical_material">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/acct__control_corner_material" />
                <solid android:color="@color/gray3" />
                <padding android:bottom="@dimen/acct__button_padding_vertical_material" android:left="@dimen/acct__button_padding_horizontal_material" android:right="@dimen/acct__button_padding_horizontal_material" android:top="@dimen/acct__button_padding_vertical_material" />
            </shape>
        </inset>
    </item>

    <!-- normal state -->
    <item>
        <inset android:insetBottom="@dimen/acct__button_inset_vertical_material" android:insetLeft="@dimen/acct__button_inset_horizontal_material" android:insetRight="@dimen/acct__button_inset_horizontal_material" android:insetTop="@dimen/acct__button_inset_vertical_material">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/acct__control_corner_material" />
                <solid android:color="@color/acct__btn_borderless_normal" />
                <padding android:bottom="@dimen/acct__button_padding_vertical_material" android:left="@dimen/acct__button_padding_horizontal_material" android:right="@dimen/acct__button_padding_horizontal_material" android:top="@dimen/acct__button_padding_vertical_material" />
            </shape>
        </inset>
    </item>
</selector>