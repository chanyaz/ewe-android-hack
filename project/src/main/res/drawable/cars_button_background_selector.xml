<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#f0f0f0" />
            <stroke android:color="@color/search_dropdown_disabled_stroke" android:width="2px" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/cars_primary_color" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/cars_primary_color" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#f0f0f0" />
            <stroke android:color="@color/search_dropdown_disabled_stroke" android:width="1px" />
            <corners android:radius="3dp" />
        </shape>
    </item>

</selector>