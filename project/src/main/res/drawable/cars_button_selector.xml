<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="270"
                        android:centerColor="#00000000"
                        android:centerX="50%"
                        android:centerY="120%"
                        android:endColor="#00000000"
                        android:startColor="#bf000000" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/error_widget_edit_button_selected_color" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="270"
                        android:centerColor="#00000000"
                        android:centerX="50%"
                        android:centerY="120%"
                        android:endColor="#00000000"
                        android:startColor="#bf000000" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/app_primary" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>