<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <color android:color="@color/tablet_white_pane_bg" />
    </item>
    <item android:left="@dimen/hotel_flight_card_padding_x"
          android:right="@dimen/hotel_flight_card_padding_x" >
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/flight_results_row_return_leg_bg_pressed" />
                </shape>
            </item>
            <item android:state_checked="true">
                <shape>
                    <solid android:color="@color/flight_results_row_return_leg_bg_pressed" />
                </shape>
            </item>
            <item android:state_activated="true">
                <shape>
                    <solid android:color="@color/flight_results_row_return_leg_bg_pressed" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape>
                    <solid android:color="@color/flight_results_row_return_leg_bg_pressed" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/flight_results_row_return_leg_bg" />
                </shape>
            </item>
        </selector>
    </item>

</layer-list>
