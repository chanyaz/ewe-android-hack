<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item android:drawable="@color/hotel_filter_spinner_color_selected"/>
            <item android:right="15dp">
                <bitmap android:src="@drawable/ic_tablet_checkout_saved_spinner" android:gravity="right" />
            </item>

        </layer-list>

    </item>
    <item>

        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <item android:drawable="@color/hotel_filter_spinner_color"/>
            <item android:right="15dp">
                <bitmap android:src="@drawable/ic_tablet_checkout_saved_spinner" android:gravity="right" />
            </item>

        </layer-list>
    </item>

</selector>