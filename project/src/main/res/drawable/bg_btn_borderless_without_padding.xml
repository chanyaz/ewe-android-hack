<?xml version="1.0" encoding="utf-8"?>
<!-- This is only used for pre-v21. For v21+, the style uses the system borderless button style -->
<!-- See Widget.BorderlessButton in styles.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed state -->
    <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/acct__control_corner_material" />
                <solid android:color="@color/acct__btn_borderless_pressed" />
                <padding android:left="@dimen/acct__button_padding_horizontal_material"
                    android:right="@dimen/acct__button_padding_horizontal_material" />
            </shape>
    </item>

    <!-- focused state -->
    <item android:state_focused="true">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/acct__control_corner_material" />
                <solid android:color="@color/acct__btn_borderless_focused" />
                <padding android:left="@dimen/acct__button_padding_horizontal_material"
                    android:right="@dimen/acct__button_padding_horizontal_material" />
            </shape>
    </item>

    <!-- normal state -->
    <item>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/acct__control_corner_material" />
                <solid android:color="@color/acct__btn_borderless_normal" />
                <padding android:left="@dimen/acct__button_padding_horizontal_material"
                    android:right="@dimen/acct__button_padding_horizontal_material" />
            </shape>
    </item>
</selector>