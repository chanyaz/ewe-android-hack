<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lx_dropdown_background_color" />
            <stroke android:color="@color/lx_dropdown_disabled_stroke" android:width="1dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lx_primary_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lx_primary_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/lx_dropdown_background_color" />
            <stroke android:color="@color/lx_dropdown_disabled_stroke" android:width="1dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</selector>