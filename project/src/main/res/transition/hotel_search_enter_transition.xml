<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together">

     <!--CALENDAR CARD-->
    <transitionSet
        android:transitionOrdering="together"
        android:duration="@integer/search_cards_transition_duration">
        <targets>
            <target android:targetId="@id/hotel_search_calendar_card_view" />
        </targets>

        <slide
            android:slideEdge="top"
            android:interpolator="@android:interpolator/decelerate_cubic"/>
        <fade
            android:fadingMode="fade_in"
            android:interpolator="@android:interpolator/accelerate_quad"/>
    </transitionSet>

    <!-- TRAVELER CARD-->
    <transitionSet
        android:transitionOrdering="together"
        android:startDelay="50"
        android:duration="@integer/search_cards_transition_duration">
        <targets>
            <target android:targetId="@id/traveler_card_view" />
        </targets>

        <slide
            android:slideEdge="top"
            android:interpolator="@android:interpolator/decelerate_cubic"/>
        <fade
            android:fadingMode="fade_in"
            android:interpolator="@android:interpolator/accelerate_quad"/>
    </transitionSet>

    <!-- ADVANCED OPTIONS-->
    <transitionSet
        android:transitionOrdering="together"
        android:startDelay="100"
        android:duration="@integer/search_cards_transition_duration">
        <targets>
            <target android:targetId="@id/advanced_options_card_view" />/>
        </targets>

        <slide
            android:slideEdge="top"
            android:interpolator="@android:interpolator/decelerate_cubic"/>
        <fade
            android:fadingMode="fade_in"
            android:interpolator="@android:interpolator/accelerate_quad"/>
    </transitionSet>

    <!-- SWP-->
    <transitionSet
        android:transitionOrdering="together"
        android:startDelay="115"
        android:duration="@integer/search_cards_transition_duration">
        <targets>
            <target android:targetId="@id/shop_with_points_card_view" />
        </targets>

        <slide
            android:slideEdge="top"
            android:interpolator="@android:interpolator/decelerate_cubic"/>
        <fade
            android:fadingMode="fade_in"
            android:interpolator="@android:interpolator/accelerate_quad" />
    </transitionSet>

    <!-- BOTTOM SEARCH BAR-->
    <slide
        android:duration="400"
        android:interpolator="@android:interpolator/decelerate_cubic"
        android:slideEdge="bottom">
        <targets>
            <target android:targetId="@id/search_btn" />
            <target android:targetId="@id/hotel_search_bar_shadow" />
        </targets>
    </slide>

    <!-- TOOLBAR + LOB_BAR-->
    <transitionSet
        android:transitionOrdering="sequential">
        <slide
            android:duration="400"
            android:slideEdge="top"
            android:interpolator="@android:interpolator/decelerate_cubic">
            <targets>
                <target android:targetId="@id/hotel_search_toolbar_container" />
            </targets>
        </slide>

        <fade
            android:startDelay="50"
            android:duration="50">
            <targets>
                <target android:targetId="@id/toolbar_dropshadow" />
            </targets>
        </fade>
    </transitionSet>

    <!-- WINDOW TRANSITION-->
    <fade
        android:duration="@integer/pro_wizard_search_enter_duration"
        android:interpolator="@android:interpolator/accelerate_quint">
        <targets>
            <target android:excludeId="@id/expedia_fake_status_bar"/>
            <target android:excludeId="@id/hotel_search_toolbar_container" />
            <target android:excludeId="@id/toolbar_dropshadow" />
            <target android:excludeId="@id/search_btn" />
            <target android:excludeId="@android:id/navigationBarBackground" />
            <target android:excludeId="@android:id/statusBarBackground" />
        </targets>
    </fade>
</transitionSet>