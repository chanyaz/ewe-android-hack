<?xml version="1.0" encoding="utf-8"?>
<transitionSet
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together">
    <slide
        android:duration="150"
        android:slideEdge="bottom">
        <targets>
            <target android:targetId="@+id/hotel_gallery_grid_recycler" />
            <target android:excludeId="@+id/hotel_gallery_grid_toolbar" />
            <target android:targetId="@+id/gallery_grid_toolbar_dropshadow" />
            <target android:excludeId="@android:id/navigationBarBackground" />
            <target android:excludeId="@android:id/statusBarBackground" />
        </targets>
    </slide>
    <fade
        android:duration="150">
        <targets>
            <target android:targetId="@+id/hotel_gallery_grid_toolbar" />
            <target android:targetId="@+id/gallery_grid_toolbar_dropshadow" />
            <target android:targetId="@android:id/statusBarBackground" />
        </targets>
    </fade>
</transitionSet>
