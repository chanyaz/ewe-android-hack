<?xml version="1.0" encoding="utf-8"?>

<!-- Lollipop / Material specific styles-->

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="V2.Theme.Cars" parent="AppTheme.Base">
        <item name="android:alertDialogTheme">@style/Theme.AlertDialog</item>
    </style>

    <style name="CarButton" parent="android:Widget.Material.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="Theme.AlertDialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/cars_primary_color</item>
        <item name="android:colorPrimaryDark">@color/cars_primary_color</item>
        <item name="android:colorAccent">@color/cars_primary_color</item>
    </style>

</resources>
