<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
    NOTE: This file is for the original Samsung Galaxy Note. 
    It reports "large" and was thus assuming our large styles.
    Those styles use fixed widths that exceed the width of the Galaxy Note.
    So here we are, setting things to use match_parent
    -->

    <style name="LoginFormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textColor">#c6c8c9</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LoginFormButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItinFindButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/btn_find_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_find</item>
    </style>

</resources>
