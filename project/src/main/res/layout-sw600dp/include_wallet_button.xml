<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.TabletWalletButton xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:id="@+id/wallet_container"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:padding="0dp">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/wallet_promo"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/wallet_button"
        android:background="@drawable/wallet_promo_bg"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/wallet_promo_offer"
        android:textColor="@drawable/wallet_promo_text"
        android:textSize="14sp"
        app:textStyle="light"/>

    <FrameLayout
        android:id="@+id/wallet_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/button"
            style="@style/BookingSection"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/wallet_buy_with_google_wallet"
            android:padding="0dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/wallet_button_left_padding"
            android:paddingLeft="@dimen/card_icon_padding"
            android:src="@drawable/ic_tablet_google_wallet"/>

        <ProgressBar
            android:id="@+id/wallet_progress_bar"
            style="@style/ProgressBar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone"/>
    </FrameLayout>

</com.expedia.bookings.widget.TabletWalletButton>
