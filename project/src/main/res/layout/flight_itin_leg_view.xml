<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp">

    <ImageView
        android:id="@+id/flight_itin_leg_view_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


    <com.expedia.bookings.widget.TextView
        android:id="@+id/flight_itin_leg_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="4dp"
        android:paddingTop="16dp"
        android:textColor="@color/gray900"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/flight_itin_leg_view_icon"
        app:layout_constraintTop_toBottomOf="parent" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/flight_itin_leg_view_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="16dp"
        android:textColor="@color/gray600"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/flight_itin_leg_view_icon"
        app:layout_constraintTop_toBottomOf="@+id/flight_itin_leg_view_title" />

    <View
        android:id="@+id/flight_itin_leg_view_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/itin_card_summary_divider_color"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>