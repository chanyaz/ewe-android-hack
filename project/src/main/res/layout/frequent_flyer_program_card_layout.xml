<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/frequent_flyer_program_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Alaska Airlines"/>

        <android.support.v7.widget.CardView
            style="@style/MaterialCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding= "10dp">

                <com.expedia.bookings.widget.TelephoneSpinner
                    android:id="@+id/edit_frequent_flyer_program_spinner"
                    style="@style/FakeSpinner.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/traveler_frequent_flyer_program_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/frequent_flyer_program_number"
                    android:labelFor="@+id/frequent_flyer_program_number"
                    android:layout_gravity="center_horizontal">

                    <com.expedia.bookings.widget.traveler.TravelerEditText
                        android:id="@+id/edit_traveler_frequent_flyer_program"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="13"
                        android:maxLines="1"
                        android:textSize="@dimen/traveler_input_text_size"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>