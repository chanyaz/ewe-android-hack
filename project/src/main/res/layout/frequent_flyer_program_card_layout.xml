<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/frequent_flyer_program_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <android.support.v7.widget.CardView
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/frequent_flyer_program_name"
                android:importantForAccessibility="no">

                <com.expedia.bookings.widget.accessibility.AccessibleEditTextForSpinner
                    android:id="@+id/edit_frequent_flyer_program_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableRight="@drawable/material_dropdown"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/traveler_input_text_size" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/frequent_flyer_program_number"
                android:importantForAccessibility="no">

                <com.expedia.bookings.widget.traveler.TravelerEditText
                    android:id="@+id/edit_frequent_flyer_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textSize="@dimen/traveler_input_text_size" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
