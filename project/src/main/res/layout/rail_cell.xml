<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="@dimen/card_view_container_margin"
    android:layout_marginRight="@dimen/card_view_container_margin"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/timesView"
                style="@style/RailPrimaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="9:07 - 11:21" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/priceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/RailPrimaryText"
                tools:text="$120.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/trainOperator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:textColor="@color/light_gray"
                android:textSize="12sp"
                tools:text="Virgin Trains, London Midland" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/round_trip"
                android:textColor="@color/light_gray"
                android:textSize="10sp" />
        </LinearLayout>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/layoverView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/flight_departure_date_color"
            android:textSize="12sp"
            tools:text="2h 30m, 1 Change" />

        <com.expedia.bookings.widget.rail.RailResultsTimelineWidget
            android:id="@+id/timeline_view"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            tools:layout_width="200dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>