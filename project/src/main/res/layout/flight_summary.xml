<?xml version="1.0" encoding="utf-8"?>
<merge android:id="@+id/bundle_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/outbound_flight_title"
        style="@style/HeaderTextAboveCardviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        android:text="@string/flight" />


    <com.expedia.bookings.widget.packages.OutboundFlightWidget
        android:id="@+id/package_bundle_outbound_flight_widget"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="@dimen/card_view_container_margin"
        android:layout_marginRight="@dimen/card_view_container_margin"
        android:animateLayoutChanges="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="64dp" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/inbound_flight_title"
        style="@style/HeaderTextAboveCardviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:text="@string/flight"
        android:visibility="gone" />

    <com.expedia.bookings.widget.packages.InboundFlightWidget
        android:id="@+id/package_bundle_inbound_flight_widget"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/card_view_container_margin"
        android:layout_marginRight="@dimen/card_view_container_margin"
        android:animateLayoutChanges="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="64dp" />

    <com.expedia.bookings.widget.FareFamilyCardView
        android:id="@+id/fare_family_widget"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/card_view_container_margin"
        android:layout_marginRight="@dimen/card_view_container_margin"
        android:animateLayoutChanges="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/free_cancellation_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="24dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.expedia.bookings.widget.TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/flights_free_cancellation"
                    android:textColor="@color/gray900"
                    android:textSize="12sp"
                    app:textStyle="medium" />

                <ImageView
                    android:id="@+id/free_cancellation_more_info_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/read_more" />

            </LinearLayout>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/free_cancellation_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/flights_free_cancellation_information"
                android:textColor="@color/gray600"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <com.expedia.bookings.widget.InsuranceWidget
        android:id="@+id/insurance_widget"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_view_container_margin"
        android:layout_marginRight="@dimen/card_view_container_margin"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:cardUseCompatPadding="true" />

    <include
        android:id="@+id/split_ticket_info_container"
        layout="@layout/split_ticket_info_phone_dialog_content"
        android:visibility="gone" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/airline_fee_warning_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="@dimen/card_view_container_margin"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/defaultTextColor"
        android:textSize="10sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/basic_economy_info"
        style="@style/Widget.InfoIconButton"
        android:layout_width="match_parent"
        android:layout_marginLeft="9dp"
        android:drawablePadding="12dp"
        android:gravity="left"
        android:text="@string/flight_checkout_overview_basic_economy_message"
        app:textStyle="medium" />

    <Space
        android:id="@+id/scroll_space_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</merge>
