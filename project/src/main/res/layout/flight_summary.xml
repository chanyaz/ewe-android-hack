<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bundle_container">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/outbound_flight_title"
        style="@style/HeaderTextAboveCardviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        android:text="@string/flight" />


    <com.expedia.bookings.widget.packages.OutboundFlightWidget
        android:id="@+id/package_bundle_outbound_flight_widget"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="@dimen/card_view_container_margin"
        android:layout_marginRight="@dimen/card_view_container_margin"
        android:animateLayoutChanges="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="64dp" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/inbound_flight_title"
        style="@style/HeaderTextAboveCardviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/flight"
        android:visibility="gone"/>

    <com.expedia.bookings.widget.packages.InboundFlightWidget
        android:id="@+id/package_bundle_inbound_flight_widget"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/card_view_container_margin"
        android:layout_marginRight="@dimen/card_view_container_margin"
        android:animateLayoutChanges="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="64dp" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/free_cancellation_text"
        style="@style/HeaderTextAboveCardviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/check"
        android:drawablePadding="10dp"
        android:textSize="12sp"
        android:textColor="@color/defaultTextColor"
        android:text="@string/flights_free_cancellation" />

    <com.expedia.bookings.widget.InsuranceWidget
        android:id="@+id/insurance_widget"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="@dimen/card_view_container_margin"
        android:layout_marginRight="@dimen/card_view_container_margin"
        android:visibility="gone" />

    <include
        android:id="@+id/split_ticket_info_container"
        android:visibility="gone"
        layout="@layout/split_ticket_info_phone_dialog_content" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/airline_fee_warning_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="@dimen/card_view_container_margin"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/defaultTextColor"
        android:textSize="10sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/basic_economy_info"
        android:text="@string/flight_checkout_overview_basic_economy_message"
        app:textStyle="medium"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        style="@style/Widget.InfoIconButton"/>

    <Space
        android:id="@+id/scroll_space_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</merge>
