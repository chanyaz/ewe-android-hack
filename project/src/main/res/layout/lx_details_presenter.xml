<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.presenter.lx.LXDetailsPresenter xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ProgressBar
        android:id="@+id/loading_details"
        style="@android:style/Widget.Holo.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />

    <com.expedia.bookings.widget.LXActivityDetailsWidget
        android:id="@+id/activity_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lx_details_background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/section_activity_details_gallery" />

            <include
                layout="@layout/section_activity_details_price_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/price_info_container_height"
                android:layout_marginTop="@dimen/price_info_container_top_margin" />

            <include
                android:id="@+id/highlights"
                layout="@layout/widget_lx_detail_section_data" />

            <HorizontalScrollView
                android:id="@+id/offer_dates_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:background="@drawable/lx_dates_container_background">

                <RadioGroup
                    android:id="@+id/offer_dates_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </HorizontalScrollView>

            <com.expedia.bookings.widget.LXOffersListWidget
                android:id="@+id/offers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/offers_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:dividerHorizontal"
                    android:orientation="vertical"
                    android:showDividers="middle|end" />

                <LinearLayout
                    android:id="@+id/offer_show_more_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:dividerHorizontal"
                    android:orientation="vertical"
                    android:showDividers="end"
                    android:visibility="gone">

                    <com.expedia.bookings.widget.ShowMoreWithCountWidget
                        android:id="@+id/show_more_widget"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="?android:attr/selectableItemBackground" />

                </LinearLayout>
            </com.expedia.bookings.widget.LXOffersListWidget>

            <include
                android:id="@+id/description"
                layout="@layout/widget_lx_detail_section_data" />

            <include
                android:id="@+id/inclusions"
                layout="@layout/widget_lx_detail_section_data" />

            <include
                android:id="@+id/exclusions"
                layout="@layout/widget_lx_detail_section_data" />

            <include
                android:id="@+id/know_before_you_book"
                layout="@layout/widget_lx_detail_section_data" />

            <include
                android:id="@+id/cancellation"
                layout="@layout/widget_lx_detail_section_data" />

            <include
                android:id="@+id/location"
                layout="@layout/widget_lx_detail_section_data" />
        </LinearLayout>

    </com.expedia.bookings.widget.LXActivityDetailsWidget>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/lx_primary_color"
        android:minHeight="?attr/actionBarSize"
        app:subtitleTextAppearance="@style/LXToolbarSubtitleTextAppearance"
        app:titleTextAppearance="@style/LXToolbarTitleTextAppearance" />

</com.expedia.bookings.presenter.lx.LXDetailsPresenter>
