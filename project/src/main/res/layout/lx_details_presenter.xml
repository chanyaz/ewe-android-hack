<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.presenter.lx.LXDetailsPresenter xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ProgressBar
        android:id="@+id/loading_details"
        style="@android:style/Widget.Holo.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />

    <com.expedia.bookings.widget.LXActivityDetailsWidget
        android:id="@+id/activity_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/section_activity_details_gallery" />

            <include
                layout="@layout/section_activity_details_price_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/price_info_container_height"
                android:layout_marginTop="@dimen/price_info_container_top_margin" />

            <include
                android:id="@+id/highlights"
                layout="@layout/widget_lx_detail_section_data" />

            <include
                android:id="@+id/description"
                layout="@layout/widget_lx_detail_section_data" />

            <include
                android:id="@+id/location"
                layout="@layout/widget_lx_detail_section_data" />

        </LinearLayout>

    </com.expedia.bookings.widget.LXActivityDetailsWidget>

</com.expedia.bookings.presenter.lx.LXDetailsPresenter>
