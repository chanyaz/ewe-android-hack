<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/trip_total_text"
                style="@style/BundleOverviewWidgets.PrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_total"/>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/trip_number_of_travelers"
                style="@style/BundleOverviewWidgets.SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:gravity="right">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/trip_total_cost"
                style="@style/BundleOverviewWidgets.PrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/trip_points_earned"
                style="@style/BundleOverviewWidgets.SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

</merge>

