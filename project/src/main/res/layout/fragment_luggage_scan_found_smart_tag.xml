<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/outer_container"
            style="@style/MarginPoint"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="50dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/scan_a_found_smart_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/exp_launch_blue"
                android:gravity="center"
                android:textColor="@color/btn_find_color"
                android:textSize="16sp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                app:textStyle="medium"
                android:text="@string/scan_a_found_smart_tag" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/traveler_tag_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/my_luggage_tag_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="8dp"
                android:bufferType="spannable"
                android:text="@string/my_luggage_tag_text_view"
                android:textColor="@color/gray9"
                android:textSize="15dp" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/add_a_tag_to_my_account_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="?attr/selectableItemBackground"
                android:padding="20dp"
                android:text="@string/add_a_tag_to_my_account_button"
                android:textColor="@color/exp_launch_blue"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
