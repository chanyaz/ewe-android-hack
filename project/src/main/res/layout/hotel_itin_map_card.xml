<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/marker_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="@dimen/hotel_preview_margin_large"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        tools:visibility="visible"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/marker_image">


        <com.expedia.bookings.widget.TextView
            android:id="@+id/marker_title"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray900"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="poop event" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/marker_body"
            android:layout_width="251dp"
            android:layout_height="64dp"
            android:textColor="@color/gray900"
            android:textSize="15sp"
            android:maxLines="3"
            android:paddingRight="1dp"
            android:ellipsize="end"
            tools:text="asdasdsadsadsa asdsa d ad dsad sdasddsadsd sdasadsadas sadsdasd d asdas  gg dsg df sdafd  dsfds  sdfds fsdf dsfd gsgsfd fg gfdsg dfgdfs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/marker_title"
            app:layout_constraintRight_toLeftOf="@+id/card_chevron"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/marker_title"
            tools:layout_editor_absoluteY="26dp"
            tools:layout_editor_absoluteX="11dp"
            app:layout_constraintVertical_bias="1.0" />
        <ImageView
            android:id="@+id/card_chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/gray600"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_itin_next_chevron" />
        </android.support.constraint.ConstraintLayout>





</LinearLayout>
</LinearLayout>