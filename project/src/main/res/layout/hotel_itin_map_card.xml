<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/marker_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:visibility="visible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/marker_image">


        <com.expedia.bookings.widget.TextView
            android:id="@+id/marker_title"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray900"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="poop event" />

        <com.expedia.bookings.widget.TextView
            android:paddingLeft="16dp"
            android:layout_below="@+id/marker_title"
            android:id="@+id/marker_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/card_chevron"
            android:textColor="@color/gray900"
            android:textSize="15sp"
            android:maxLines="3"
            android:paddingRight="1dp"
            android:ellipsize="end"
            tools:text="asdasdsadsadsa asdsa d ad dsad sdasddsadsd sdasadsadas sadsdasd d asdas  gg dsg df sdafd  dsfds  sdfds fsdf dsfd gsgsfd fg gfdsg dfgdfs"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/marker_title"/>
        <ImageView
            android:id="@+id/card_chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/gray600"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/marker_body"
            android:layout_alignBottom="@id/marker_body"
            android:layout_below="@id/marker_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            tools:visibility="visible"
            app:srcCompat="@drawable/ic_itin_next_chevron" />
        </RelativeLayout>





</LinearLayout>
</LinearLayout>