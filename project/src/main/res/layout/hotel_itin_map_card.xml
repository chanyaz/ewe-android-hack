<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MaterialCardView"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/marker_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/marker_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/gray900"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/marker_image"
            app:layout_constraintRight_toLeftOf="@+id/card_chevron"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="poop event" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/marker_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:textColor="@color/gray900"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/marker_image"
            app:layout_constraintRight_toLeftOf="@+id/card_chevron"
            app:layout_constraintTop_toBottomOf="@+id/marker_title"
            tools:text="asdasdsadsadsa asdsa d ad dsad sdasddsadsd sdasadsadas sadsdasd d asdas  gg dsg df sdafd  dsfds  sdfds fsdf dsfd gsgsfd fg gfdsg dfgdfs" />

        <ImageView
            android:id="@+id/card_chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/marker_body"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/marker_body"
            android:layout_below="@id/marker_title"
            android:paddingRight="8dp"
            android:tint="@color/gray600"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_itin_next_chevron"
            tools:visibility="visible" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>