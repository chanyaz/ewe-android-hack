<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/air_attach_banner_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:background="@drawable/bg_air_attach_phone_launch_banner"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/air_attach_plane_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fd8126">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/itin_plane" />

        </FrameLayout>

        <com.larvalabs.svgandroid.widget.SVGView
            android:id="@+id/air_attach_curve"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_marginTop="-8dp"
            app:src="@raw/curve" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/itin_air_attach_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="@string/air_attach_alert"/>

        <TextView
            android:id="@+id/itin_air_attach_savings_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="@string/air_attach_potential_savings"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/air_attach_banner_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_air_attach_phone_launch_close"
        android:padding="22dp"
        android:src="@drawable/btn_air_attach_close" />

</LinearLayout>