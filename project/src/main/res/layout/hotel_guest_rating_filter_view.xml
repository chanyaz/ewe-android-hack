<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.support.v7.widget.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical|center"
        android:orientation="horizontal">

        <com.expedia.bookings.widget.HotelGuestRatingFilterItem
            android:id="@+id/hotel_filter_guest_rating_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_gray" />

        <com.expedia.bookings.widget.HotelGuestRatingFilterItem
            android:id="@+id/hotel_filter_guest_rating_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_gray" />

        <com.expedia.bookings.widget.HotelGuestRatingFilterItem
            android:id="@+id/hotel_filter_guest_rating_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true" />
    </LinearLayout>
</merge>
