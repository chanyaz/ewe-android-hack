<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.CarCheckoutWidget xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/info_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/category_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textStyle="bold" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/car_model_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" />

            <View
                android:layout_width="0dp"
                android:layout_height="8dp" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/location_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="@string/desk_and_vehicle_terminal"
                android:textStyle="bold" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/airport_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/date_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top" />

        </LinearLayout>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/info_block"
            android:gravity="right"
            android:maxLines="1"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/grand_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/price_text"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_info_receipt"
            android:text="@string/trip_total"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/first_name"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/last_name"
            android:textSize="20sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/edit_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_address_hint"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.expedia.bookings.widget.TelephoneSpinner
            android:id="@+id/phone_country_code_spinner"
            style="@style/Widget.Spinner.Phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/edit_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="@string/phone_number_hint"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/edit_credit_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="@string/credit_card_hint"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_cvv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/cvv_hint"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_postal_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/address_postal_code_hint"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/edit_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="DONE ENTERING CHECKOUT INFO"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/slide_to_purchase_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AA000000"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="10dp">

        <com.expedia.bookings.widget.SlideToWidgetJB
            android:id="@+id/slide_to_purchase_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            slideto:destComplete="@drawable/slide_complete"
            slideto:dragImage="@drawable/slide_drag"
            slideto:lineColor="#46CFCFCF"
            slideto:sliderImage="@drawable/slide_hint"
            slideto:sliderText="@string/slide_to_purchase" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/purchase_total_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/slide_to_purchase_price_text_size" />
    </LinearLayout>

</com.expedia.bookings.widget.CarCheckoutWidget>