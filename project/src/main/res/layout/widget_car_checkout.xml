<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.CarCheckoutWidget xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.expedia.bookings.widget.ScrollView
        android:paddingTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:id="@+id/checkout_scroll"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/summary_container"
                android:layout_width="match_parent"
                android:animateLayoutChanges="true"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="14dp">

                    <LinearLayout
                        android:id="@+id/info_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/car_vendor_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:textColor="#3C3C3C"
                            android:textSize="17sp"
                            app:textStyle="medium"
                            android:paddingBottom="8dp" />

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/category_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cars_checkout_text_color"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/car_model_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/cars_checkout_text_color"
                            android:paddingBottom="8dp"
                            android:layout_gravity="bottom" />

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/location_description_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_gravity="top"
                            android:textColor="@color/cars_checkout_text_color"
                            android:text="@string/desk_and_vehicle_terminal"
                            android:textStyle="bold" />

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/airport_text"
                            android:layout_width="wrap_content"
                            android:textColor="@color/cars_checkout_text_color"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom" />

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/date_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/cars_checkout_text_color"
                            android:layout_gravity="top" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="8dp">

                            <com.expedia.bookings.widget.TextView
                                android:id="@+id/free_cancellation_text"
                                android:text="Free Cancellation"
                                android:layout_marginRight="12dp"
                                android:textColor="@color/cars_checkout_text_color"
                                android:layout_width="wrap_content"
                                android:textSize="12sp"
                                android:drawableLeft="@drawable/check"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical" />

                            <com.expedia.bookings.widget.TextView
                                android:id="@+id/unlimited_mileage_text"
                                android:text="Free Mileage"
                                android:layout_width="wrap_content"
                                android:textSize="12sp"
                                android:drawableLeft="@drawable/check"
                                android:textColor="@color/cars_checkout_text_color"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/grand_total_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/cars_checkout_text_color"
                        android:layout_alignRight="@+id/pickup_text"
                        android:text="Total with Tax"
                        android:textSize="11sp" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/grand_total_text"
                        android:textColor="@color/cars_checkout_text_color"
                        android:drawableRight="@drawable/info"
                        android:gravity="right"
                        app:textStyle="medium"
                        android:drawablePadding="6dp"
                        android:maxLines="1"
                        android:textSize="16sp" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/pickup_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cars_checkout_text_color"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/price_text"
                        android:text="Due at pick-up"
                        android:textSize="11sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <com.expedia.bookings.widget.AccountLoginWidget
                style="@style/CarsCardView"
                android:id="@+id/login_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"/>

            <LinearLayout
                android:id="@+id/hint_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="1dp"
                    android:background="#979797" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="or"
                    android:textColor="#676767" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="1dp"
                    android:background="#979797" />

            </LinearLayout>

            <com.expedia.bookings.widget.CarDriverWidget
                style="@style/CarsCardView"
                android:id="@+id/driver_info_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"/>

            <com.expedia.bookings.widget.PaymentWidget
                style="@style/CarsCardView"
                android:id="@+id/payment_info_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"/>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/legal_information_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:padding="16dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>
    </com.expedia.bookings.widget.ScrollView>

    <LinearLayout
        android:id="@+id/slide_to_purchase_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCFFFFFF"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="12dp">

        <com.expedia.bookings.widget.SlideToWidgetJB
            android:id="@+id/slide_to_purchase_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#00000000"
            app:destComplete="@drawable/slide_complete"
            app:dragImage="@drawable/slide_drag"
            app:sliderBackgroundColor="@color/cars_primary_color"
            app:sliderImage="@drawable/slide"
            app:sliderText="@string/cars_slider_text" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/purchase_total_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/cars_primary_color"
            android:textSize="@dimen/slide_to_purchase_price_text_size" />
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/checkout_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:minHeight="?attr/actionBarSize" />

</com.expedia.bookings.widget.CarCheckoutWidget>
