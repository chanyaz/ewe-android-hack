<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:uber="http://schemas.android.com/apk/res-auto"
    xmlns:lyft="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="0dp" >

    <com.expedia.bookings.widget.TextView
        android:id="@+id/booking_info_label"
        style="@style/TextView.Itin.SectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:text="@string/booking_info"
        android:visibility="visible" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/cancel_hotel_room"
        style="@style/TextView.Itin.SectionText"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/cancel_icon"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="@string/itin_card_details_cancel_hotel_room" />

    <include android:id="@+id/cancel_hotel_divider"
             android:visibility="gone"
        layout="@layout/include_itin_card_divider_hotel" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/booking_info"
        style="@style/TextView.Itin.SectionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_info"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="@string/itin_card_details_details" />

    <include android:id="@+id/divider" layout="@layout/include_itin_card_divider_hotel" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/edit_hotel_room_info"
        style="@style/TextView.Itin.SectionText"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_create_white_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="@string/itin_card_edit_hotel_room_info" />

    <include android:id="@+id/divider_edit_hotel_room_info"
             android:visibility="gone"
             layout="@layout/include_itin_card_divider_hotel" />

    <RelativeLayout
        android:id="@+id/itin_details_deep_refresh_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/itin_details_reload_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ic_reload_details" />

        <ProgressBar
            android:id="@+id/itin_details_progress_bar"
            style="@style/ProgressBar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:indeterminate="true"
            android:visibility="invisible" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/reload_text_view"
            style="@style/TextView.Itin.SectionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/itin_details_reload_image_view"
            android:gravity="center_vertical"
            android:padding="8dp" />
    </RelativeLayout>

    <com.uber.sdk.android.rides.RideRequestButton
        android:id="@+id/uber_ride_request_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        uber:ub__style="black"
        android:visibility="gone" />

    <com.lyft.lyftbutton.LyftButton
        android:id="@+id/lyft_ride_request_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        lyft:lyftStyle="lyftMulberryDark" />

</LinearLayout>