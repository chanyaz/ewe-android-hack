<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.expedia.bookings.widget.FrameLayout
        android:id="@+id/stub_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/hotel_carousel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="invisible">

        <com.expedia.bookings.widget.HotelCarouselRecycler
            android:id="@+id/hotel_carousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/recycler_view_temp_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray1" />

    <com.expedia.bookings.widget.HotelListRecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:overScrollMode="never" />

    <LinearLayout
        android:id="@+id/hotel_results_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/hotel_results_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="?attr/primary_color"
            android:clipChildren="false"
            android:minHeight="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:orientation="vertical">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/title"
                    style="@style/ToolbarTitleTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/subtitle"
                    style="@style/ToolbarSubtitleTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/hotel_urgency_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/hotel_urgency_background_color"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="4dp"
            android:visibility="gone"
            tools:visibility="visible">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/urgency_percentage_view"
                style="@style/Core.Text.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_trending_up_white_18px"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                tools:text="30% Booked" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/urgency_destination_description_view"
                style="@style/Core.Text.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                tools:text="San Fransisco is a popular location on your dates" />
        </LinearLayout>

        <View
            android:id="@+id/toolbar_dropshadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_dropshadow_height"
            android:background="@drawable/tb_shadow" />

        <!-- Do not be fooled, this textStyle does not yet function - but it's a reminder that we WANT it to do that -->
        <Button
            android:id="@+id/search_this_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="?attr/secondary_ripple_button_drawable"
            android:drawableLeft="@drawable/ic_material_location_pin"
            android:drawablePadding="8dp"
            android:minHeight="0dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:text="@string/Search_this_area"
            android:textAllCaps="false"
            android:textColor="?attr/primary_color"
            android:textSize="12sp"
            app:textStyle="thin" />
    </LinearLayout>

    <com.expedia.bookings.widget.FilterButtonWithCountWidget
        android:id="@+id/sort_filter_button_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_filter_height"
        android:layout_gravity="bottom"
        android:orientation="vertical" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/narrow_result_prompt"
        style="@style/Core.Text.Large.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp"
        android:background="@drawable/hotel_narrow_results_tooltip"
        android:paddingBottom="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:text="@string/narrow_your_results"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="4dp"
        android:background="?attr/primary_color"
        android:src="@drawable/ic_transition_map_list_fab"
        app:useCompatPadding="true" />

    <ViewStub
        android:id="@+id/hotel_filter_view_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/hotel_filter_view" />

    <com.expedia.bookings.widget.MapLoadingOverlayWidget
        android:id="@+id/map_loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.expedia.bookings.widget.hotel.HotelResultsSortFaqWebView
        android:id="@+id/sort_faq_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone" />

</merge>
