<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.expedia.bookings.hotel.map.HotelResultsMapWidget
        android:id="@+id/results_map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="yes" />

    <LinearLayout
        android:id="@+id/hotel_carousel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="invisible">

        <com.expedia.bookings.widget.HotelCarouselRecycler
            android:id="@+id/hotel_carousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/recycler_view_temp_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray200" />

    <com.expedia.bookings.widget.HotelListRecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/hotel_results_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="?attr/primary_color"
            android:clipChildren="false"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:orientation="vertical">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/title"
                    style="@style/ToolbarTitleTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/subtitle"
                    style="@style/ToolbarSubtitleTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <com.expedia.bookings.widget.HotelResultsChangeDateView
            android:id="@+id/hotel_result_change_date_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:translationZ="-1dp"
            android:visibility="gone" />

        <View
            android:id="@+id/toolbar_dropshadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_dropshadow_height"
            android:background="@drawable/tb_shadow" />

        <!-- Do not be fooled, this textStyle does not yet function - but it's a reminder that we WANT it to do that -->
        <com.expedia.bookings.widget.TextView
            android:id="@+id/search_this_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="?attr/secondary_ripple_button_drawable"
            android:drawableLeft="@drawable/ic_material_location_pin"
            android:drawablePadding="8dp"
            android:minHeight="0dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:text="@string/Search_this_area"
            android:textAllCaps="false"
            android:textColor="?attr/primary_color"
            android:textSize="12sp"
            android:elevation="4dp"
            android:visibility="gone"/>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/search_this_area_pill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/floating_action_pill_background"
            android:drawableLeft="@drawable/ic_material_location_pin"
            android:drawablePadding="8dp"
            android:minHeight="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/Search_this_area"
            android:textAllCaps="false"
            android:textColor="?attr/primary_color"
            android:elevation="5dp"
            android:textSize="16sp"
            android:visibility="gone"
            android:gravity="center"
            />

    </LinearLayout>

    <com.expedia.bookings.widget.FilterButtonWithCountWidget
        android:id="@+id/sort_filter_button_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_filter_height"
        android:layout_gravity="bottom"
        android:orientation="vertical" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/narrow_result_prompt"
        style="@style/Core.Text.300.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp"
        android:background="@drawable/hotel_narrow_results_tooltip"
        android:paddingBottom="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:text="@string/narrow_your_results"
        tools:visibility="visible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="4dp"
        android:background="?attr/primary_color"
        android:src="@drawable/ic_transition_map_list_fab"
        app:useCompatPadding="true" />

    <com.expedia.bookings.hotel.widget.HotelSearchFloatingActionPill
        android:id="@+id/hotel_results_floating_pill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:padding="20dp"
        android:clipToPadding="false"
        android:visibility="gone" />

    <ViewStub
        android:id="@+id/hotel_filter_view_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/hotel_filter_view" />

    <com.expedia.bookings.widget.MapLoadingOverlayWidget
        android:id="@+id/map_loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.expedia.bookings.widget.hotel.HotelResultsSortFaqWebView
        android:id="@+id/sort_faq_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone" />

</merge>
