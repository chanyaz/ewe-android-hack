<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flight_trip_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/airline_logo_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/packages_search_departure"
            android:tint="@color/search_screen_icon_color_v2" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/outbound_text_view"
            style="@style/Core.Text.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Flights"
            android:textColor="@color/gray7"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:background="@color/cardview_divider_lines_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/plane_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight=".05"
            android:src="@drawable/airline_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".85"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <com.expedia.bookings.widget.TextView
                android:id="@+id/flight_text_view"
                style="@style/Core.Text.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Delhi --> London"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/date_text_view"
                style="@style/Core.Text.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="28 September 2017"
                android:textSize="12dp" />


            <com.expedia.bookings.widget.TextView
                android:id="@+id/time_text_view"
                style="@style/Core.Text.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9:30 a.m - 2:30 pm"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>