<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/flight_trip_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/airline_logo_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/packages_search_departure"
            android:tint="@color/search_screen_icon_color_v2" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/outbound_text_view"
            style="@style/Core.Text.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Departing Flight - July 21"
            android:textColor="@color/gray7"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:background="@color/cardview_divider_lines_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/plane_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/airline_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/flight_depart"
                    style="@style/Core.Text.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="San Francisco"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/itin_arrow_icon" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/flight_arrival"
                    style="@style/Core.Text.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Paris"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/date_text_view"
                style="@style/Core.Text.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non Stop . 12h 40m"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/time_text_view"
                style="@style/Core.Text.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9:30 a.m - 2:30 pm"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="ON TIME"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/green_savings" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>