<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textSize="15sp">

        <LinearLayout
            android:id="@+id/traveler_ages_bottom_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/traveler_age_spinner_1"
                style="@style/SelectTravelerAgeSpinner" />

            <Spinner
                android:id="@+id/traveler_age_spinner_2"
                style="@style/SelectTravelerAgeSpinner" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/traveler_ages_bottom_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/traveler_age_spinner_3"
                style="@style/SelectTravelerAgeSpinner" />

            <Spinner
                android:id="@+id/traveler_age_spinner_4"
                style="@style/SelectTravelerAgeSpinner" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/traveler_ages_bottom_container3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/traveler_age_spinner_5"
                style="@style/SelectTravelerAgeSpinner" />

            <Spinner
                android:id="@+id/traveler_age_spinner_6"
                style="@style/SelectTravelerAgeSpinner" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/traveler_ages_bottom_container4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/traveler_age_spinner_7"
                style="@style/SelectTravelerAgeSpinner" />

            <Spinner
                android:id="@+id/traveler_age_spinner_8"
                style="@style/SelectTravelerAgeSpinner" />

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
