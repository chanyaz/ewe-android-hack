<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.expedia.bookings.widget.ScrollView
            android:id="@+id/filter_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="40dp">

                    <LinearLayout
                        android:id="@+id/filter_hotel_name_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/car_hotel"
                            android:tint="#000" />

                        <com.expedia.bookings.widget.CustomEditText
                            android:id="@+id/filter_hotel_name_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/edit_text_holo_light"
                            android:hint="@string/filter_hotel_name_hint"
                            android:inputType="textFilter|textNoSuggestions"
                            android:singleLine="true"
                            android:textSize="18sp"
                            app:clearFieldDrawable="@drawable/ic_clear_edittext_dark"
                            app:touchAreaPadding="25dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="19dp"
                        android:text="@string/Sort_By"
                        android:textAllCaps="true"
                        android:textColor="@color/hotels_primary_color" />

                    <Spinner
                        android:id="@+id/sort_by_selection_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/spinner_sort"
                        android:dropDownWidth="match_parent" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@color/divider_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textColor="@color/hotels_primary_color" />

                    <LinearLayout
                        android:id="@+id/price_range_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <TextView
                        android:id="@+id/star_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:text="@string/star_rating"
                        android:textColor="@color/hotels_primary_color" />

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/rating_one_background"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <RatingBar
                                    android:id="@+id/filter_hotel_star_rating_one"
                                    style="@style/RatingBar.UserReview.Material.Green"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:isIndicator="true"
                                    android:layout_margin="10dp"
                                    android:numStars="1"
                                    android:rating="1"
                                    android:stepSize="1" />
                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/divider_grey" />

                            <LinearLayout
                                android:id="@+id/rating_two_background"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <RatingBar
                                    android:id="@+id/filter_hotel_star_rating_two"
                                    style="@style/RatingBar.UserReview.Material.Green"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:isIndicator="true"
                                    android:layout_margin="10dp"
                                    android:numStars="2"
                                    android:rating="2"
                                    android:stepSize="1" />
                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/divider_grey" />

                            <LinearLayout
                                android:id="@+id/rating_three_background"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <RatingBar
                                    android:id="@+id/filter_hotel_star_rating_three"
                                    style="@style/RatingBar.UserReview.Material.Green"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:isIndicator="true"
                                    android:numStars="3"
                                    android:rating="3"
                                    android:stepSize="1" />
                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/divider_grey" />

                            <LinearLayout
                                android:id="@+id/rating_four_background"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <RatingBar
                                    android:id="@+id/filter_hotel_star_rating_four"
                                    style="@style/RatingBar.UserReview.Material.Green"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:isIndicator="true"
                                    android:numStars="4"
                                    android:rating="4"
                                    android:stepSize="1" />
                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/divider_grey" />

                            <LinearLayout
                                android:id="@+id/rating_five_background"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <RatingBar
                                    android:id="@+id/filter_hotel_star_rating_five"
                                    style="@style/RatingBar.UserReview.Material.Green"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:rating="5"
                                    android:stepSize="1" />
                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/vip_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:text="@string/plus_vip"
                        android:textColor="@color/hotels_primary_color" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/filter_vip_access" />

                        <CheckBox
                            android:id="@+id/filter_hotel_vip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/amenities_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:text="@string/amenities"
                        android:textColor="@color/hotels_primary_color" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="1dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <Button
                                android:id="@+id/filter_accessible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="@string/accessible"
                                android:textColor="@color/hotels_primary_color" />

                            <Button
                                android:id="@+id/filter_business_center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="@string/business_center"
                                android:textColor="@color/hotels_primary_color" />

                            <Button
                                android:id="@+id/filter_room_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="@string/room_service"
                                android:textColor="@color/hotels_primary_color" />

                            <Button
                                android:id="@+id/filter_gym"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="@string/gym"
                                android:textColor="@color/hotels_primary_color" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/filter_accessible"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:text="@string/accessible"
                            android:textColor="@color/hotels_primary_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/filter_business_center"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:text="@string/business_center"
                            android:textColor="@color/hotels_primary_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/filter_room_service"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:text="@string/room_service"
                            android:textColor="@color/hotels_primary_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/filter_gym"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:text="@string/gym"
                            android:textColor="@color/hotels_primary_color" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:text="@string/neighborhoods"
                        android:textColor="@color/hotels_primary_color" />

                    <LinearLayout
                        android:id="@+id/neighborhoods"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="52dp" />

                </LinearLayout>

            </LinearLayout>

        </com.expedia.bookings.widget.ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/filter_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:titleTextAppearance="@style/CarsToolbarTitleTextAppearance"></android.support.v7.widget.Toolbar>

            <View
                android:id="@+id/toolbar_dropshadow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_dropshadow_height"
                android:background="@drawable/tb_shadow" />
        </LinearLayout>

        <com.expedia.bookings.widget.DynamicFeedbackWidget
            android:id="@+id/dynamic_feedback_container"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:clickable="true"
            app:cardCornerRadius="18dp"
            app:cardPreventCornerOverlap="false" />

    </FrameLayout>

</merge>