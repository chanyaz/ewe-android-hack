<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/root_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="9dp">

        <com.expedia.bookings.widget.TravelerButton
            android:id="@+id/traveler_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center_vertical"/>

        <com.expedia.bookings.widget.traveler.NameEntryView
            android:id="@+id/name_entry_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.traveler.EmailEntryView
            android:id="@+id/email_entry_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.traveler.PhoneEntryView
            android:id="@+id/phone_entry_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.traveler.TSAEntryView
            android:id="@+id/tsa_entry_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.accessibility.AccessibleSpinner
            android:id="@+id/passport_country_spinner"
            style="@style/FakeSpinner.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@android:color/white"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:textSize="@dimen/traveler_input_text_size"
            android:visibility="gone"
            app:spinner_label="@string/passport_country"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passport_country_layout_btn"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <com.expedia.bookings.widget.accessibility.AccessibleEditTextForSpinner
                android:id="@+id/passport_country_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:drawableRight="@drawable/material_dropdown"
                android:textIsSelectable="true"
                android:hint="@string/passport_country"
                android:textSize="@dimen/traveler_input_text_size" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/traveler_advanced_options_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/advanced_options_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/expand_advanced_button_cont_desc"
                android:text="@string/advanced_optional"
                android:textColor="@color/app_primary"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/traveler_advanced_options_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/advanced_options_text"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:src="@drawable/read_more"
                android:tint="@color/app_primary" />

        </LinearLayout>

        <com.expedia.bookings.widget.FlightTravelerAdvancedOptionsWidget
            android:id="@+id/traveler_advanced_options_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/traveler_frequent_flyer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/frequent_flyer_program_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/expand_frequent_flyer_button_cont_desc"
                    android:text="@string/frequent_flyer_optional"
                    android:textColor="@color/app_primary"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/traveler_frequent_flyer_program_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/frequent_flyer_program_text"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/read_more"
                    android:tint="@color/app_primary" />

            </LinearLayout>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/frequent_flyer_tooltip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_anytime_before_your_flight"
                android:textColor="@color/gray600"
                android:textSize="14dp" />
        </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/frequent_flyer_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:visibility="gone"/>

    </LinearLayout>
</merge>
