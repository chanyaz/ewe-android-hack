<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.expedia.bookings.widget.accessibility.AccessibleSpinner
        android:id="@+id/rail_delivery_spinner"
        style="@style/Core.Widget.Spinner"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        app:spinner_label="@string/address_mail_delivery_option_hint" />

    <ImageView
        android:id="@+id/validation_indicator"
        android:layout_width="24dp"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="?attr/skin_errorIndicationExclaimationDrawable" />
</merge>
