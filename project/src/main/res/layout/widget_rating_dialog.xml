<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/review_stars" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="@string/dialog_app_rating_title"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:textStyle="medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/dialog_app_rating_message"
        android:textColor="@color/gray600"
        android:lineSpacingMultiplier="1.2"
        android:textSize="16sp" />

    <Button
        android:id="@+id/review_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/dialog_app_rating_review_button"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/feedback_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/dialog_app_rating_feedback_button"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/no_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/dialog_app_rating_no_button"
        android:textAllCaps="false"
        android:textSize="16sp" />

</LinearLayout>
