<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp">

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/chatMessageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cmv_arrowGravity="start"
        app:cmv_arrowPosition="left"
        app:cmv_backgroundColor="#8800bcd4"
        app:cmv_backgroundColorPressed="#ff00bcd4"
        app:cmv_cornerRadius="3dp"
        app:cmv_showArrow="true">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helloworld"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </me.himanshusoni.chatmessageview.ChatMessageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">
    <Button
        android:id="@+id/search_btn_hack"
        android:background="@drawable/custom_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Near me"
        android:layout_weight="1"
        android:textColor="@color/background_holo_dark"
        android:layout_margin="5dp"
        android:padding="0dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:id="@+id/search_btn_hack2"
        android:background="@drawable/custom_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Sort"
        android:layout_weight="1"
        android:textColor="@color/background_holo_dark"
        android:layout_margin="5dp"
        android:padding="0dp"
        android:minHeight="0dp"
        android:minWidth="0dp"/>

    <Button
        android:id="@+id/search_btn_hack3"
        android:background="@drawable/custom_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most popular"
        android:layout_weight="1"
        android:textColor="@color/background_holo_dark"
        android:layout_margin="5dp"
        android:padding="0dp"
        android:minHeight="0dp"
        android:minWidth="0dp"/>
    </LinearLayout>

</LinearLayout>