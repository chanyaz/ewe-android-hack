<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.launch.widget.LaunchLobWidget android:id="@+id/launch_lob_widget"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/brand_primary" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/launch_tile_margin_side"
        android:clipToPadding="false">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lob_grid_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

</com.expedia.bookings.launch.widget.LaunchLobWidget>
