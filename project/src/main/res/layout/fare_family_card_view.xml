<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        android:gravity="center_vertical"
        android:weightSum="1">

        <com.expedia.bookings.widget.RoundImageView
            android:id="@+id/fare_family_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flight_overview_upsell_seat" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/fare_family_title"
                style="@style/Core.Text.XLarge.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/flight_fare_family_upgrade_flight_label" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/selected_classes"
                style="@style/Core.Text.Default"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Selected Basic Economy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end|center_vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/fare_family_from_label"
                style="@style/Core.Text.Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flight_fare_family_from_label"
                android:textSize="12sp" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/upgrade_delta_price"
                style="@style/Core.Text.XXLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/traveller"
                android:text="$0.00" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/traveller"
                style="@style/Core.Text.Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Traveller"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</merge>