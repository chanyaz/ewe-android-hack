<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="70dp"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:weightSum="1">

        <com.expedia.bookings.widget.RoundImageView
            android:id="@+id/fare_family_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flight_upsell_seat_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/fare_family_title"
                style="@style/Core.Text.400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/selected_classes"
                style="@style/Core.Text.200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Selected Basic Economy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/fare_family_from_label"
                style="@style/Core.Text.200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flight_fare_family_from_label"
                android:textSize="10sp" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/upgrade_delta_price"
                style="@style/Core.Text.300.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/traveller"
                android:text="$0.00" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/traveller"
                style="@style/Core.Text.200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</merge>