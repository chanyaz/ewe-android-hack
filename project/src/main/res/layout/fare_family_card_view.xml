<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="18dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="18dp"
        android:gravity="center_vertical">

        <com.expedia.bookings.widget.RoundImageView
            android:id="@+id/fare_family_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flight_overview_upsell_seat" />

        <LinearLayout
            android:id="@+id/fare_family_action_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fare_family_icon"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/fare_family_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flight_fare_family_upgrade_flight_label"
                style="@style/Core.Text.XLarge.Medium" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/selected_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="Core.Text.Default.Medium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/flight_fare_family_from_label"
                android:textSize="12sp"/>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/upgrade_delta_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+$0"
                style="@style/Core.Text.XLarge"
                android:layout_alignBaseline="@id/selected_classes" />
        </LinearLayout>
    </RelativeLayout>
</merge>
