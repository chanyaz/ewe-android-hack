<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:background="@drawable/confirmation_background"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/confirmation_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/confirmation_checkmark" />

                <com.expedia.bookings.widget.TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/yay_going_somewhere"
                    android:textColor="@color/itin_white_text"
                    android:textSize="14sp" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:textColor="@color/itin_white_text"
                    android:textSize="20sp" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/expedia_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:textColor="@color/itin_white_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/card_background"
                android:gravity="center"
                android:orientation="vertical">

                <com.expedia.bookings.widget.packages.ConfirmationRowCardView
                    android:id="@+id/destination_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:row_icon="@drawable/packages_hotel_icon"
                    app:row_icon_tint_color="@color/package_bundle_icon_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@drawable/grey_divider" />

                <com.expedia.bookings.widget.packages.ConfirmationRowCardView
                    android:id="@+id/outbound_flight_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:row_icon="@drawable/packages_flight1_icon"
                    app:row_icon_tint_color="@color/package_bundle_icon_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@drawable/grey_divider" />

                <com.expedia.bookings.widget.packages.ConfirmationRowCardView
                    android:id="@+id/inbound_flight_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:row_icon="@drawable/packages_flight2_icon"
                    app:row_icon_tint_color="@color/package_bundle_icon_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/itin_white_text"
                android:drawablePadding="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/plus"
                    android:tint="@color/packages_primary_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.expedia.bookings.widget.TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rental_car_message"
                        android:textColor="@color/packages_primary_color" />

                    <com.expedia.bookings.widget.TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rental_car_message_desc"
                        android:textColor="@color/text_light_gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:focusable="false"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/itin_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_light"
            android:gravity="center"
            android:padding="5dp"
            android:focusable="false"
            android:textColor="@color/itin_white_text"
            android:textSize="12sp" />

        <Button
            android:id="@+id/view_itin_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/packages_primary_color"
            android:text="@string/itin_action_view"
            android:textColor="@color/itin_white_text"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>
</merge>