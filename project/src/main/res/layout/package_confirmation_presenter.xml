<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/generic_pattern_background"
        android:fillViewport="true"
        android:focusable="false"
        android:paddingBottom="@dimen/card_view_container_margin">

        <LinearLayout
            android:id="@+id/confirmation_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/confirmation_going_somewhere" />

            <android.support.v7.widget.CardView
                style="@style/MaterialCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_view_container_margin"
                android:layout_marginRight="@dimen/card_view_container_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.expedia.bookings.widget.ConfirmationRowCardView
                        android:id="@+id/destination_card_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        app:row_icon="@drawable/packages_hotel_icon"
                        app:row_icon_tint_color="@color/packages_bundle_overview_widgets_primary_text" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@drawable/grey_divider" />

                    <com.expedia.bookings.widget.ConfirmationRowCardView
                        android:id="@+id/outbound_flight_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        app:row_icon="@drawable/packages_flight1_icon"
                        app:row_icon_tint_color="@color/packages_bundle_overview_widgets_primary_text" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@drawable/grey_divider" />

                    <com.expedia.bookings.widget.ConfirmationRowCardView
                        android:id="@+id/inbound_flight_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        app:row_icon="@drawable/packages_flight2_icon"
                        app:row_icon_tint_color="@color/packages_bundle_overview_widgets_primary_text" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MaterialCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_view_container_margin"
                android:layout_marginRight="@dimen/card_view_container_margin"
                android:layout_marginTop="@dimen/card_view_container_margin"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/add_car_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/confirmation_plus_icon"
                        android:tint="@color/packages_primary_color" />

                    <LinearLayout
                        android:id="@+id/add_car_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="1dp"
                        android:orientation="vertical">

                        <com.expedia.bookings.widget.TextView
                            style="@style/BundleOverviewWidgets.PrimaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/rental_car_message"
                            android:textColor="@color/packages_primary_color" />

                        <com.expedia.bookings.widget.TextView
                            style="@style/BundleOverviewWidgets.SecondaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/rental_car_message_desc" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/confirmation_view_itin_button" />

</LinearLayout>