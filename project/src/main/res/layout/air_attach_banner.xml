<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/air_attach_banner_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/airattach_orange_bg"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/airattach_light_orange_bg"
                android:drawableLeft="@drawable/airattach_plane"
                android:padding="12dp" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:drawableLeft="@drawable/temp_airattach_curve" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="4dp">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/air_attach_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    app:textStyle="bold" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/air_attach_savings_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/expires"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="3dp">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/air_attach_expires_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#636363"
                    android:textSize="11dp" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/air_attach_expiration_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/airattach_countdown"
                    android:drawablePadding="2dp"
                    android:textColor="@color/price_change_air_attach"
                    android:textSize="12dp"
                    app:textStyle="medium" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</merge>