<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/search_form_margin"
            android:layout_marginRight="@dimen/search_form_margin"
            android:layout_above="@+id/search_button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/search_form_margin"
                android:orientation="vertical">

                <com.expedia.bookings.widget.SearchInputCardView
                    android:id="@+id/destination_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_search_card_height"
                    android:layout_marginBottom="@dimen/material_search_field_bottom_margin"
                    app:cardCornerRadius="@dimen/cardview_border_radius"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    app:input_icon="@drawable/search_form_icon_search"
                    app:input_icon_tint_color="@color/search_screen_icon_color_v2"
                    app:input_text="@string/search_destination" />

                <com.expedia.bookings.widget.CalendarWidgetV2
                    android:id="@+id/calendar_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_search_card_height"
                    android:layout_marginBottom="@dimen/material_search_field_bottom_margin"
                    app:cardCornerRadius="@dimen/cardview_border_radius"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    app:input_icon="@drawable/search_form_icon_calendar"
                    app:input_icon_tint_color="@color/search_screen_icon_color_v2"
                    app:input_text="@string/select_dates" />

                <com.expedia.bookings.widget.TravelerWidgetV2
                    android:id="@+id/traveler_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_search_card_height"
                    app:cardCornerRadius="@dimen/cardview_border_radius"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    app:input_icon="@drawable/search_form_icon_person"
                    app:input_icon_tint_color="@color/search_screen_icon_color_v2"
                    app:input_text="@string/hotel_search_guest_default_text" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@id/search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/rail_primary_color"
            android:padding="18dp"
            android:text="@string/search"
            android:textColor="@color/text_light_gray"
            android:textSize="18sp" />
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/rail_primary_color"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_close_white_24dp"
        app:title="@string/trains"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance" />
</merge>