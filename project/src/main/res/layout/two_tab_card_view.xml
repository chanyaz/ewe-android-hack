<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.support.v7.widget.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/left_tab_container"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/tab_background_selector"
            android:clickable="true"
            android:focusable="true">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/left_tab_text_view"
                style="@style/Core.Widget.TwoTabTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_gray" />

        <FrameLayout
            android:id="@+id/right_tab_container"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/tab_background_selector"
            android:clickable="true"
            android:focusable="true">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/right_tab_text_view"
                style="@style/Core.Widget.TwoTabTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>
        </FrameLayout>

    </LinearLayout>
</merge>