<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pay_later_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableLeft="@drawable/ic_etp_overview_checkmark"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_etp_hotel_details_info"
        android:padding="8dp"
        android:text="@string/pay_later_info_text"
        android:textColor="@color/etp_text_color" />

    <View
        android:id="@+id/etp_info_banner_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_px_hdpi_two_px_xhdpi"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/hotel_details_separator" />

</LinearLayout>