<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/poi_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tint="@color/app_primary"
        tools:src="@drawable/ic_poi_camera"/>


    <com.expedia.bookings.widget.TextView
        android:id="@+id/poi_name"
        style="@style/Core.Text.200"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:lines="2"
        android:maxLines="2"
        app:layout_constraintLeft_toRightOf="@id/poi_item_icon"
        app:layout_constraintRight_toLeftOf="@+id/poi_item_walking_man"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        tools:text="Grant Park, plus dahksfkjda dhjkafhkj dafkjh d dkahf"/>

    <ImageView
        android:id="@+id/poi_item_walking_man"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_poi_walk_distance"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/poi_distance"/>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/poi_distance"
        style="@style/Core.Text.200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        tools:text=".1 miles"/>

</android.support.constraint.ConstraintLayout>
