<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/rail_inbound_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/rail_primary_color"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:subtitleTextAppearance="@style/ToolbarSubtitleTextAppearance"
            app:titleTextAppearance="@style/ToolbarTitleTextAppearance" />

        <com.expedia.bookings.widget.rail.RailOutboundHeaderView
            android:id="@+id/outbound_header_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rail_inbound_toolbar"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="@dimen/rail_outbound_header_left_right_pad"
            android:paddingRight="@dimen/rail_outbound_header_left_right_pad"
            android:paddingTop="12dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/outbound_header_view"
            android:layout_above="@+id/inbound_legal_banner">

            <com.expedia.bookings.widget.rail.RailResultsRecyclerView
                android:id="@+id/rail_inbound_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/rail_screen_content_padding"
                android:layout_marginRight="@dimen/rail_screen_content_padding"
                android:overScrollMode="never"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_dropshadow_height"
                android:layout_gravity="top"
                android:background="@drawable/tb_shadow"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:background="@drawable/drop_shadow" />
        </FrameLayout>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/inbound_legal_banner"
            style="@style/BundleOverviewWidgets.SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:drawablePadding="30dp"
            android:drawableRight="@drawable/info"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="30dp"
            android:paddingTop="4dp"
            android:text="@string/rail_search_legal_banner_round_trip" />
    </RelativeLayout>
</merge>