<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/rail_inbound_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/rail_primary_color"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:navigationContentDescription="@string/toolbar_nav_icon_cont_desc"
            app:subtitleTextAppearance="@style/ToolbarSubtitleTextAppearance"
            app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
            app:contentInsetStartWithNavigation="0dp" />

        <com.expedia.bookings.rail.widget.RailOutboundHeaderView
            android:id="@+id/outbound_header_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rail_inbound_toolbar"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="@dimen/rail_results_header_left_right_pad"
            android:paddingRight="@dimen/rail_results_header_left_right_pad"
            android:paddingTop="12dp"
            android:focusable="true"/>

        <LinearLayout
            android:id="@+id/open_return_selected_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/outbound_header_view"
            android:background="@color/rail_primary_dark_background_color"
            android:orientation="vertical"
            android:paddingLeft="@dimen/rail_results_header_left_right_pad"
            android:paddingRight="@dimen/rail_results_header_left_right_pad"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:visibility="gone"
            tools:visibility="visible">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/open_return_header_messaging"
                style="@style/Core.Text.Large.Medium.WhiteColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rail_open_return_selected" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/open_return_description"
                style="@style/Core.Text.Default.WhiteColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rail_open_return_description"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/open_return_selected_header"
            android:layout_above="@+id/inbound_legal_banner">

            <com.expedia.bookings.rail.widget.RailResultsRecyclerView
                android:id="@+id/rail_inbound_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/rail_screen_content_padding"
                android:layout_marginRight="@dimen/rail_screen_content_padding"
                android:overScrollMode="never"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_dropshadow_height"
                android:layout_gravity="top"
                android:background="@drawable/tb_shadow"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:background="@drawable/drop_shadow" />
        </FrameLayout>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/inbound_legal_banner"
            style="@style/Core.Text.Small.LightColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:drawableRight="@drawable/info"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/rail_results_header_left_right_pad"
            android:paddingRight="@dimen/rail_results_header_left_right_pad"
            android:paddingTop="8dp"
            android:text="@string/rail_search_legal_banner_round_trip"
            android:contentDescription="@string/rail_search_legal_banner_round_trip_cont_desc"/>
    </RelativeLayout>
</merge>