<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/rail_inbound_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rail_primary_color"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:subtitleTextAppearance="@style/ToolbarSubtitleTextAppearance"
            app:titleTextAppearance="@style/ToolbarTitleTextAppearance" />

        <com.expedia.bookings.widget.rail.RailResultsRecyclerView
            android:id="@+id/rail_inbound_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:paddingTop="4dp" />
    </LinearLayout>
</merge>