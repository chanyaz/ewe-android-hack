<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/bundle_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:src="@drawable/read_more"
        android:tint="@color/packages_bundle_overview_footer_primary_text"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/bundle_title"
                style="@style/BundleOverviewFooter.PrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/bundle_subtitle"
                style="@style/BundleOverviewFooter.SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/bundle_total_text"
                style="@style/BundleOverviewFooter.PrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bundle_total_text" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/bundle_total_includes_text"
                style="@style/BundleOverviewFooter.SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/includes_taxes_fees_flights_hotel" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/bundle_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BundleOverviewFooter.PrimaryText"/>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/bundle_total_savings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BundleOverviewFooter.SecondaryText.Savings"/>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/per_person_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/per_person"
            android:visibility="gone"
            style="@style/BundleOverviewFooter.SecondaryText"/>
    </LinearLayout>

</merge>