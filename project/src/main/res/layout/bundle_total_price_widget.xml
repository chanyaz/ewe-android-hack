<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/bundle_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bundle_total_text"
            android:textSize="16sp"
            app:textStyle="bold" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/bundle_total_includes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/includes_taxes_fees_flights_hotel"
            android:textSize="12sp"
            app:textStyle="medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/bundle_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:textStyle="bold" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/bundle_total_savings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hotelsv2_discount_green"
            android:textSize="12sp"
            app:textStyle="medium" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/per_person_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/per_person"
            android:textSize="12sp"
            android:visibility="gone"
            app:textStyle="medium" />
    </LinearLayout>

</merge>