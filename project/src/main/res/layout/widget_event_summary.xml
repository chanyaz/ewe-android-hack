<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <com.expedia.bookings.widget.TextView
            android:id="@+id/time_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/itin_card_detail_triplet_value_text_color"
            android:textSize="?attr/itin_card_detail_triplet_value_text_size"
            app:textStyle="medium" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/itin_card_detail_triplet_label_text_color"
            android:textSize="?attr/itin_card_detail_triplet_label_text_size"
            app:textStyle="light" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/location_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/itin_card_detail_triplet_label_text_color"
            android:textSize="?attr/itin_card_detail_triplet_label_text_size"
            app:textStyle="light" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="?attr/itin_card_summary_divider_color" />

    <ImageButton
        android:id="@+id/location_map_image_button"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/location_map_button_label_cont_desc"
        android:src="?attr/itin_card_detail_car_location_icon" />

</merge>