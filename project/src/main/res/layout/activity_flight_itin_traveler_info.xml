<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.expedia.bookings.itin.activity.FlightItinTravelerInfoActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.expedia.bookings.itin.widget.ItinToolbar
            android:id="@+id/widget_traveler_itin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/app_primary"
            android:minHeight="?attr/actionBarSize" />

        <android.support.design.widget.TabLayout
            android:id="@+id/widget_traveler_itin_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_primary"
            android:visibility="gone"
            app:tabIndicatorColor="@color/white"
            app:tabMode="scrollable"
            app:tabPaddingEnd="10dp"
            app:tabPaddingStart="10dp"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabTextColor="@color/gray100" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray100"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                style="@style/FlightItinTravelerHeadings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/traveler_information"
                android:layout_marginBottom="3dp"/>

            <com.expedia.bookings.itin.widget.FlightItinTravelerInfoWidget
                android:id="@+id/traveler_info_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.expedia.bookings.widget.TextView
                style="@style/FlightItinTravelerHeadings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/itin_flight_traveler_preferences"
                android:layout_marginBottom="3dp"/>

            <com.expedia.bookings.itin.widget.FlightItinTravelerPreferenceWidget
                android:id="@+id/preferences_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
