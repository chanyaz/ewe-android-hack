<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="@color/rail_background_color"
    tools:parentTag="RelativeLayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/right_container"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/rail_fare_title"
            style="@style/Core.Text.XLarge.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_checkout_info"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            tools:text="Anytime Single" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/fare_description"
            style="@style/Core.Text.Default.LightColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            tools:text="travel any time of day" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/amenities_link"
            style="@style/Rail.Text.Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"
            android:textAllCaps="true"
            android:text="@string/amenities" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/price_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rail_card_image"
                android:layout_height="20dp"
                android:layout_width="23dp"
                android:paddingTop="8dp"
                android:paddingRight="2dp"
                android:src="@drawable/rail_card_icon" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/rail_fare_price"
                style="@style/Core.Text.XLarge.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                tools:text="$50" />
        </LinearLayout>

        <Button
            android:id="@+id/select_button"
            style="@style/RailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select" />
    </LinearLayout>
</merge>