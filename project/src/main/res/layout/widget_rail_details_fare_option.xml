<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/rail_background_color"
    tools:orientation="vertical"
    tools:parentTag="LinearLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/rail_fare_title"
            style="@style/Core.Text.400.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_checkout_info"
            android:drawablePadding="6dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            tools:text="Standard Anytime Single, Any Off Peak Train" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/fare_description"
            style="@style/Core.Text.200.LightColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rail_fare_title"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/right_container"
            android:layout_marginRight="16dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            tools:text="travel any time of day." />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/amenities_link"
            style="@style/Rail.Text.Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fare_description"
            android:layout_alignParentLeft="true"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"
            android:textAllCaps="true"
            android:text="@string/amenities" />

        <LinearLayout
            android:id="@+id/right_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rail_fare_title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/price_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rail_card_image"
                    android:layout_height="20dp"
                    android:layout_width="23dp"
                    android:paddingTop="8dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/rail_card_icon" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/rail_fare_price"
                    style="@style/Core.Text.400.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="4dp"
                    android:paddingTop="5dp"
                    tools:text="$50" />
            </LinearLayout>

            <Button
                android:id="@+id/select_button"
                style="@style/RailButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="12dp"
        android:background="@color/rail_divider_bar_color" />
</merge>