<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.expedia.account.PanningImageView
        android:id="@+id/parallax_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.expedia.account.AccountView
        android:id="@+id/account_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:acct__flavor_text_color="@color/acct__flavor_text"
        app:acct__input_text_error_color="@color/acct__bg_input_text_error"
        app:acct__input_text_hint_color="@color/acct__bg_input_text_hint"
        app:acct__input_text_good_color="@color/acct__bg_input_text_good"
        app:acct__input_text_default_color="@color/acct__bg_input_text_default"
        app:acct__toolbar_icon_color="@color/toolbar_icon"
        app:acct__user_info_text_color="@color/acct__user_info_text_color"
        app:acct__welcome_text_color="@color/acct__user_info_text_color"
        app:acct__sign_in_button_text_color="?skin_acctSignInButtonTextColor"
        app:acct__sign_in_button_background_drawable="@drawable/acct__bg_btn_sign_in"
        app:acct__checkmark_good_drawable="@drawable/acct__ic_checkmark"
        app:acct__checkmark_warning_drawable="@drawable/acct__ic_warning"
        app:acct__logo_small_drawable="?skin_acctLogoSmallDrawable"
        app:acct__logo_large_drawable="@drawable/acct__logo_large"
        app:acct__logo_text_drawable="?skin_acctLogoTextDrawable"
        app:acct__logo_text_drawable_margin_left="?skin_acctLogoTextDrawableMarginLeft"
        app:acct__logo_text_drawable_margin_top="?skin_acctLogoTextDrawableMarginTop"
        app:acct__brand="@string/app_name"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login_extension_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/extender_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>