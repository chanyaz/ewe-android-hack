<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.expedia.bookings.hotel.widget.HotelChangeDateCalendarPicker
        android:id="@+id/change_dates_picker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/calendar_height_without_time_slider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:calendarBaseColor="@color/gray900"
        app:calendarDaySelectionFillColor="@android:color/white"
        app:calendarDaysOfWeekColor="?attr/primary_color"
        app:calendarHeaderShowInstructions="true"
        app:calendarHeaderTextColor="?attr/primary_color"
        app:calendarHeaderTextSize="16dp"
        app:calendarHighlightColor="?attr/primary_color"
        app:calendarHighlightInverseColor="?attr/primary_color"
        app:calendarInvalidDaysColor="@color/gray400"
        app:calendarLayout="@layout/calendar_layout"
        app:calendarSecondaryColor="@color/gray900"
        app:calendarTodayColor="?attr/primary_color"
        app:calendarToolTipBackground="@drawable/toolbar_bg"
        app:calendarToolTipEnabled="true"
        app:calendarToolTipTailDrawable="@drawable/toolbar_arrow"
        app:calendarWeekSelectionColor="?attr/primary_color" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/change_dates_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/change_dates_picker"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="@drawable/hotel_secondary_ripple_button"
        android:text="@string/done"
        android:textColor="?primary_color"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"/>
</android.support.constraint.ConstraintLayout>
