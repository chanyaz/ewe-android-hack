<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/last_name_layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.expedia.bookings.widget.traveler.TravelerEditText
            android:id="@+id/last_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_name"
            android:inputType="textPersonName|textCapWords"
            android:maxLines="1"
            android:textSize="@dimen/traveler_input_text_size"
            android:nextFocusForward="@+id/first_name_input"
            app:error_cont_desc="@string/accessibility_cont_desc_role_error" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/first_name_layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.expedia.bookings.widget.traveler.TravelerEditText
            android:id="@+id/first_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/first_name"
            android:inputType="textPersonName|textCapWords"
            android:maxLines="1"
            android:nextFocusForward="@+id/email_input"
            android:textSize="@dimen/traveler_input_text_size"
            app:error_cont_desc="@string/accessibility_cont_desc_role_error" />
    </android.support.design.widget.TextInputLayout>

</merge>