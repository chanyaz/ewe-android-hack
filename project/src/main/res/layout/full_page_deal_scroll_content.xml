<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deal_title"
            style="@style/Core.Text.600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:textColor="@color/soft_prompt_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deal_instructions"
            style="@style/Core.Text.200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/soft_prompt_text_color" />

        <TextView
            android:id="@+id/promo_code"
            style="@style/Core.Text.600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/gray600"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:id="@+id/copy_code_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/brand_primary"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/in_app_cta_shop_deal_text_view"
                style="@style/Core.Text.200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/full_page_deal_copy_code_button"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/details_horizontal_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray400" />

        <TextView
            android:id="@+id/details_title"
            style="@style/Core.Text.300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:gravity="left"
            android:textColor="@color/soft_prompt_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/offer_details_description"
            style="@style/Core.Text.200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:gravity="left"
            android:textColor="@color/soft_prompt_text_color" />

        <View
            android:id="@+id/terms_horizontal_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray400" />

        <TextView
            android:id="@+id/terms_title"
            style="@style/Core.Text.100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:textColor="@color/soft_prompt_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/terms_description"
            style="@style/Core.Text.100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="left"
            android:paddingBottom="60dp"
            android:textColor="@color/soft_prompt_text_color" />

    </LinearLayout>
</merge>
