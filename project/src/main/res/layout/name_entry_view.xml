<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.expedia.bookings.widget.traveler.TravelerEditText
            android:id="@+id/first_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:hint="@string/first_name"
            android:inputType="textPersonName|textCapWords"
            android:nextFocusForward="@+id/last_name_input"
            android:maxLines="1"
            app:error_cont_desc="@string/first_name_validation_error_message"
            android:textSize="@dimen/traveler_input_text_size" />

        <com.expedia.bookings.widget.traveler.TravelerEditText
            android:id="@+id/middle_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="@string/middle_name_optional"
            android:inputType="textPersonName|textCapWords"
            android:nextFocusForward="@+id/last_name_input"
            android:maxLines="1"
            android:textSize="@dimen/traveler_input_text_size"
            app:error_cont_desc="@string/middle_name_validation_error_message"/>
    </LinearLayout>

    <com.expedia.bookings.widget.traveler.TravelerEditText
        android:id="@+id/last_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/last_name"
        android:inputType="textPersonName|textCapWords"
        android:maxLines="1"
        android:textSize="@dimen/traveler_input_text_size"
        app:error_cont_desc="@string/last_name_validation_error_message"/>

</merge>