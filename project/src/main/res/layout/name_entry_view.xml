<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.expedia.bookings.widget.traveler.TravelerEditText
            android:id="@+id/first_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:hint="@string/first_name"
            android:inputType="textPersonName|textCapWords"
            android:nextFocusForward="@+id/last_name_input"
            android:singleLine="true"
            android:textSize="@dimen/traveler_input_text_size" />

        <com.expedia.bookings.widget.traveler.TravelerEditText
            android:id="@+id/middle_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="@string/middle_name"
            android:inputType="textPersonName|textCapWords"
            android:nextFocusForward="@+id/last_name_input"
            android:singleLine="true"
            android:textSize="@dimen/traveler_input_text_size" />
    </LinearLayout>

    <com.expedia.bookings.widget.traveler.TravelerEditText
        android:id="@+id/last_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/last_name"
        android:inputType="textPersonName|textCapWords"
        android:nextFocusForward="@+id/edit_phone_number"
        android:singleLine="true"
        android:textSize="@dimen/traveler_input_text_size" />

</merge>