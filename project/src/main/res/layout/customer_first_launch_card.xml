<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/HomeScreenCardViewStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/customer_first_we_are_here_for_you"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/reward_image_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/customer_first_container"
            android:layout_alignTop="@+id/customer_first_container"
            android:scaleType="fitXY"
            android:src="@drawable/customer_first_background" />

        <LinearLayout
            android:id="@+id/customer_first_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/launch_tile_padding"
            android:paddingTop="@dimen/launch_tile_padding">

            <TextView
                android:id="@+id/customer_first_text"
                style="@style/Core.Text.500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_facebook_white_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_twitter_white_icon" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/launch_tile_padding"
                android:src="@drawable/ic_customer_first_image" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
