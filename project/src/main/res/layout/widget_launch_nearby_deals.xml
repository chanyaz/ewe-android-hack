<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECEFF1"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/nearby_deals_title"
            android:textColor="#222222"
            android:textSize="20sp" />

        <com.expedia.bookings.widget.RoundedCornerFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical|right"
            android:gravity="right"
            app:radius="4dp">

            <TextView
                android:id="@+id/see_all_hotels_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1C468D"
                android:padding="8dp"
                android:text="@string/nearby_deals_expand"
                android:textAllCaps="true"
                android:textColor="#ffffff" />

        </com.expedia.bookings.widget.RoundedCornerFrameLayout>

    </FrameLayout>

    <com.expedia.bookings.widget.NearbyHotelsWidget
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/nearby_hotel_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.expedia.bookings.widget.NearbyHotelsWidget>


</LinearLayout>