<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">
        <ViewStub
            android:id="@+id/traveler_flight_stub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_search_card_height"
            android:layout="@layout/traveler_flight_search_widget"
            app:input_text="@string/package_search_traveler_default_text" />
        <ViewStub
            android:id="@+id/traveler_stub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_search_card_height"
            android:layout="@layout/traveler_search_widget"
            app:input_text="@string/package_search_traveler_default_text" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/flight_cabin_class_card_view"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <ViewStub
            android:id="@+id/flight_cabin_class_stub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_search_card_height"
            android:layout="@layout/flight_cabin_class_widget" />
    </android.support.v7.widget.CardView>
</LinearLayout>
