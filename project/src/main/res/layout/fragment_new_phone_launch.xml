<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ActionBar spacer -->

        <View
            android:id="@+id/action_bar_space"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize" />

        <include
            android:id="@+id/lob_selector"
            layout="@layout/section_phone_launch_lob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action_bar_space" />

        <include
            android:id="@+id/nearby_deals_widget"
            layout="@layout/widget_launch_nearby_deals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/lob_selector"
            android:background="@drawable/drop_shadow" />

    </RelativeLayout>
</ScrollView>