<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/construction_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/construction_icon"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_renovation" />

        <LinearLayout
            android:id="@+id/construction_message_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.expedia.bookings.widget.TextView
                android:id="@+id/construction_top_text"
                style="@style/TextAppearance.RoomsAndRatesNoticeTop"
                android:text="@string/renovation_notice" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/construction_bottom_text"
                style="@style/TextAppearance.RoomsAndRatesNoticeBottom"
                android:text="@string/property_undergoing_renovations" />
        </LinearLayout>

        <ImageView
            android:id="@+id/construction_chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:src="@drawable/ic_renovation_resort_info" />
    </LinearLayout>

</merge>