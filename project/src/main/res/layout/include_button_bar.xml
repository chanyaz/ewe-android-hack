<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/button_bar_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/refinements_layout"
    android:background="@drawable/bg_dark_transparent_bar"
    android:clickable="true"
    android:orientation="horizontal"
    android:visibility="gone" >

    <com.mobiata.android.widget.AutoResizeTextView
        android:id="@+id/refinement_info_text_view"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"
        android:contentDescription="@string/cd_hotel_calendar_header"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:textColor="@android:color/white"
        app:maxTextSize="16sp"
        app:minTextSize="6sp" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_actionbar_button"
        android:drawableLeft="?attr/skin_actionBarCheckMarkDrawable"
        android:gravity="center_vertical"
        android:paddingBottom="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:text="@string/SEARCH"
        android:textColor="?attr/skin_actionBarButtonTextColor"
        android:textSize="12dp"
        android:textStyle="bold" />

</LinearLayout>
