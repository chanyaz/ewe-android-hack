<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/originLocationView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_arrow_forward"
            android:drawablePadding="23dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:textColor="@color/defaultTextColor"
            android:textSize="15sp"
            app:drawableTintColor="@color/defaultTextColor"
            tools:text="London" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/originLocationView"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp"
            android:background="@color/cardview_divider_lines_gray" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/destinationLocationView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/divider"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_arrow_back"
            android:drawablePadding="23dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:textColor="@color/defaultTextColor"
            android:textSize="15sp"
            app:drawableTintColor="@color/defaultTextColor"
            tools:text="Manchester" />
    </LinearLayout>

    <ImageView
        android:id="@+id/swapLocationsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="12dp"
        android:background="?attr/selectableItemBackground"
        android:padding="13dp"
        android:src="@drawable/ic_swap"
        android:tint="@color/mediumGray" />
</LinearLayout>