<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.expedia.bookings.widget.BundleOverviewHeader
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" />

    <com.expedia.bookings.packages.widget.BundleWidget
        android:id="@+id/bundle_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.expedia.bookings.packages.widget.MultiItemBottomCheckoutContainer
        android:id="@+id/bottom_checkout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom" />

    <ViewStub
        android:id="@+id/payment_fee_info_webview_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/payment_fee_info_webview"
        android:layout="@layout/payment_fee_info_webview_stub" />

    <ViewStub
        android:id="@+id/package_web_checkout_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/package_web_checkout"
        android:layout="@layout/web_checkout_view_stub" />
</merge>
