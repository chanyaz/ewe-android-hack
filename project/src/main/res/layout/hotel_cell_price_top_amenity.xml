<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/price_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/strike_through_price"
            style="@style/Core.Text.300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/result_cells_strike_through_price_gray_text" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/price_per_night"
            style="@style/Core.Text.400.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/price_per_descriptor"
            style="@style/Core.Text.200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/top_amenity"
        style="@style/Core.Text.200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/result_cells_gray_text"/>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/sold_out_text"
        style="@style/Core.Text.300.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/result_cells_gray_text"
        android:text="@string/hotel_sold_out_label"/>
</merge>
