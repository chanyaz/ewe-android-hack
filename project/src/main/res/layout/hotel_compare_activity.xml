<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/hotel_compare_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/new_launch_toolbar_background_color"
        android:minHeight="?attr/actionBarSize"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:navigationIcon="@drawable/ic_close_white_24dp"
        app:navigationContentDescription="@string/member_deal_toolbar_close_cont_desc"
        app:title="Compare Hotels"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:contentInsetStartWithNavigation="0dp" />


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_compare_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/compare_thumbnail_recycler_view">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hotel_compare_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="bottom"
            android:background="@drawable/drop_shadow" />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/compare_thumbnail_recycler_view"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:visibility="gone"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/compare_button"

        tools:background="@color/gray300"
        tools:visibility="visible"/>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/compare_button"
        style="@style/Core.Text.400.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/white_back_gray_ripple"
        android:gravity="center_vertical"
        android:text="compare"
        android:textAllCaps="true"
        android:textColor="@color/app_primary"
        android:visibility="gone"

        app:layout_constraintTop_toTopOf="@id/compare_thumbnail_recycler_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        tools:visibility="visible"/>
</android.support.constraint.ConstraintLayout>