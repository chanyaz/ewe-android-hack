<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.support.v7.widget.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical|center"
        android:orientation="horizontal">

        <com.expedia.bookings.widget.HotelStarRatingFilterItem
            android:id="@+id/hotel_filter_rating_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            app:star_drawable_src="@drawable/filter_1star"
            app:circle_drawable_src="@drawable/btn_filter_rating_one_circle"
            app:star_cont_desc="@string/star_rating_one_cont_desc"
            app:circle_cont_desc="@string/star_circle_rating_one_cont_desc"
            tools:background="?attr/primary_color"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_gray" />

        <com.expedia.bookings.widget.HotelStarRatingFilterItem
            android:id="@+id/hotel_filter_rating_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:clickable="true"
            app:star_drawable_src="@drawable/filter_2star"
            app:circle_drawable_src="@drawable/btn_filter_rating_two_circle"
            app:star_cont_desc="@string/star_rating_two_cont_desc"
            app:circle_cont_desc="@string/star_circle_rating_two_cont_desc"
            tools:background="?attr/primary_color"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_gray" />

        <com.expedia.bookings.widget.HotelStarRatingFilterItem
            android:id="@+id/hotel_filter_rating_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            app:star_drawable_src="@drawable/filter_3star"
            app:circle_drawable_src="@drawable/btn_filter_rating_three_circle"
            app:star_cont_desc="@string/star_rating_three_cont_desc"
            app:circle_cont_desc="@string/star_circle_rating_three_cont_desc"
            tools:background="?attr/primary_color"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_gray" />

        <com.expedia.bookings.widget.HotelStarRatingFilterItem
            android:id="@+id/hotel_filter_rating_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:clickable="true"
            app:star_drawable_src="@drawable/filter_4star"
            app:circle_drawable_src="@drawable/btn_filter_rating_four_circle"
            app:star_cont_desc="@string/star_rating_four_cont_desc"
            app:circle_cont_desc="@string/star_circle_rating_four_cont_desc"
            tools:background="?attr/primary_color" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_gray" />

        <com.expedia.bookings.widget.HotelStarRatingFilterItem
            android:id="@+id/hotel_filter_rating_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:clickable="true"
            app:star_drawable_src="@drawable/filter_5star"
            app:circle_drawable_src="@drawable/btn_filter_rating_five_circle"
            app:star_cont_desc="@string/star_rating_five_cont_desc"
            app:circle_cont_desc="@string/star_circle_rating_five_cont_desc"
            tools:background="?attr/primary_color"/>
    </LinearLayout>
</merge>
