<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BACKGROUND CONTAINERS -->

    <com.expedia.bookings.widget.TouchableFrameLayout
        android:id="@+id/bg_dest_image_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/search_bottom_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tablet_search_bottom_gradient"/>

    <!-- CONTROLLER CONTAINERS -->

    <!-- NOTE: The z-order of the hotels/flights controllers cannot be changed unless
                corresponding animation code is updated, otherwise touch handling
                and visibilities will get wonky -->

    <com.expedia.bookings.widget.TouchableFrameLayout
        android:id="@+id/full_width_hotels_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.TouchableFrameLayout
        android:id="@+id/full_width_flights_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/overview_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="gone" />

    <!-- TRIP BUCKET -->

    <com.expedia.bookings.widget.TouchableFrameLayout
        android:id="@+id/trip_bucket_container"
        android:background="@drawable/bg_tablet_trip_bucket_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.TouchableFrameLayout
        android:id="@+id/full_width_search_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
