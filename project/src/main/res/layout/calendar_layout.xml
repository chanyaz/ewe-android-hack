<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/left"
            android:tint="?attr/primary_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="5"
            android:padding="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/current_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="September 2015"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:textColor="@color/calendar_instruction_text_color"
                android:visibility="gone"
                android:textSize="12sp"
                tools:text="Sep 25 - Select return date"
                tools:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/next_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/right"
            android:tint="?attr/primary_color" />
    </LinearLayout>

    <com.mobiata.android.time.widget.DaysOfWeekView
        android:id="@+id/days_of_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.mobiata.android.time.widget.MonthView
        android:id="@+id/month"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:textStyle="bold" />

    <ViewStub
        android:id="@+id/holiday_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/holiday_calendar_widget"/>

</merge>
