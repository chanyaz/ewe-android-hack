<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/leanplum_dialog_image_width"
    android:layout_height="@dimen/gt_leanplum_dialog_height"
    android:layout_margin="40dp"
    android:orientation="vertical"
    android:minHeight="100dp"
    android:minWidth="100dp"
    android:background="@drawable/leanplum_dialog_background">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/leanplumtemplate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:textStyle="medium"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <ImageView
            android:id="@+id/leanplum_car"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/ic_leanplum_car"
            android:layout_marginRight="24dp" />

        <Button
            android:id="@+id/leanplumtemplate_message1"
            android:layout_toRightOf="@id/leanplum_car"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/leanplum_dialog_button"
            style="?android:borderlessButtonStyle" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/leanplum_ground_transport"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/ic_leanplum_ground_transport"
            android:layout_marginRight="24dp" />

        <Button
            android:id="@+id/leanplumtemplate_message2"
            android:layout_toRightOf="@id/leanplum_ground_transport"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/leanplum_dialog_button"
            style="?android:borderlessButtonStyle" />
    </RelativeLayout>
</LinearLayout>