<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.expedia.bookings.presenter.packages.PackageSearchPresenter
        android:id="@+id/widget_package_search_presenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_results_list_bg_gray" />

    <com.expedia.bookings.presenter.packages.PackageErrorPresenter
        android:id="@+id/widget_package_hotel_errors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_results_list_bg_gray"
        android:visibility="gone"/>

    <com.expedia.bookings.presenter.packages.PackageOverviewPresenter
        android:id="@+id/widget_bundle_overview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_results_list_bg_gray"
        android:visibility="gone" />

    <com.expedia.bookings.presenter.packages.PackageConfirmationPresenter
        android:id="@+id/widget_package_confirmation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/packages_primary_color"
        android:visibility="gone" />

</merge>