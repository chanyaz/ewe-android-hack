<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:textColor="@color/itin_flight_manage_booking_header_color"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"
        android:text="@string/itin_flight_airline_support_widget_title_text"
        app:textStyle="medium" />

    <android.support.v7.widget.CardView
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/airline_support_help_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textColor="@color/itin_text_common_color"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:background="?attr/itin_card_summary_divider_color" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/itin_flight_check_in_icon"
                android:drawablePadding="12dp"
                android:text="@string/itin_flight_airline_support_widget_check_in_text"
                android:textColor="@color/itin_text_sub_color"
                android:textSize="14sp" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/itin_flight_baggage_icon"
                android:drawablePadding="12dp"
                android:text="@string/itin_flight_airline_support_widget_add_baggage_text"
                android:textColor="@color/itin_text_sub_color"
                android:textSize="14sp" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/itin_flight_meals_icon"
                android:drawablePadding="12dp"
                android:text="@string/itin_flight_airline_support_widget_reserve_meals_text"
                android:textColor="@color/itin_text_sub_color"
                android:textSize="14sp" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/itin_flight_chair_icon"
                android:drawablePadding="12dp"
                android:text="@string/itin_flight_airline_support_widget_select_seats_text"
                android:textColor="@color/itin_text_sub_color"
                android:textSize="14sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="?attr/itin_card_summary_divider_color" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/airline_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/itin_text_common_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:background="?attr/itin_card_summary_divider_color" />


            <com.expedia.bookings.widget.TextView
                android:id="@+id/airline_support_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/itin_text_common_color"
                android:textSize="14sp"
                android:visibility="gone"
                app:textStyle="medium" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/airline_support_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/itin_text_common_color"
                android:textSize="14sp"
                android:visibility="gone"
                app:textStyle="medium" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/airline_support_itinerary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/itin_text_common_color"
                android:textSize="14sp"
                android:visibility="gone"
                app:textStyle="medium" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/airline_call_support_action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/itin_call_support"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:textAllCaps="true"
                android:textColor="?attr/itin_card_summary_action_button_text_color"
                android:textSize="?attr/itin_card_summary_action_button_text_size"
                android:visibility="gone"
                android:textStyle="normal" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/airline_customer_support_site_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/itin_website_icon"
                android:drawablePadding="8dp"
                android:textColor="?attr/itin_card_summary_action_button_text_color"
                android:textSize="?attr/itin_card_summary_action_button_text_size"
                android:visibility="gone"
                android:textStyle="normal" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
