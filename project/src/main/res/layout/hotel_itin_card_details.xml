<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.expedia.bookings.widget.itin.HotelItinToolbar
            android:id="@+id/widget_hotel_itin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/app_primary"
            android:minHeight="?attr/actionBarSize" />
    </android.support.design.widget.AppBarLayout>


    <com.expedia.bookings.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray1"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Hotel thumbnail-->
            <com.expedia.bookings.widget.itin.HotelItinImage
                android:id="@+id/hotel_itin_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

            <!--Check in/out info-->
            <com.expedia.bookings.widget.itin.HotelItinCheckInCheckOutDetails
                android:id="@+id/widget_hotel_itin_checkin_checkout_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--Map and directions-->
            <com.expedia.bookings.widget.itin.HotelItinLocationDetails
                android:id="@+id/widget_hotel_itin_location_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <!--Room details-->
            <com.expedia.bookings.widget.itin.HotelItinRoomDetails
                android:id="@+id/widget_hotel_itin_room_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

            <!--Booking details-->
            <com.expedia.bookings.widget.itin.HotelItinBookingDetails
                android:id="@+id/widget_hotel_itin_booking_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </com.expedia.bookings.widget.ScrollView>

</LinearLayout>

