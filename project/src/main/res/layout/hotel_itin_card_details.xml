<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.expedia.bookings.widget.itin.HotelItinToolbar
        android:id="@+id/widget_hotel_itin_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_primary"
        android:layout_gravity="top"
        android:minHeight="?attr/actionBarSize"/>

    <com.expedia.bookings.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray1"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Hotel thumbnail-->
            <com.expedia.bookings.widget.itin.HotelItinImage
                android:id="@+id/hotel_itin_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--Check in/out info-->

            <!--Map and directions-->

            <!--Room details-->
            <com.expedia.bookings.widget.itin.HotelItinRoomDetails
                android:id="@+id/widget_hotel_itin_room_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--Booking details-->

        </LinearLayout>

    </com.expedia.bookings.widget.ScrollView>

</LinearLayout>

