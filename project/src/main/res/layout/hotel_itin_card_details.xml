<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.expedia.bookings.itin.widget.HotelItinToolbar
            android:id="@+id/widget_hotel_itin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/app_primary"
            android:minHeight="?attr/actionBarSize" />
    </android.support.design.widget.AppBarLayout>


    <com.expedia.bookings.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray1"
        android:fadingEdge="none">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <!--Hotel thumbnail-->
            <com.expedia.bookings.itin.widget.HotelItinImage
                android:id="@+id/hotel_itin_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--Check in/out info-->
            <com.expedia.bookings.itin.widget.HotelItinCheckInCheckOutDetails
                android:id="@+id/widget_hotel_itin_checkin_checkout_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>

            <!--Map and directions-->
            <com.expedia.bookings.itin.widget.HotelItinLocationDetails
                android:id="@+id/widget_hotel_itin_location_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <!--Room details-->
            <com.expedia.bookings.widget.TextView
                android:id="@+id/itin_hotel_room_details_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:text="@string/itin_hotel_details_room_details_title_text"
                android:textColor="@color/gray9"
                android:textSize="18sp"
                app:textStyle="medium" />

            <com.expedia.bookings.itin.widget.HotelItinRoomDetails
                android:id="@+id/widget_hotel_itin_room_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <!--Booking details-->
            <com.expedia.bookings.itin.widget.HotelItinBookingDetails
                android:id="@+id/widget_hotel_itin_booking_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </com.expedia.bookings.widget.ScrollView>

</LinearLayout>

