<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/hotel_appwidget_config_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/new_launch_toolbar_background_color"
        android:minHeight="?attr/actionBarSize"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:title="Configure Hotel Tracker Widget"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:contentInsetStartWithNavigation="0dp" />

    <FrameLayout
        android:id="@+id/hotel_appwidget_config_dates_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        app:layout_constraintTop_toBottomOf="@+id/hotel_appwidget_config_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <com.expedia.bookings.widget.CalendarWidgetV2
            android:id="@+id/hotel_appwidget_config_calendar_card"
            style="@style/MaterialCardTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_search_card_height"
            android:contentDescription="@string/base_search_dates_cont_desc"
            app:input_icon="@drawable/search_form_icon_calendar"
            app:input_icon_tint_color="@color/search_screen_icon_color_v2"
            app:input_text="@string/select_dates" />
    </FrameLayout>

    <com.expedia.bookings.widget.TextView
        style="@style/SearchButtonStyle"
        android:id="@+id/hotel_appwidget_config_done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/done"
        android:textAllCaps="true"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>