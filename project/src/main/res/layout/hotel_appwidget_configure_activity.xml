<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/hotel_appwidget_config_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/new_launch_toolbar_background_color"
        android:minHeight="?attr/actionBarSize"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:title="Configure Hotel Tracker Widget"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:contentInsetStartWithNavigation="0dp" />

    <TextView
        style="@style/Core.Text.500.Medium"
        android:id="@+id/date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="Dates"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_appwidget_config_toolbar"/>

    <FrameLayout
        android:id="@+id/hotel_appwidget_config_dates_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        app:layout_constraintTop_toBottomOf="@+id/date_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <com.expedia.bookings.widget.CalendarWidgetV2
            android:id="@+id/hotel_appwidget_config_calendar_card"
            style="@style/MaterialCardTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_search_card_height"
            android:contentDescription="@string/base_search_dates_cont_desc"
            app:input_icon="@drawable/search_form_icon_calendar"
            app:input_icon_tint_color="@color/search_screen_icon_color_v2"
            app:input_text="@string/select_dates" />
    </FrameLayout>

    <TextView
        style="@style/Core.Text.500.Medium"
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="Notifications"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_appwidget_config_dates_card"/>

    <TextView
        android:id="@+id/price_increase_push_text"
        style="@style/Core.Text.300"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:text="Send me a push if a hotel price increase"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/price_increase_check_box"
        app:layout_constraintTop_toBottomOf="@+id/notification_title"/>

    <CheckBox
        android:id="@+id/price_increase_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:checked="true"

        app:layout_constraintTop_toTopOf="@id/price_increase_push_text"
        app:layout_constraintBaseline_toBaselineOf="@id/price_increase_push_text"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/divider_between_increase_decrease"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/app_divider_on_white"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        app:layout_constraintTop_toBottomOf="@id/price_increase_push_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/price_decrease_push_text"
        style="@style/Core.Text.300"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:text="Send me a push if a hotel price decreases"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/price_decrease_check_box"
        app:layout_constraintTop_toBottomOf="@+id/divider_between_increase_decrease"/>

    <CheckBox
        android:id="@+id/price_decrease_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:checked="true"

        app:layout_constraintLeft_toRightOf="@+id/price_decrease_push_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/price_decrease_push_text"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        style="@style/Core.Text.500.Medium"
        android:id="@+id/update_interval_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="Refresh Period"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_decrease_push_text"/>

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/update_interval_title"
        app:layout_constraintLeft_toLeftOf="@id/update_interval_title"
        app:layout_constraintRight_toRightOf="parent">

        <RadioButton
            android:id="@+id/hourly_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh Prices Every 12 hours"/>

        <RadioButton
            android:id="@+id/daily_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh Prices Daily"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/weekly_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh Prices Weekly"/>
    </RadioGroup>


    <com.expedia.bookings.widget.TextView
        style="@style/SearchButtonStyle"
        android:id="@+id/hotel_appwidget_config_done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/done"
        android:textAllCaps="true"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>