<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/traveler_layout_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="13"
            android:maxLines="1"
            android:textSize="@dimen/traveler_input_text_size">

            <com.expedia.bookings.widget.traveler.TravelerEditText
                android:id="@+id/traveler_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="13"
                android:maxLines="1"
                android:textSize="@dimen/traveler_input_text_size"
                android:hint="@string/known_traveler_number"
                android:visibility="gone" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/traveler_number_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:contentDescription="@string/traveler_number_icon_cont_desc"
            android:paddingTop="9dp"
            android:src="@drawable/ic_checkout_info"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/redress_layout_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_checkout_info"
            android:inputType="number"
            android:maxLength="7"
            android:maxLines="1"
            android:textSize="@dimen/traveler_input_text_size" >

            <com.expedia.bookings.widget.traveler.TravelerEditText
                android:id="@+id/redress_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="7"
                android:maxLines="1"
                android:hint="@string/redress_number"
                android:textSize="@dimen/traveler_input_text_size" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/redress_number_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:contentDescription="@string/redress_number_icon_cont_desc"
            android:paddingTop="9dp"
            android:src="@drawable/ic_checkout_info" />
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edit_assistance_preference_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.expedia.bookings.widget.accessibility.AccessibleEditTextForSpinner
            android:id="@+id/edit_assistance_preference_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/special_assistance"
            android:cursorVisible="false"
            android:drawableRight="@drawable/material_dropdown"
            android:inputType="text"
            android:maxLines="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:nextFocusForward="@+id/seat_preference_layout"
            android:textIsSelectable="true"
            android:textSize="@dimen/traveler_input_text_size" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/seat_preference_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.expedia.bookings.widget.accessibility.AccessibleEditTextForSpinner
            android:id="@+id/edit_seat_preference_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/seating_preference"
            android:cursorVisible="false"
            android:drawableRight="@drawable/material_dropdown"
            android:maxLines="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textIsSelectable="true"
            android:textSize="@dimen/traveler_input_text_size" />

    </android.support.design.widget.TextInputLayout>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/contact_airline_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:text="@string/contact_airline_message"
        android:textSize="@dimen/type_200_text_size"
        app:textStyle="normal" />
</merge>