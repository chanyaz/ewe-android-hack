<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tablet_white_pane_bg">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/results_list_header_height"
        android:layout_gravity="top"
        android:background="@color/tablet_white_pane_bg"
        android:paddingLeft="@dimen/hotel_flight_card_padding_x"
        android:paddingRight="@dimen/hotel_flight_card_padding_x"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/flight_histogram_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/flight_trends"
            android:textSize="@dimen/results_list_header_text_size"
            app:textStyle="light" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/flight_histogram_price_range"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/results_list_header_text_size"
            android:textColor="#666666"
            app:textStyle="light" />

        <LinearLayout
            android:id="@+id/flight_trends_tool_tip_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:duplicateParentState="true"
                android:paddingLeft="12dp"
                android:src="@drawable/flighttrends_info_icon" />

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/flight_histogram_progress_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/gde_tool_tip_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/gde_tool_tip_margin_top"
        android:layout_marginBottom="@dimen/gde_tool_tip_margin_top"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.expedia.bookings.widget.TextView
            style="@style/CenterCaptionedIcon.Caption.ToolTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/flight_trends_tool_tip" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/action_button"
            style="@style/CenterCaptionedIcon.ActionButton.Done"
            android:text="@string/DONE"/>

    </LinearLayout>

    <com.expedia.bookings.widget.TouchableFrameLayout
        android:id="@+id/histogram_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/results_list_header_height"/>

    <com.expedia.bookings.widget.CenteredCaptionedIcon
        android:id="@+id/gde_error_message_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:svg="@raw/ic_tablet_sold_out_flight"/>


</FrameLayout>

