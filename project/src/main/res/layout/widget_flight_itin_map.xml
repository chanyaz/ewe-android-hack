<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flight_itin_map_card_view"
    style="@style/MaterialCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:visibility="gone"
    app:cardUseCompatPadding="true"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--map goes here-->
        <com.expedia.bookings.itin.widget.GoogleMapsLiteMapView
            android:id="@+id/widget_flight_itin_map"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:clickable="true"
            android:contentDescription="@string/itin_flight_details_map_view_content_description"
            android:visibility="gone"
            tools:visibility="visible" />

        <!--terminal map and directions buttons-->
        <com.expedia.bookings.itin.widget.ItinActionButtons
            android:id="@+id/itinActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>