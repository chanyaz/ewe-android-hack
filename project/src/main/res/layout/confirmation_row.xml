<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="1dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/first_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.expedia.bookings.widget.TextView
                android:id="@+id/confirmation_title"
                style="@style/BundleOverviewWidgets.PrimaryText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/confirmation_title_supplement"
                android:textSize="@dimen/packages_bundle_overview_footer_primary_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/confirmation_subtitle"
            style="@style/BundleOverviewWidgets.SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</merge>

