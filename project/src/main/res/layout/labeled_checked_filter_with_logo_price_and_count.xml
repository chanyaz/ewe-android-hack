<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.PriceProminenceFilterWithLogoAndCount android:id="@+id/filter_categories_widget"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="@dimen/sort_filter_padding_checkmarks"
    android:paddingLeft="@dimen/sort_filter_padding_checkmarks"
    android:paddingRight="@dimen/sort_filter_padding_normal"
    android:paddingTop="@dimen/sort_filter_padding_checkmarks">

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/sort_filter_padding_checkmarks"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/airline_logo_image_view"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/sort_filter_padding_checkmarks"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/check_box"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@id/results_label"
        android:layout_toRightOf="@id/airline_logo_image_view"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:focusable="false"
            android:textColor="@color/packages_flight_filter_text"
            android:textSize="@dimen/package_sort_filter_label_text_size" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:focusable="false"
            android:maxLines="1"
            android:paddingTop="2dp"
            android:textColor="@color/gray600"
            android:textSize="12sp" />
    </LinearLayout>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/results_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/sort_filter_padding_small"
        android:layout_marginTop="8dp"
        android:background="@drawable/filter_number_bg_flights"
        android:ellipsize="end"
        android:focusable="false"
        android:maxLines="1"
        android:paddingBottom="4dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:paddingTop="4dp"
        android:textColor="@color/packages_flight_filter_text"
        android:textSize="14sp" />

</com.expedia.bookings.widget.PriceProminenceFilterWithLogoAndCount>
