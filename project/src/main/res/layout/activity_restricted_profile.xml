<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/background_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_background_dark" />

    <LinearLayout
        android:id="@+id/content_container"
        style="@style/MarginPoint"
        android:layout_height="match_parent"
        android:background="#28000000"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp" >

        <!-- Message -->

        <TextView
            android:id="@+id/restricted_profile_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:bufferType="spannable"
            android:gravity="center_horizontal"
            android:text="?attr/skin_restrictedProfileLoginMessage"
            android:textColor="#f3f3f3"
            android:textSize="@dimen/login_header_text_size" />
    </LinearLayout>

</FrameLayout>