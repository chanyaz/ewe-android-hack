<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobiata="http://schemas.android.com/apk/res-auto" >

    <!-- TODO move this View as a drawableLeft on the below TextView, maybe -->
    <View
        android:id="@+id/card_fee_divider"
        android:layout_width="@dimen/one_px_hdpi_two_px_xhdpi"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:background="@color/flight_card_lcc_fee_text_color"
        android:padding="4dp"
        android:visibility="gone" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/card_fee_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_lcc_fee_payment_entry"
        android:padding="4dp"
        android:textColor="@color/flight_card_lcc_fee_text_color"
        android:textSize="18sp"
        android:visibility="gone"
        mobiata:textStyle="bold" />

    <ImageView
        android:id="@+id/card_not_supported_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_lcc_exclamation_payment_entry"
        android:visibility="gone" />

</merge>