<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/amenity_layout_width"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/single_amenity_margin"
    android:layout_marginRight="@dimen/single_amenity_margin"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.larvalabs.svgandroid.widget.SVGView
        android:id="@+id/icon"
        android:layout_width="@dimen/amenity_icon_size"
        android:layout_height="@dimen/amenity_icon_size"
        app:zoomMode="fitDocument" />

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:shadowColor="@android:color/white"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="0.1"
        android:textColor="@color/amenity_text_color_large"
        android:textSize="@dimen/amenity_text_size_large" />
</LinearLayout>