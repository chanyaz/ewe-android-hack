<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/unexpanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/coupon_widget_content_description"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="20dp"
        android:text="@string/enter_coupon_code"
        android:textColor="@color/hotelsv2_enter_coupon_code_color"
        android:textSize="15sp"
        app:textStyle="medium" />

    <LinearLayout
        android:id="@+id/applied"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/applied_coupon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/material_applied_coupon_message"
                android:textColor="@color/hotelsv2_coupon_applied_color"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="14sp"
                app:textStyle="normal"/>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/applied_coupon_subtitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/applied_coupon_text"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="3sp"
                android:paddingRight="84dp"
                android:paddingTop="2dp"
                android:textColor="@color/gray900"
                app:layout_constraintTop_toBottomOf="@+id/applied_coupon_text"
                android:textSize="12sp"
                android:textStyle="normal" />

            <ImageButton
                android:id="@+id/remove_coupon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_clickable_row"
                android:contentDescription="@string/remove_coupon_button_content_description"
                android:paddingRight="19dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/applied_coupon_text"
                app:layout_constraintBottom_toBottomOf="@id/applied_coupon_subtitle_text"
                android:src="@drawable/widget_close"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/expanded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_checkout_background_color"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="12dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/textview_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:hint="@string/enter_coupon_code"
                android:importantForAccessibility="no">

                <com.expedia.bookings.widget.accessibility.AccessibleEditText
                    android:id="@+id/edit_coupon_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <include layout="@layout/stored_coupon_widget" />

    </LinearLayout>

</merge>

