<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    style="@style/MaterialCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/itin_hotel_details_room_collapsed_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/itin_hotel_details_room_details_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/gray900"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Deluxe room, 1 King bed"/>

            <ImageView
                android:id="@+id/itin_hotel_room_details_chevron"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/read_more"
                android:tint="@color/package_bundle_icon_color"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/expanded_room_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <View
                android:id="@+id/amenities_summary_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/itin_card_summary_divider_color"
                android:visibility="gone" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp">

                <LinearLayout
                    android:id="@+id/itin_hotel_room_amenities_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="?attr/itin_card_summary_divider_color" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/itin_hotel_details_reserved_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/gray900"
                android:textSize="14sp"
                tools:text="Reserved for"
                app:textStyle="medium" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/itin_hotel_details_guest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/gray600"
                android:textSize="12sp"
                tools:text="Frank Funston, 1 Adult"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/itin_card_summary_divider_color" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/gray900"
                android:textSize="14sp"
                app:textStyle="medium"
                android:text="@string/itin_hotel_room_details_requests_header"/>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/hotel_itin_room_details_requests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="12dp"
                android:textSize="12sp"
                android:textColor="@color/gray600"
                android:textStyle="normal"
                android:lineSpacingExtra="4dp"
                tools:text="Please leave some Champagne on the table"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/itin_card_summary_divider_color" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/gray600"
                android:textSize="12sp"
                android:textStyle="normal"
                android:text="@string/itin_hotel_room_details_requests_disclaimer"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/change_cancel_rules_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/itin_card_summary_divider_color" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/change_cancel_rules_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_info"
                android:gravity="center_vertical"
                android:text="@string/itin_hotel_check_cancel_rules_label"
                android:textColor="@color/app_primary"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
