<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    style="@style/MaterialCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    app:cardPreventCornerOverlap="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/itin_hotel_details_room_collapsed_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/itin_hotel_details_room_details_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:padding="16dp"
                android:textColor="@color/gray10"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/itin_hotel_room_details_chevron"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/itin_hotel_details_room_details_text"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/read_more"
                android:tint="@color/package_bundle_icon_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/expanded_room_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="?attr/itin_card_summary_divider_color" />

            <!--Amenities-->
            <com.expedia.bookings.widget.TextView
                android:id="@+id/itin_hotel_details_reserved_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/gray10"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/itin_hotel_details_guest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/gray6"
                android:textSize="12sp"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="?attr/itin_card_summary_divider_color" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/itin_hotel_details_requests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/gray10"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/itin_card_summary_divider_color" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/itin_hotel_details_request_disclaimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/gray10"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>