<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.expedia.bookings.widget.TextView
        android:id="@+id/insurance_name"
        style="@style/TextView.Itin.SectionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textSize="15sp"
        app:textStyle="light" />

    <View
        android:layout_width="@dimen/one_px_hdpi_two_px_xhdpi"
        android:layout_height="20dp"
        android:layout_margin="12dp"
        android:layout_weight="0"
        android:background="@color/itin_divider_color" />

    <ImageView
        android:id="@+id/insurance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:src="@drawable/ic_travel_insurance_globe" />

</LinearLayout>