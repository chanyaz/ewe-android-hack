<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="16dp" >

    <ImageView
        android:id="@+id/flight_status_bulb_glow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/flight_status_bulb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/flight_status_bulb"
        android:gravity="left|center"
        android:orientation="vertical" >

        <com.mobiata.android.widget.AutoResizeTextView
            android:id="@+id/flight_status_top_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/itin_card_summary_text_line1_color"
            android:textSize="?attr/itin_card_summary_text_line1_size"
            app:minTextSize="10sp" />

        <com.mobiata.android.widget.AutoResizeTextView
            android:id="@+id/flight_status_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="?attr/itin_card_summary_text_line2_color"
            android:textSize="?attr/itin_card_summary_text_line2_size"
            app:minTextSize="10sp"
            app:textStyle="light" />
    </LinearLayout>

</RelativeLayout>