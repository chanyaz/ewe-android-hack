<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/packages_result_background"
    android:orientation="vertical"
    android:importantForAccessibility="no"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/flight_results_advance_search_filter_header"
        style="@style/FlightsResultsDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"
        android:paddingLeft="21dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="21dp"
        android:text="@string/prices_roundtrip_label"
        android:visibility="gone"/>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/flight_results_price_header"
        style="@style/FlightsResultsDescriptionText.CenterHorizontal"
        android:layout_width="match_parent"
        android:importantForAccessibility="yes"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/prices_roundtrip_label" />
</LinearLayout>

