<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/packages_result_background"
    android:orientation="vertical"
    android:importantForAccessibility="no"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/flight_results_advance_search_filter_header"
        style="@style/FlightsResultsDescriptionText.CenterHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/default_text_color"
        android:importantForAccessibility="yes"
        android:visibility="gone" />

    <View
        android:id="@+id/header_divider_shadow"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:importantForAccessibility="no"
        android:background="@drawable/tb_shadow"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"/>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/flight_results_price_header"
        style="@style/FlightsResultsDescriptionText.CenterHorizontal"
        android:layout_width="match_parent"
        android:importantForAccessibility="yes"
        android:layout_height="wrap_content"
        android:text="@string/prices_roundtrip_label" />
</LinearLayout>

