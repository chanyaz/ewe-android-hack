<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/confirmation_background"
        android:fillViewport="true"
        android:focusable="false">

        <LinearLayout
            android:id="@+id/confirmation_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="?attr/actionBarSize"
            android:orientation="vertical">

            <include layout="@layout/confirmation_going_somewhere" />

            <android.support.v7.widget.CardView
                style="@style/MaterialCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_view_container_margin"
                android:layout_marginRight="@dimen/card_view_container_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.expedia.bookings.widget.ConfirmationRowCardView
                        android:id="@+id/outbound_leg_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        android:inputType="textMultiLine"
                        app:row_icon="@drawable/rails_outbound_icon"
                        app:row_icon_tint_color="@color/rail_regular_text_color" />

                    <include layout="@layout/grey_divider_bar" />

                    <com.expedia.bookings.widget.ConfirmationRowCardView
                        android:id="@+id/inbound_leg_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        android:inputType="textMultiLine"
                        app:row_icon="@drawable/rails_inbound_icon"
                        app:row_icon_tint_color="@color/rail_regular_text_color" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/confirmation_view_itin_button" />

</LinearLayout>
