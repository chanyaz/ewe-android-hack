<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.SectionFlightLeg xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="20dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/info_text_view"
        style="@style/FlightDetailsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="5dp"
        android:ellipsize="middle"
        android:maxLines="1" />

    <LinearLayout
        android:id="@+id/flight_leg_summary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_flight_card_search_results"
        android:orientation="vertical" >

        <include
            android:id="@+id/flight_leg_summary"
            layout="@layout/section_flight_leg_summary" />
    </LinearLayout>

</com.expedia.bookings.section.SectionFlightLeg>