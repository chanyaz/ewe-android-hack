<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/waypoint_type_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="0dp"
        android:layout_weight="0"
        android:src="@drawable/ic_departure_details" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <com.expedia.bookings.widget.TextView
            android:id="@+id/layover_airport_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/itin_white_text"
            android:textSize="16sp"
            app:textStyle="light" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/layover_terminal_gate_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/itin_offwhite_text"
            android:textSize="15sp"
            app:textStyle="light" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/layover_terminal_gate_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/itin_offwhite_text"
            android:textSize="15sp"
            app:textStyle="light" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/baggage_claim_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/itin_offwhite_text"
            android:textSize="15sp"
            app:textStyle="light" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/one_px_hdpi_two_px_xhdpi"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_weight="0"
        android:background="@color/itin_divider_color" />

    <ImageView
        android:id="@+id/terminal_map_or_directions_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        android:layout_weight="0"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/ic_airport_map_actions"
        android:contentDescription="@string/terminal_maps_directions_cont_desc"/>

</LinearLayout>