<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_background_light"
    android:orientation="vertical" >

    <!-- Title -->

    <com.expedia.bookings.widget.TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E8E8"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:textColor="?attr/skin_costSummaryHeaderTextColor"
        android:textSize="20sp"
        app:textStyle="bold" />

    <!-- Barberpoll divider -->

    <View
        android:id="@+id/title_divider_view"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <!-- Breakdown -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/breakdown_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp" />
    </ScrollView>

    <!-- Divider -->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_px_hdpi_two_px_xhdpi"
        android:background="@color/hotel_details_separator" />

    <!-- Done button -->

    <com.expedia.bookings.widget.TextView
        android:id="@+id/done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/bg_signin_dialog_button"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/done"
        android:textColor="@android:color/black" />

</LinearLayout>