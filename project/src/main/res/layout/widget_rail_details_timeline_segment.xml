<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    tools:background="@color/white">

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/rail_timeline_departure_time"
            style="@style/Core.Text.Large.Medium"
            android:layout_gravity="center"
            android:gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="09:10" />

        <ImageView
            android:id="@+id/rail_timeline_icon"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.expedia.bookings.widget.TextView
            android:layout_gravity="center"
            android:id="@+id/rail_timeline_arrival_time"
            style="@style/Core.Text.Large.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"/>
    </LinearLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/rail_primary_color" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/rail_timeline_departure_station"
            style="@style/Core.Text.Large.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="London Euston" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/rail_timeline_operator"
            style="@style/Core.Text.Default"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Virgin Trains" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/rail_timeline_duration"
            style="@style/Core.Text.Default.LightColor"
            android:gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="2h 32m" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/rail_timeline_arrival_station"
            style="@style/Core.Text.Large.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Crewe" />
    </LinearLayout>
</LinearLayout>