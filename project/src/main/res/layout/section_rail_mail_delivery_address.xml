<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/MaterialCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/temporary_medium_padding"
    app:cardUseCompatPadding="true">

    <com.expedia.bookings.section.SectionLocation
        android:id="@+id/mail_delivery_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <com.expedia.bookings.widget.accessibility.AccessibleSpinner
            android:id="@+id/edit_country_spinner"
            style="@style/Core.Widget.Spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:spinner_label="@string/address_state_country_cont_desc" />

        <com.expedia.bookings.section.RailDeliverySpinnerWithValidationIndicator
            android:id="@+id/edit_delivery_option_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.expedia.bookings.widget.accessibility.AccessibleEditText
            android:id="@+id/edit_address_line_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/traveler_input_bottom_margin"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/address_line_one_hint"
            android:imeOptions="actionNext"
            android:inputType="textPostalAddress|textCapWords"
            android:nextFocusForward="@+id/edit_address_city"
            android:paddingBottom="11dp"
            android:textSize="@dimen/traveler_input_text_size" />

        <com.expedia.bookings.widget.accessibility.AccessibleEditText
            android:id="@+id/edit_address_line_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/traveler_input_bottom_margin"
            android:hint="@string/address_line_two_hint"
            android:imeOptions="actionNext"
            android:inputType="textPostalAddress|textCapWords"
            android:nextFocusForward="@id/edit_address_city"
            android:paddingBottom="11dp"
            android:textSize="@dimen/traveler_input_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">


            <com.expedia.bookings.widget.accessibility.AccessibleEditText
                android:id="@id/edit_address_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/traveler_input_bottom_margin"
                android:hint="@string/address_city_hint"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:minHeight="43dp"
                android:paddingBottom="11dp"
                android:textSize="@dimen/traveler_input_text_size" />

            <com.expedia.bookings.widget.accessibility.AccessibleEditText
                android:id="@id/edit_address_postal_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/address_postal_code_hint"
                android:imeOptions="actionDone"
                android:minHeight="43dp"
                android:textSize="@dimen/traveler_input_text_size" />
        </LinearLayout>

    </com.expedia.bookings.section.SectionLocation>
</android.support.v7.widget.CardView>