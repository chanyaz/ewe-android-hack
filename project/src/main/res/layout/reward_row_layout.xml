<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="18dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="18dp">

    <TextView
        android:id="@+id/reward_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AccountRewardRowTitle"
        tool:text="Hotel nights"
        tool:background="@color/white"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="9dp">

        <TextView
            android:id="@+id/reward_row_current_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AccountRewardRowSubtitle"
            android:text="2 nights stayed"
            android:layout_weight="1"
            tool:background="@color/white"/>

        <TextView
            android:id="@+id/reward_row_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AccountRewardRowSubtitle"
            android:text="of 7 nights"
            tool:background="@color/white"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/reward_progress_bar"
        style="@style/AccountRewardRowProgressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:progress="0"
        android:max="1000"/>

    <TextView
        android:id="@+id/reward_row_left_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/AccountRewardRowFootnote"
        tool:text="5 nights left"
        tool:background="@color/white"
        android:layout_gravity="right"/>

</LinearLayout>