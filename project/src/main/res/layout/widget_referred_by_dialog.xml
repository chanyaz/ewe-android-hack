<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/app_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/blue_gift"
        android:tint="@color/exp_launch_secondary"/>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="You have 20% off!"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:textStyle="bold" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Since you're a friend of a friend, you get 20% off your first hotel booking. Log in to Expedia, find your perfect hotel, and your coupon will be automatically applied at checkout."
        android:textColor="@color/gray6"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:textSize="16sp" />

    <Button
        android:id="@+id/review_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Log In"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/feedback_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Create an account"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/no_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Not now"
        android:textAllCaps="false"
        android:textSize="16sp"/>


</LinearLayout>
