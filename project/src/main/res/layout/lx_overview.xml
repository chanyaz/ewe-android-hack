<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?attr/actionBarSize"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/summary_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_view_container_margin"
                android:background="@drawable/card_background"/>

            <com.expedia.bookings.lx.presenter.LxCheckoutPresenterV2
                android:id="@+id/checkout_presenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true" />
        </LinearLayout>

        <com.expedia.bookings.widget.CVVEntryWidget
            android:id="@+id/cvv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3A424C"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">

        <View
            android:id="@+id/toolbar_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/skin_lxPrimaryColor" />

        <com.expedia.bookings.widget.CheckoutToolbar
            android:id="@+id/checkout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/primary_color"
            android:minHeight="?attr/actionBarSize"
            app:titleTextAppearance="?attr/toolbar_title_style"
            app:contentInsetStartWithNavigation="0dp" />

        <View
            android:id="@+id/toolbar_dropshadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_dropshadow_height"
            android:background="@drawable/tb_shadow" />
    </LinearLayout>

</merge>
