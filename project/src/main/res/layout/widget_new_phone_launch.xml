<?xml version="1.0" encoding="utf-8"?><!-- TODO This entire layout is gonna change. it just placeholder, all colors, heights are just placeholders. -->
<com.expedia.bookings.widget.NewPhoneLaunchWidget
    android:id="@+id/new_phone_launch_widget"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- This View (id: lobView) will be replaced with whatever view ends up actually containing the lines of business
       This view just has dummy values for now (height and bg)-->
        <View
            android:id="@+id/lobView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/new_launch_toolbar_background_color"
            app:layout_scrollFlags="scroll" />


    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/launch_list_widget"
        layout="@layout/widget_launch_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <View
        android:id="@+id/darkness"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="#000000"
        android:visibility="invisible" />

    <!-- TODO: replace with actual FAB exactly how we want it -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="@dimen/new_launch_screen_fab_height"
        android:layout_height="@dimen/new_launch_screen_fab_height"
        android:layout_marginBottom="@dimen/new_launch_screen_fab_bottom_margin"
        android:layout_marginRight="24dp"
        app:layout_anchor="@id/launch_list_widget"
        android:visibility="gone"
        app:layout_anchorGravity="bottom|right|end" />

</com.expedia.bookings.widget.NewPhoneLaunchWidget>