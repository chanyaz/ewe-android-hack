<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/itin_action_button_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/itin_action_vertical_divider"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/itin_action_button_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:textColor="@color/exp_launch_blue"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Terminal maps" />
    </LinearLayout>

    <View
        android:id="@+id/itin_action_vertical_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="@color/gray200"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/itin_action_button_left"
        app:layout_constraintRight_toLeftOf="@+id/itin_action_button_right"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/itin_action_button_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/itin_action_vertical_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/itin_action_button_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:textColor="@color/exp_launch_blue"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Directions" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>