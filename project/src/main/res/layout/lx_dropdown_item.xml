<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spinner_ripple"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/lx_dropdown_imageView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:paddingLeft="9dp" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lx_dropdown_imageView"
        android:textColor="?attr/skin_lxPrimaryColor"/>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/city_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title_textview"
        android:layout_below="@+id/title_textview"
        android:textColor="?attr/skin_lxPrimaryColor"
        android:textSize="12sp"/>

</RelativeLayout>