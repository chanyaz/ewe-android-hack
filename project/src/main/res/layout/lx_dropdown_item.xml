<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spinner_ripple"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/lx_dropdown_imageView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:paddingLeft="9dp" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/display_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lx_dropdown_imageView"
        android:textColor="@color/lx_primary_color"/>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/city_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/display_name_textView"
        android:layout_below="@+id/display_name_textView"
        android:textColor="@color/lx_primary_color"
        android:textSize="12sp"/>

</RelativeLayout>