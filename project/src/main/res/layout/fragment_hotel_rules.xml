<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp" >

        <TextView
            android:id="@+id/terms_and_conditions"
            style="@style/LegalInformationHeader"
            android:text="@string/terms_and_conditions" />

        <View style="@style/LegalInformationDivider.Grey" />

        <TextView
            android:id="@+id/terms_of_booking"
            style="@style/LegalInformationHeader"
            android:text="@string/Terms_of_Booking" />

        <View
            android:id="@+id/terms_of_booking_divider"
            style="@style/LegalInformationDivider.Grey" />

        <TextView
            android:id="@+id/privacy_policy"
            style="@style/LegalInformationHeader"
            android:text="@string/privacy_policy" />

        <View
            android:id="@+id/best_price_guarantee_divider"
            style="@style/LegalInformationDivider.Grey" />

        <TextView
            android:id="@+id/best_price_guarantee"
            style="@style/LegalInformationHeader"
            android:text="?attr/skin_bestPriceGuaranteeString" />

        <View
            android:id="@+id/atol_information_divider"
            style="@style/LegalInformationDivider.Grey" />

        <TextView
            android:id="@+id/atol_information"
            style="@style/LegalInformationHeader"
            android:text="@string/lawyer_label_atol_information" />

        <TextView
            android:id="@+id/cancellation_policy_header_text_view"
            style="@style/LegalInformationTextView.Blue"
            android:text="@string/cancellation_policy" />

        <View style="@style/LegalInformationDivider.Blue" />

        <TextView
            android:id="@+id/cancellation_policy_text_view"
            style="@style/LegalInformationTextView" />

        <TextView
            android:id="@+id/wallet_promo_header"
            style="@style/LegalInformationTextView.Blue"
            android:text="@string/wallet_promo_tc_title"
            android:visibility="gone" />

        <View
            android:id="@+id/wallet_promo_divider"
            style="@style/LegalInformationDivider.Blue"
            android:visibility="gone" />

        <TextView
            android:id="@+id/wallet_promo_text"
            style="@style/LegalInformationTextView"
            android:text="@string/wallet_promo_tc_message"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>