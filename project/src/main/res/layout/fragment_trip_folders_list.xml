<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/trip_list_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/brand_primary"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/itin_toolbar"
            app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
            app:titleTextColor="@color/white" />
    </android.support.design.widget.AppBarLayout>

    <com.expedia.bookings.widget.DisableableViewPager
        android:id="@+id/trip_list_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/trip_list_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brand_primary"
            android:elevation="2dp"
            android:minHeight="?attr/actionBarSize"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/white"
            app:tabIndicatorHeight="2dp"
            app:tabMode="fixed"
            app:tabPadding="12dp"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/TripFolderTabs"
            app:tabTextColor="@color/white_50" />

    </com.expedia.bookings.widget.DisableableViewPager>
</LinearLayout>
