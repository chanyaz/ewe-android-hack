<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/flight_trip_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/airline_logo_image_view"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight=".1"
                android:src="@drawable/packages_hotel_icon"
                android:tint="@color/search_screen_icon_color_v2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".85"
                android:orientation="vertical">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/hotel_text_view"
                    style="@style/Core.Text.Default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Hilton San Fransisco"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <com.expedia.bookings.widget.TextView
                            style="@style/Core.Text.Default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check In"
                            android:textColor="@color/gray7"
                            android:textSize="15dp" />

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/checkin_text_view"
                            style="@style/Core.Text.Default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22 July "
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <com.expedia.bookings.widget.TextView
                            style="@style/Core.Text.Default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check Out"
                            android:textColor="@color/gray7"
                            android:textSize="15dp" />

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/checkout_text_view"
                            style="@style/Core.Text.Default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24 July "
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/map_image_view"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/maps_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_divider_lines_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30dp">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_amenity_breakfast"
                android:tint="@color/gray7"
                app:zoomMode="fitDocument" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_amenity_accessible_bathroom"
                android:tint="@color/gray7"
                app:zoomMode="fitDocument" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_amenity_airport_shuttle"
                android:tint="@color/gray7"
                app:zoomMode="fitDocument" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_amenity_parking"
                android:tint="@color/gray7"
                app:zoomMode="fitDocument" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_amenity_pool"
                android:tint="@color/gray7"
                app:zoomMode="fitDocument" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>