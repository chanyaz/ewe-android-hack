<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/packages_hotel_icon"
            android:tint="@color/search_screen_icon_color_v2" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/outbound_text_view"
            style="@style/Core.Text.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Hotel in Paris - 22 July"
            android:textColor="@color/gray7"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:background="@color/cardview_divider_lines_gray" />

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/hotel_text_view"
                    style="@style/Core.Text.Default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grand Hotel du Palais Royal"
                    android:paddingBottom="5dp"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/date_text_view"
                    style="@style/Core.Text.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Louvre - Place Vendome"
                    android:textSize="14dp" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/time_text_view"
                    style="@style/Core.Text.Large"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_weight="1"
                    android:text="Check Out : 25 July, noon"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <com.expedia.bookings.widget.RoundImageView

                android:id="@+id/map_image_view"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/maps_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_divider_lines_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_amenity_breakfast"
                android:tint="@color/gray7"
                app:zoomMode="fitDocument" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_amenity_accessible_bathroom"
                android:tint="@color/gray7"
                app:zoomMode="fitDocument" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_amenity_airport_shuttle"
                android:tint="@color/gray7"
                app:zoomMode="fitDocument" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_amenity_parking"
                android:tint="@color/gray7"
                app:zoomMode="fitDocument" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_amenity_pool"
                android:tint="@color/gray7"
                app:zoomMode="fitDocument" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>