<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/flights_details_icon_flight"
        android:tint="@color/packages_primary_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="14dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/departure_arrival_time"
            style="@style/MaterialFlightCell.PrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/airline_airplane_type"
            style="@style/MaterialFlightCell.CarrierText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/departure_arrival_airport"
            style="@style/MaterialFlightCell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/flight_duration"
            style="@style/MaterialFlightCell.DurationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>