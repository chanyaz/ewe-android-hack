<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/flights_details_icon_flight"
        android:tint="@color/packages_primary_color"
        android:layout_weight="0.05"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="23dp"
        android:layout_weight="0.85"
        android:paddingRight="14dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/departure_arrival_time"
            style="@style/Core.Text.XLarge.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/departure_arrival_airport"
            style="@style/Core.Text.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/airline_airplane_type"
            style="@style/Core.Text.Default.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/operating_airline_name"
            style="@style/Core.Text.Default.LightColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/flight_duration"
            style="@style/Core.Text.Default.LightColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/flight_seat_class_booking_code"
            style="@style/Core.Text.Default.LightColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/flight_overview_collapse_icon"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="wrap_content"
        android:layout_marginRight="21dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:visibility="gone"
        android:src="@drawable/read_more"
        android:tint="@color/package_bundle_icon_color" />
</LinearLayout>