<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/outer_container"
        style="@style/MarginPoint"
        android:layout_height="wrap_content"
        android:background="#28000000"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp" >

        <!-- Header message -->

        <TextView
            android:id="@+id/login_status_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:bufferType="spannable"
            android:text="?attr/skin_loginWithExpediaTitleText"
            android:textColor="#f3f3f3"
            android:textSize="@dimen/login_header_text_size" />

        <View
            android:id="@+id/login_status_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_divider_height"
            android:background="#5CFFFFFF" />

        <!-- The fields for expedia login -->

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            layout="@layout/include_log_in_fields" />

        <!-- Log in with Expedia -or- Log in with Facebook -->

        <FrameLayout
            android:id="@+id/signin_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_or_spacing"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/or_facebook_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/or_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/login_or_spacing"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@integer/login_or_spacers_weight" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="@integer/login_or_lines_weight"
                        android:background="@drawable/divider_grey_gradient_left" />

                    <TextView
                        android:id="@+id/or_tv"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="@string/or"
                        android:textColor="#c7c8ca"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="@integer/login_or_lines_weight"
                        android:background="@drawable/divider_grey_gradient_right" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@integer/login_or_spacers_weight" />
                </LinearLayout>

                <Button
                    android:id="@+id/log_in_with_facebook_btn"
                    style="@style/LoginFormButton"
                    android:layout_marginLeft="@dimen/login_side_margin_small"
                    android:layout_marginRight="@dimen/login_side_margin_small"
                    android:background="@drawable/btn_facebook_signin"
                    android:contentDescription="@string/cd_sign_in_with_facebook"
                    android:gravity="center"
                    android:text="@string/Sign_in_with_Facebook" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/log_in_with_expedia_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/login_side_margin_small"
                android:paddingRight="@dimen/login_side_margin_small"
                android:visibility="gone" >

                <Button
                    android:id="@+id/log_in_btn"
                    style="@style/LoginFormButton"
                    android:background="?attr/skin_loginBookNowButtonDrawable"
                    android:gravity="center"
                    android:textColor="?attr/skin_loginButtonColor" />

                <TextView
                    android:id="@+id/forgot_your_password_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:padding="8dp"
                    android:text="@string/forgot_your_password"
                    android:textColor="#f3f3f3"
                    android:textColorLink="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Facebook sigin in fields -->

        <LinearLayout
            android:id="@+id/facebook_signin_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <EditText
                android:id="@+id/link_password_edit_text"
                style="@style/LoginFormEditText"
                android:layout_marginBottom="@dimen/login_bottom_room_spacing"
                android:layout_marginLeft="@dimen/login_side_margin_medium"
                android:layout_marginRight="@dimen/login_side_margin_medium"
                android:hint="?attr/skin_passwordHint"
                android:imeOptions="actionDone"
                android:inputType="textPassword" />
        </LinearLayout>

        <!-- Facebook sigin in fields -->

        <!-- Facebook email permission denied message/buttons -->

        <LinearLayout
            android:id="@+id/facebook_email_denied_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_weight="0"
                android:text="@string/user_denied_permission_email_message"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:textStyle="light" />

            <Button
                android:id="@+id/try_facebook_again"
                style="@style/LoginFormButton"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_facebook_signin"
                android:contentDescription="@string/cd_sign_in_with_facebook"
                android:gravity="center"
                android:text="@string/authorize_email_facebook_button" />

            <Button
                android:id="@+id/try_facebook_again_cancel"
                style="@style/LoginFormButton"
                android:layout_marginTop="0dp"
                android:background="@drawable/btn_cancel"
                android:gravity="center"
                android:text="@string/cancel" />
        </LinearLayout>

        <!-- Facebook connect buttons -->

        <LinearLayout
            android:id="@+id/facebook_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_side_margin_small"
            android:layout_marginRight="@dimen/login_side_margin_small"
            android:layout_marginTop="@dimen/login_fb_buttons_top_spacing"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/link_accounts_button"
                style="@style/LoginFormButton"
                android:layout_marginBottom="@dimen/login_button_spacing"
                android:background="@drawable/btn_link"
                android:gravity="center"
                android:text="@string/link_accounts" />

            <Button
                android:id="@+id/cancel_link_accounts_button"
                style="@style/LoginFormButton"
                android:layout_marginTop="0dp"
                android:background="@drawable/btn_cancel"
                android:gravity="center"
                android:text="@string/cancel" />
        </LinearLayout>

        <!-- If we are already logged in we show the logout button -->

        <include
            android:id="@+id/account_button_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            layout="@layout/include_account_button"
            android:visibility="gone" />

        <!-- Login extender container -->

        <LinearLayout
            android:id="@+id/login_extension_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_side_margin_small"
            android:layout_marginRight="@dimen/login_side_margin_small"
            android:layout_marginTop="@dimen/login_fb_buttons_top_spacing"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>
