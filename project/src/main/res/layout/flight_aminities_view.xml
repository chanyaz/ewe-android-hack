<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/rich_content_divider"
            android:layout_width="0.5dp"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/light_text_color"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/rich_content_wifi"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_wifi"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/rich_content_entertainment"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_entertainment"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/rich_content_power"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_power"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

</merge>
