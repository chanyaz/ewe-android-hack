<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/progress_dialog_container">

    <LinearLayout
        android:id="@+id/webview_loading_screen"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ProgressBar
            android:id="@+id/webview_progress_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:indeterminate="true"
            android:padding="10dp"
            android:visibility="visible" />
        <com.expedia.bookings.widget.TextView
            android:id="@+id/fetching_your_bookmark_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Replaying your selection....."
            android:textColor="?attr/primary_color"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:padding="10dp" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/cancel_bookmark_button"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/webview_progress_view"
            android:textColor="?attr/primary_color"
            android:visibility="gone"
            android:textAlignment="center"
            android:clickable="true"
            app:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:text="STOP"/>

    </LinearLayout>
</LinearLayout>

