<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_behavior="android.support.design.widget.AppBarLayout$Behavior">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/overview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <com.expedia.bookings.widget.CheckoutToolbar
                android:id="@+id/checkout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/primary_color"
                app:layout_collapseMode="pin"
                app:contentInsetEnd = "16dp"
                app:contentInsetRight= "16dp"
                app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                app:contentInsetStartWithNavigation="0dp" >

                <com.expedia.bookings.widget.packages.CheckoutOverviewHeader
                    android:id="@+id/checkout_overview_header_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/overview_height"
                    android:gravity="left|center_horizontal" />

                </com.expedia.bookings.widget.CheckoutToolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.expedia.bookings.widget.packages.CheckoutOverviewHeader
        android:id="@+id/checkout_overview_floating_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/overview_height"
        android:layout_above="@+id/nested_scrollview"
        android:gravity="center"
        app:layout_behavior="com.expedia.bookings.widget.CheckoutHeaderBehavior" />

</merge>
