<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.LabeledCheckableFilter android:id="@+id/filter_categories_widget"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="@dimen/sort_filter_padding_small"
    android:paddingLeft="@dimen/sort_filter_padding_normal"
    android:paddingRight="@dimen/sort_filter_padding_normal"
    android:paddingTop="@dimen/sort_filter_padding_small">

    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="@dimen/sort_filter_padding_small"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/hotel_filter_neighborhood_text"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="false" />

</com.expedia.bookings.widget.LabeledCheckableFilter>
