<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <com.expedia.bookings.widget.TextView
        android:id="@+id/rail_station_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/rail_title_color"
        android:textSize="15sp"
        app:textStyle="medium" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/fare_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/rail_regular_text_color"
        android:textSize="13sp"
        app:textStyle="medium" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/no_amenities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/rail_segment_no_amenities"
        android:textColor="@color/rail_regular_text_color"
        android:textSize="11sp"
        android:visibility="gone" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/amenities_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:textColor="@color/gray700"
        android:textSize="11sp" />
</LinearLayout>
