<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="238dp"
    android:layout_height="90dp"
    android:layout_marginBottom="9dp"
    android:layout_marginRight="9dp"
    android:layout_marginTop="9dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hotel_imageview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_lob_hotels"
            android:tint="@color/new_launch_lx_lob_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10.4dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/hotel_offer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:text="@string/krazyglue_offer"
                android:textColor="@color/gray750"
                android:textSize="@dimen/type_400_text_size"
                android:textStyle="normal" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/see_all_hotels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:text="@string/see_all_hotels"
                android:textColor="@color/gray650"
                android:textSize="@dimen/type_200_text_size"
                android:textStyle="normal" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/hotel_offer_expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:textColor="@color/gray650"
                android:textSize="11sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
