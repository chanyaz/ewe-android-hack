<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/first_name_layout_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:labelFor="@+id/first_name_input"
            android:hint="@string/first_name"
            android:layout_weight="6">

            <com.expedia.bookings.widget.traveler.TravelerEditText
                android:id="@+id/first_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:maxLines="1"
                android:nextFocusForward="@+id/last_name_input"
                android:textSize="@dimen/traveler_input_text_size"
                app:error_cont_desc="@string/accessibility_cont_desc_role_error" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/middle_name_layout_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <com.expedia.bookings.widget.traveler.TravelerEditText
                android:id="@+id/middle_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/middle_name_optional"
                android:inputType="textPersonName|textCapWords"
                android:maxLines="1"
                android:nextFocusForward="@+id/last_name_input"
                android:textSize="@dimen/traveler_input_text_size"
                app:error_cont_desc="@string/accessibility_cont_desc_role_error" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/last_name_layout_input"
        android:layout_width="match_parent"
        android:labelFor="@+id/last_name_input"
        android:layout_height="wrap_content">

        <com.expedia.bookings.widget.traveler.TravelerEditText
            android:id="@+id/last_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|textCapWords"
            android:maxLines="1"
            android:hint="@string/last_name"
            android:textSize="@dimen/traveler_input_text_size"
            app:error_cont_desc="@string/accessibility_cont_desc_role_error" />
    </android.support.design.widget.TextInputLayout>

</merge>