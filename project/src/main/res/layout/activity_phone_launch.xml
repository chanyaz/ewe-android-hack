<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.expedia.bookings.widget.DisableableViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.widget.PhoneLaunchToolbar
        android:id="@+id/launch_toolbar"
        style="@style/LaunchActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/skin_launchActionBarBackgroundColor"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp" />
</FrameLayout>
