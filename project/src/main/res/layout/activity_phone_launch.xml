<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.expedia.bookings.launch.widget.PhoneLaunchToolbar
        android:id="@+id/launch_toolbar"
        style="@style/LaunchActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/launch_toolbar_background_color"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp" />

    <com.expedia.bookings.widget.DisableableViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:background="@color/gray100" />

    <android.support.design.widget.TabLayout
        android:id="@+id/bottom_tab_layout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dip"
        android:elevation="8dp"
        app:tabIndicatorHeight="0dp"
        android:layout_gravity="bottom">
    </android.support.design.widget.TabLayout>

</LinearLayout>
