<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#FFF" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/lob_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/launch_lob_tiles"
            android:background="#fff" />

        <com.expedia.bookings.widget.LinearLayout
            android:id="@+id/lob_btn_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:divider="@drawable/space_lob_btns"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:showDividers="middle">

            <com.expedia.bookings.widget.PhoneLaunchButton
                android:id="@+id/hotels_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:btn_color="@color/hotel_lob_btn"
                app:btn_icon="@drawable/ic_lob_hotels"
                app:btn_text="@string/nav_hotels" />

            <com.expedia.bookings.widget.PhoneLaunchButton
                android:id="@+id/flights_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:btn_color="@color/flight_lob_btn"
                app:btn_icon="@drawable/ic_lob_flights"
                app:btn_text="@string/nav_flights" />

            <com.expedia.bookings.widget.PhoneLaunchButton
                android:id="@+id/cars_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:btn_color="@color/car_lob_btn"
                app:btn_icon="@drawable/ic_lob_cars"
                app:btn_text="@string/nav_cars" />
        </com.expedia.bookings.widget.LinearLayout>
    </FrameLayout>

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_marginTop="-1dp"
        android:background="#FFF" />
</LinearLayout>