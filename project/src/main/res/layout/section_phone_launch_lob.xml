<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <com.expedia.bookings.widget.RoundedCornerFrameLayout
        android:id="@+id/hotels_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/launch_lob_margin"
        android:foreground="?android:attr/selectableItemBackground"
        app:radius="4dp">

        <FrameLayout
            android:layout_width="@dimen/launch_lob_tiles"
            android:layout_height="@dimen/launch_lob_tiles"
            android:background="#028F87">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="10dp"
                android:alpha="0.3"
                android:src="@drawable/ic_lob_hotels" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:text="@string/nav_hotels"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </FrameLayout>
    </com.expedia.bookings.widget.RoundedCornerFrameLayout>

    <com.expedia.bookings.widget.RoundedCornerFrameLayout
        android:id="@+id/flights_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/launch_lob_margin"
        android:layout_toRightOf="@id/hotels_button"
        android:foreground="?android:attr/selectableItemBackground"
        app:radius="4dp">

        <FrameLayout
            android:layout_width="@dimen/launch_lob_tiles"
            android:layout_height="@dimen/launch_lob_tiles"
            android:background="#204A8E">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="10dp"
                android:alpha="0.3"
                android:src="@drawable/ic_lob_flights" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:text="@string/nav_flights"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </FrameLayout>
    </com.expedia.bookings.widget.RoundedCornerFrameLayout>

    <com.expedia.bookings.widget.RoundedCornerFrameLayout
        android:id="@+id/cars_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/launch_lob_margin"
        android:layout_toRightOf="@id/flights_button"
        android:foreground="?android:attr/selectableItemBackground"
        app:radius="4dp">

        <FrameLayout
            android:layout_width="@dimen/launch_lob_tiles"
            android:layout_height="@dimen/launch_lob_tiles"
            android:background="#89366A">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="10dp"
                android:alpha="0.3"
                android:src="@drawable/ic_lob_cars" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:text="@string/nav_cars"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </FrameLayout>
    </com.expedia.bookings.widget.RoundedCornerFrameLayout>

</RelativeLayout>