<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/header_image_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/room_type_text_view"
        style="@style/Core.Text.XLarge.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header_image_view"
        android:layout_marginLeft="@dimen/hotel_room_padding"
        android:layout_marginTop="@dimen/hotel_room_top_padding"
        android:layout_toLeftOf="@+id/room_info_icon"
        android:ellipsize="end"
        android:maxLines="2" />

    <ImageView
        android:id="@+id/room_info_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/header_image_view"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="@dimen/hotel_room_padding"
        android:layout_marginTop="@dimen/hotel_room_padding"
        android:src="@drawable/details_info" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/bed_type_text_view"
        style="@style/Core.Text.Default.LightColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/room_type_text_view"
        android:layout_marginBottom="@dimen/hotel_room_padding"
        android:layout_marginLeft="@dimen/hotel_room_padding"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/room_info_icon"
        android:drawableLeft="@drawable/room_bed"
        android:drawablePadding="@dimen/textview_drawable_padding" />

</merge>