<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MaterialCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hotel_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/itin_text_common_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.expedia.bookings.widget.ItinActionsSection
            android:id="@+id/action_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/itin_card_summary_divider_color" />

            <com.expedia.bookings.widget.NoPressLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/summary_left_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:addStatesFromChildren="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center">

                    <com.expedia.bookings.widget.AutoResizeTextView
                        android:id="@+id/summary_left_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="14dp"
                        android:textColor="?attr/itin_card_summary_action_button_text_color"
                        android:textSize="?attr/itin_card_summary_action_button_text_size"
                        app:textStyle="medium" />
                </LinearLayout>

                <View
                    android:id="@+id/action_button_divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/itin_card_summary_divider_color" />

                <LinearLayout
                    android:id="@+id/summary_right_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:addStatesFromChildren="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center">

                    <com.expedia.bookings.widget.AutoResizeTextView
                        android:id="@+id/summary_right_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="14dp"
                        android:textColor="?attr/itin_card_summary_action_button_text_color"
                        android:textSize="?attr/itin_card_summary_action_button_text_size"
                        app:textStyle="medium" />
                </LinearLayout>
            </com.expedia.bookings.widget.NoPressLinearLayout>

        </com.expedia.bookings.widget.ItinActionsSection>

    </LinearLayout>

</android.support.v7.widget.CardView>
