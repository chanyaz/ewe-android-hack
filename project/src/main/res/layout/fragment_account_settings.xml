<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/account_background_color">

    <android.support.v7.widget.Toolbar
        android:id="@+id/account_toolbar"
        android:background="@color/new_launch_toolbar_background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:elevation="8dp"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:title="@string/account_settings_menu_label"
        >
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/account_toolbar"
        android:fadingEdge="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/section_loyalty_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/new_launch_toolbar_background_color"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:id="@+id/toolbar_signed_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/toolbar_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/account_toolbar_text_color"
                            android:textSize="@dimen/account_toolbar_title_text_size"
                            app:textStyle="medium"
                            tools:text="Lauren LoPrete" />

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/toolbar_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolbar_name"
                            android:textColor="@color/account_toolbar_text_color"
                            android:textSize="@dimen/account_toolbar_subtitle_text_size"
                            app:textStyle="normal"
                            tools:text="laurenloprete@gmail.com" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/toolbar_loyalty_tier_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/bg_loyalty_badge_middle_tier"
                        android:paddingBottom="6dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        tools:text="+silver"
                        tools:textColor="@color/expedia_plus_silver_text" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:id="@+id/row_divider1"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/gray100_30"/>

                <RelativeLayout
                    android:id="@+id/first_row_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/center"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerHorizontal="true" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/available_points_label"
                        style="@style/AccountDashboardLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/center"
                        android:text="@string/available_loyalty_points"/>

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/available_points"
                        style="@style/AccountDashboardValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/available_points_label"
                        android:layout_marginTop="4dp"
                        android:layout_toLeftOf="@id/center"
                        android:accessibilityTraversalAfter="@id/available_points_label"
                        tools:text="51,203"
                        tools:ignore="UnusedAttribute"/>

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/pending_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/available_points"
                        android:drawableRight="@drawable/ic_info"
                        android:drawablePadding="5dp"
                        android:textColor="@color/account_toolbar_text_color_light"
                        android:textSize="13sp"
                        app:textStyle="light"
                        tools:text="1,176 pending" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/points_monetary_value_label"
                        style="@style/AccountDashboardLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/available_points_label"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/center"
                        android:accessibilityTraversalAfter="@id/pending_points"
                        android:text="@string/points_value_label"
                        tools:ignore="UnusedAttribute"/>

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/points_monetary_value"
                        style="@style/AccountDashboardValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/available_points"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/center"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:ellipsize="end" />

                    <include
                        android:id="@+id/first_row_country"
                        layout="@layout/account_settings_country"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:visibility="visible"
                        android:layout_toRightOf="@+id/center"
                        android:layout_alignTop="@+id/available_points_label"
                        android:gravity="center_vertical" />
                </RelativeLayout>

                <View
                    android:id="@+id/row_divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/gray100_30" />

                <RelativeLayout
                    android:id="@+id/second_row_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/center_second_row"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerHorizontal="true" />

                    <RelativeLayout
                        android:id="@+id/currency_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/center_second_row"
                        android:focusable="true">

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/currency_label"
                            style="@style/AccountDashboardLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/currency_label" />

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/currency"
                            style="@style/AccountDashboardValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/currency_label"
                            android:layout_marginTop="4dp"
                            tools:text="USD" />
                    </RelativeLayout>

                    <include
                        android:id="@+id/second_row_country"
                        layout="@layout/account_settings_country"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/center_second_row"
                        android:layout_alignTop="@+id/currency_container"
                        android:gravity="center_vertical" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/section_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/account_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="8dp"
                    android:minWidth="260dp"
                    android:minHeight="60dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/account_sign_in_button_background_color"
                    app:cardUseCompatPadding="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/exp_logo_sign_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:layout_toLeftOf="@+id/sign_in_text_view"
                            android:scaleType="center"
                            android:src="@drawable/brand_logo"/>

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/sign_in_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            style="@style/Core.Text.400.Medium"
                            android:textColor="@color/account_sign_in_button_text_color"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/google_account_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="@dimen/about_section_margin"
                    android:layout_marginBottom="@dimen/about_section_margin"
                    android:layout_marginRight="@dimen/about_section_margin"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/google_change_icon"
                    android:text="@string/google_account_change_string"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="14dp" />

            <FrameLayout
                android:id="@+id/debug_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <FrameLayout
                android:id="@+id/section_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <FrameLayout
                android:id="@+id/section_app_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <FrameLayout
                android:id="@+id/section_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <FrameLayout
                android:id="@+id/section_communicate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <FrameLayout
                android:id="@+id/section_legal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <Button
                android:id="@+id/sign_out_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="@dimen/about_section_margin"
                android:text="@string/sign_out"
                android:theme="@style/AccountButton.SignOut" />

            <FrameLayout
                android:id="@+id/section_copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <TextView
                android:id="@+id/open_source_credits_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="@color/AboutRowTextColor" />

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/toolbar_dropshadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_dropshadow_height"
        android:background="@drawable/tb_shadow" />

</RelativeLayout>
