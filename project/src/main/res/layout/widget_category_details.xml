<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.CategoryDetailsWidget xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <com.expedia.bookings.widget.OptimizedImageView
        android:id="@+id/header_image"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        tools:src="@drawable/bg_flight_summary_row_return_leg_tablet" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/offer_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

</com.expedia.bookings.widget.CategoryDetailsWidget>
