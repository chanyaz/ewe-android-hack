<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.CarSearchParamsWidget xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/search_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/ic_action_bar_back_arrow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:text="@string/dates_and_location"/>

            <ImageButton
                android:id="@+id/search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_action_bar_checkmark"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/location_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_header"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pickup_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/pick_up_location"/>

            <TextView
                android:id="@+id/dropoff_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/same_as_pick_up"/>
        </LinearLayout>

        <Button
            android:id="@+id/select_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_container"
            android:text="@string/select_pickup_and_dropoff_dates"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/time_top_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/change_date_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Change Date"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/time_confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Confirm"
                android:textAllCaps="true"
                android:textStyle="bold"/>
        </FrameLayout>

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="144dp"/>

        <FrameLayout
            android:id="@+id/time_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/time_picker_detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="September 25 - 9:41 AM PST"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/calendar_container"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="bottom">

        <com.mobiata.android.time.widget.CalendarPicker
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="bottom"/>

        <TextView
            android:id="@+id/change_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#ff00ff"
            android:gravity="center"/>

    </FrameLayout>

</com.expedia.bookings.widget.CarSearchParamsWidget>