<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spinner_ripple"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/cars_dropdown_imageView"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_suggest_current_location"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="1dp" />

    <LinearLayout android:id="@+id/suggestion_text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.expedia.bookings.widget.TextView
        android:id="@+id/location_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingLeft="4dp"
        android:textColor="@color/gray5"/>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/location_subtitle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray5"
        android:textSize="11sp"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingLeft="4dp"/>
    </LinearLayout>
</LinearLayout>