<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@drawable/spinner_ripple"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/cars_dropdown_imageView"
        android:src="@drawable/ic_suggest_current_location"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="11dp"
        android:paddingLeft="9dp"/>

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_title_textView"
        android:textColor="?attr/skin_carsSecondaryColor"
        android:layout_toRightOf="@+id/cars_dropdown_imageView" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_subtitle_textView"
        android:textColor="?attr/skin_carsSecondaryColor"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/location_title_textView"
        android:layout_below="@+id/location_title_textView" />

</RelativeLayout>