<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@drawable/spinner_ripple"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/cars_dropdown_imageView"
        android:src="@drawable/ic_suggest_current_location"
        android:paddingLeft="1dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.expedia.bookings.widget.TextView
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_name_textView"
        android:textColor="@color/cars_secondary_color"
        android:layout_toRightOf="@+id/cars_dropdown_imageView"
         />

    <com.expedia.bookings.widget.TextView
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/airport_name_textView"
        android:textColor="@color/cars_secondary_color"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/display_name_textView"
        android:layout_below="@+id/display_name_textView"

         />
</RelativeLayout>