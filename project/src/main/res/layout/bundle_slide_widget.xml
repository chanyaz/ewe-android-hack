<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.expedia.bookings.presenter.packages.BundleWidget
        android:id="@+id/bundle_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/bundle_price_widget_shadow"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/tb_shadow" />

        <com.expedia.bookings.widget.TotalPriceWidget
            android:id="@+id/bundle_price_widget"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="top"
            android:background="@color/white"
            android:clickable="true"
            android:paddingLeft="17dp"
            android:paddingRight="19dp" />

    </LinearLayout>

    <com.expedia.bookings.widget.TotalPriceWidget
        android:id="@+id/total_price_widget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_button_height"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="17dp"
        android:paddingRight="19dp" />


</merge>