<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/bundle_price_widget_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/bundle_price_widget_shadow"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/drop_shadow" />

        <com.expedia.bookings.widget.TotalPriceWidget
            android:id="@+id/bundle_price_widget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_button_height"
            android:accessibilityTraversalAfter="@+id/filter_placeholder_icon"
            android:background="@color/white"
            android:clickable="true"
            android:paddingLeft="17dp"
            android:paddingRight="19dp"
            tools:targetApi="22" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray100"
            android:fillViewport="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />

                <com.expedia.bookings.presenter.packages.BundleWidget
                    android:id="@+id/bundle_widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Space
                    android:id="@+id/space_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/footer_button_height" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bundle_price_footer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/transparent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/drop_shadow" />

            <com.expedia.bookings.widget.TotalPriceWidget
                android:id="@+id/total_price_widget"
                android:layout_width="match_parent"
                android:layout_height="@dimen/footer_button_height"
                android:background="@color/white"
                android:clickable="true"
                android:paddingLeft="17dp"
                android:paddingRight="19dp" />
        </LinearLayout>
    </FrameLayout>

</merge>