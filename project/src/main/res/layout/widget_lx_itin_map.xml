<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/itin_map_card_view"
    style="@style/MaterialCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    app:cardUseCompatPadding="true"
    android:visibility="gone"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.expedia.bookings.itin.common.GoogleMapsLiteMapView
                android:id="@+id/widget_itin_map"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:clickable="true" />

            <ImageView
                android:id="@+id/directions_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/ic_directions_hotel_map_details" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/widget_itin_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="16dp">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/widget_itin_address_line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray900"
                android:textSize="14sp"
                android:textStyle="normal" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/widget_itin_address_line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray900"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>