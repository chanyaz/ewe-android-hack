<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.expedia.bookings.widget.BundleOverviewHeader
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.expedia.bookings.rail.widget.RailTripSummaryWidget
        android:id="@+id/rail_trip_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:padding="@dimen/card_view_container_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom" >

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/drop_shadow" />

        <com.expedia.bookings.widget.PriceChangeWidget
            android:id="@+id/rail_price_change_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.expedia.bookings.widget.TotalPriceWidget
            android:id="@+id/rail_total_price_widget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_button_height"
            android:background="@color/white"
            android:paddingLeft="19dp"
            android:paddingRight="19dp" />

        <Button
            android:id="@+id/checkout_button"
            style="@style/MaterialFooterButtonText"
            android:layout_width="match_parent"
            android:background="@drawable/rail_button_background_rippled"
            android:text="@string/Checkout" />
    </LinearLayout>
</merge>