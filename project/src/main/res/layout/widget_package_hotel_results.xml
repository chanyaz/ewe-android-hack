<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.expedia.bookings.hotel.map.HotelResultsMapWidget
        android:id="@+id/results_map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/hotel_carousel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:id="@+id/preview_shadow"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/map_shadow" />

        <TextView
            android:id="@+id/package_map_price_messaging"
            style="@style/PackagesHotelMapMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray100"
            android:gravity="center"
            android:text="@string/includes_flights_hotel" />

        <com.expedia.bookings.widget.HotelCarouselRecycler
            android:id="@+id/hotel_carousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/recycler_view_temp_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray100"
        android:visibility="gone" />

    <com.expedia.bookings.widget.HotelListRecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/footer_button_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/hotel_results_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:clipChildren="false"
            android:background="@color/packages_primary_color"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:orientation="vertical">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/title"
                    style="@style/ToolbarTitleTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/subtitle"
                    style="@style/ToolbarSubtitleTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <View
            android:id="@+id/toolbar_dropshadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_dropshadow_height"
            android:background="@drawable/tb_shadow" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_transition_map_list_fab"
        app:useCompatPadding="true" />

    <ViewStub
        android:id="@+id/filter_stub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_filter_height"
        android:layout_gravity="bottom"
        android:layout="@layout/package_hotel_sort_and_filter_stub" />

    <ViewStub
        android:id="@+id/hotel_filter_view_stub"
        android:inflatedId="@+id/hotel_filter_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.expedia.bookings.widget.hotel.HotelResultsSortFaqWebView
        android:id="@+id/sort_faq_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone" />

</merge>
