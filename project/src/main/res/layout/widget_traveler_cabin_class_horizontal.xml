<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/MaterialCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ViewStub
            android:id="@+id/traveler_stub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_search_card_height"
            android:layout_weight="1"
            android:layout="@layout/traveler_search_widget"
            app:input_text="@string/package_search_traveler_default_text" />

        <View
            android:id="@+id/header_divider_lines_gray"
            android:layout_width="1px"
            android:layout_height="48dp"
            android:background="@color/cardview_divider_lines_gray"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <ViewStub
            android:id="@+id/flight_cabin_class_stub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_search_card_height"
            android:layout_weight="1"
            android:layout="@layout/flight_cabin_class_widget" />
    </LinearLayout>
</android.support.v7.widget.CardView>
