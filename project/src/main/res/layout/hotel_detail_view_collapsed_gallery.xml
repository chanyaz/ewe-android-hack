<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:layout="http://schemas.android.com/tools">

    <!--<ScrollView-->
    <!--android:id="@+id/detail_container"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:fillViewport="true"-->
    <!--android:scrollbars="none">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/content_constraint_container"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.expedia.bookings.hotel.widget.HotelDetailGalleryView
                android:id="@+id/detail_hotel_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray900"
                android:orientation="vertical"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_hotel_gallery"
                    android:layout_above="@+id/ll_filterView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_marginBottom="12dp"
                    android:layout_above="@+id/ll_filterView"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/com_facebook_close"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ll_filterView"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="10dp">

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/tv_total_count"
                        android:textSize="12sp"
                        android:background="@drawable/packages_hotel_count_background"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <com.expedia.bookings.widget.HotelGalleryFilterWidget
                    android:id="@+id/ll_filterView"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nested_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:behavior_hideable="true"
                app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
                android:background="@color/white">

                <com.expedia.bookings.hotel.widget.HotelDetailContentView
                    android:id="@+id/hotel_detail_content_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v4.widget.NestedScrollView>

        </android.support.design.widget.CoordinatorLayout>

        <!--</ScrollView>-->

        <com.expedia.bookings.widget.ResortFeeWidget
            android:id="@+id/resort_fee_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom" />

        <com.expedia.bookings.widget.HotelBottomButtonWidget
            android:id="@+id/bottom_button_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="vertical"/>

        <com.expedia.bookings.widget.HotelDetailsToolbar
            android:id="@+id/hotel_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</merge>
