<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/cardview_border_radius"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <com.expedia.bookings.widget.OptimizedImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop" />

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:text="@string/via_scratchpad_label" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/freshness_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/originAndDestinationContainer"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/origin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/destination"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/departureAndReturnDates"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/numberTravelers"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/passenger_details" />
        </LinearLayout>

    </LinearLayout>

    <com.expedia.bookings.widget.TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|left"
        android:text="@string/flight_search_card_title" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/price"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|right" />

</android.support.v7.widget.CardView>
