<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/guest_rating_text_view"
            style="@style/Core.Text.400.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/guest_rating_recommendation_text_view"
            style="@style/Core.Text.200"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <com.expedia.bookings.hotel.widget.HotelReviewsBarRatingView
        android:id="@+id/hotel_reviews_bar_rating_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</merge>
