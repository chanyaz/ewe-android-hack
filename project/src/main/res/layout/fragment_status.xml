<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plane_window_background" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            layout="@layout/flight_loading_status" />

        <TextView
            android:id="@+id/message_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="?attr/skin_flightLoadingMessagePosition"
            android:layout_marginBottom="@dimen/plane_window_text_offset"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textColor="#575757"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/cover_up_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/plane_window_background" />

    </RelativeLayout>

</FrameLayout>