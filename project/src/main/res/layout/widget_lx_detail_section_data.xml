<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.LXDetailSectionDataWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/lx_details_background_color"
    android:padding="15dp">

    <TextView
        android:id="@+id/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lx_details_heading_text_color"
        android:textSize="11sp"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/section_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/lx_details_content_text_color"
        android:lineSpacingExtra="2dp"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/read_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/lx_details_read_more"
        android:textColor="@color/lx_primary_color"
        android:textSize="12sp"
        android:visibility="gone" />

</com.expedia.bookings.widget.LXDetailSectionDataWidget>