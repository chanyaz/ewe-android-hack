<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/reviews_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:focusable="true"
        android:paddingTop="?attr/actionBarSize"
        android:layout_above="@id/hotel_reviews_select_a_room_bar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <com.expedia.bookings.widget.DisableableViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="?attr/actionBarSize"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.expedia.bookings.presenter.hotel.HotelReviewsTabbar
                    android:id="@+id/hotel_reviews_tabbar"
                    style="@style/LaunchActionBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/hotel_cell_primary_color"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_dropshadow_height"
                    android:background="@drawable/tb_shadow" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/hotel_reviews_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="?attr/primary_color"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_close_white_24dp"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:subtitleTextAppearance="@style/ToolbarSubtitleTextAppearance"
        app:contentInsetStartWithNavigation="0dp"
        app:collapseIcon="@drawable/hotel_review_search_bar_back_arrow" />

    <com.expedia.bookings.hotel.widget.HotelSelectARoomBar
        android:id="@+id/hotel_reviews_select_a_room_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="?attr/hotel_select_room_ripple_drawable"
        android:minHeight="?attr/actionBarSize"
        android:visibility="gone"/>

    <com.expedia.bookings.hotel.widget.HotelReviewSearchResultsView
        android:id="@+id/hotel_review_search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hotel_reviews_toolbar"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical" />

</merge>
