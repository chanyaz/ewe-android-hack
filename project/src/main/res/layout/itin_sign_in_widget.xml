<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="RelativeLayout">

    <com.expedia.bookings.widget.itin.ItinPOSHeader
        android:id="@+id/sign_in_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/itin_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/xlarge_margin"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="62dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/status_image"
            android:layout_width="19dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            app:textStyle="normal"
            tools:text="@string/itin_sign_in_message"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/account_sign_in_container"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itin_status_container"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:minWidth="260dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/exp_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/login_text_view"
                android:scaleType="center"
                android:src="@drawable/itin_sign_in_logo"
                android:visibility="gone" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/login_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:text="@string/sign_in"
                android:textAllCaps="true"
                android:textSize="14sp"
                app:textStyle="medium"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/hint_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_sign_in_container"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@color/gray9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/or"
            android:textColor="@color/gray6"
            android:textSize="14sp"
            android:textAllCaps="true"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@color/gray9"
            android:padding="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hint_container"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/add_guest_itin_intro_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/itin_list_view_manually_add_guest_trip_intro_text"
            android:textColor="@color/gray10"
            android:textSize="16sp"
            app:textStyle="normal" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/add_guest_itin_text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_plus_icon_android"
            android:drawablePadding="8dp"
            android:layout_marginTop="18dp"
            android:text="@string/itin_sign_in_add_guest_trip_button_text"
            android:textAllCaps="true"
            android:textColor="@color/itin_add_guest_text_button_color"
            android:textSize="14sp"
            app:textStyle="medium" />
</LinearLayout>
</merge>