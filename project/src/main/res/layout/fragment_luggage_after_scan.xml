<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tag_found_public_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/gray1"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            style="@style/MarginPoint"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/tag_found_public"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:bufferType="spannable"
                android:text="@string/tag_found_public_text"
                android:textColor="@color/gray9" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:bufferType="spannable"
                        android:text="NAME"
                        android:textColor="@color/gray9"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tag_found_public_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:bufferType="spannable"
                        android:text="Frank Funston"
                        android:textColor="@color/gray9" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:bufferType="spannable"
                        android:text="ADDRESS"
                        android:textColor="@color/gray9"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tag_found_public_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:bufferType="spannable"
                        android:text="351 Brighton avenue, sf, ca 94112"
                        android:textColor="@color/gray9" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/tag_found_public_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/exp_launch_blue"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="CALL"
                android:textColor="@color/btn_find_color"
                android:textSize="16sp"
                app:textStyle="medium" />

        </LinearLayout>
    </ScrollView>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tag_found_private_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/gray1"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            style="@style/MarginPoint"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/tag_found_private"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:bufferType="spannable"
                android:text="@string/tag_found_private_text"
                android:textColor="@color/gray9" />

        </LinearLayout>
    </ScrollView>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tag_not_found_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/gray1"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            style="@style/MarginPoint"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/tag_not_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:bufferType="spannable"
                android:text="@string/tag_not_found_text"
                android:textColor="@color/gray9" />


            <Button
                android:id="@+id/tag_not_found_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/exp_launch_blue"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="Register this card"
                android:textColor="@color/btn_find_color"
                android:textSize="16sp"
                app:textStyle="medium" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
