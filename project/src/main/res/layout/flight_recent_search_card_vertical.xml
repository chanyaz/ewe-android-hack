<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/flight_recent_search_item_margin_bottom"
    android:background="@drawable/flight_recent_search_border"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/recent_search_origin"
                style="@style/RecentSearchFirstLine"
                tools:text="SFO" />

            <com.larvalabs.svgandroid.widget.SVGView
                android:id="@+id/recent_search_one_way_arrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/recent_search_destination"
                style="@style/RecentSearchFirstLine"
                tools:text="LAS" />

        </LinearLayout>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/recent_search_price"
            style="@style/RecentSearchFirstLine"
            android:layout_weight="1"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <com.expedia.bookings.widget.flights.DateFormatterTextView
            android:id="@+id/recent_search_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            app:invalidColor="@color/gray500"
            app:invalidStyle="1"
            android:textColor="@color/gray900"
            android:textSize="13sp"/>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/recent_search_price_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/gray900"
            android:textSize="@dimen/type_200_text_size"
            android:textStyle="normal"
            android:text="@string/flight_recent_search_per_person"
            tools:text="as of Nov 10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/recent_search_traveler_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/gray900"
            android:textSize="13sp"
            app:textStyle="normal" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:tint="@color/gray900"
            android:src="@drawable/search_form_icon_person"/>

        <com.expedia.bookings.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/gray900"
            android:text="@string/bullet"
            android:textSize="@dimen/type_400_text_size"
            app:textStyle="medium" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/recent_search_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/gray900"
            android:textSize="13sp"
            app:textStyle="normal" />

    </LinearLayout>

</LinearLayout>

