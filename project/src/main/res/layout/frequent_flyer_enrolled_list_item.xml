<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/spinner_ripple">

        <com.expedia.bookings.widget.TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/frequent_flyer_program_list_title"
            android:ellipsize="marquee"
            android:paddingLeft="16dp"
            android:paddingBottom="2dp"
            android:maxLines="1"
            style="?android:attr/spinnerDropDownItemStyle"
            android:textSize="16sp"/>

        <com.expedia.bookings.widget.TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/frequent_flyer_program_list_number"
            android:ellipsize="marquee"
            android:paddingLeft="16dp"
            android:maxLines="1"
            style="?android:attr/spinnerDropDownItemStyle"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ffn_divider"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

            <include layout="@layout/grey_divider_bar" />

    </LinearLayout>

</LinearLayout>