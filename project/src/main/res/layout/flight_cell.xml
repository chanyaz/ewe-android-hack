<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/packages_result_background">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/package_best_flight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/packages_primary_color"
                android:orientation="horizontal"
                android:paddingBottom="7dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="6dp"
                android:visibility="gone">

                <com.expedia.bookings.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/best_flight_title"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    app:textStyle="medium" />

                <com.expedia.bookings.widget.TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/best_flight_description"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/flight_time_detail_text_view"
                        style="@style/Core.Text.400.Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/price_text_view"
                        style="@style/Core.Text.400.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/flight_overview_expand_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/read_more_without_padding"
                        android:tint="@color/package_bundle_icon_color"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.expedia.bookings.widget.packages.FlightAirlineWidget
                        android:id="@+id/flight_airline_widget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="4" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/flight_earn_message_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:drawableLeft="@drawable/earn_message_icon"
                        android:drawablePadding="@dimen/earn_message_icon_dimen"
                        android:gravity="right"
                        android:textColor="@color/hotel_earn_message_text_color"
                        android:textSize="12sp"
                        android:visibility="gone"
                        app:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/flight_duration_text_view"
                        style="@style/Core.Text.200.LightColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="11h 13m" />

                    <include
                        layout="@layout/flight_aminities_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/flight_class_text_view"
                    style="@style/Core.Text.200.LightColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:visibility="gone"
                    tools:text="Flight Cabin Class text: this message is to test the max length of string"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/flight_message_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cardview_divider_lines_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:weightSum="1">

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/textView_route_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/gray900"
                        android:textSize="11sp"
                        app:textStyle="medium"
                        tools:text="8.4/10 - Very Good!" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/urgency_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/flight_seats_left_urgency_message_color"
                        android:textSize="11sp"
                        app:textStyle="medium"
                        tools:text="Urgency Message" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
