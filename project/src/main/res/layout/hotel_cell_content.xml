<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/pinned_hotel_view"
        style="@style/Core.Text.300.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="?attr/primary_color"
        android:textColor="@color/white"
        android:visibility="gone"
        android:text="@string/you_picked_this_hotel_label"
        tools:visibility="visible"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/foreground"
            android:layout_width="match_parent"
            android:layout_height="134dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="12dp">

            <com.expedia.bookings.widget.hotel.hotelCellModules.HotelCellUrgencyMessage
                android:id="@+id/urgency_message_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="5dp" />

            <com.expedia.bookings.widget.hotel.hotelCellModules.HotelCellVipMessage
                android:id="@+id/vip_message_container"
                style="@style/HotelCellVipPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                app:vip_text_color="@color/white" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <com.expedia.bookings.widget.hotel.hotelCellModules.HotelCellNameStarAmenityDistance
                android:id="@+id/hotel_name_star_amenity_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/hotel_discount_container"
                app:hotel_name_max_line="2"
                app:hotel_name_text_color="@color/white" />

            <include
                android:id="@+id/hotel_discount_container"
                layout="@layout/hotel_cell_discount_air_attach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom" />

        </RelativeLayout>

        <include
            android:id="@+id/hotel_sold_out_overlay_container"
            layout="@layout/hotel_cell_sold_out_overlay"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:id="@+id/rating_earn_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <include
                layout="@layout/hotel_cell_guest_rating_recommend_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/earn_messaging"
                style="@style/Core.Text.200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/hotel_earn_message_text_color" />

        </LinearLayout>

        <com.expedia.bookings.widget.hotel.hotelCellModules.HotelCellPriceTopAmenity
            android:id="@+id/hotel_price_top_amenity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="vertical"
            app:strike_through_price_orientation="horizontal" />

    </LinearLayout>

</LinearLayout>
