<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/MaterialCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.expedia.bookings.itin.common.GoogleMapsLiteMapView
                android:id="@+id/widget_itin_map"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:clickable="true" />

            <ImageView
                android:id="@+id/directions_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/ic_directions_hotel_map_details" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_container"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="16dp">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/widget_itin_address_line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray900"
                android:textSize="14sp"
                android:visibility="gone"
                android:textStyle="normal" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/widget_itin_address_line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray900"
                android:textSize="14sp"
                android:visibility="gone"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/phone_divider"
            android:visibility="gone"
            android:background="?attr/itin_card_summary_divider_color"
            tools:visibility="visible"/>

        <com.expedia.bookings.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_number_text"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/itin_call_hotel"
            android:drawablePadding="8dp"
            android:visibility="gone"
            android:textColor="@color/itin_call_to_action_text"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="16dp"
            tools:text="(124)-135-3463" />
    </LinearLayout>
</android.support.v7.widget.CardView>