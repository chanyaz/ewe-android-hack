<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.HotelsNeighborhoodFilter xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_categories_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="5dp"
    android:paddingRight="@dimen/lx_sort_filter_padding"
    android:paddingTop="5dp"
    android:importantForAccessibility="yes">

    <CheckBox
        android:id="@+id/neighborhood_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/sort_filter_padding_checkmarks"
        android:clickable="false"
        android:importantForAccessibility="no"/>

    <TextView
        android:id="@+id/neighborhood_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/neighborhood_check_box"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/hotel_filter_neighborhood_text"
        android:textSize="@dimen/package_sort_filter_label_text_size"
        android:importantForAccessibility="no"/>


</com.expedia.bookings.widget.HotelsNeighborhoodFilter>
