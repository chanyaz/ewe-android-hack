<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.itin.hotel.pricingRewards.PriceSummaryItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="3dp">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/hotel_itin_line_item_view_label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/itin_text_sub_color"
        android:layout_centerVertical="true"
        tools:text="Price label" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/hotel_itin_line_item_view_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/itin_text_sub_color"
        android:layout_centerVertical="true"
        tools:text="$500.90" />

</com.expedia.bookings.itin.hotel.pricingRewards.PriceSummaryItemView>
