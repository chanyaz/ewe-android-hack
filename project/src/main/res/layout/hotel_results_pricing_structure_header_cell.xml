<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/drop_shadow"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/drop_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/search_results_list_bg_gray"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingTop="9dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/pricing_structure_header"
            style="@style/ResultsDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/loyalty_points_applied_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="@string/loyalty_applied_excluding_taxes_and_fees_message"
            android:textColor="@color/hotels_primary_color"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
