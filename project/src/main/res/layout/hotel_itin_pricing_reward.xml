<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.expedia.bookings.itin.common.ItinToolbar
            android:id="@+id/widget_itin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/app_primary"
            android:minHeight="?attr/actionBarSize" />
    </android.support.design.widget.AppBarLayout>

    <com.expedia.bookings.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray200"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/itin_hotel_details_price_summary_heading"
                android:textColor="@color/gray750"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:paddingTop="20dp"
                android:paddingBottom="12dp"
                app:textStyle="medium" />

            <com.expedia.bookings.itin.hotel.pricingRewards.HotelItinPricingSummaryView
                xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/MaterialCardView"
                android:id="@+id/hotel_itin_pricing_summary_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hotel_itin_pricing_summary_container"
                    android:orientation="vertical"
                    android:padding="16dp"/>
            </com.expedia.bookings.itin.hotel.pricingRewards.HotelItinPricingSummaryView>

        </LinearLayout>

    </com.expedia.bookings.widget.ScrollView>

</LinearLayout>
