<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/MaterialCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/confirmation_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="16dp"
            android:textColor="@color/gray900"
            android:textSize="14sp" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/confirmation_code_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/confirmation_status_text_view"
            android:gravity="right"
            android:padding="16dp"
            android:textColor="@color/gray900"
            android:textIsSelectable="false"
            android:textSize="14sp"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
