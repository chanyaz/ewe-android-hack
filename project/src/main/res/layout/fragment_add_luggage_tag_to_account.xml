<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/outer_container"
            style="@style/MarginPoint"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="50dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/scan_my_QR_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/exp_launch_blue"
                android:gravity="center"
                android:textColor="@color/btn_find_color"
                android:textSize="16sp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                app:textStyle="medium"
                android:text="@string/scan_my_QR_code" />

            <LinearLayout android:id="@+id/hint_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_view_container_margin"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:background="#979797" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/or"
                    android:textColor="@color/defaultTextColor" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:layout_weight="1"
                    android:background="#979797" />
            </LinearLayout>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/manually_enter_tag_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="?attr/selectableItemBackground"
                android:padding="20dp"
                android:clickable="true"
                android:text="@string/manually_enter_tag_ID"
                android:textColor="@color/exp_launch_blue"
                android:textSize="16sp" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
