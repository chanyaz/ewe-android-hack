<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="?attr/primary_color"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_close_white_24dp"
            app:contentInsetStartWithNavigation="0dp">

            <FrameLayout
                android:id="@+id/toolbar_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:text="@string/package_toolbar_title"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:textStyle="medium" />

                <!-- The -16dip is to undo the padding included inside searchView. This is risky behavior, as if that view changes, then we're
                    going to be adjusting by the wrong amount. -->
                <android.support.v7.widget.SearchView
                    android:id="@+id/toolbar_searchView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-16dip"
                    android:iconifiedByDefault="false"
                    android:paddingLeft="3dp" />

            </FrameLayout>
        </android.support.v7.widget.Toolbar>

        <com.expedia.bookings.launch.widget.LobToolbarWidget
            android:id="@+id/lob_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/primary_color"
            android:visibility="gone"
            app:tabIndicatorColor="@color/launch_tab_indicator"
            app:tabSelectedTextColor="@color/material_tab_text_selected"
            app:tabTextColor="@color/material_tab_text" />

        <View
            android:id="@+id/toolbar_dropshadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_dropshadow_height"
            android:background="@drawable/tb_shadow" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/search_form_margin"
            android:layout_marginRight="@dimen/search_form_margin"
            android:importantForAccessibility="no"
            android:scrollbars="none">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />

                <LinearLayout
                    android:id="@+id/search_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/search_form_top_margin"
                    android:gravity="top"
                    android:clipToPadding="false"
                    android:focusable="false"
                    android:orientation="vertical">

                    <com.expedia.bookings.widget.flights.FlightOneWayRoundTripTabs
                        android:id="@+id/one_way_round_trip_tabs"
                        style="@style/MaterialCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="@dimen/card_view_border_radius"
                        android:layout_marginRight="@dimen/card_view_border_radius"
                        android:visibility="gone"
                        app:tab_left_text="@string/flights_round_trip_label"
                        app:tab_right_text="@string/flights_one_way_label"/>

                    <android.support.v7.widget.CardView
                        style="@style/MaterialCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/search_location_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackground"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:orientation="vertical">

                                <com.expedia.bookings.widget.shared.SearchInputTextView
                                    android:id="@+id/origin_card"
                                    style="@style/MaterialCardTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="58dp"
                                    android:contentDescription="@string/packages_search_flying_from_cont_desc"
                                    app:cardCornerRadius="0dp"
                                    app:input_icon="@drawable/packages_search_departure"
                                    app:input_icon_tint_color="@color/search_screen_icon_color_v2"
                                    app:input_text="@string/fly_from_hint" />

                                <View
                                    android:id="@+id/flight_search_divider"
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:layout_marginLeft="46dp"
                                    android:layout_marginRight="25dp"
                                    android:background="@color/search_origin_dest_divider" />

                                <com.expedia.bookings.widget.shared.SearchInputTextView
                                    android:id="@+id/destination_card"
                                    style="@style/MaterialCardTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="58dp"
                                    android:contentDescription="@string/packages_search_flying_to_cont_desc"
                                    app:cardCornerRadius="0dp"
                                    app:input_icon="@drawable/packages_search_arrival"
                                    app:input_icon_tint_color="@color/search_screen_icon_color_v2"
                                    app:input_text="@string/fly_to_hint" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/swapFlightsLocationsButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginRight="6dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="@string/rail_swap_locations_cont_desc"
                                android:padding="10dp"
                                android:src="@drawable/ic_search_swap"
                                android:visibility="gone"/>
                        </FrameLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        style="@style/MaterialCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true">

                        <com.expedia.bookings.widget.CalendarWidgetV2
                            android:id="@+id/calendar_card"
                            style="@style/MaterialCardTextView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/default_search_card_height"
                            android:contentDescription="@string/select_travel_dates_cont_desc"
                            app:input_icon="@drawable/search_form_icon_calendar"
                            app:input_icon_tint_color="@color/search_screen_icon_color_v2"
                            app:input_text="@string/select_dates" />
                    </android.support.v7.widget.CardView>

                    <ViewStub
                        android:id="@+id/widget_traveler_and_cabin_clas_stub"
                        android:inflatedId="@+id/widget_traveler_cabin_clas_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/flight_advanced_search_card_view"
                        style="@style/MaterialCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        android:importantForAccessibility="yes"
                        android:visibility="gone">

                        <ViewStub
                            android:id="@+id/flight_advanced_search_stub"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout="@layout/flight_advanced_search_widget"
                            android:visibility="gone"/>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </FrameLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/drop_shadow" />

        <FrameLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

        <Button
            android:id="@+id/search_btn"
            style="@style/SearchButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </FrameLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/suggestion_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_suggestion_background_v2"
        android:visibility="gone" />

</merge>
