<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingLeft="14dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <com.expedia.bookings.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_bundle_title"
            style="@style/BundleWidgetTop.PrimaryText"
            android:lines="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/details_info"
            android:id="@+id/sliding_bundle_info_icon"
            android:layout_marginLeft="4dp"
            android:visibility="visible"
            android:tint="@color/blue7"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/bundle_total_price"
            style="@style/BundleWidgetTop.PrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/per_person_text"
            style="@style/BundleWidgetTop.SecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_per_person" />
    </LinearLayout>
</LinearLayout>
