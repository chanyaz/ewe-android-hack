<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/footer_button_height"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingLeft="17dp"
    android:paddingRight="19dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <com.expedia.bookings.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_bundle_title"
            style="@style/BundleOverviewWidgets.PrimaryText"
            android:lines="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info"
            android:id="@+id/sliding_bundle_info_icon"
            android:layout_marginLeft="8dp"
            android:visibility="visible"
            android:tint="@color/blue1"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/bundle_total_price"
            style="@style/BundleOverviewFooter.PrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/per_person_text"
            style="@style/BundleOverviewFooter.SecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_per_person"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
