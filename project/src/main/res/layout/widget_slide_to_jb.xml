<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="wrap_content"
       android:layout_height="125dp"
       android:gravity="center_vertical">

    <ImageView
        android:id="@+id/touch_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/slide"
        android:contentDescription="@string/cd_slide_to_checkout_start"/>

    <View
        android:id="@+id/slider_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_centerVertical="true"
        android:background="@drawable/slide_line_gradient"
        android:visibility="invisible"/>

    <com.mobiata.android.widget.AutoResizeTextView
        android:id="@+id/slider_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/touch_target"
        android:textColor="#FCFCFC"
        android:textSize="26sp"/>

    <ImageView
        android:id="@+id/destination_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/slide_finish_unchecked"
        android:visibility="invisible"
        android:contentDescription="@string/cd_slide_to_checkout_end"/>

</merge>
