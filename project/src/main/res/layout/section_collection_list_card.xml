<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:foreground="?android:attr/selectableItemBackground"
    style="@style/HomeScreenCardViewStyle"
    app:cardPreventCornerOverlap="false">

    <com.expedia.bookings.widget.OptimizedImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/launch_hotels_gradient_bottom" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:padding="@dimen/launch_tile_padding">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/launch_list_txt"
            style="@style/Core.Text.400"
            app:textStyle="light"/>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/title"
            android:textColor="@color/launch_list_txt"
            style="@style/Core.Text.300"
            app:textStyle="light"/>

    </RelativeLayout>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/browse_hotels_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="14dp"
        android:layout_gravity="bottom|right"
        android:textColor="@color/launch_list_txt"
        android:text="@string/browse_hotels_label"
        android:visibility="gone"
        style="@style/Core.Text.400"/>

</android.support.v7.widget.CardView>