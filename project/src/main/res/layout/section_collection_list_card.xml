<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <com.expedia.bookings.widget.OptimizedImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/launch_hotels_gradient_bottom" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:paddingBottom="10dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/launch_list_txt"
            android:textSize="15sp"
            app:textStyle="light" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/title"
            android:textColor="@color/launch_list_txt"
            android:textSize="14sp"
            app:textStyle="light" />

    </RelativeLayout>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/browse_hotels_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="14dp"
        android:layout_gravity="bottom|right"
        android:textColor="@color/launch_list_txt"
        android:textSize="16sp"
        android:text="@string/browse_hotels_label"
        android:visibility="gone" />

</android.support.v7.widget.CardView>