<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/MaterialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/temporary_medium_padding"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.expedia.bookings.widget.rail.RailTicketDeliveryOptionWidget
                    android:id="@+id/station_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="64dp"
                    android:paddingBottom="@dimen/temporary_large_padding"
                    android:paddingTop="@dimen/temporary_large_padding"
                    app:delivery_icon="@drawable/ticket_delivery_station"
                    app:details_text="@string/pickup_station_details"
                    app:fees_visible="false"
                    app:label_text="@string/pickup_at_station" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="57dp"
                    android:background="@color/search_origin_dest_divider" />

                <com.expedia.bookings.widget.rail.RailTicketDeliveryOptionWidget
                    android:id="@+id/mail_delivery_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="64dp"
                    android:paddingBottom="@dimen/temporary_large_padding"
                    android:paddingTop="@dimen/temporary_large_padding"
                    app:delivery_icon="@drawable/ticket_delivery_mail"
                    app:details_text="@string/mail_delivery_details"
                    app:fees_visible="true"
                    app:label_text="@string/delivery_by_mail" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/mail_shipping_address_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/delivery_label_text"
                style="@style/CheckoutWidgetPrimaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:text="@string/shipping_address" />

            <include
                layout="@layout/section_rail_mail_delivery_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</merge>