<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/leanplum_dialog_image_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/leanplumtemplate_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/leanplum_dialog_image_height"
        android:adjustViewBounds="true"
        android:background="@android:color/background_light"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/leanplumtemplate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:paddingBottom="16dp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:textStyle="medium" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/leanplumtemplate_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:textColor="#757575"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>