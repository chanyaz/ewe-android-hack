<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:id="@+id/fareFamily_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/packages_flight_filter_background_color"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/fare_family_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/packages_flight_filter_background_color"
        app:contentInsetStartWithNavigation="0dp"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/fareFamily_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp"
            app:subtitleTextAppearance="@style/ToolbarSubtitleTextAppearance"
            app:titleTextAppearance="@style/ToolbarTitleTextAppearance" />

        <LinearLayout
            android:id="@+id/fare_family_location_airline_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/fare_family_location"
                style="@style/Core.Text.Default.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/fare_family_airlines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp" />
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.expedia.bookings.widget.ScrollView
            android:id="@+id/fareFamilyDetailContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <RadioGroup
                android:id="@+id/flight_fare_family_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </com.expedia.bookings.widget.ScrollView>

        <View
            android:id="@+id/bottom_container_drop_shadow"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/drop_shadow" />

        <com.expedia.bookings.widget.TotalPriceWidget
            android:id="@+id/upsell_total_price_widget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_button_height"
            android:background="@color/white"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:visibility="gone" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>