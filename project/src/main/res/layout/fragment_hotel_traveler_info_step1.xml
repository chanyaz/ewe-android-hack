<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        style="@style/MarginPoint"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp" >

        <include
            android:id="@+id/traveler_info"
            layout="@layout/section_hotel_edit_traveler_pt1" />

        <CheckBox
            android:id="@+id/merchandise_guest_opt_checkbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:textColor="@color/mer_email_text_color"
            android:textSize="@dimen/hotel_traveler_edit_email_disclaimer_text_size"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>