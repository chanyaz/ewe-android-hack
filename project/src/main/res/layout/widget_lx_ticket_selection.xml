<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.LXTicketSelectionWidget
    android:id="@+id/offer_tickets_widget"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/card_background"
    android:orientation="vertical">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/offer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lx_ticket_title_color"
        android:textSize="15sp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="14dp"
        app:textStyle="medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingTop="9dp" >

        <com.expedia.bookings.widget.TextView
            android:id="@+id/offer_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/lx_ticket_summary_color"
            android:textSize="11sp" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/free_cancellation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lx_free_cancellation"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:includeFontPadding="false"
            android:textColor="@color/lx_ticket_summary_color"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingTop="7dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/offer_passengers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/passenger_details"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/lx_ticket_summary_color"
            android:textSize="10sp"
            android:visibility="gone" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/offer_bags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/bag_details"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/lx_ticket_summary_color"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>

    <com.expedia.bookings.widget.LXOfferDescription
        android:id="@+id/offer_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <LinearLayout
        android:id="@+id/ticket_selectors_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?android:dividerHorizontal" />

    <LinearLayout
        android:id="@+id/ticket_summary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="14dp">

        <TextView
            android:id="@+id/selected_ticket_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/lx_ticket_summary_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/lx_book_now"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:background="@drawable/lx_book_now_button_selector"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>

</com.expedia.bookings.widget.LXTicketSelectionWidget>