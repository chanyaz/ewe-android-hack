<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.LXTicketSelectionWidget
    android:id="@+id/offer_tickets_widget"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/card_background"
    android:orientation="vertical">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/offer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lx_ticket_title_color"
        android:textSize="15sp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="14dp"
        app:textStyle="medium" />

    <LinearLayout
        android:id="@+id/ticket_selectors_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?android:dividerHorizontal" />

    <LinearLayout
        android:id="@+id/ticket_summary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selected_ticket_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/lx_ticket_summary_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/free_cancellation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lx_free_cancellation"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/check"
                android:drawablePadding="8dp"
                android:textColor="@color/lx_ticket_summary_color"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/lx_book_now"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:background="@drawable/lx_book_now_button_selector"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>

</com.expedia.bookings.widget.LXTicketSelectionWidget>