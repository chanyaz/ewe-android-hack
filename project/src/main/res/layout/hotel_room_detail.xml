<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="RelativeLayout">

    <View
        android:id="@+id/room_info_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="@color/gray2" />

    <LinearLayout
        android:id="@+id/value_adds_point_fee_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/hotel_room_padding"
        android:layout_marginLeft="@dimen/hotel_room_padding"
        android:layout_marginTop="@dimen/hotel_room_top_padding"
        android:layout_toLeftOf="@+id/price_button_container"
        android:gravity="top|left"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/option_text_view"
            style="@style/Core.Text.Large.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/cancellation_text_view"
            style="@style/Core.Text.Default.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/cancellation_time_text_view"
            style="@style/Core.Text.Small.LightColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/value_adds_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/earn_message_text_view"
            style="@style/Core.Text.Small.LightColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:drawableLeft="@drawable/earn_message_icon"
            android:drawablePadding="@dimen/earn_message_icon_dimen" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/mandatory_fee_text_view"
            style="@style/Core.Text.Small.LightColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/price_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/hotel_room_padding"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="@dimen/hotel_room_padding"
        android:layout_marginTop="@dimen/hotel_room_top_padding"
        android:gravity="bottom|right"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/discount_percentage_text_view"
                style="@style/Core.Text.Small.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/guest_rating_background"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:textColor="@color/white"
                android:visibility="gone" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/pay_later_price_text_view"
                style="@style/Core.Text.Default.LightColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/discount_percentage_text_view"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/discount_percentage_text_view"
                android:alpha=".7" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/strike_through_price_text_view"
                style="@style/Core.Text.Default.LightColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/discount_percentage_text_view"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/discount_percentage_text_view"
                android:alpha=".7" />

        </RelativeLayout>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/deposit_terms_text_view"
            style="@style/Core.Text.XLarge.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/textview_drawable_padding"
            android:text="@string/deposit_terms"
            android:textColor="?attr/primary_color"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/price_per_night_text_view"
                style="@style/Core.Text.XLarge.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hotel_cell_disabled_text" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/per_night_text_view"
                style="@style/Core.Text.Default.LightColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/per_night" />

        </LinearLayout>

        <com.expedia.bookings.widget.HotelRoomRateActionButton
            android:id="@+id/hotel_room_row_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/room_left_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/urgency_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/room_left_text_view"
                style="@style/Core.Text.Default.LightColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp" />

        </LinearLayout>

    </LinearLayout>

</merge>
