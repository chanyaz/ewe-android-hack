<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/tablet_checkout_trip_bucket_expanded_padding_x" >

    <com.expedia.bookings.widget.TextView
        android:id="@+id/room_type_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#444444"
        android:textSize="14sp"
        android:visibility="gone"
        app:textStyle="medium" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/bed_type_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tablet_checkout_trip_bucket_expanded_padding_major_y"
        android:textColor="#444444"
        android:textSize="14sp"
        android:visibility="gone"
        app:textStyle="light" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/num_travelers_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tablet_checkout_trip_bucket_expanded_padding_major_y"
        android:drawableLeft="@drawable/ic_tablet_checkout_guest"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textColor="#444444"
        android:textSize="14sp"
        app:textStyle="light" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/dates_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tablet_checkout_trip_bucket_expanded_padding_minor_y"
        android:drawableLeft="@drawable/ic_tablet_checkout_calendar"
        android:drawablePadding="8dp"
        android:textColor="#444444"
        android:textSize="14sp"
        app:textStyle="light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_px_hdpi_two_px_xhdpi"
        android:background="@color/divider_grey" />

    <include
        layout="@layout/snippet_trip_bucket_expanded_price" />

</LinearLayout>
