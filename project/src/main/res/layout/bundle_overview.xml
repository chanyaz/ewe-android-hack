<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/overview_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />

                <com.expedia.bookings.widget.CheckoutToolbar
                    android:id="@+id/checkout_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/packages_primary_color"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                    app:titleTextAppearance="@style/ToolbarTitleTextAppearance">

                    <com.expedia.bookings.widget.packages.CheckoutOverviewHeader
                        android:id="@+id/checkout_overview_header_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_horizontal"
                        android:visibility="gone" />

                </com.expedia.bookings.widget.CheckoutToolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <com.expedia.bookings.widget.packages.CheckoutOverviewHeader
            android:id="@+id/checkout_overview_floating_toolbar"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_above="@+id/bundle_widget"
            android:gravity="center"
            app:layout_behavior="com.expedia.bookings.widget.CheckoutHeaderBehavior" />

        <com.expedia.bookings.presenter.packages.BundleWidget
            android:id="@+id/bundle_widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <com.expedia.bookings.widget.PriceChangeWidget
            android:id="@+id/price_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <com.expedia.bookings.widget.PackageBundlePriceWidget
            android:id="@+id/bundle_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/itin_white_text"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/checkout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Checkout"
            android:visibility="gone" />
    </LinearLayout>

    <com.expedia.bookings.widget.PackageCheckoutPresenter
        android:id="@+id/checkout_presenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        android:background="@color/itin_white_text"
        android:visibility="gone" />

    <com.expedia.bookings.widget.CVVEntryWidget
        android:id="@+id/cvv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3A424C"
        android:visibility="gone" />

</merge>