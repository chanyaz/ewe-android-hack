<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/cardview_border_radius"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="@bool/signInCardUseCompatPadding">

    <LinearLayout
        android:id="@+id/top_half"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_gravity="top"
        android:gravity="bottom|left"
        android:orientation="vertical"
        android:background="@drawable/bg_sign_in_placeholder_launch">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/first_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="11dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/second_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="11dp"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="right"
        android:orientation="horizontal">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/button_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="@color/placeholder_card_button_text_color"
            android:textSize="14sp"
            android:visibility="gone" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/button_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:textColor="@color/placeholder_card_button_text_color"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

</android.support.v7.widget.CardView>
