<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="@dimen/card_view_container_margin"
        android:layout_marginRight="@dimen/card_view_container_margin"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/pinned_hotel_view"
                style="@style/Core.Text.Large.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="?attr/primary_color"
                android:textColor="@color/white"
                android:visibility="gone"
                android:text="@string/you_picked_this_hotel_label"
                tools:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <View
                        android:id="@+id/foreground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <com.expedia.bookings.widget.hotel.hotelCellModules.HotelCellUrgencyMessage
                        android:id="@+id/urgency_message_layout"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top" />

                    <com.expedia.bookings.widget.hotel.hotelCellModules.HotelCellVipMessage
                        android:id="@+id/vip_message_container"
                        style="@style/HotelCellVipPadding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/vip_container_background" />

                </FrameLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp">

                    <com.expedia.bookings.widget.hotel.hotelCellModules.HotelCellNameStarAmenityDistance
                        android:id="@+id/hotel_name_star_amenity_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/price_layout"
                        app:hotel_name_max_line="3" />

                    <LinearLayout
                        android:id="@+id/price_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/hotel_discount_container"
                            layout="@layout/hotel_cell_discount_air_attach" />

                        <com.expedia.bookings.widget.hotel.hotelCellModules.HotelCellPriceTopAmenity
                            android:id="@+id/hotel_price_top_amenity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="vertical"
                            app:strike_through_price_orientation="vertical" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <include
                android:id="@+id/rating_earn_container"
                layout="@layout/hotel_cell_rating_points_container" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>