<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.presenter.shared.KrazyglueWidget android:id="@+id/krazyglue_widget"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2" />

    <com.expedia.bookings.presenter.shared.KrazyglueHotelRecyclerView
        android:id="@+id/hotels_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</com.expedia.bookings.presenter.shared.KrazyglueWidget>