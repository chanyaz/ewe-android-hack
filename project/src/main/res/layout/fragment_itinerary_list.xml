<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outer_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/itin_list_bg"
    android:orientation="vertical">

    <!-- The listview -->

    <android.support.v7.widget.Toolbar
        android:id="@+id/trips_toolbar"
        android:background="@color/launch_toolbar_background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:title="@string/itin_toolbar">
    </android.support.v7.widget.Toolbar>

    <com.expedia.bookings.widget.itin.ItinListView
        android:id="@android:id/list"
        android:layout_width="@dimen/itin_list_view_width"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/trips_toolbar"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        app:pathViewColor="#FF586169"
        app:pathViewWidth="2dp" />

    <!-- The No itins portion -->
    <ViewStub
        android:id="@+id/sign_in_presenter_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/sign_in_presenter"
        android:layout="@layout/sign_in_presenter_stub"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/old_sign_in_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/empty_list_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/centered_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/no_trips_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_empty_itin_suitcase" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/no_upcoming_trips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="100dp"
                    android:paddingRight="100dp"
                    android:text="@string/no_upcoming_trips"
                    android:textColor="@color/itin_offwhite_text"
                    android:textSize="18sp"
                    app:textStyle="light" />

                <Button
                    android:id="@+id/find_itinerary_button"
                    style="@style/LoginFormButton"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/btn_cancel"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/enter_itinerary_number"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/status_refresh_button"
                    style="@style/ItinLoginRefreshButton"
                    android:layout_marginTop="0dp"
                    android:bufferType="spannable"
                    android:contentDescription="@string/trips_refresh_trips_list_cont_desc"
                    android:gravity="center"
                    android:text="@string/refresh"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hint_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/or_enter_itin_number_tv"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:background="@color/launch_screen_itin_divider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/or"
                    android:textColor="@color/launch_screen_itin_divider" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:layout_weight="1"
                    android:background="@color/launch_screen_itin_divider" />

            </LinearLayout>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/or_enter_itin_number_tv"
                style="@style/Widget.BorderlessButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/enter_itinerary_number"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/enter_a_guest_itinerary_number"
                android:textAllCaps="false"
                android:textColor="@color/launch_screen_itin_divider"
                android:textSize="14sp"
                app:textStyle="medium" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/empty_list_loading_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/fetching_your_itin_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/fetching_your_itinerary"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                app:textStyle="light" />

            <ProgressBar
                android:id="@+id/empty_progress_bar"
                style="@style/ProgressBar.CandyCane"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_margin="24dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ActionBar shadow view -->

    <ImageView
        android:id="@+id/shadow_image_view"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/ab_shadow" />

    <FrameLayout
        android:id="@+id/deep_refresh_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_70"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/refreshing_your_trip"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                app:textStyle="medium" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:gravity="center_horizontal"
                android:indeterminate="true" />
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
