<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="@dimen/checkout_form_padding">

    <com.expedia.bookings.widget.TravelerButton
            android:id="@+id/traveler_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/traveler_input_bottom_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

        <com.expedia.bookings.widget.traveler.NameEntryView
            android:id="@+id/name_entry_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/traveler_input_bottom_margin" />

        <com.expedia.bookings.widget.traveler.PhoneEntryView
            android:id="@+id/phone_entry_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/traveler_input_bottom_margin" />

        <com.expedia.bookings.widget.traveler.TSAEntryView
            android:id="@+id/tsa_entry_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/passport_country_spinner"
            style="@style/FakeSpinner.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@android:color/white"
            android:textSize="@dimen/traveler_input_text_size"
            android:visibility="gone"/>

        <com.expedia.bookings.widget.FlightTravelerAdvancedOptionsWidget
            android:id="@+id/traveler_advanced_options_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/traveler_advanced_options_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/dialog_button"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/traveler_advanced_options_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/advanced_options_text"
                android:layout_gravity="center"
                android:src="@drawable/read_more"
                android:tint="?attr/primary_color" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/advanced_options_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="10dp"
                android:text="@string/advanced"
                android:textAllCaps="true"
                android:textColor="?attr/primary_color"
                app:textStyle="medium" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>