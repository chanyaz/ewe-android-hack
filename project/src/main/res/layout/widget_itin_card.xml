<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <View
            android:id="@+id/top_extra_padding_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itin_card_extra_top_padding" />

        <LinearLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/itin_card_bg"
            android:orientation="vertical">

            <!-- ###################################################################### -->
            <!-- TITLE LAYOUT -->
            <!-- ###################################################################### -->

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itin_title_height"
                android:background="?attr/itin_card_detail_title_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="1dp"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/close_image_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="@string/toolbar_nav_icon_close_cont_desc"
                    android:padding="8dp"
                    android:paddingTop="7dp"
                    android:src="?attr/skin_itinCardActionBarCheckmark" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/itin_card_summary_divider_color" />

                <FrameLayout
                    android:id="@+id/title_content_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1" />

                <FrameLayout
                    android:id="@+id/title_menu_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <!--
                        Hacky. Approximate a submenu by having an invisible ShareView
                        widget in the same place as the overflow button. We'll activate
                        the "submenu" manually when the user clicks Share in the
                        overflow menu.
                    -->

                    <com.dgmltn.shareeverywhere.ShareView
                        android:id="@+id/itin_share_view"
                        style="@style/Widget.ShareView.Invisible"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="top"
                        android:layout_marginTop="-3dp"
                        android:visibility="invisible" />

                    <ImageButton
                        android:id="@+id/itin_overflow_image_button"
                        android:layout_width="48dp"
                        android:layout_height="46dp"
                        android:layout_marginRight="3dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/share_menu_btn_cont_desc"
                        android:paddingBottom="6dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="6dp"
                        android:src="?attr/itin_card_detail_action_overflow" />
                </FrameLayout>
            </LinearLayout>

            <!-- ###################################################################### -->
            <!-- SCROLLVIEW -->
            <!-- ###################################################################### -->

            <com.expedia.bookings.widget.ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fadingEdge="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/header_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/itin_card_expanded_image_height"
                        android:focusableInTouchMode="true"
                        android:gravity="center">

                        <com.expedia.bookings.widget.ParallaxContainer
                            android:id="@+id/header_image_container"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/itin_card_expanded_image_height"
                            app:scrollMin="@dimen/itin_card_expanded_parallax_slop">

                            <com.expedia.bookings.widget.RecyclerGallery
                                android:id="@+id/header_image_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:fadingEdge="none"
                                android:spacing="20dp"
                                android:unselectedAlpha="1.0"
                                app:placeholder="@null" />
                        </com.expedia.bookings.widget.ParallaxContainer>

                        <ImageView
                            android:id="@+id/header_overlay_image_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:importantForAccessibility="2"
                            android:scaleType="fitXY"
                            android:src="@drawable/bg_card_image_overlay" />

                        <LinearLayout
                            android:id="@+id/header_text_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:importantForAccessibility="2"
                            android:gravity="center"
                            android:focusable="true"
                            android:orientation="vertical" >

                            <com.expedia.bookings.widget.TextView
                                android:id="@+id/header_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:importantForAccessibility="2"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:paddingLeft="4dp"
                                android:maxLines="1"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <com.expedia.bookings.widget.TextView
                                android:id="@+id/header_text_date_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:importantForAccessibility="2"
                                android:gravity="center"
                                android:paddingRight="4dp"
                                android:maxLines="1"
                                android:textColor="?attr/itin_card_summary_date_text_color"
                                android:textSize="17sp"
                                app:textStyle="normal" />

                        </LinearLayout>

                        <com.expedia.bookings.widget.AlphaImageView
                            android:id="@+id/fixed_itin_type_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingBottom="42dp"
                            android:visibility="gone" />

                        <View
                            android:id="@+id/selected_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_mini_card_selected"
                            android:visibility="gone" />

                        <View
                            android:id="@+id/header_mask"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="#66000000"
                            android:visibility="gone" />

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/vip_label_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:visibility="gone"
                            android:paddingLeft="@dimen/itin_hotel_vip_label_left_padding"
                            android:paddingTop="@dimen/itin_hotel_vip_label_top_padding"
                            android:shadowRadius="4.0"
                            android:shadowDx="2.0"
                            android:shadowDy="2.0"
                            android:shadowColor="#66000000"
                            android:textColor="#FFFFFF"
                            android:text="@string/vip"
                            android:textSize="15sp"
                            app:textStyle="medium" />

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/room_upgrade_available_banner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="12dp"
                            android:background="#4A90E2"
                            android:drawableLeft="@drawable/tonight_only"
                            android:drawablePadding="3dp"
                            android:paddingBottom="6dp"
                            android:paddingLeft="9dp"
                            android:paddingRight="9dp"
                            android:paddingTop="6dp"
                            android:text="@string/room_upgrade_available"
                            android:textColor="#ffffff"
                            android:textSize="9sp"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <!-- ###################################################################### -->
                    <!-- SUMMARY LAYOUT -->
                    <!-- ###################################################################### -->

                    <LinearLayout
                        android:id="@+id/summary_section_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/itin_summary_section_height"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <FrameLayout
                            android:id="@+id/summary_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/chevron_image_view"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="8dp"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/trips_expand_button_label_cont_desc"
                            android:src="?attr/itin_card_list_chevron_drawable" />
                    </LinearLayout>

                    <View
                        android:id="@+id/summary_divider_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="?attr/itin_card_summary_divider_color"
                        android:visibility="gone" />

                    <!-- ###################################################################### -->
                    <!-- DETAILS LAYOUT -->
                    <!-- ###################################################################### -->

                    <FrameLayout
                        android:id="@+id/details_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:visibility="gone" />
                </LinearLayout>
            </com.expedia.bookings.widget.ScrollView>

            <!-- ###################################################################### -->
            <!-- ACTION BUTTON LAYOUT -->
            <!-- ###################################################################### -->

            <include
                android:id="@+id/action_button_layout"
                layout="@layout/section_itin_actions"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/checkin_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itin_summary_section_height"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/itin_summary_divider_color" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/checkin_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/itin_checkin_rounded_corner"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:maxLines="1"
                    android:text="@string/itin_card_flight_checkin"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:textStyle="medium" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/bottom_extra_padding_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itin_card_extra_bottom_padding" />
    </LinearLayout>

    <!-- ###################################################################### -->
    <!-- FLOATING TYPE IMAGEVIEW -->
    <!-- ###################################################################### -->

    <com.expedia.bookings.widget.AlphaImageView
        android:id="@+id/itin_type_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</merge>
