<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.expedia.bookings.widget.TelephoneSpinner
        android:id="@+id/edit_phone_number_country_code_spinner"
        style="@style/FakeSpinner.Light"
        android:dropDownVerticalOffset="-40dp"
        app:drop_down_view="@layout/spinner_dropdown_item"
        android:spinnerMode="dropdown"
        android:popupBackground="@android:color/white"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="10dp"/>

    <com.expedia.bookings.widget.traveler.TravelerEditText
        android:id="@+id/edit_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:hint="@string/phone_number_hint"
        android:nextFocusForward="@+id/edit_birth_date_text_btn"
        android:inputType="phone"
        android:maxLines="1"
        android:textSize="@dimen/traveler_input_text_size"
        app:error_cont_desc="@string/phone_validation_error_message"/>
</merge>