<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="?attr/primary_color"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_close_white_24dp">

            <FrameLayout
                android:id="@+id/toolbar_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:text="@string/toolbar_search_cars"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:textStyle="medium" />

                <!-- The -16dip is to undo the padding included inside searchView. This is risky behavior, as if that view changes, then we're
                    going to be adjusting by the wrong amount. -->
                <android.support.v7.widget.SearchView
                    android:id="@+id/toolbar_searchView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-16dip"
                    android:iconifiedByDefault="false"
                    android:paddingLeft="3dp">

                </android.support.v7.widget.SearchView>

            </FrameLayout>
        </android.support.v7.widget.Toolbar>

        <View
            android:id="@+id/toolbar_dropshadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_dropshadow_height"
            android:background="@drawable/tb_shadow" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/search_form_margin"
            android:layout_marginRight="@dimen/search_form_margin"
            android:layout_weight="1"
            android:scrollbars="none">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/search_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/search_form_top_margin"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        style="@style/MaterialCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.expedia.bookings.widget.shared.SearchInputTextView
                                android:id="@+id/origin_card"
                                style="@style/MaterialCardTextView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/default_search_card_height"
                                android:contentDescription="@string/location_edit_box_cont_desc"
                                app:input_icon="@drawable/location"
                                app:input_icon_tint_color="@color/search_screen_icon_color_v2"
                                app:input_text="@string/pick_up_location" />

                            <com.expedia.bookings.widget.shared.SearchInputTextView
                                android:id="@+id/destination_card"
                                style="@style/MaterialCardTextView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/default_search_card_height"
                                android:contentDescription="@string/location_edit_box_cont_desc"
                                android:focusable="false"
                                app:input_icon="@drawable/location"
                                app:input_icon_tint_color="@color/search_screen_icon_color_v2"
                                app:input_text="@string/drop_off_location" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="57dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/search_origin_dest_divider" />

                    </android.support.v7.widget.CardView>

                    <com.expedia.bookings.widget.CalendarWidgetWithTimeSlider
                        android:id="@+id/car_calendar_card"
                        style="@style/MaterialCardView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_search_card_height"
                        android:layout_marginBottom="@dimen/material_search_field_bottom_margin"
                        android:contentDescription="@string/base_search_dates_cont_desc"
                        app:cardUseCompatPadding="true"
                        app:input_icon="@drawable/search_form_icon_calendar"
                        app:input_icon_tint_color="@color/search_screen_icon_color_v2"
                        app:input_text="@string/select_dates" />

                </LinearLayout>
            </FrameLayout>
        </ScrollView>

        <Button
            android:id="@+id/search_btn"
            style="@style/CarSearchButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/car_button_ripple"
            android:enabled="true"
            android:minHeight="@dimen/recent_search_item_height"
            android:text="@string/search"
            android:textSize="17sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/suggestion_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_suggestion_background_v2"
        android:visibility="gone" />
</merge>
