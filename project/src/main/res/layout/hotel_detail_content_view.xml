<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="RelativeLayout">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/promo_messaging_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/promo_text"
            style="@style/Core.Text.200.LightColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingRight="18dp"
            android:paddingTop="10dp"
            app:layout_constraintRight_toRightOf="@+id/promo_messaging_container"
            app:layout_constraintTop_toTopOf="@+id/promo_messaging_container"
            app:layout_constraintBottom_toBottomOf="@+id/promo_messaging_container"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/promo_text"
            android:gravity="center_vertical|left"
            android:paddingLeft="18dp"
            android:paddingRight="4dp"
            app:layout_constraintLeft_toLeftOf="@+id/promo_messaging_container"
            app:layout_constraintTop_toTopOf="@+id/promo_messaging_container"
            app:layout_constraintBottom_toBottomOf="@+id/promo_messaging_container">

            <ImageView
                android:id="@+id/member_only_deal_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_member_only_tag_bg" />

            <ImageView
                android:id="@+id/generic_attach_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_generic_attach_with_background" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/discount_percentage"
                style="@style/Core.Text.200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/discount_percentage_background"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/air_attach_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:background="@drawable/air_attach_swp_icon_background"
                android:padding="4dp"
                android:src="@drawable/airattach"
                android:tint="@color/white" />

            <LinearLayout
                android:id="@+id/vip_access_message_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/vip_access_message"
                    style="@style/Core.Text.200.LightColor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:text="@string/vip" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/vip_loyalty_message_details"
                    style="@style/Core.Text.200.LightColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:text="@string/vip_loyalty_applied_message" />

            </LinearLayout>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/regular_loyalty_applied"
                style="@style/Core.Text.200.LightColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/regular_loyalty_applied_message" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/price_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/promo_messaging_container"
        android:background="@color/white"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="13dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/details_sold_out"
            style="@style/Core.Text.500.Medium.LightColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/trip_bucket_sold_out"
            android:visibility="gone" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/strike_through_price"
            style="@style/Core.Text.300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:focusable="false"
            android:importantForAccessibility="no"
            android:textColor="@color/gray700"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/hotel_price_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/strike_through_price"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/price"
                style="@style/Core.Text.500.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_vertical"
                android:textColor="@color/gray900" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/price_per_descriptor"
                style="@style/Core.Text.400.LightColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:paddingRight="10dp"
                android:text="@string/per_night" />

        </LinearLayout>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/earn_message"
            style="@style/Core.Text.100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/hotel_price_container"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/earn_message_icon"
            android:drawablePadding="@dimen/earn_message_icon_dimen"
            android:textColor="@color/hotel_detail_earn_message_text_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="right"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/hotel_search_info"
                style="@style/Core.Text.300.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/hotel_search_info_guests"
                style="@style/Core.Text.300.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/gray600" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider_between_price_and_rating"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/price_widget"
        android:background="@color/app_divider_on_gray" />

    <LinearLayout
        android:id="@+id/rating_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_between_price_and_rating"
        android:orientation="horizontal"
        android:paddingBottom="22dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="22dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/no_guest_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="@string/no_reviews"
            android:textColor="@color/hotel_cell_gray_text"
            android:textSize="10sp" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/user_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingLeft="4dp"
            android:paddingTop="0dp"
            android:textColor="@color/gray900"
            android:textSize="13sp"
            app:textStyle="medium" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/user_rating_recommendation_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hotel_rating_text"
            android:textColor="@color/gray900"
            android:textSize="13sp"
            app:textStyle="normal" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/number_of_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="?attr/primary_color"
            android:textSize="13sp"
            app:textStyle="medium" />
    </LinearLayout>

    <View
        android:id="@+id/rating_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rating_container"
        android:background="@color/gray400" />

    <LinearLayout
        android:id="@+id/etp_and_free_cancellation_messaging_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating_divider"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/single_message_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/free_cancellation"
                style="@style/HotelDetailsInfoLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/free_cancellation"
                android:textColor="@color/light_text_color"
                android:visibility="gone" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/etp_info_text"
                style="@style/ETPInfoTextLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_later_info_text"
                android:textColor="@color/light_text_color"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/free_cancellation_etp_messaging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/free_cancellation_small"
                style="@style/HotelDetailsInfoSmallCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/free_cancellation"
                android:textColor="@color/light_text_color" />

            <View
                android:id="@+id/horizontal_divider_bw_etp_and_free_cancellation"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/app_divider_on_gray" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/etp_info_text_small"
                style="@style/ETPInfoTextSmallCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pay_later_info_text"
                android:textColor="@color/light_text_color" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/etp_and_free_cancellation_messaging_info_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/etp_and_free_cancellation_messaging_container"
        android:background="@color/app_divider_on_gray" />

    <HorizontalScrollView
        android:id="@+id/amenities_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etp_and_free_cancellation_messaging_info_divider"
        android:background="@color/white"
        android:fillViewport="true"
        android:scrollbarSize="3dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/amenities_table_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutAnimation="@anim/layout_wave_scale" />
        </TableLayout>

    </HorizontalScrollView>

    <View
        android:id="@+id/etp_and_free_cancellation_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/amenities_scroll_view"
        android:background="@color/app_divider_on_gray" />

    <RelativeLayout
        android:id="@+id/hotel_description_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etp_and_free_cancellation_divider"
        android:background="@drawable/white_back_gray_ripple"
        android:focusable="true"
        android:importantForAccessibility="yes"
        android:paddingBottom="8dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="15dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:importantForAccessibility="no"
            android:maxLines="2"
            android:textColor="@color/light_text_color"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/read_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/body_text"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:importantForAccessibility="no"
            android:paddingTop="5dp"
            android:src="@drawable/read_more"
            android:tint="@color/gray700" />

    </RelativeLayout>

    <View
        android:id="@+id/map_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/hotel_description_container"
        android:background="@color/white" />

    <FrameLayout
        android:id="@+id/map_click_container"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_below="@id/map_divider"
        android:foreground="?android:attr/selectableItemBackground"
        android:importantForAccessibility="no">

        <com.expedia.bookings.widget.LocationMapImageView
            android:id="@+id/mini_map_view"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_gravity="center"
            android:importantForAccessibility="no"
            android:paddingBottom="160dp"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/transparent_view_over_mini_map"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:contentDescription="@string/hotel_map_view_cont_desc"
            android:paddingBottom="160dp" />

    </FrameLayout>

    <com.expedia.bookings.hotel.widget.PayNowPayLaterTabs
        android:id="@+id/pay_now_pay_later_tabs"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_click_container"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="10dp"
        app:tab_left_cont_desc="@string/pay_now_cont_desc"
        app:tab_left_text="@string/room_rate_pay_now"
        app:tab_right_cont_desc="@string/pay_later_cont_desc"
        app:tab_right_text="@string/room_rate_pay_later" />

    <View
        android:id="@+id/etp_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/pay_now_pay_later_tabs"
        android:background="@color/gray200" />

    <LinearLayout
        android:id="@+id/room_rate_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etp_divider"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="15dp"
        android:visibility="gone">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/common_amenities_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/all_rooms_amenity_checkmark"
            android:drawablePadding="8dp"
            android:textSize="11sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/room_rate_regular_loyalty_applied_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus_sign"
                android:textColor="@color/hotel_points_applied_plus_color"
                android:textSize="15sp" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/regular_loyalty_applied_message"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/room_rate_vip_loyalty_applied_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vip"
                android:textColor="@color/hotels_primary_color"
                android:textSize="11sp" />

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="@string/vip_loyalty_applied_header_message"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/common_amenities_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/room_rate_header"
        android:background="@color/gray200"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/room_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_amenities_divider"
        android:orientation="vertical" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/renovation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/room_container"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="12dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="12dp"
        android:visibility="gone">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/renovation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/renovation_notice"
            android:textColor="@color/hotelsv2_checkout_text_color"
            app:layout_constraintLeft_toLeftOf="@+id/renovation_container"
            android:textSize="13sp"
            app:textStyle="medium" />

        <com.expedia.bookings.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/renovation_title"
            android:text="@string/property_undergoing_renovations"
            android:textColor="@color/hotelsv2_checkout_text_color"
            android:textSize="11sp"
            app:textStyle="normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/details_info"
            app:layout_constraintRight_toRightOf="@+id/renovation_container"
            app:layout_constraintTop_toTopOf="@+id/renovation_container"
            app:layout_constraintBottom_toBottomOf="@+id/renovation_container"/>

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/renovation_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/renovation_container"
        android:background="@drawable/grey_divider" />

    <TableLayout
        android:id="@+id/property_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/renovation_bottom_divider"
        android:paddingTop="10dp" />

    <View
        android:id="@+id/property_amenities_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/property_info_container"
        android:background="@color/gray200"
        android:paddingTop="10dp" />

    <LinearLayout
        android:id="@+id/book_by_phone_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/property_amenities_divider"
        android:background="@drawable/spinner_ripple"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="19dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/book_by_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="14dp"
            android:text="@string/book_by_phone"
            android:textColor="?attr/primary_color"
            android:textSize="16sp" />
    </LinearLayout>

    <Space
        android:id="@+id/bottom_bar_spacer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_by_phone_container"
        android:background="@color/gray100" />
</merge>
