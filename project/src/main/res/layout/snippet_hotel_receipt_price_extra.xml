<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.section.HotelReceiptExtraSection xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/price_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_overview_checkmark"
        android:drawablePadding="6dp"
        android:gravity="left"
        style="@style/CheckoutReceiptExtra"/>

    <com.expedia.bookings.widget.TextView
        android:id="@+id/price_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        style="@style/CheckoutReceiptExtra"/>


</com.expedia.bookings.section.HotelReceiptExtraSection>