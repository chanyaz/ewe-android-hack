<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Space
        android:id="@+id/spacing_view"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <LinearLayout
        android:id="@+id/hotel_booking_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacing_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selected_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cars_actionbar_text_color" />

        <TextView
            android:id="@+id/selected_bed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cars_actionbar_text_color" />

        <TextView
            android:id="@+id/number_nights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cars_actionbar_text_color" />

        <TextView
            android:id="@+id/number_guests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cars_actionbar_text_color" />

        <TextView
            android:id="@+id/free_cancellation_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/check"
            android:drawablePadding="8dp"
            android:paddingLeft="14dp"
            android:textColor="@color/cars_actionbar_text_color" />

        <TextView
            android:id="@+id/sale_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/check"
            android:drawablePadding="8dp"
            android:paddingLeft="14dp"
            android:textColor="@color/cars_actionbar_text_color" />

        <TextView
            android:id="@+id/best_price_guarantee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/check"
            android:drawablePadding="8dp"
            android:paddingLeft="14dp"
            android:textColor="@color/cars_actionbar_text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_booking_summary"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cars_actionbar_text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cars_actionbar_text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cars_actionbar_text_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/cars_actionbar_text_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/cars_actionbar_text_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/cars_actionbar_text_color" />

        </LinearLayout>

    </LinearLayout>

</merge>
