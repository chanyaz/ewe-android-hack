<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingTop="11dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_package_banner"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/package_flight_banner_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/packages_primary_color"
                android:paddingBottom="7dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="6dp"
                android:text="@string/flight_package_banner_title"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:textStyle="medium" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/package_flight_banner_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:paddingBottom="15dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="15dp"
                android:text="@string/flight_package_banner_description"
                android:textColor="@color/gray9"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>