<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#eaeaea"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textSize="22sp"
                android:textColor="@color/cars_actionbar_text_color"
                tools:text="" />

            <TextView
                android:id="@+id/car_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cars_actionbar_text_color"
                android:layout_below="@+id/vendor"
                android:layout_toLeftOf="@+id/reserve_now"
                android:layout_alignParentLeft="true"
                android:paddingLeft="16dp"
                android:textSize="14sp"
                tools:text="" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:textColor="@color/cars_actionbar_text_color"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:gravity="bottom"
                android:layout_alignBottom="@+id/reserve_now"
                android:layout_below="@+id/car_details"
                android:layout_toLeftOf="@+id/reserve_now"
                android:layout_alignParentLeft="true"
                android:textSize="12sp"
                tools:text="" />

            <LinearLayout
                android:id="@+id/price_container"
                android:layout_width="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/category_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:textColor="@color/cars_primary_color"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    tools:text="" />

                <TextView
                    android:id="@+id/total_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/cars_actionbar_text_color"
                    android:textSize="12sp"
                    tools:text="" />

            </LinearLayout>

            <ToggleButton
                android:layout_width="wrap_content"
                android:minWidth="115dp"
                android:layout_height="43dp"
                android:paddingTop="6dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="6dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:layout_below="@+id/price_container"
                android:id="@+id/reserve_now"
                android:textAllCaps="false"
                android:background="@drawable/cars_toogle_background_selector"
                android:textOn="@string/cars_reserve_text"
                android:textOff="@string/cars_view_details_text" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingBottom="28dp"
                app:liteMode="true"
                android:layout_below="@+id/reserve_now"
                app:mapType="normal" />

            <TextView
                android:id="@+id/map_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/map_view"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:background="@android:color/white"
                android:alpha=".9"
                android:textColor="@color/cars_actionbar_text_color"
                android:textSize="10dp"
                android:text=""
                android:paddingBottom="8dp"
                android:paddingRight="16dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>