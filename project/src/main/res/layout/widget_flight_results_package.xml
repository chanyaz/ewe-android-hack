<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.expedia.bookings.widget.flights.DockedOutboundFlightSelectionView
        android:id="@+id/docked_outbound_flight_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@android:color/white"
        android:paddingTop="13dp"
        android:paddingBottom="14dp"
        android:paddingLeft="19dp"
        android:paddingRight="14dp"
        android:visibility="gone" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/airline_charges_fees_header"
        style="@style/FlightWarningBar"
        android:text="@string/airline_charge_notice"
        android:visibility="gone" />

    <com.expedia.bookings.widget.FlightListRecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:overScrollMode="never" />

    <View
        android:id="@+id/docked_outbound_flight_widget_dropshadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_dropshadow_height"
        android:background="@drawable/tb_shadow"
        android:visibility="gone" />

    <com.expedia.bookings.widget.FlightFilterButtonWithCountWidget
        android:id="@+id/sort_filter_button_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_filter_height"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone"/>
</merge>
