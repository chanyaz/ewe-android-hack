<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/results_cal_trav_bg">

    <com.mobiata.android.time.widget.CalendarPicker
        android:id="@+id/calendar_picker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:calendarBaseColor="#000000"
        app:calendarSecondaryColor="#6F6F6F"
        app:calendarHighlightColor="@color/tablet_results_search_blue"
        app:calendarHighlightInverseColor="#FFFFFF"
        app:calendarTodayColor="#007dff"
        app:calendarInvalidDaysColor="#CFCFCF"
        app:calendarDaysOfWeekColor="#7c7c7c"
        app:calendarChangeMonthCaretColor="@color/tablet_results_search_blue"
        app:calendarHeaderTextSize="16dp"
        app:calendarHeaderTextColor="#444444"
        app:calendarLayout="@layout/widget_calendar_picker_eb"/>

</LinearLayout>

