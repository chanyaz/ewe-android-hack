<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.support.v7.widget.CardView">

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:alignmentMode="alignMargins"
        app:columnCount="4"
        app:rowCount="2"
        app:columnOrderPreserved="false"
        app:orientation="horizontal"
        app:useDefaultMargins="true" >

        <com.expedia.bookings.widget.HotelAmenityFilterItem
            android:id="@+id/hotel_filter_amenity_one"
            android:layout_width="70dp"
            android:clickable="true"
            app:star_cont_desc="@string/itin_hotel_room_amenity_free_wifi_cont_desc"
            tools:background="?attr/primary_color"/>

        <com.expedia.bookings.widget.HotelAmenityFilterItem
            android:id="@+id/hotel_filter_amenity_two"
            android:layout_width="70dp"
            android:clickable="true"
            app:star_cont_desc="@string/star_rating_two_cont_desc"
            tools:background="?attr/primary_color"/>

        <com.expedia.bookings.widget.HotelAmenityFilterItem
            android:id="@+id/hotel_filter_amenity_three"
            android:layout_width="70dp"
            android:clickable="true"
            app:star_cont_desc="@string/AmenityBreakfast"
            tools:background="?attr/primary_color"/>

        <com.expedia.bookings.widget.HotelAmenityFilterItem
            android:id="@+id/hotel_filter_amenity_four"
            android:layout_width="70dp"
            android:clickable="true"
            app:star_cont_desc="@string/AmenitySpa"
            tools:background="?attr/primary_color" />

        <com.expedia.bookings.widget.HotelAmenityFilterItem
            android:id="@+id/hotel_filter_amenity_five"
            android:layout_width="70dp"
            android:clickable="true"
            app:star_cont_desc="@string/AmenityPetsAllowed"
            tools:background="?attr/primary_color"/>

        <com.expedia.bookings.widget.HotelAmenityFilterItem
            android:id="@+id/hotel_filter_amenity_six"
            android:layout_width="70dp"
            android:clickable="true"
            app:star_cont_desc="@string/AmenityPool"
            tools:background="?attr/primary_color"/>

        <com.expedia.bookings.widget.HotelAmenityFilterItem
            android:id="@+id/hotel_filter_amenity_seven"
            android:layout_width="70dp"
            android:clickable="true"
            app:star_cont_desc="@string/AmenityFitnessCenter"
            tools:background="?attr/primary_color"/>

        <com.expedia.bookings.widget.HotelAmenityFilterItem
            android:id="@+id/hotel_filter_amenity_eight"
            android:layout_width="70dp"
            android:clickable="true"
            app:star_cont_desc="@string/star_rating_four_cont_desc"
            tools:background="?attr/primary_color" />

    </android.support.v7.widget.GridLayout>
</merge>
