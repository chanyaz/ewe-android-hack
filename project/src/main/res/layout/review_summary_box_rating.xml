<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/rating_summary_description_text_view"
        style="@style/Core.Text.200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/rating_score_box_rating_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.expedia.bookings.widget.BoxRatingBar
        android:id="@+id/rating_score_box_rating_bar"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize=".1"
        app:corner_radius="@dimen/hotel_review_corner_radius"
        app:disabled_box_color="@color/gray300"
        app:divider_width="@dimen/hotel_review_divider_width"
        app:enabled_box_color="@color/app_primary"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rating_score_text_view"
        app:layout_constraintTop_toBottomOf="@+id/rating_summary_description_text_view" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/rating_score_text_view"
        style="@style/Core.Text.200.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/rating_score_box_rating_bar"
        app:layout_constraintLeft_toRightOf="@+id/rating_score_box_rating_bar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rating_score_box_rating_bar" />

</merge>
