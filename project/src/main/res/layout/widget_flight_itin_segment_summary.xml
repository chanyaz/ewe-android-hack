<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/MaterialCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/widget_flight_itin_segment_airline_summary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/itin_card_summary_divider_color" />

        <include layout="@layout/widget_flight_itin_segment_timing_summary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/itin_card_summary_divider_color" />

        <include layout="@layout/widget_flight_itin_segment_seating_summary" />
    </LinearLayout>
</android.support.v7.widget.CardView>