<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    style="@style/MaterialCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--airline name widget-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/flight_itin_airline_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/flight_itin_airline_name"
                style="@style/FlightItinAirlineName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toTopOf="@+id/flight_itin_airline_operated_by"
                app:layout_constraintLeft_toRightOf="@+id/flight_itin_airline_logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Alaska airlines 4584" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/flight_itin_airline_operated_by"
                style="@style/FlightItinOperatedBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/flight_itin_airline_logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flight_itin_airline_name"
                tools:text="Operated by Virgin Airlines"
                tools:visibility="visible" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/itin_card_summary_divider_color" />

        <!--airline timing widget-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:id="@+id/flight_itin_departure_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:orientation="vertical"
                app:layout_constraintBaseline_toBaselineOf="@+id/flight_itin_arrival_details"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/flight_itin_to_arrow"
                app:layout_constraintTop_toTopOf="parent">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/departure_red_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:textColor="@color/gray600"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Fri, Oct 2"
                    tools:visibility="visible" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/flight_itin_departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:textColor="@color/gray900"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="6:45am" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/flight_itin_departure_airport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:textColor="@color/gray600"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:text="Seattle (SEA)" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/flight_itin_departure_terminal_gate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray600"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    tools:text="Terminal 11"
                    tools:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/flight_itin_to_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/itin_flight_summary_arrow_cont_desc"
                android:focusable="true"
                android:tint="@color/gray900"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/flight_itin_departure_details"
                app:layout_constraintRight_toLeftOf="@+id/flight_itin_arrival_details"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/itin_arrow_icon" />

            <LinearLayout
                android:id="@+id/flight_itin_arrival_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="right"
                android:orientation="vertical"
                app:layout_constraintBaseline_toBaselineOf="@+id/flight_itin_departure_details"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/flight_itin_to_arrow"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/arrival_red_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingBottom="6dp"
                    android:textColor="@color/error_red"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Arrives on Sat, Oct 3"
                    tools:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/flight_itin_arrival_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray900"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="8:45am" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/red_eye_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:textColor="@color/error_red"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:text="+1"
                        tools:visibility="visible" />
                </LinearLayout>

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/flight_itin_arrival_airport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:textColor="@color/gray600"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:text="San Francisco (SFO)" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/flight_itin_arrival_terminal_gate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray600"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    tools:text="Terminal 12"
                    tools:visibility="visible" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/itin_card_summary_divider_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seating_container"
                android:layout_marginBottom="6dp"
                android:layout_centerHorizontal="true">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/flight_itin_seating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FlightItinSeating"
                    android:drawablePadding="6dp"
                    android:drawableLeft="@drawable/ic_itin_seat"
                    tools:text="21A, 22B "/>

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/flight_itin_cabin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FlightItinSeating"
                    tools:text="â€¢ Economy / Coach (R)"/>
            </LinearLayout>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/flight_seating_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FlightItinSeating"
                android:layout_below="@id/seating_container"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Confirm or change seats with airline"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>