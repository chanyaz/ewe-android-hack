<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:transitionGroup="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/primary_color"
            android:orientation="vertical"
            android:transitionGroup="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/search_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:minHeight="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_close_white_24dp"
                app:contentInsetStartWithNavigation="0dp">

                <FrameLayout
                    android:id="@+id/toolbar_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="3dp"
                        android:text="?attr/skin_searchToolbarText"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        app:textStyle="medium" />

                    <!-- The -16dip is to undo the padding included inside searchView. This is risky behavior, as if that view changes, then we're
                        going to be adjusting by the wrong amount. -->
                    <android.support.v7.widget.SearchView
                        android:id="@+id/toolbar_searchView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-16dip"
                        android:iconifiedByDefault="false"
                        android:paddingLeft="3dp">

                    </android.support.v7.widget.SearchView>

                </FrameLayout>
            </android.support.v7.widget.Toolbar>
        </LinearLayout>

        <View
            android:id="@+id/toolbar_dropshadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_dropshadow_height"
            android:background="@drawable/tb_shadow" />


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:transitionGroup="false"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/search_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:clipToPadding="false"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:background="@drawable/card_background">

                    <com.expedia.bookings.widget.shared.SearchInputTextView
                        android:id="@+id/destination_card"
                        style="@style/MaterialCardTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_search_card_height"
                        android:contentDescription="?attr/skin_searchLocationContDesc"
                        app:input_icon="@drawable/search_form_icon_search"
                        app:input_icon_tint_color="@color/search_screen_icon_color_v2"
                        app:input_text="?attr/skin_searchLocationText" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:background="@drawable/card_background">

                    <com.expedia.bookings.widget.CalendarWidgetV2
                        android:id="@+id/calendar_card"
                        style="@style/MaterialCardTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_search_card_height"
                        android:contentDescription="@string/base_search_dates_cont_desc"
                        app:input_icon="@drawable/search_form_icon_calendar"
                        app:input_icon_tint_color="@color/search_screen_icon_color_v2"
                        app:input_text="@string/select_dates" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:background="@drawable/card_background">

                    <ViewStub
                        android:id="@+id/traveler_stub"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_search_card_height"
                        android:layout="@layout/traveler_search_widget" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/advanced_options_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:background="@drawable/card_background">

                    <com.expedia.bookings.widget.shared.SearchInputTextView
                        android:id="@+id/advanced_options_view"
                        style="@style/MaterialCardTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_search_card_height"
                        android:ellipsize="end"
                        android:maxLines="1"
                        app:input_icon="@drawable/sort"
                        app:input_icon_tint_color="@color/search_screen_icon_color_v2"
                        app:input_text="@string/advanced_options" />
                </FrameLayout>

                <ViewStub
                    android:id="@+id/swp_stub"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_search_card_height"
                    android:layout="@layout/swp_search_widget" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/drop_shadow" />

        <Button
            android:id="@+id/search_btn"
            style="@style/SearchButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.expedia.bookings.hotel.widget.AdvancedSearchOptionsView
        android:id="@+id/search_options_details_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/suggestion_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_suggestion_background_v2"
        android:visibility="gone" />

</merge>
