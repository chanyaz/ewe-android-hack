<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.expedia.bookings.itin.hotel.common.HotelItinToolbar
            android:id="@+id/widget_itin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/app_primary"
            android:minHeight="?attr/actionBarSize" />

        <android.support.design.widget.TabLayout
            android:id="@+id/hotel_itin_room_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_primary"
            android:minHeight="?attr/actionBarSize"
            android:visibility="gone"
            app:tabIndicatorColor="@color/white"
            app:tabPadding="10dp"
            app:tabSelectedTextColor="@color/itin_text_white_color"
            app:tabTextAppearance="@style/HotelItinManageRoomsTabWidget"
            app:tabTextColor="@color/white_70" />
    </android.support.design.widget.AppBarLayout>

    <com.expedia.bookings.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray100"
        android:fadingEdge="none">

        <LinearLayout
            android:id="@+id/widget_hotel_manage_room_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotel_itin_number_of_rooms_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:textColor="@color/itin_hotel_manage_booking_number_rooms"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </com.expedia.bookings.widget.ScrollView>

</LinearLayout>
