<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="@color/white">

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rail_timeline_departure_time"
            style="@style/RailPrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="09:10" />

        <ImageView
            android:id="@+id/rail_timeline_icon2"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/rail_timeline_arrival_time"
            style="@style/RailPrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            tools:text="10:47" />
    </LinearLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/flight_layover_pattern_bg" />


    <TextView
        android:id="@+id/rail_timeline_transfer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="Change at Crewe" />

</LinearLayout>