<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/itin_sign_in_toolbar_color"
    android:orientation="horizontal">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/pos_trips_signin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textColor="@color/account_toolbar_text_color"
        android:textSize="@dimen/account_toolbar_subtitle_text_size"
        app:textStyle="medium" />
    <LinearLayout
        android:id="@+id/country_selection_view"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/country_selected_imageview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="7dp"
            android:scaleType="centerCrop" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/country_selected_textview"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="16dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:textStyle="medium" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/material_dropdown" />

    </LinearLayout>
</LinearLayout>
