<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/month_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/increase_month_cont_desc"
            android:padding="@dimen/arrow_up_down_click_padding"
            android:src="@drawable/ic_picker_up" />

        <TextView
            android:id="@+id/month_text"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/month_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/decrease_month_cont_desc"
            android:padding="@dimen/arrow_up_down_click_padding"
            android:src="@drawable/ic_picker_down" />

    </LinearLayout>

    <TextView
        android:id="@+id/divider"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center"
        android:text="@string/forward_slash"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/year_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/increase_year_cont_desc"
            android:padding="@dimen/arrow_up_down_click_padding"
            android:src="@drawable/ic_picker_up" />

        <TextView
            android:id="@+id/year_text"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/year_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/decrease_year_cont_desc"
            android:padding="@dimen/arrow_up_down_click_padding"
            android:src="@drawable/ic_picker_down" />
    </LinearLayout>

</LinearLayout>
