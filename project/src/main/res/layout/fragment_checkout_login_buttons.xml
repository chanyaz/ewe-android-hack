<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.expedia.bookings.widget.AccountButton
        android:id="@+id/account_button_root"
        style="@style/CarsCardView"
        android:background="@android:color/transparent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/tablet_checkout_form_inter_card_gap"
        android:orientation="vertical" />

    <include
        android:id="@+id/wallet_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wallet_button_bottom_margin"
        layout="@layout/include_wallet_button" />

</LinearLayout>
