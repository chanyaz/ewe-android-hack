<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.expedia.bookings.itin.common.GoogleMapsLiteMapView
                    android:id="@+id/widget_hotel_itin_map"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:clickable="true"
                    android:contentDescription="@string/itin_hotel_details_map_view_content_description" />

                <ImageView
                    android:id="@+id/hotel_directions_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/ic_directions_hotel_map_details" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/widget_hotel_itin_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="16dp">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/widget_hotel_itin_address_line_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray900"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/widget_hotel_itin_address_line_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray900"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/taxi_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:visibility="gone" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/itin_card_summary_divider_color" />

                <com.expedia.bookings.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/taxi_button"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_taxi_card_icon"
                    android:drawablePadding="4dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/itin_hotel_taxi_card" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</merge>
