<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="11dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.expedia.bookings.itin.widget.GoogleMapsLiteMapView
                android:id="@+id/widget_hotel_itin_map"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:clickable="true"
                android:contentDescription="@string/itin_hotel_details_map_view_content_description" />

            <LinearLayout
                android:id="@+id/widget_hotel_itin_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="16dp">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/widget_hotel_itin_address_line_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray900"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/widget_hotel_itin_address_line_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray900"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</merge>
