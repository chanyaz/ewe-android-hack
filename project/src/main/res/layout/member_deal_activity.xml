<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mod_search_toolbar"
        style="@style/DealsToolbar"
        app:navigationContentDescription="@string/member_deals_toolbar_close_cont_desc"
        app:title="@string/member_deals_toolbar_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/member_deal_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
