<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ViewStub android:id="@+id/results_stub"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/widget_flight_results"
        android:layout="@layout/package_flight_results_presenter_stub" />

    <ViewStub
        android:id="@+id/overview_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/widget_flight_overview"
        android:layout="@layout/flight_overview_presenter_stub" />

    <ViewStub
        android:id="@+id/filter_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/flight_filter"
        android:layout="@layout/package_flight_filter_stub" />

    <ViewStub
        android:id="@+id/baggage_fee_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/flight_baggage_fee_info"
        android:layout="@layout/flight_baggage_fee_stub" />

    <ViewStub
        android:id="@+id/payment_fee_info_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/payment_fee_info"
        android:layout="@layout/payment_fee_info_webview_stub" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/flights_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:minHeight="?attr/actionBarSize"
            app:subtitleTextAppearance="@style/ToolbarSubtitleTextAppearance"
            app:titleTextAppearance="@style/ToolbarTitleTextAppearance" />

        <View
            android:id="@+id/toolbar_dropshadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_dropshadow_height"
            android:background="@drawable/tb_shadow" />
    </LinearLayout>
</merge>
