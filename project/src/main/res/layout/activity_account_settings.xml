<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/account_background_color">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/LaunchActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/account_toolbar_background_color"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@android:id/home"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:background="?attr/controlBackground"
                android:scaleType="center"
                android:tint="@color/account_screen_back_nav_color"
                android:src="@drawable/ic_arrow_back" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/toolbar_not_signed_in"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/account_settings_menu_label"
                    android:textColor="@color/account_toolbar_text_color"
                    android:textSize="@dimen/account_toolbar_title_text_size"
                    app:textStyle="normal"
                    tools:visibility="gone" />

                <LinearLayout
                    android:id="@+id/toolbar_signed_in"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/toolbar_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/account_toolbar_text_color"
                            android:textSize="@dimen/account_toolbar_title_text_size"
                            app:textStyle="medium"
                            tools:text="Lauren LoPrete" />

                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/toolbar_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/toolbar_name"
                            android:textColor="@color/account_toolbar_text_color"
                            android:textSize="@dimen/account_toolbar_subtitle_text_size"
                            app:textStyle="normal"
                            tools:text="laurenloprete@gmail.com" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/toolbar_loyalty_tier_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/bg_loyalty_badge_silver_tier"
                        android:paddingBottom="6dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        tools:textColor="@color/expedia_plus_silver_text"
                        tools:text="+silver" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:fadingEdge="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/section_loyalty_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="55dp"
                android:paddingRight="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/account_toolbar_background_color"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/first_row_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/center"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerHorizontal="true" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/available_points_label"
                        style="@style/AccountDashboardLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/center"
                        android:text="@string/available_loyalty_points" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/available_points"
                        style="@style/AccountDashboardValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/available_points_label"
                        android:layout_marginTop="4dp"
                        android:layout_toLeftOf="@id/center"
                        tools:text="51,203" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/pending_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/available_points"
                        android:layout_toLeftOf="@id/center"
                        android:textColor="@color/account_toolbar_text_color_light"
                        android:textSize="13sp"
                        app:textStyle="light"
                        tools:text="1,176 pending" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/points_monetary_value_label"
                        style="@style/AccountDashboardLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/available_points_label"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/center"
                        android:text="@string/points_value_label" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/points_monetary_value"
                        style="@style/AccountDashboardValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/available_points"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/center"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <include
                        android:id="@+id/first_row_country"
                        layout="@layout/account_settings_country"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:visibility="visible"
                        android:layout_toRightOf="@+id/center"
                        android:layout_alignTop="@+id/available_points_label"
                        android:gravity="center_vertical" />
                </RelativeLayout>

                <View
                    android:id="@+id/row_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4CEEEEEE"/>

                <RelativeLayout
                    android:id="@+id/second_row_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp">

                    <View
                        android:id="@+id/center_second_row"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerHorizontal="true" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/currency_label"
                        style="@style/AccountDashboardLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/center_second_row"
                        android:text="@string/currency_label" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/currency"
                        style="@style/AccountDashboardValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/currency_label"
                        android:layout_marginTop="4dp"
                        android:layout_toLeftOf="@id/center_second_row"/>

                    <include
                        android:id="@+id/second_row_country"
                        layout="@layout/account_settings_country"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/center_second_row"
                        android:layout_alignTop="@+id/currency_label"
                        android:gravity="center_vertical" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/section_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sign_in_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="@dimen/about_section_margin"
                    android:layout_marginRight="@dimen/about_section_margin"
                    android:layout_marginTop="@dimen/about_section_margin"
                    android:text="@string/sign_in"
                    android:theme="@style/AccountButton.SignIn" />

                <Button
                    android:id="@+id/sign_in_with_facebook_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="@dimen/about_section_margin"
                    android:layout_marginLeft="@dimen/about_section_margin"
                    android:layout_marginRight="@dimen/about_section_margin"
                    android:text="@string/acct__Sign_In_with_Facebook"
                    android:theme="@style/AccountButton.SignInFacebook" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@color/account_sign_in_button_separator_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="@string/or"
                        android:textColor="@color/account_sign_in_button_separator_color" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@color/account_sign_in_button_separator_color" />
                </LinearLayout>

                <Button
                    android:id="@+id/create_account_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_margin="@dimen/about_section_margin"
                    android:text="@string/acct__Create_Account"
                    android:theme="@style/AccountButton.CreateAccount" />

                <TextView
                    android:id="@+id/google_account_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="@dimen/about_section_margin"
                    android:layout_marginBottom="@dimen/about_section_margin"
                    android:layout_marginRight="@dimen/about_section_margin"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/google_change_icon"
                    android:text="@string/google_account_change_string"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="14dp" />

            <FrameLayout
                android:id="@+id/section_app_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <FrameLayout
                android:id="@+id/section_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <FrameLayout
                android:id="@+id/section_communicate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <FrameLayout
                android:id="@+id/section_legal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <FrameLayout
                android:id="@+id/section_also_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <Button
                android:id="@+id/sign_out_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="@dimen/about_section_margin"
                android:text="@string/sign_out"
                android:theme="@style/AccountButton.SignOut" />

            <FrameLayout
                android:id="@+id/section_copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/about_section_margin" />

            <TextView
                android:id="@+id/open_source_credits_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="@color/AboutRowTextColor" />

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/toolbar_dropshadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_dropshadow_height"
        android:layout_below="@id/toolbar"
        android:background="@drawable/tb_shadow" />

</RelativeLayout>