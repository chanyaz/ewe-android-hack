<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/drop_shadow"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/drop_shadow" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/boarding_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/packages_secondary_color"
            android:gravity="center"
            android:lines="2"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/name_must_match_warning"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:textStyle="normal" />

        <com.expedia.bookings.widget.FrameLayout
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/itin_white_text">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <com.expedia.bookings.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="@string/trip_overview"
                    android:textSize="16sp"
                    app:textStyle="medium" />

                <ImageView
                    android:id="@+id/chevron"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_chevron_up_black_48dp"
                    android:tint="@color/package_bundle_icon_color" />

            </LinearLayout>

        </com.expedia.bookings.widget.FrameLayout>

        <com.expedia.bookings.widget.ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/itin_white_text">

            <LinearLayout
                android:id="@+id/checkout_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.expedia.bookings.widget.AccountButton
                    android:id="@+id/login_widget"
                    style="?attr/checkout_card_view_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/card_view_container_margin"
                    android:layout_marginRight="@dimen/card_view_container_margin"
                    android:orientation="vertical" />

                <!--This has a hardcoded string FYI-->
                <LinearLayout
                    android:id="@+id/hint_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_view_container_margin"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="@dimen/card_view_container_margin"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:background="#979797" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="or"
                        android:textColor="@color/defaultTextColor" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp"
                        android:layout_weight="1"
                        android:background="#979797" />

                </LinearLayout>

                <com.expedia.bookings.presenter.packages.TravelerPresenter
                    android:id="@+id/traveler_presenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/card_view_container_margin"
                    android:layout_marginRight="@dimen/card_view_container_margin" />

                <ViewStub
                    android:id="@+id/payment_info_card_view_stub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_view_container_margin"
                    android:layout_marginRight="@dimen/card_view_container_margin"
                    android:layout_marginTop="12dp"
                    android:fitsSystemWindows="true"
                    android:inflatedId="@+id/payment_info_card_view"
                    android:layout="?attr/paymentWidgetLayout" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/legal_information_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_view_container_margin"
                    android:layout_marginRight="@dimen/card_view_container_margin"
                    android:linksClickable="true"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textSize="10sp" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/disclaimer_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_view_container_margin"
                    android:layout_marginRight="@dimen/card_view_container_margin"
                    android:paddingBottom="16dp"
                    android:textSize="10sp"
                    android:visibility="gone" />


                <com.expedia.bookings.widget.TextView
                    android:id="@+id/deposit_policy_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_view_container_margin"
                    android:layout_marginRight="@dimen/card_view_container_margin"
                    android:paddingBottom="16dp"
                    android:textSize="10sp"
                    android:visibility="gone" />

            </LinearLayout>

        </com.expedia.bookings.widget.ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/drop_shadow" />

        <com.expedia.bookings.widget.PriceChangeWidget
            android:id="@+id/price_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <com.expedia.bookings.widget.TotalPriceWidget
            android:id="@+id/total_price_widget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_button_height"
            android:background="#FFFFFF"
            android:paddingLeft="19dp"
            android:paddingRight="19dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_grey" />

        <LinearLayout
            android:id="@+id/slide_to_purchase_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFDFD"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <com.expedia.bookings.widget.SlideToWidgetLL
                android:id="@+id/slide_to_purchase_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/car_slide_to_purchase_padding"
                android:layout_marginRight="@dimen/car_slide_to_purchase_padding"
                android:background="#FFFFFF" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/purchase_total_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="?attr/primary_color"
                android:textSize="@dimen/car_slide_to_purchase_price_text_size" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/checkout_button"
        style="@style/MaterialFooterButtonText"
        android:layout_width="match_parent"
        android:background="?attr/hotel_select_room_ripple_drawable"
        android:layout_gravity="bottom"
        android:text="@string/Checkout" />

</merge>
