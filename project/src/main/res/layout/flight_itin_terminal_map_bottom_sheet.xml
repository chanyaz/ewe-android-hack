<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.expedia.bookings.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/itin_flight_terminal_maps_bottom_sheet_title"
        android:textColor="@color/gray600"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp">
        <com.expedia.bookings.widget.TextView
            android:id="@+id/terminal_map_departure_airport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="24dp"
            android:textColor="@color/blue5"
            android:textSize="20sp"
            tools:text="SFO terminal map" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/terminal_map_arrival_airport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/blue5"
            android:layout_marginBottom="24dp"
            android:textSize="20sp"
            tools:text="SEA terminal map" />
    </LinearLayout>
</LinearLayout>