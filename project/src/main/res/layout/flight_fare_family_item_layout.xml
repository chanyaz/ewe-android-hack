<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.flights.FareFamilyItemWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/fare_family_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true" />


    <LinearLayout
        android:id="@+id/fare_family_class_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/fare_family_class_title"
                style="@style/FareFamilyHeader" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/fare_family_class_price_delta"
                style="@style/FareFamilyHeader"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="+ $100" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/fare_family_class_subtitle"
                style="@style/FareFamilyHeaderSubtitle"
                android:fontFamily="sans-serif-medium"
                android:text="@string/cabin_class"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="vertical">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/fare_family_class_roundtrip_text"
                    style="@style/FareFamilyHeaderSubtitle"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="@string/roundtrip"
                    android:textSize="10sp" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/fare_family_traveller_text"
                    style="@style/FareFamilyHeaderSubtitle"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="2 travellers"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray2">

    </View>

</com.expedia.bookings.widget.flights.FareFamilyItemWidget>

