<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.flights.FareFamilyItemWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="5dp">

    <RadioButton
        android:id="@+id/fare_family_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fare_family_class_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/fare_family_class_title"
                    style="@style/FareFamilyHeader" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/fare_family_class_price_delta"
                    style="@style/FareFamilyHeader"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="+ $100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/fare_family_class_subtitle"
                    style="@style/FareFamilyHeaderSubtitle"
                    android:text="@string/cabin_class"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/fare_family_class_roundtrip_text"
                        style="@style/FareFamilyTitle"
                        android:text="@string/roundtrip"
                        android:textSize="10sp" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/fare_family_traveler_text"
                        style="@style/FareFamilyTitle"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <com.expedia.bookings.widget.FareFamilyPrimaryAmenitiesWidget
                android:id="@+id/fare_family_primary_amenities_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fare_family_show_more_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30.5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp">

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/amenity_show_more"
                android:textColor="@color/app_primary"
                android:textSize="11sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/flight_upsell_chevron_icon"
                android:tint="@color/gray700" />
        </LinearLayout>

        <View
            android:id="@+id/fare_family_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray200" />
    </LinearLayout>

</com.expedia.bookings.widget.flights.FareFamilyItemWidget>

