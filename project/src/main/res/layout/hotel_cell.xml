<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    tools:ignore="UnusedResources">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom|left"
                android:padding="6dp">
                <com.expedia.bookings.widget.TextView
                    android:id="@+id/hotel_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotel Title"
                    android:textColor="#ffffff"/>

                <RatingBar
                    android:id="@+id/hotel_rating_bar"
                    style="@style/RatingBar.UserReview.Material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stepSize=".5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom|right"
                android:padding="6dp">

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/strike_through_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$100"
                    android:textColor="#ffffff"
                    android:layout_gravity="right"
                    android:layout_marginBottom="3dp" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/price_per_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$99/nt"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <com.expedia.bookings.widget.TextView
                android:id="@+id/guest_rating_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/guest_rating_background"
                android:padding="4dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="11.5sp"
                android:gravity="center"/>

            <com.expedia.bookings.widget.TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:text="@string/guest_recommend"
                android:textSize="12sp"/>

            <com.expedia.bookings.widget.TextView
                android:id="@+id/top_amenity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
