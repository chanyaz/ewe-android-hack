<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_layer_list"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:paddingTop="12dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="11dp">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/hotel_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textStyle="medium"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom">

                <RatingBar
                    android:id="@+id/hotel_rating_bar"
                    style="@style/RatingBar.UserReview.Material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stepSize=".5"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="amenity goes here"
                    android:textColor="@color/hotel_cell_light_gray_text"
                    android:textSize="11sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingRight="11dp">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/strike_through_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="$100"
                android:textColor="@color/hotel_cell_light_gray_text"
                android:textSize="13sp" />


        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/guest_rating_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/guest_rating_background"
            app:textStyle="medium"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <com.expedia.bookings.widget.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="@string/guest_recommend"
            android:textColor="@color/hotel_cell_gray_text"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TextView
                android:id="@+id/price_per_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textStyle="medium"
                android:textColor="@color/hotel_cell_gray_text"
                android:textSize="15sp" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/top_amenity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hotel_cell_gray_text"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>