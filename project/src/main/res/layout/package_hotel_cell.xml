<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="@dimen/card_view_container_margin"
        android:layout_marginRight="@dimen/card_view_container_margin"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/unreal_deal_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/packages_primary_color"
                android:orientation="horizontal"
                android:paddingBottom="7dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="6dp"
                android:visibility="gone">

                <com.expedia.bookings.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/unreal_deal_text"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    app:textStyle="medium" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/unreal_deal_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/best_flight_description"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <include layout="@layout/hotel_cell_content"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>