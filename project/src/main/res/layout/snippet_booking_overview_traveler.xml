<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/display_picture"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/checkout_info_container_padding"
        android:src="@drawable/ic_traveler" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|left">

        <TextView
            android:id="@+id/traveler_empty_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_traveler_info"
            android:textSize="16sp" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/traveler_empty_prompt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/ab_test_flights_missing_info_callout"
            android:textColor="@color/flight_checkout_missing_info_callout"
            android:textSize="14sp"
            android:visibility="gone"
            app:textStyle="light" />

    </LinearLayout>

</LinearLayout>
