<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    style="@style/MaterialCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.expedia.bookings.widget.TextView
            android:id="@+id/customer_support_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/itin_standard_text_color"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Contact Expedia if you need help managing this itinerary." />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/itin_card_summary_divider_color" />

        <LinearLayout
            android:id="@+id/itinerary_number_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:text="@string/itin_customer_support_itin_number_text"
                android:textColor="@color/itin_standard_text_color"
                android:textSize="@dimen/type_200_text_size"
                android:textStyle="bold"
                tools:text="Itinerary #" />

            <com.expedia.bookings.widget.TextView
                android:id="@+id/itinerary_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/itin_standard_text_color"
                android:textSize="@dimen/type_200_text_size"
                android:textStyle="bold"
                tools:text="39485798457" />

        </LinearLayout>

        <com.expedia.bookings.widget.TextView
            android:id="@+id/call_support_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:drawableLeft="@drawable/itin_call_support"
            android:drawablePadding="8dp"
            android:textColor="@color/itin_call_to_action_text"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="415-123-1234" />

        <com.expedia.bookings.widget.TextView
            android:id="@+id/expedia_customer_support_site_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/itin_website_icon"
            android:drawablePadding="8dp"
            android:textColor="?attr/itin_card_summary_action_button_text_color"
            android:textSize="?attr/itin_card_summary_action_button_text_size"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="Expedia customer Support" />

    </LinearLayout>

</android.support.v7.widget.CardView>
