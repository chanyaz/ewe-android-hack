<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.expedia.bookings.itin.common.ItinToolbar
            android:id="@+id/widget_itin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/app_primary"
            android:minHeight="?attr/actionBarSize" />
    </android.support.design.widget.AppBarLayout>

    <com.expedia.bookings.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray100"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:paddingBottom="19dp"
            android:paddingTop="19dp">

            <com.expedia.bookings.itin.common.ItinConfirmationWidget
                android:id="@+id/widget_itin_flight_confirmation_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/flight_itin_summary_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.expedia.bookings.itin.common.ItinTimeDurationWidget
                android:id="@+id/widget_itin_flight_total_duration_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.expedia.bookings.itin.common.ItinWebviewInfoWidget
                android:id="@+id/widget_itin_webview_info_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.expedia.bookings.itin.flight.details.FlightItinMapWidget
                android:id="@+id/widget_itin_flight_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.expedia.bookings.itin.flight.details.FlightItinBookingDetailsWidget
                android:id="@+id/widget_flight_itin_booking_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="19dp" />
        </LinearLayout>
    </com.expedia.bookings.widget.ScrollView>
</LinearLayout>
