<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout android:id="@+id/rail_checkout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.expedia.bookings.widget.traveler.TravelerDefaultState
            android:id="@+id/rail_traveler_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="@dimen/card_view_container_margin"
            android:layout_marginRight="@dimen/card_view_container_margin"
            android:background="@drawable/card_background" />

        <ViewStub
            android:id="@+id/rail_payment_info_card_view_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rail_traveler_card_view"
            android:layout_marginLeft="@dimen/card_view_container_margin"
            android:layout_marginRight="@dimen/card_view_container_margin"
            android:layout_marginTop="12dp"
            android:background="@color/black"
            android:fitsSystemWindows="true"
            android:inflatedId="@+id/payment_info_card_view"
            android:layout="@layout/billing_details_payment_widget" />

        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <com.expedia.bookings.widget.TotalPriceWidget
                android:id="@+id/rail_total_price_widget"
                android:layout_width="match_parent"
                android:layout_height="@dimen/footer_button_height"
                android:background="@color/white"
                android:paddingLeft="19dp"
                android:paddingRight="19dp" />

            <LinearLayout
                android:id="@+id/slide_to_purchase_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFDFD"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:visibility="gone">

                <com.expedia.bookings.widget.SlideToWidgetLL
                    android:id="@+id/slide_to_purchase_widget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/white" />

                <com.expedia.bookings.widget.TextView
                    android:id="@+id/purchase_total_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/rail_primary_color"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.expedia.bookings.widget.CheckoutToolbar
        android:id="@+id/checkout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/rail_primary_color"
        app:layout_collapseMode="pin"
        app:contentInsetEnd="16dp"
        app:contentInsetRight="16dp"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"/>
</merge>
