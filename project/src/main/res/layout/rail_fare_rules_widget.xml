<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fare_rules_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="18dp"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.expedia.bookings.widget.TextView
        android:id="@+id/fare_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/rail_title_color"
        android:textSize="15sp"
        app:textStyle="medium" />

    <com.expedia.bookings.widget.TextView
        android:id="@+id/no_fare_rules_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:textColor="@color/gray700"
        android:textSize="11sp"
        android:text="@string/no_fare_rules_available"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/fare_rules_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp" />
</LinearLayout>