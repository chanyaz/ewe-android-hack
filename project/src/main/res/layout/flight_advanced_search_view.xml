<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/egg_white"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/advance_search_view_header"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <com.expedia.bookings.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="Recent searches"
                android:textColor="@color/flight_primary_color"
                android:textSize="15sp"
                app:textStyle="medium" />

            <ImageView
                android:id="@+id/advanced_search_chevron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/read_more_without_padding"
                android:tint="@color/flight_primary_color" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/expanded_advance_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    style="@style/MaterialCardView"
                    android:layout_width="165dp"
                    android:layout_height="125dp"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="165dp"
                        android:layout_height="125dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            style="@style/Core.Text.400"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="SFO --> LAX" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/Core.Text.300"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:text="Apr 3 - Apr 5    " />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="5dp"
                                android:paddingTop="7dp"
                                android:src="@drawable/search_form_icon_person"
                                android:tint="@color/search_screen_icon_color_v2" />

                            <TextView
                                style="@style/Core.Text.400"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="2" />
                        </LinearLayout>

                        <TextView
                            style="@style/Core.Text.300"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Premium Economy" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    style="@style/MaterialCardView"
                    android:layout_width="165dp"
                    android:layout_height="125dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/grey_divider"
                    android:orientation="vertical"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="165dp"
                        android:layout_height="125dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            style="@style/Core.Text.400"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="SFO --> LAX" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/Core.Text.300"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:text="Apr 3 - Apr 5    " />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="5dp"
                                android:paddingTop="7dp"
                                android:src="@drawable/search_form_icon_person"
                                android:tint="@color/search_screen_icon_color_v2" />

                            <TextView
                                style="@style/Core.Text.400"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="2" />
                        </LinearLayout>

                        <TextView
                            style="@style/Core.Text.300"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Premium Economy" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/MaterialCardView"
                    android:layout_width="165dp"
                    android:layout_height="125dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/grey_divider"
                    android:orientation="vertical"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="165dp"
                        android:layout_height="125dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            style="@style/Core.Text.400"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="SFO --> LAX" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/Core.Text.300"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:text="Apr 3 - Apr 5    " />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="5dp"
                                android:paddingTop="7dp"
                                android:src="@drawable/search_form_icon_person"
                                android:tint="@color/search_screen_icon_color_v2" />

                            <TextView
                                style="@style/Core.Text.400"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="2" />
                        </LinearLayout>

                        <TextView
                            style="@style/Core.Text.300"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Premium Economy" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>
</merge>
