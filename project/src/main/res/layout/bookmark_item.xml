<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_view_container_margin"
    android:layout_marginRight="@dimen/card_view_container_margin"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:id="@+id/row_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_alignParentTop="true"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:focusable="true" >

                <ImageView
                    android:id="@+id/bookmark_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_lob_packages"
                    android:tint="@color/packages_primary_color"/>

                <LinearLayout
                    android:id="@+id/hotel_info_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:contentDescription="@null"
                    android:orientation="vertical">

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/trip_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/BundleOverviewWidgets.PrimaryText"
                        android:contentDescription="@null"
                        android:textSize="16dp" />

                    <com.expedia.bookings.widget.TextView
                        android:id="@+id/bookmark_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:maxLines="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/package_hotel_select_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/bundle_forward_arrow"
                    android:layout_marginLeft="12dp"
                    android:tint="?attr/primary_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_container"
                android:orientation="vertical">

                <View xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/grey_divider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/bookmark_leftside"
                        android:layout_alignParentLeft="true">
                        <com.expedia.bookings.widget.TextView
                            android:id="@+id/bookmark_type_textView"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Hotel + Flights" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/bookmark_right_side"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:id="@+id/remove_bookmark_button"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:clickable="true"
                            android:textStyle="bold"
                            android:background="?android:attr/selectableItemBackground"
                            android:tint="@color/blue1"
                            android:src="@drawable/ic_itin_share_delete" />
                        <ImageView
                            android:id="@+id/edit_traveler_button"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/packages_primary_color"
                            android:clickable="true"
                            android:textStyle="bold"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/edit_query" />

                        <ImageView
                            android:id="@+id/bookmark_share_button"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:clickable="true"
                            android:backgroundTint="@color/blue1"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/ic_itin_share"/>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>