<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/white">

    <ImageView
        android:id="@+id/hotel_heart_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_favorite_red"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".4"/>

    <TextView
        android:id="@+id/empty_compare_title"
        style="@style/Core.Text.600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save your favorites"
        android:layout_marginTop="8dp"
        app:textStyle="medium"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotel_heart_icon"/>

    <TextView
        style="@style/Core.Text.300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When you find something you like, use the heart to save your favorites and you can find it again here"
        android:layout_marginTop="8dp"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@+id/empty_compare_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>