<?xml version="1.0" encoding="utf-8"?>
<com.expedia.bookings.widget.LXFilterCategoryWidget
    android:id="@+id/filter_categories_widget"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:importantForAccessibility="yes"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/lx_sort_filter_padding"
    android:paddingRight="@dimen/lx_sort_filter_padding">

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:importantForAccessibility="yes"
        android:layout_height="wrap_content"
        android:textColor="@color/lx_details_text_color" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <CheckBox
        android:id="@+id/category_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:importantForAccessibility="no"
        android:clickable="false"/>

</com.expedia.bookings.widget.LXFilterCategoryWidget>
