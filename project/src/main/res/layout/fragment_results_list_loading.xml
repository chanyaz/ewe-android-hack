<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <com.expedia.bookings.widget.TextView
        android:id="@+id/loading_textview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/results_list_header_height"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="@dimen/hotel_flight_card_padding_x"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/results_list_header_text_size"
        app:textStyle="light" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_flight_card_height"
        android:layout_marginLeft="@dimen/hotel_flight_card_padding_x"
        android:layout_marginRight="@dimen/hotel_flight_card_padding_x"
        android:background="#5c6874" >

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="top"
            android:background="@drawable/card_corners_top_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_gravity="bottom"
            android:background="@drawable/card_corners_bottom_white" />

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/results_list_spacer_height" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_flight_card_height"
        android:layout_marginLeft="@dimen/hotel_flight_card_padding_x"
        android:layout_marginRight="@dimen/hotel_flight_card_padding_x"
        android:background="#5c6874" >

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="top"
            android:background="@drawable/card_corners_top_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_gravity="bottom"
            android:background="@drawable/card_corners_bottom_white" />

    </FrameLayout>

</LinearLayout>
