<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.TextView.CVVPromptBase">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:shadowColor">#2D000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">.1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="minTextSize">15dp</item>
    </style>

    <style name="Widget.TextView.StoredCreditCard">
        <item name="textStyle">light</item>
    </style>

    <style name="BookingSection">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_checkout_information_single</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <style name="HorizontalOnTablet">
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- This is actually the "left" text -->
    <style name="LoginButtonTopTextStyle">
        <item name="android:textColor">#363636</item>
        <item name="android:textSize">@dimen/login_button_text_size</item>
        <item name="textStyle">light</item>
    </style>

    <!-- This is actually the "right" text -->
    <style name="LoginButtonBottomTextStyle">
        <item name="android:textColor">#cc363636</item>
        <item name="android:textSize">@dimen/account_button_rewards_text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="LoginButtonLogoutImageStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="RatingBar.Star.HotelDetails">
        <item name="android:progressDrawable">@drawable/ratingbar_star_hotel_details_small</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:maxHeight">13dp</item>
    </style>

    <style name="RatingBar.UserReview.HotelDetails">
        <item name="android:progressDrawable">@drawable/ratingbar_userreview_hotel_details_small</item>
        <item name="android:minHeight">17dp</item>
        <item name="android:maxHeight">17dp</item>
    </style>

    <style name="V2.Fragment.Tablet.Confirmation">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="CenterCaptionedIcon" />

    <style name="CenterCaptionedIcon.Caption">
        <item name="android:layout_marginLeft">36dp</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#a5180e0d</item>
        <item name="android:textSize">18sp</item>
        <item name="textStyle">condensed</item>
    </style>

    <style name="CenterCaptionedIcon.Caption.ToolTip">
        <item name="android:layout_marginLeft">@dimen/gde_tool_tip_margin_sides</item>
        <item name="android:layout_marginRight">@dimen/gde_tool_tip_margin_sides</item>
        <item name="android:textSize">@dimen/gde_tool_tip_text_size</item>
        <item name="textStyle">light</item>
    </style>

    <style name="CenterCaptionedIcon.ActionButton">
        <item name="android:layout_width">182dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/pick_airport_button_top_margin</item>
        <item name="android:background">?attr/skin_tablet_search_result_error_button_drawable</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/skin_tablet_search_result_error_button_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="textStyle">medium</item>
    </style>

    <style name="CenterCaptionedIcon.ActionButton.Done">
        <item name="android:layout_marginTop">@dimen/gde_tool_tip_button_margin_top</item>
    </style>

    <style name="CheckoutTravelerButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13dp</item>
        <item name="textStyle">medium</item>
        <item name="android:textColor">#323232</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_tablet_confirmation_actionbutton</item>
    </style>

    <style name="CheckoutTravelerButton.Saved">
        <item name="android:text">@string/saved_button</item>
        <item name="android:drawableRight">@drawable/saved_traveler_fake_spinner</item>
    </style>

    <style name="CheckoutTravelerButton.Edit">
        <item name="android:text">@string/edit_button</item>
        <item name="android:drawableRight">@drawable/edit_pencil</item>
    </style>

    <style name="CheckoutPaymentButton" parent="CheckoutTravelerButton"/>

    <style name="CheckoutPaymentButton.Saved" parent="CheckoutTravelerButton.Saved">
        <item name="android:drawableRight">@drawable/saved_card_fake_spinner</item>
    </style>

    <style name="CheckoutPaymentButton.Edit" parent="CheckoutTravelerButton.Edit"/>

</resources>
