<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextView" />

    <style name="TextView.Itin" />

    <style name="TextView.Itin.SectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">26dp</item>
        <item name="android:background">?attr/itin_card_detail_section_header_underline_drawable</item>
        <item name="android:textAppearance">@style/TextAppearance.Small</item>
        <item name="android:textColor">?attr/itin_card_detail_section_header_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">?attr/itin_card_detail_section_header_text_size</item>
        <item name="textStyle">medium</item>
    </style>

    <style name="TextView.Itin.SectionHeader.Padded">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="TextView.Itin.SectionText">
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">?attr/itin_card_detail_section_text_size</item>
        <item name="android:textColor">?attr/itin_card_detail_section_text_color</item>
        <item name="textStyle">light</item>
    </style>

    <style name="TextView.Itin.SectionText.Capitalize">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextView.Itin.SectionText.Capitalize.Blue">
        <item name="android:textColor">@color/exp_launch_blue</item>
    </style>

    <style name="ItineraryCardActionItemTextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/itin_card_summary_action_button_text_color</item>
        <item name="android:textSize">?attr/itin_card_summary_action_button_text_size</item>
        <item name="textStyle">bold</item>
    </style>

    <style name="ItineraryCardActionItemTextView.Blue">
        <item name="android:textColor">@color/itin_card_action_item_text_color</item>
    </style>

</resources>
