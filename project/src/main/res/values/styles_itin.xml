<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ItinTheme" parent="AppTheme.Base">
        <item name="android:windowBackground">@color/white</item>
        <item name="itin_card_summary_divider_color">@color/gray100</item>
        <item name="itin_card_summary_action_button_text_color">@color/exp_launch_blue</item>
        <item name="itin_card_summary_action_button_text_size">14sp</item>
        <item name="android:statusBarColor">@color/app_status_bar_color</item>
    </style>

    <style name="ItinLinkOffTextHeading">
        <item name="android:textColor">@color/itin_text_common_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ItinLinkOffTextSubHeading">
        <item name="android:textColor">@color/itin_text_sub_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FlightItinAirlineName">
        <item name="android:textColor">@color/itin_text_common_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FlightItinOperatedBy">
        <item name="android:textColor">@color/itin_text_sub_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FlightItinMock">
        <item name="android:textColor">@color/itin_text_common_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="FlightItinSeating">
        <item name="android:textColor">@color/itin_text_common_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FlightItinTravelerInfoSubtext">
        <item name="android:textColor">@color/itin_text_sub_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FlightItinTravelerInfoMainText">
        <item name="android:textColor">@color/itin_text_common_color</item>
        <item name="android:textSize">14sp</item>
        <item name="textStyle">medium</item>
    </style>

    <style name="FlightItinTravelerHeadings">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/itin_text_common_color</item>
        <item name="textStyle">medium</item>
    </style>

    <style name="HotelItinManageRoomsTabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/room_tab_indicator_color</item>
    </style>

    <style name="TravelerTabWidget">
        <item name="android:textSize">14sp</item>
        <item name="textStyle">normal</item>
        <item name="android:textColor">@color/traveler_tab_indicator_color</item>
    </style>

    <style name="TripFolderTabs">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TripTaxiCard" parent="ItinTheme">
        <item name="android:statusBarColor">@color/itin_taxi_background_color</item>
        <item name="android:windowBackground">@color/itin_taxi_background_color</item>
    </style>
</resources>
