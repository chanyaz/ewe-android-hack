<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Deals" parent="AppTheme.Base">
        <item name="android:statusBarColor">@color/app_status_bar_color</item>
    </style>

    <style name="DealsToolbar">
        <item name="android:background">@color/launch_toolbar_background_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="navigationIcon">@drawable/ic_close_white_24dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
    </style>
</resources>
