<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="V2.Theme.Packages" parent="Whitelabel.PackageTheme.Base" />

    <!--
        Override this theme in whitelabels to provide whitelabel specific theme values.

        Note: If any attr which is in AppTheme.Base.Hotels and need to be customized per whitelabel,
        that attr should be removed from AppTheme.Base.Hotels and
        must be added in all Whitelabel.HotelTheme.Base for all whitelabels
    -->
    <style name="Whitelabel.PackageTheme.Base" parent="AppTheme.Base.PackageTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorPrimaryDark">#04445e</item>
        <item name="android:colorButtonNormal">@color/packages_primary_color</item>
        <item name="android:colorEdgeEffect">@color/packages_primary_color</item>
        <item name="android:spinnerItemStyle">@style/PackagesSpinner</item>

        <item name="colorAccent">@color/packages_primary_color</item>
        <item name="primary_color">@color/packages_primary_color</item>
        <item name="primary_button_color">@color/packages_primary_color</item>
        <item name="primary_button_ripple_color">@color/packages_primary_color</item>

        <item name="pay_now_later_selector">@drawable/hotel_pay_now_later_button_selector</item>
        <item name="hotel_pay_now_later_text">@color/sliding_group_text</item>
        <item name="secondary_ripple_button_drawable">@drawable/hotel_select_room_button_selector</item>

        <item name="skin_filterNumberBgDrawable">@drawable/filter_number_bg_hotels</item>
        <item name="skin_errorWidgetEditButtonStyle">@style/HotelButton</item>
        <item name="skin_rippleDrawable">@drawable/exp_blue_button_ripple</item>
        <item name="skin_errorIndicationExclaimationDrawable">@drawable/invalid</item>
        <item name="paymentWidgetLayout">@layout/billing_details_payment_widget</item>
        <item name="traveler_presenter">@layout/flight_travelers_presenter_view_stub</item>
        <item name="sliderText">@string/slide_to_book_text</item>
        <item name="vip_info_select_ripple_drawable">@drawable/vip_info_package_select_ripple</item>
        <item name="hotel_select_room_ripple_drawable">@drawable/exp_blue_button_ripple</item>
        <item name="hotel_map_tooltip_pressed_drawable">@drawable/packages_tooltip_pressed</item>
        <item name="hotel_map_tooltip_drawable">@drawable/packages_tooltip</item>
        <item name="spinner_text_color_drawable">@drawable/package_traveler_text_color</item>
        <item name="toolbar_title_style">@style/ToolbarTitleTextAppearance</item>
        <item name="map_pin_drawable">@drawable/map_marker_blue</item>
        <item name="spinner_traveler_text_color_drawable">@drawable/package_traveler_text_color</item>
        <item name="hotel_book_button_background_selector_drawable">@drawable/package_book_background_selector</item>
    </style>

    <!--
        Base app theme for Hotels, all the properties of hotels which are common for all whitelabels should be added here
    -->
    <style name="AppTheme.Base.PackageTheme" parent="Cars.Base">
        <!--TODO:
            It should have its own properties and should not be dependent on cars theme.
            If something is common for all LOB's put it in  AppTheme.Base
         -->
        <item name="traveler_toolbar_text">@string/traveler_information</item>
        <item name="traveler_checkout_circle_drawable">@drawable/packages_traveler_checkout_circle</item>
        <item name="accept_terms_text_color">@color/white</item>
        <item name="accept_terms_background_color">@color/flight_warning_bar_color</item>
    </style>

    <style name="InfantSeatingPreferenceSpinner" parent="Core.Widget.Spinner"/>

    <style name="TravelerEntrySpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/traveler_entry_drop_down_text_color</item>
    </style>

    <style name="PackagesSpinner">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:drawableRight">@drawable/material_dropdown</item>
    </style>

    <!--Material Hotel Map Price Includes string-->
    <style name="PackagesHotelMapMessage">
        <item name="android:textColor">@color/packages_hotel_map_message</item>
        <item name="android:textSize">@dimen/packages_hotel_map_message</item>
        <item name="textStyle">normal</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@color/gray1</item>
    </style>

    <!--Flights Details-->
    <style name="PackagesFlightDetailsBundleTotal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/temporary_font_size_small</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="PackagesFlightTotalDuration">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/temporary_font_size_small</item>
        <item name="textStyle">normal</item>
        <item name="android:background">@color/gray7</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">7dp</item>
    </style>


    <style name="FilterSortLabelTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/packages_flight_filter_text</item>
        <item name="android:textSize">@dimen/package_sort_filter_label_text_size</item>
        <item name="android:layout_marginTop">@dimen/sort_filter_padding_small</item>
        <item name="android:layout_marginBottom">@dimen/sort_filter_padding_small</item>
        <item name="android:paddingLeft">@dimen/sort_filter_padding_normal</item>
        <item name="android:paddingRight">@dimen/sort_filter_padding_normal</item>
        <item name="textStyle">medium</item>
    </style>

    <style name="FilterSortValueTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_gravity">left</item>
        <item name="android:textColor">@color/packages_flight_filter_text</item>
        <item name="android:textSize">@dimen/package_sort_filter_value_text_size</item>
    </style>

</resources>

