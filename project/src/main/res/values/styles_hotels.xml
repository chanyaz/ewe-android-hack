<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.Hotels.Control" parent="Base.Hotels.Control" />
    <style name="Theme.Hotels.TestVariant" parent="Base.Hotels.TestVariant"/>

    <style name="Base.Hotels" parent="AppTheme.Base">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActivityTransitions">true</item>

        <!-- Search -->
        <item name="skin_searchToolbarText">@string/hotel_search_toolbar_title</item>
        <item name="skin_searchLocationText">@string/enter_destination_hint</item>
        <item name="skin_searchLocationContDesc">@string/enter_destination_cont_desc</item>
        <item name="skin_searchButtonStyle">@style/HotelButtonStyle</item>

        <!-- Results -->
        <item name="spinner_text_color_drawable">@drawable/traveler_text_color</item>

        <!-- Checkout -->
        <item name="traveler_toolbar_text">@string/traveler_information</item>
        <item name="traveler_presenter">@layout/lx_traveler_presenter_view_stub</item>
        <item name="checkout_card_view_style">@style/CarsCardView</item>
        <item name="paymentWidgetLayout">@layout/payment_widget_v2</item>
        <item name="toolbar_title_style">@style/ToolbarTitleTextAppearance</item>
        <item name="sliderText">@string/hotelsv2_slide_reserve</item>
        <item name="skin_errorIndicationExclaimationDrawable">@drawable/invalid</item>
        <item name="skin_errorWidgetEditButtonStyle">@style/HotelButton</item>
        <item name="traveler_details_text">@string/checkout_hotelsv2_enter_guest_details_line1</item>

        <!-- needs to be updated for new variant -->
        <item name="skin_rippleDrawable">@drawable/old_hotel_ripple_button</item>
    </style>

    <style name="Base.Hotels.Control">
        <item name="android:colorPrimaryDark">#0b514b</item>
        <item name="android:colorButtonNormal">@color/hotels_primary_color</item>
        <item name="android:colorEdgeEffect">@color/hotels_primary_color</item>

        <item name="colorAccent">@color/hotels_primary_color</item>

        <!-- General -->
        <item name="primary_color">@color/hotels_primary_color</item>
        <item name="primary_button_color">@color/hotels_primary_color</item>
        <item name="primary_button_ripple_color">@color/hotel_button_ripple_color</item>

        <!-- Search -->
        <item name="skin_searchButtonSelectorDrawable">@drawable/old_hotel_ripple_button</item>
        <item name="spinner_traveler_text_color_drawable">@drawable/hotel_traveler_text_color</item>

        <!-- Results -->
        <item name="skin_filterNumberBgDrawable">@drawable/filter_number_bg_hotels</item>
        <item name="hotel_map_tooltip_drawable">@drawable/hotel_tooltip</item>
        <item name="hotel_map_tooltip_pressed_drawable">@drawable/hotel_tooltip_blue</item>
        <item name="hotel_urgency_background_color">@color/hotel_urgency_control_color</item>

        <!-- InfoSite -->
        <item name="pay_now_later_selector">@drawable/hotel_pay_now_later_button_selector</item>
        <item name="hotel_pay_now_later_text">@color/sliding_group_text</item>
        <item name="vip_info_select_ripple_drawable">@drawable/vip_info_select_ripple</item>
        <item name="hotel_promo_background_colors">@color/hotel_promo_background</item>
        <item name="map_pin_drawable">@drawable/map_marker_blue</item>
        <item name="secondary_ripple_button_drawable">@drawable/hotel_select_room_button_selector</item>
        <item name="hotel_select_room_ripple_drawable">@drawable/old_hotel_ripple_button</item>

        <!-- Checkout -->
        <item name="traveler_checkout_circle_drawable">@drawable/hotel_traveler_checkout_circle</item>

        <!-- Used for other styles -->
        <item name="accept_terms_text_color">@color/hotels_primary_color</item>
        <item name="accept_terms_background_color">@color/white</item>
        <item name="hotel_book_button_background_selector_drawable">@drawable/old_hotel_book_background_selector</item>
    </style>


    <style name="Base.Hotels.TestVariant">
        <item name="colorAccent">@color/app_primary</item>

        <!-- General -->
        <item name="primary_color">@color/app_primary</item>
        <item name="primary_button_color">@color/app_primary</item>
        <item name="primary_button_ripple_color">@color/app_primary_dark</item>

        <!-- Search -->
        <item name="skin_searchButtonSelectorDrawable">@drawable/hotel_primary_ripple_button</item>
        <item name="spinner_traveler_text_color_drawable">@drawable/new_hotel_traveler_text_color</item>

        <!-- Results -->
        <item name="skin_filterNumberBgDrawable">@drawable/filter_number_bg_app</item>
        <item name="hotel_map_tooltip_drawable">@drawable/hotel_tooltip_blue_test</item>
        <item name="hotel_map_tooltip_pressed_drawable">@drawable/hotel_tooltip_blue_test_pressed</item>
        <item name="hotel_urgency_background_color">@color/hotel_urgency_variant_color</item>

        <!-- InfoSite -->
        <item name="pay_now_later_selector">@drawable/new_pay_now_later_selector</item>
        <item name="hotel_pay_now_later_text">@color/hotel_pay_now_later_text_color</item>
        <item name="vip_info_select_ripple_drawable">@drawable/new_vip_info_select_ripple</item>
        <item name="hotel_promo_background_colors">@color/app_primary_dark</item>
        <item name="map_pin_drawable">@drawable/map_marker_blue</item>
        <item name="secondary_ripple_button_drawable">@drawable/hotel_secondary_ripple_button</item>
        <item name="hotel_select_room_ripple_drawable">@drawable/hotel_primary_ripple_button</item>

        <!-- Checkout -->
        <item name="traveler_checkout_circle_drawable">@drawable/new_traveler_checkout_circle</item>

        <!-- Used for other styles -->
        <item name="accept_terms_text_color">@color/app_primary</item>
        <item name="accept_terms_background_color">@color/white</item>
        <item name="hotel_book_button_background_selector_drawable">@drawable/new_hotel_book_background_selector</item>
    </style>

    <style name="V2.Theme.Floating" parent="AppTheme.Base">
        <!-- this is being deleted with https://eiwork.mingle.thoughtworks.com/projects/eb_ad_app/cards/9709 -->
    </style>

    <!-- New Hotels Checkout Styling -->
    <style name="HotelPaymentOption">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/checkout_card_view_height</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">18dp</item>
        <item name="android:textColor">@color/hotelsv2_checkout_text_color</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="HotelStoredCards">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/checkout_card_view_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">18dp</item>
        <item name="android:textColor">@color/hotelsv2_checkout_text_color</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="HotelCheckoutImageSummary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#474747</item>
    </style>

    <style name="HotelCheckoutImageSummary.Name" parent="HotelCheckoutImageSummary">
        <item name="android:textSize">15dp</item>
        <item name="textStyle">medium</item>
    </style>

    <style name="HotelCheckoutImageSummary.Common" parent="HotelCheckoutImageSummary">
        <item name="android:textSize">12dp</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="HotelCheckoutSummaryCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/hotelsv2_checkout_text_color</item>
    </style>

    <style name="HotelCheckoutSummaryCommon.Common" parent="HotelCheckoutSummaryCommon">
        <item name="android:textSize">12dp</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="HotelButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HotelButtonTextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/primary_color</item>
    </style>

    <style name="HotelButton" parent="Core.Button.Footer">
        <item name="android:background">@drawable/hotels_button_selector</item>
    </style>

    <style name="RewardWidget">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">13dp</item>
    </style>

    <style name="HotelCellVipPadding">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>

</resources>
