<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- STYLEABLE DECLARATIONS -->

    <!-- Used in more than one custom view -->
    <attr name="caption" format="reference|string" />

    <!-- Used in providing margin on sign in btn on checkout screen-->
    <attr name="checkout_icon_right_margin_attr" format="dimension" />

    <!-- To allow us to define the waypoint top margin in the activity theme
    (it's different for launch and results activities) -->
    <attr name="waypointFragmentTopMargin" format="dimension" />

    <!-- TextView -->
    <declare-styleable name="TextView">
        <attr name="textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="black" value="8" />
            <enum name="condensed" value="16" />
            <enum name="light" value="32" />
            <enum name="medium" value="64" />
            <enum name="thin" value="128" />
            <enum name="condensed_bold" value="256" />
            <enum name="condensed_light" value="512" />
            <enum name="expedia_light" value="1024" />
        </attr>
    </declare-styleable>

    <!-- Gallery -->
    <declare-styleable name="Gallery">

        <!--
             These are styleables that are in a standard Gallery, 
    		reproduced here so we can use them
        -->
        <attr name="android:gravity" />
        <attr name="android:animationDuration" />
        <attr name="android:spacing" />
        <attr name="android:unselectedAlpha" />

        <!-- The rate at which we flip through images, in ms. -->
        <attr name="android:flipInterval" />

        <!-- The drawable or color to use as a placeholder image -->
        <attr name="placeholder" format="reference" />
    </declare-styleable>

    <!-- SimpleNumberPicker up button style. -->
    <attr name="simpleNumberPickerUpButtonStyle" format="reference" />
    <!-- SimpleNumberPicker down button style. -->
    <attr name="simpleNumberPickerDownButtonStyle" format="reference" />
    <!-- SimpleNumberPicker input text style. -->
    <attr name="simpleNumberPickerInputTextStyle" format="reference" />

    <declare-styleable name="CustomEditText">

        <!--
        Flag to indicate whether or not to use the 
		clear field functionality set up as a right drawable
        -->
        <attr name="useClearFieldDrawable" format="boolean" />
        <attr name="clearFieldDrawable" format="reference|color" />
        <attr name="errorTextColor" format="reference" />
        <!-- Defines how much extra area around the "X" allows touch (for clearing the content) -->
        <attr name="touchAreaPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="SlideToWidget">
        <attr name="sliderText" format="string" />
        <attr name="sliderImage" format="reference" />
        <attr name="sliderBackgroundColor" format="color" />
        <attr name="dragImage" format="reference" />
        <attr name="destImage" format="reference" />
        <attr name="destComplete" format="reference" />
        <attr name="lineColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ScrollView">

        <!-- Defines whether the scrollview should stretch its content to fill the viewport. -->
        <attr name="fillViewport" format="boolean" />
    </declare-styleable>

    <!-- This is for our flight cards on the checkout screen where we need to switch between normal (transparent) and opaque -->
    <declare-styleable name="flight_card_bg">
        <attr name="state_opaque" format="boolean" />
        <attr name="state_transparent" format="boolean" />
    </declare-styleable>

    <!-- This allows us to pass a layout to the TelephoneSpinner that it can hand to the TelephoneSpinnerAdapter that defines the layout to use for view when it is not expanded -->
    <declare-styleable name="TelephoneSpinner">
        <attr name="text_view_layout" format="reference" />
    </declare-styleable>

    <!-- So that we can define different credit card icons for flights vs hotels -->
    <declare-styleable name="stored_credit_card_section">
        <attr name="cardIcon" format="reference" />
        <attr name="primaryTextColor" format="color|reference" />
        <attr name="secondaryTextColor" format="color|reference" />
    </declare-styleable>

    <!-- So that we can define this in the layout xml rather than in code -->
    <declare-styleable name="hotel_summary_section">
        <attr name="selectedBackground" format="color|reference" />
        <attr name="salePriceTextColor" format="color"/>
        <attr name="airAttachPriceTextColor" format="color"/>
        <attr name="priceTextColor" format="color" />
    </declare-styleable>

    <!-- This is the flight line that shows layovers, we want to be able to control colors -->
    <declare-styleable name="FlightTripView">
        <attr name="flightLineColor" format="color|reference" />
        <attr name="waypointTextColor" format="color|reference" />
        <attr name="waypointTextSize" format="dimension|reference" />
        <attr name="waypointTextTypeface" format="enum">
            <enum name="medium" value="0" />
        </attr>
        <attr name="waypointTextTopMargin" format="dimension" />
    </declare-styleable>

    <!-- ParallaxContainer -->
    <declare-styleable name="ParallaxContainer">
        <attr name="offsetTop" format="dimension" />
        <attr name="offsetBottom" format="dimension" />
        <attr name="scrollMin" format="dimension" />
        <attr name="scrollMax" format="dimension" />
    </declare-styleable>

    <!-- ItinListView -->
    <declare-styleable name="ItinListView">
        <attr name="pathViewWidth" format="dimension" />
        <attr name="pathViewColor" format="color" />
    </declare-styleable>

    <!-- RingedCountView -->
    <declare-styleable name="RingedCountView">
        <attr name="caption" />
        <attr name="backgroundColor" format="color" />
        <attr name="countTextColor" format="color" />
        <attr name="captionTextColor" format="color" />
        <attr name="primaryColor" format="color" />
        <attr name="secondaryColor" format="color" />
        <attr name="ringThickness" format="dimension" />
        <attr name="countTextSize" format="dimension" />
        <attr name="captionTextSize" format="dimension" />
        <attr name="countTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="black" value="8" />
            <enum name="condensed" value="16" />
            <enum name="light" value="32" />
            <enum name="medium" value="64" />
            <enum name="thin" value="128" />
        </attr>
        <attr name="captionTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="black" value="8" />
            <enum name="condensed" value="16" />
            <enum name="light" value="32" />
            <enum name="medium" value="64" />
            <enum name="thin" value="128" />
        </attr>
        <attr name="percent" format="float" />
    </declare-styleable>

    <!-- SlidingRadioGroup -->
    <declare-styleable name="SlidingRadioGroup">
        <attr name="unselectedDrawable" format="reference" />
        <attr name="selectedDrawable" format="reference" />
        <attr name="unselectedDividerColor" format="color" />
        <attr name="selectedDividerColor" format="color" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="sluggishness" format="integer" />
    </declare-styleable>

    <!-- RoundedCornerFrameLayout -->
    <declare-styleable name="RoundedCornerFrameLayout">
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <!-- NumberMaskEditText -->
    <declare-styleable name="NumberMaskEditText">
        <attr name="numberFormat" format="enum">
            <enum name="phone" value="0"/>
            <enum name="creditcard" value="1"/>
        </attr>
        <attr name="customNumberFormat" format="string" />
    </declare-styleable>

    <!-- MaskView -->
    <declare-styleable name="MaskView">
        <attr name="exposedView" format="reference"/>
        <attr name="exposedPadding" format="dimension"/>
        <attr name="maskColor" format="color"/>
    </declare-styleable>

    <!-- CenteredCaptionedIcon -->
    <declare-styleable name="CenteredCaptionedIcon">
        <attr name="caption" />
        <attr name="svg" format="reference" />
    </declare-styleable>

    <!-- CheckoutInfoStatusIcon -->
    <declare-styleable name="CheckoutInfoStatusIcon">
        <attr name="state_info_complete" format="boolean" />
    </declare-styleable>

    <!-- ContentClickableRelativeLayout -->
    <declare-styleable name="ContentClickableRelativeLayout">
        <attr name="layoutContentPadding" format="dimension" />
    </declare-styleable>

    <!-- FruitList style -->
    <declare-styleable name="FruitList">
        <attr name="headerSpacerColor" format="reference|color" />
        <attr name="footerSpacerColor" format="reference|color" />
        <attr name="headerSpacePercentage" format="fraction" />
        <attr name="headerSpaceSize" format="dimension|reference" />
    </declare-styleable>

    <!-- Switch style. The Android switch is not styleable as of 4.4. So we have to make our own "backport" -->
    <declare-styleable name="Switch">
    <!-- Drawable to use as the "thumb" that switches back and forth. -->
        <attr name="thumb" format="reference" />
        <!-- Drawable to use as the "track" that the switch thumb slides within. -->
        <attr name="thumbTrack" format="reference" />
        <!-- Text to use when the switch is in the checked/"on" state. -->
        <attr name="textOn" format="reference" />
        <!-- Text to use when the switch is in the unchecked/"off" state. -->
        <attr name="textOff" format="reference" />
        <!-- Amount of padding on either side of text within the switch thumb. -->
        <attr name="textPadding" format="dimension" />
        <!-- TextAppearance style for text displayed on the switch thumb. -->
        <attr name="thumbTextAppearance" format="reference" />
        <!-- Minimum width for the switch component -->
        <attr name="thumbMinWidth" format="dimension" />
        <!-- Minimum space between the switch and caption text -->
        <attr name="thumbPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="Theme">
        <attr name="switchStyle" format="reference" />
        <attr name="switchPreferenceStyle" format="reference" />
    </declare-styleable>
    <!-- This is part of the Switch backport too -->
    <declare-styleable name="Android">
        <!-- Text color. -->
        <attr name="android:textColor" />
        <!-- Size of the text. Recommended dimension type for text is "sp" for scaled-pixels (example: 15sp). -->
        <attr name="android:textSize" />
        <!-- Style (bold, italic, bolditalic) for the text. -->
        <attr name="android:textStyle" />
        <!-- Typeface (normal, sans, serif, monospace) for the text. -->
        <attr name="android:typeface" />
        <!-- Color of the text selection highlight. -->
        <attr name="android:textColorHighlight" />
        <!-- Color of the hint text. -->
        <attr name="android:textColorHint" />
        <!-- Color of the links. -->
        <attr name="android:textColorLink" />
    </declare-styleable>

    <declare-styleable name="ContactDetailsCompleteness">
        <attr name="state">
            <enum name="begin" value="0" />
            <enum name="complete" value="1" />
            <enum name="incomplete" value="2" />
        </attr>
        <attr name="state_default" format="boolean" />
        <attr name="state_complete" format="boolean" />
        <attr name="state_incomplete" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PhoneLaunchButton">
        <!-- Button text -->
        <attr name="btn_text" format="string" />
        <!-- Button text size -->
        <attr name="btn_text_size" format="string" />
        <!--Button color -->
        <attr name="btn_bg" format="color"/>
        <!-- Button icon -->
        <attr name="btn_icon" format="reference"/>
        <!-- Minimum scale factor for icon -->
        <attr name="icon_min_scale" format="float" />
        <!-- Background card height for launch button -->
        <attr name="bg_card_height" format="dimension" />
        <!-- Background card top padding for launch button -->
        <attr name="bg_icon_padding_top" format="dimension" />
        <attr name="refernce_container_height" format="dimension" />
        <attr name="five_lob_btn" format="boolean" />
    </declare-styleable>

    <!-- Message Loading/Progress View-->
    <declare-styleable name="MessageProgressView">
        <attr name="line_color" format="color" />
        <attr name="background_tint" format="color" />
    </declare-styleable>


    <declare-styleable name="BoxRatingBar">
        <!--Enabled Box Color -->
        <attr name="enabled_box_color" format="color" />
        <!--Disabled Box Color -->
        <attr name="disabled_box_color" format="color" />
        <!-- Divider Width -->
        <attr name="divider_width" format="dimension" />
        <!-- Corner Radius -->
        <attr name="corner_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="StarRatingBar">
        <!-- Spacing between the stars -->
        <attr name="star_spacing" format="dimension" />
        <!-- Star drawable -->
        <attr name="star_drawable" format="reference" />
        <!-- Color for the star -->
        <attr name="star_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SearchAutoComplete">
        <!-- Star drawable -->
        <attr name="search_drawable" format="reference" />
        <attr name="search_hint" format="reference" />
    </declare-styleable>

</resources>
