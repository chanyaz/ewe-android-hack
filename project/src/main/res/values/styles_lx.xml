<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="V2.Theme.LX" parent="AppTheme.BaseLX"/>

    <style name="AppTheme.BaseLX" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
        <item name="primary_color">@color/lx_primary_color</item>
        <item name="checkout_card_view_style">@style/LXCardView</item>
        <item name="checkout_slider_text">@string/lx_slider_text</item>
        <item name="toolbar_title_style">@style/LXToolbarTitleTextAppearance</item>
        <item name="android:textColorSecondary">@color/lx_actionbar_text_color</item>
        <item name="android:colorPrimaryDark">#A8540D</item>
        <item name="android:colorButtonNormal">@color/lx_primary_color</item>
        <item name="colorControlNormal">#C3C3C3</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <item name="colorAccent">@color/lx_primary_color</item>


        <!-- Required white label attr for login widget -->
        <item name="skin_loginWithExpediaTitleText">@string/expedia_account</item>
        <item name="skin_loginBookNowButtonDrawable">@drawable/btn_signin</item>
        <item name="skin_loginWithExpediaButtonText">@string/Sign_in_with_Expedia</item>
        <item name="skin_loginButtonColor">@android:color/black</item>
        <item name="skin_passwordHint">@string/expedia_password_hint</item>
        <item name="skin_loadingAccount">@string/loading_expedia_account</item>
        <item name="skin_hotelCheckoutLoginButtonText">@string/Sign_in_with_Expedia</item>
        <item name="skin_phoneCheckoutLoginLogoDrawable">@drawable/expedia</item>
        <item name="skin_hotelCheckoutLogoutLogoDrawable">@drawable/expedia</item>
        <item name="skin_tabletCheckoutLoginLogoDrawable">@drawable/expedia</item>
        <item name="skin_tabletCheckoutLoginButtonTextColor">@color/login_text_tablet</item>
        <item name="skin_phoneCheckoutLoginButtonTextColor">@color/login_text_hotels</item>
        <item name="skin_phoneCheckoutLoginButtonDrawable">@drawable/btn_login_hotels</item>
        <item name="skin_icCheckoutCheckmarkDrawable">@drawable/ic_checkout_checkmark</item>

        <!-- CVV attrs -->
        <item name="skin_cvvBookButtonKeypadDrawable">@drawable/btn_cvv_keypad_book</item>
        <item name="skin_cvvBookButtonTextColor">@android:color/black</item>

        <item name="traveler_toolbar_text">@string/lx_traveler_details_text</item>
        <item name="traveler_details_text">@string/lx_traveler_enter_details_text</item>
        <item name="traveler_checkout_circle_drawable">@drawable/lx_traveler_checkout_circle</item>

        <item name="card_list_image_container_height">@dimen/lx_search_list_image_container_height</item>
        <item name="card_details_container_height">@dimen/lx_search_details_container_height</item>

        <!-- Action Bar Attrs -->
        <item name="skin_actionbarTextColor">@color/lx_actionbar_text_color</item>
    </style>

    <style name="DateRadioButton" parent="V2.Theme.LX">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/lx_offer_date_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/lx_offer_date_text_selector</item>
    </style>

    <style name="DropDownListViewStyle">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="LXAutocomplete" parent="V2.Theme.LX">
        <item name="android:background">@drawable/lx_autocomplete_background_selector</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColorHint">@color/lx_primary_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lx_primary_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LXActionBarTitle" parent="V2.Theme.LX">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LXToolbarTitleTextAppearance" parent="V2.Theme.LX">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="LXToolbarSubtitleTextAppearance" parent="V2.Theme.LX">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LXCardView" parent="V2.Theme.LX">
        <item name="android:background">#FFF</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:textColor">@color/lx_actionbar_text_color</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="LXConfirmationButton" parent="V2.Theme.LX">   
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/itin_button</item>
        <item name="android:height">60dp</item>
        <item name="android:textColor">@android:color/white</item>     
        <item name="android:textSize">18sp</item>     
        <item name="android:paddingLeft">25dp</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <style name="LXButton" parent="android:Widget.Button" >
        <item name="android:background">@color/lx_primary_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="LXBookingButton" parent="V2.Theme.LX">   
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/itin_button</item>
        <item name="android:textColor">@color/lx_confirmation_action_text_color</item>     
        <item name="android:textSize">15sp</item>     
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>     
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="LXRobotoFont">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LXFilterTitleTextAppearance" parent="V2.Theme.LX">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/lx_sort_filter_top_bar_text_color</item>
    </style>

</resources>
