<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="V2.Theme.LX" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DateRadioButton" parent="V2.Theme.LX">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/lx_offer_date_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="V2.Theme.LX.Autocomplete">
        <item name="android:layout_height">43dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LXToolbarTitleTextAppearance" parent="V2.Theme.LX">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="LXToolbarSubtitleTextAppearance" parent="V2.Theme.LX">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
